{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "createdAt"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "company": {
              "type": "string"
            },
            "trxCtrlNum": {
              "type": "string"
            },
            "bookID": {
              "type": "string"
            },
            "currencyCode": {
              "type": "string"
            },
            "applyDate": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "reallocationType": {
              "type": "string"
            },
            "subVote": {
              "type": "string"
            }
          },
          "required": [
            "company",
            "trxCtrlNum",
            "bookID",
            "currencyCode",
            "applyDate",
            "description",
            "reallocationType",
            "subVote"
          ]
        },
        "messageDetails": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "fromGlAccount": {
                  "type": "string"
                },
                "amount": {
                  "type": "number"
                },
                "uid": {
                  "type": "string"
                }
              },
              "required": [
                "fromGlAccount",
                "amount",
                "uid"
              ]
            }
          ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}