{
   "$schema":"http://json-schema.org/draft-04/schema#",
   "type":"object",
   "properties":{
      "message":{
         "type":"object",
         "properties":{
            "messageHeader":{
               "type":"object",
               "properties":{
                  "sender":{
                     "type":"string"
                  },
                  "receiver":{
                     "type":"string"
                  },
                  "msgId":{
                     "type":"string"
                  },
                  "messageType":{
                     "type":"string"
                  }
               },
               "required":[
                  "sender",
                  "receiver",
                  "msgId",
                  "messageType"
               ]
            },
            "messageSummary":{
               "type":"object",
               "properties":{
                  "institutionCode":{
                     "type":"string"
                  },
                  "departmentCode":{
                     "type":"string"
                  }
               },
               "required":[
                  "institutionCode",
                  "departmentCode"
               ]
            },
          "messageDetails": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "description"
                ]        
            }
            }
         },
         "required":[
            "messageHeader",
            "messageSummary",
            "messageDetails"
         ]
      },
      "digitalSignature":{
         "type":"string"
      }
   },
   "required":[
      "message",
      "digitalSignature"
   ]
}