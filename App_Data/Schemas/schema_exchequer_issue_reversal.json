{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "createdAt": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "createdAt",
            "messageType",
            "msgId"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "trxCtrlNum": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "requestedBy": {
              "type": "string"
            }
          },
          "required": [
            "trxCtrlNum",
            "description",
            "requestedBy"
          ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}