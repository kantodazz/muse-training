                "type": "object",
                "properties": {
                  "uid": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "quantity": {
                    "type": "number"
                  },
                  "unitPrice": {
                    "type": "number"
                  },
                  "unitOfMesure": {
                    "type": "string"
                  },
                  "itemDescription": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  },
                  "itemClass": {
                    "type": "string"
                  }
                },
                "required": [
                  "uid",
                  "name",
                  "quantity",
                  "unitPrice",
                  "unitOfMesure",
                  "itemDescription",
                  "itemCategory",
                  "itemClass"
                ]
              }
            },
            "glAccounts": {
              "type": "array",
