            }
          },
          "required": [
            "createdAt"
          ]
        },
        "messageHeader": {
          "type": "object",
          "properties": {
            "receiver": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "sender": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "paymentType": {
              "type": [ "string", "null" ]
            }
          },
          "required": [
            "receiver",
            "messageType",
            "sender",
            "msgId"
          ]
        },
        "messageDetails": {
          "type": "object",
          "properties": {
            "referenceNo": {
              "type": "string"
            },
            "institutionCode": {
              "type": "string"
            },
            "lpoType": {
              "type": "string"
            },
            "institutionName": {
              "type": "string"
            },
            "departmentCode": {
              "type": "string"
            },
            "departmentName": {
              "type": "string"
            },
            "payeeCode": {
              "type": "string"
            },
            "payeeName": {
              "type": "string"
            },
            "payeeBankAccount": {
              "type": "string"
            },
            "payeeBankName": {
              "type": "string"
            },
            "payeeAccountName": {
              "type": "string"
            },
            "payeeBic": {
              "type": "string"
            },
            "payeeAddress": {
              "type": "string"
            },
            "subBudgetClass": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "amount": {
              "type": "number"
            },
            "currency": {
              "type": "string"
            },
            "orderDate": {
              "type": "string"
            },
            "deliveryDate": {
              "type": "string"
            },
            "payeeType": {
              "type": "string"
            },
            "isForSubWarant": {
              "type": "boolean"
            },
            "isAccrual": {
              "type": "boolean"
            },
            "parentInstitutionCode": {
              "type": [ "string", "null" ]
            },
            "subWarantCode": {
              "type": [ "string", "null" ]
            },
            "items": {
              "type": "array",
