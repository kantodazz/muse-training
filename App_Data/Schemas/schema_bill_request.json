{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "paymentType": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "paymentType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "isSTP": {
              "type": "boolean"
            },
            "payStationId": {
              "type": "integer"
            },
            "spCode": {
              "type": "string"
            },
            "subSpCode": {
              "type": "string"
            },
            "referenceNo": {
              "type": "string"
            },
            "createdAt": {
              "type": "string"
            },
            "applyDate": {
              "type": "string"
            },
            "sourceModule": {
              "type": "string"
            },
            "subSourceModule": {
              "type": "string"
            },
            "customerName": {
              "type": "string"
            },
            "billAmount": {
              "type": "number"
            },
            "currency": {
              "type": "string"
            },
            "phoneNo": {
              "type": "string"
            },
            "emailAddress": {
              "type": "string"
            },
            "idType": {
              "type": "string"
            },
            "idNo": {
              "type": "string"
            },
            "billValidDays": {
              "type": "integer"
            },
            "billPayOption": {
              "type": "string"
            },
            "billPayOptionDesc": {
              "type": "string"
            },
            "remarks": {
              "type": "string"
            }
          },
          "required": [
            "isSTP",
            "payStationId",
            "spCode",
            "subSpCode",
            "referenceNo",
            "createdAt",
            "applyDate",
            "sourceModule",
            "subSourceModule",
            "customerName",
            "billAmount",
            "currency",
            "phoneNo",
            "emailAddress",
            "idType",
            "idNo",
            "billValidDays",
            "billPayOption",
            "billPayOptionDesc",
            "remarks"
          ]
        },
        "messageDetails": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "billItemId": {
                  "type": "string"
                },
                "billItemAmount": {
                  "type": "number"
                },
                "gfsCode": {
                  "type": "string"
                },
                "quantity": {
                  "type": "integer"
                }
              },
              "required": [
                "billItemId",
                "billItemAmount",
                "gfsCode",
                "quantity"
              ]
            }
          ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "hashSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "hashSignature"
  ]
}