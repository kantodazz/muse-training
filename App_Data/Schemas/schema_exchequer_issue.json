{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "createdAt"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "applyDate": {
              "type": "string"
            },
            "exchequerRef": {
              "type": "string"
            },
            "subBudgetClass": {
              "type": "string"
            },
            "sourceModule": {
              "type": "string"
            },
            "totalAmount": {
              "type": "number"
            },
            "noOfTrxs": {
              "type": "integer"
            }
          },
          "required": [
            "applyDate",
            "exchequerRef",
            "subBudgetClass",
            "sourceModule",
            "totalAmount",
            "noOfTrxs"
          ]
        },
        "messageDetails": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uid": {
                "type": "string"
              },
              "mainVoteCode": {
                "type": "string"
              },
              "mainVoteName": {
                "type": "string"
              },
              "voteCode": {
                "type": "string"
              },
              "voteName": {
                "type": "string"
              },
              "componentName": {
                "type": "string"
              },
              "componentDescription": {
                "type": "string"
              },
              "amount": {
                "type": "number"
              },
              "orgUid": {
                "type": "string"
              },
              "projectCode": {
                "type": "string"
              },
              "projectName": {
                "type": "string"
              }
            },
            "required": [
              "uid",
              "mainVoteCode",
              "mainVoteName",
              "voteCode",
              "voteName",
              "componentName",
              "componentDescription",
              "amount",
              "orgUid",
              "projectCode",
              "projectName"
            ]
          }
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}