{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "paymentType": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "paymentType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "createdAt"
          ]
        },
        "messageDetails": {
          "type": "object",
          "properties": {
            "approvalReference": {
              "type": "string"
            },
            "approvalType": {
              "type": "string"
            },
            "projectCode": {
              "type": "string"
            },
            "projectName": {
              "type": "string"
            },
            "implementorCode": {
              "type": "string"
            },
            "implementorName": {
              "type": "string"
            },
            "voteCode": {
              "type": "string"
            },
            "voteName": {
              "type": "string"
            },
            "donorCode": {
              "type": "string"
            },
            "donorName": {
              "type": "string"
            },
            "accountNumber": {
              "type": "string"
            },
            "accountName": {
              "type": "string"
            },
            "bankName": {
              "type": "string"
            },
            "bankBic": {
              "type": "string"
            },
            "approvedAmount": {
              "type": "number"
            },
            "currency": {
              "type": "string"
            },
            "exchangeRate": {
              "type": "number"
            },
            "approvalDate": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "beneficiaryName": {
              "type": "string"
            },
            "beneficiaryAccountNumber": {
              "type": "string"
            },
            "beneficiaryAccountName": {
              "type": "string"
            },
            "beneficiaryBankName": {
              "type": "string"
            },
            "beneficiaryBic": {
              "type": "string"
            },
            "attachments": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "attachmentUid": {
                      "type": [ "string", "null" ]
                    },
                    "attachmentUrl": {
                      "type": [ "string", "null" ]
                    },
                    "attachmentTitle": {
                      "type": "string"
                    },
                    "documentUid": {
                      "type": [ "string", "null" ]
                    },
                    "documentReference": {
                      "type": [ "string", "null" ]
                    },
                    "userEmail": {
                      "type": [ "string", "null" ]
                    },
                    "attachmentData": {
                      "type": "string"
                    },
                    "documentFlag": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "attachmentUid",
                    "attachmentUrl",
                    "attachmentTitle",
                    "documentUid",
                    "documentReference",
                    "userEmail",
                    "attachmentData",
                    "documentFlag"
                  ]
                }
              ]
            }
          },
          "required": [
            "approvalReference",
            "approvalType",
            "projectCode",
            "projectName",
            "implementorCode",
            "implementorName",
            "voteCode",
            "voteName",
            "donorCode",
            "donorName",
            "accountNumber",
            "accountName",
            "bankName",
            "bankBic",
            "approvedAmount",
            "currency",
            "exchangeRate",
            "approvalDate",
            "description",
            "beneficiaryName",
            "beneficiaryAccountNumber",
            "beneficiaryAccountName",
            "beneficiaryBankName",
            "beneficiaryBic",
            "attachments"
          ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}