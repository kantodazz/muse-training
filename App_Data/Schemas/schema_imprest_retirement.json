{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageSummary": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "createdAt"
          ]
        },
        "messageHeader": {
          "type": "object",
          "properties": {
            "receiver": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "sender": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "paymentType": {
              "type": "string"
            }
          },
          "required": [
            "receiver",
            "messageType",
            "sender",
            "msgId",
            "paymentType"
          ]
        },
        "messageDetails": {
          "type": "object",
          "properties": {
            "attachments": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "attachmentName": {
                      "type": "string"
                    },
                    "attachmentData": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "attachmentName",
                    "attachmentData"
                  ]
                }
              ]
            },
            "referenceNo": {
              "type": "string"
            },
            "institutionCode": {
              "type": "string"
            },
            "departmentCode": {
              "type": "string"
            },
            "imprestAmount": {
              "type": "string"
            },
            "retiredAmount": {
              "type": "string"
            }
          },
          "required": [
            "attachments",
            "referenceNo",
            "institutionCode",
            "departmentCode",
            "imprestAmount",
            "retiredAmount"
          ]
        }
      },
      "required": [
        "messageSummary",
        "messageHeader",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}