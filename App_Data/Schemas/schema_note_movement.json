{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "paymentType": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "paymentType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "institutionCode": {
              "type": "string"
            },
            "institutionName": {
              "type": "string"
            },
            "disclosureReference": {
              "type": "string"
            },
            "disclosureCategory": {
              "type": "string"
            },
            "financialYear": {
              "type": "string"
            },
            "checkDate": {
              "type": "string"
            },
            "createdAt": {
              "type": "string"
            },
            "createdBy": {
              "type": "string"
            },
            "submittedBy": {
              "type": "string"
            },
            "submissionDate": {
              "type": "string"
            }
          },
          "required": [
            "institutionCode",
            "institutionName",
            "disclosureReference",
            "disclosureCategory",
            "financialYear",
            "checkDate",
            "createdAt",
            "createdBy",
            "submittedBy",
            "submissionDate"
          ]
        },
        "messageDetails": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "gfsCode": {
                "type": "string"
              },
              "gfsCodeDescription": {
                "type": "string"
              },
              "tbAmount": {
                "type": "number"
              },
              "ownershipPercentage": {
                "type": "number"
              },
              "openingBalance": {
                "type": "number"
              },
              "additionMonetary": {
                "type": "number"
              },
              "additionNonMonetary": {
                "type": "number"
              },
              "disposalOrIssued": {
                "type": "number"
              },
              "transfer": {
                "type": "number"
              },
              "otherAdjustment": {
                "type": "number"
              },
              "writeDown": {
                "type": "number"
              },
              "fairValueChanges": {
                "type": "number"
              },
              "shareOfSurplus": {
                "type": "number"
              },
              "dividend": {
                "type": "number"
              },
              "reversalWriteDown": {
                "type": "number"
              }
            },
            "required": [
              "gfsCode",
              "gfsCodeDescription",
              "tbAmount",
              "ownershipPercentage",
              "openingBalance",
              "additionMonetary",
              "additionNonMonetary",
              "disposalOrIssued",
              "transfer",
              "otherAdjustment",
              "writeDown",
              "fairValueChanges",
              "shareOfSurplus",
              "dividend",
              "reversalWriteDown"
            ]
          }
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}