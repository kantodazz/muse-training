{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "digitalSignature": {
      "type": "string"
    },
    "message": {
      "type": "object",
      "properties": {
        "messageSummary": {
          "type": "object",
          "properties": {
            "totalAmount": {
              "type": "number"
            },
            "noOfTrxs": {
              "type": "integer"
            },
            "applyDate": {
              "type": "string"
            }
          },
          "required": [
            "totalAmount",
            "noOfTrxs",
            "applyDate"
          ]
        },
        "messageHeader": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "sender": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            }
          },
          "required": [
            "createdAt",
            "receiver",
            "messageType",
            "sender",
            "msgId"
          ]
        },
        "messageDetails": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "voteName": {
                  "type": "string"
                },
                "amount": {
                  "type": "number"
                },
                "vote": {
                  "type": "string"
                },
                "transactiontype": {
                  "type": "string"
                }
              },
              "required": [
                "voteName",
                "amount",
                "vote",
                "transactiontype"
              ]
            }
          ]
        }
      },
      "required": [
        "messageSummary",
        "messageHeader",
        "messageDetails"
      ]
    }
  },
  "required": [
    "digitalSignature",
    "message"
  ]
}