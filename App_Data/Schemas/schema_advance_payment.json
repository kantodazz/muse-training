{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "paymentType": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "paymentType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "createdAt"
          ]
        },
        "messageDetails": {
          "type": "object",
          "properties": {
            "referenceNo": {
              "type": "string"
            },
            "contractReferenceNo": {
              "type": "string"
            },
            "institutionCode": {
              "type": "string"
            },
            "departmentCode": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "payeeName": {
              "type": "string"
            },
            "payeeBankAccount": {
              "type": "string"
            },
            "payeeBankName": {
              "type": "string"
            },
            "payeeAccountName": {
              "type": "string"
            },
            "payeeBic": {
              "type": "string"
            },
            "amount": {
              "type": "number"
            },
            "currency": {
              "type": "string"
            },
            "subBudgetClass": {
              "type": "string"
            },
            "glAccounts": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "fundingReferenceNo": {
                    "type": "string"
                  },
                  "glAccount": {
                    "type": "string"
                  },
                  "amount": {
                    "type": "number"
                  }
                },
                "required": [
                  "fundingReferenceNo",
                  "glAccount",
                  "amount"
                ]
              }
            },
            "attachments": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "attachmentName": {
                    "type": "string"
                  },
                  "attachmentData": {
                    "type": "string"
                  }
                },
                "required": [
                  "attachmentName",
                  "attachmentData"
                ]
              }
            }
          },
          "required": [
            "referenceNo",
            "contractReferenceNo",
            "institutionCode",
            "departmentCode",
            "description",
            "payeeName",
            "payeeBankAccount",
            "payeeBankName",
            "payeeAccountName",
            "payeeBic",
            "amount",
            "currency",
            "subBudgetClass",
            "attachments",
            "glAccounts"
          ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}