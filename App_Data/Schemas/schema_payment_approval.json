{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "paymentType": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "paymentType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "createdAt"
          ]
        },
        "messageDetails": {
          "type": "object",
          "properties": {
            "referenceNumber": {
              "type": "string"
            },
            "documentTitle": {
              "type": "string"
            },
            "description": {
              "type": [ "string", "null" ]
            },
            "voteCode": {
              "type": "string"
            },
            "createdBy": {
              "type": "string"
            },
            "createdByName": {
              "type": "string"
            },
            "approvedBy": {
              "type": "string"
            },
            "approvedByName": {
              "type": "string"
            },
            "submittedBy": {
              "type": "string"
            },
            "submittedByName": {
              "type": "string"
            },
            "assignedTo": {
              "type": "string"
            },
            "assignedToName": {
              "type": "string"
            },
            "approvedAmount": {
              "type": "integer"
            },
            "minutesList": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "minuteUid": {
                    "type": "string"
                  },
                  "minuteNo": {
                    "type": "integer"
                  },
                  "fromUserEmail": {
                    "type": "string"
                  },
                  "fromUserNames": {
                    "type": "string"
                  },
                  "fromDesignation": {
                    "type": "string"
                  },
                  "toUserEmail": {
                    "type": "string"
                  },
                  "toUserNames": {
                    "type": "string"
                  },
                  "toDesignation": {
                    "type": "string"
                  },
                  "decision": {
                    "type": "string"
                  },
                  "comments": {
                    "type": "string"
                  },
                  "minuteDate": {
                    "type": "string"
                  },
                  "documentFlag": {
                    "type": [ "string", "null" ]
                  },
                  "signedMinuteUrl": {
                    "type": [ "string", "null" ]
                  }
                },
                "required": [
                  "minuteUid",
                  "minuteNo",
                  "fromUserEmail",
                  "fromUserNames",
                  "fromDesignation",
                  "toUserEmail",
                  "toUserNames",
                  "toDesignation",
                  "decision",
                  "comments",
                  "minuteDate"
                ]
              }
            },
            "attachments": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "attachmentUid": {
                    "type": [ "string", "null" ]
                  },
                  "attachmentUrl": {
                    "type": [ "string", "null" ]
                  },
                  "attachmentTitle": {
                    "type": "string"
                  },
                  "attachmentData": {
                    "type": "string"
                  },
                  "documentUid": {
                    "type": [ "string", "null" ]
                  },
                  "documentReference": {
                    "type": [ "string", "null" ]
                  },
                  "documentFlag": {
                    "type": "string"
                  },
                  "userEmail": {
                    "type": [ "string", "null" ]
                  }
                },
                "required": [
                  "attachmentTitle",
                  "attachmentData",
                  "documentFlag"
                ]
              }
            }
          },
          "required": [
            "referenceNumber",
            "documentTitle",
            "description",
            "voteCode",
            "createdBy",
            "createdByName",
            "approvedBy",
            "approvedByName",
            "submittedBy",
            "submittedByName",
            "assignedTo",
            "assignedToName",
            "approvedAmount",
            "minutesList",
            "attachments"
          ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}