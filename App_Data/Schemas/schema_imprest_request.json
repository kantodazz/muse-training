{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "receiver": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "sender": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "paymentType": {
              "type": "string"
            }
          },
          "required": [
            "receiver",
            "messageType",
            "sender",
            "msgId",
            "paymentType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "createdAt"
          ]
        },
        "messageDetails": {
              "type": "object",
              "properties": {
                "referenceNo": {
                  "type": "string"
                },
                "institutionCode": {
                  "type": "string"
                },
                "institutionName": {
                  "type": "string"
                },
                "departmentCode": {
                  "type": "string"
                },
                "departmentName": {
                  "type": "string"
                },
                "payeeCode": {
                  "type": "string"
                },
                "payeeName": {
                  "type": "string"
                },
                "payeeBankAccount": {
                  "type": "string"
                },
                "payeeBankName": {
                  "type": "string"
                },
                "payeeAccountName": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "amount": {
                  "type": "number"
                },
                "currency": {
                  "type": "string"
                },
                "attachments": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "attachmentName": {
                        "type": "string"
                      },
                      "attachmentData": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "attachmentName",
                      "attachmentData"
                    ]
                  }
                }
              },
              "required": [
                "referenceNo",
                "institutionCode",
                "institutionName",
                "departmentCode",
                "departmentName",
                "payeeCode",
                "payeeName",
                "payeeBankAccount",
                "payeeBankName",
                "payeeAccountName",
                "description",
                "amount",
                "currency",
                "attachments"
              ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}