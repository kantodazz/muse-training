{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "institutionCode": {
              "type": "string"
            }
          },
          "required": [
            "institutionCode"
          ]
        },
        "messageDetails": {
          "type": "object",
          "properties": {
            "referenceNo": {
              "type": "string"
            },
            "deductionType": {
              "type": "string"
            },
            "payeeAccountNo": {
              "type": "string"
            },
            "payeeAccountName": {
              "type": "string"
            },
            "payeeBankName": {
              "type": "string"
            },
            "payeeBankBic": {
              "type": "string"
            },
            "amount": {
              "type": "number"
            },
            "currency": {
              "type": "string"
            },
            "checkDate": {
              "type": "string"
            },
            "tinNumber": {
              "type": "string"
            }
          },
          "required": [
            "referenceNo",
            "deductionType",
            "payeeAccountNo",
            "payeeAccountName",
            "payeeBankName",
            "payeeBankBic",
            "amount",
            "currency",
            "checkDate",
            "tinNumber"
          ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}