{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "paymentType": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "paymentType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "createdAt"
          ]
        },
        "messageDetails": {
          "type": "object",
          "properties": {
            "narration": {
              "type": "string"
            },
            "payeeCode": {
              "type": "string"
            },
            "payeeName": {
              "type": "string"
            },
            "payeeBankAccount": {
              "type": "string"
            },
            "payeeBankName": {
              "type": "string"
            },
            "payeeAccountName": {
              "type": "string"
            },
            "payeeAddress": {
              "type": "string"
            },
            "payeeBic": {
              "type": "string"
            },
            "payerBankAccount": {
              "type": "string"
            },
            "paymentDesc": {
              "type": "string"
            },
            "amount": {
              "type": "integer"
            },
            "currency": {
              "type": "string"
            },
            "applyDate": {
              "type": "string"
            },
            "financialYear": {
              "type": "integer"
            },
            "departmentCode": {
              "type": "integer"
            },
            "institutionCode": {
              "type": "string"
            },
            "unappliedAccount": {
              "type": "string"
            },
            "referenceNo": {
              "type": "string"
            },
            "subBudgetClass": {
              "type": "string"
            },
            "paymentChannel": {
              "type": "string"
            },
            "controlNumber": {
              "type": "null"
            },
            "glAccounts": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "glAccount": {
                      "type": "string"
                    },
                    "amount": {
                      "type": "integer"
                    },
                    "fundingReferenceNo": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "glAccount",
                    "amount",
                    "fundingReferenceNo"
                  ]
                }
              ]
            },
            "attachments": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "attachmentName": {
                      "type": "string"
                    },
                    "attachmentData": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "attachmentName",
                    "attachmentData"
                  ]
                }
              ]
            }
          },
          "required": [
            "narration",
            "payeeCode",
            "payeeName",
            "payeeBankAccount",
            "payeeBankName",
            "payeeAccountName",
            "payeeAddress",
            "payeeBic",
            "payerBankAccount",
            "paymentDesc",
            "amount",
            "currency",
            "applyDate",
            "financialYear",
            "departmentCode",
            "institutionCode",
            "unappliedAccount",
            "referenceNo",
            "subBudgetClass",
            "paymentChannel",
            "controlNumber",
            "glAccounts",
            "attachments"
          ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}