{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "paymentType": {
              "type": [
                "string","null"
              ]
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "paymentType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "createdAt"
          ]
        },
        "messageDetails": {
          "type": "object",
          "properties": {
            "referenceNo": {
              "type": "string"
            },
            "lpoReferenceNo": {
              "type": "string"
            },
            "institutionCode": {
              "type": "string"
            },
            "departmentCode": {
              "type": "string"
            },
            "payeeName": {
              "type": "string"
            },
            "payeeBankAccount": {
              "type": "string"
            },
            "payeeBankName": {
              "type": "string"
            },
            "payeeAccountName": {
              "type": "string"
            },
            "payeeBic": {
              "type": "string"
            },
            "amount": {
              "type": "number"
            },
            "currency": {
              "type": "string"
            },
            "invoiceNo": {
              "type": "string"
            },
            "invoiceDate": {
              "type": "string"
            },
            "attachments": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "attachmentName": {
                    "type": "string"
                  },
                  "attachmentData": {
                    "type": "string"
                  }
                },
                "required": [
                  "attachmentName",
                  "attachmentData"
                ]
              }
            },
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "uid": {
                    "type": "string"
                  },
                  "orgUid": {
                    "type": "string"
                  },
                  "quantity": {
                    "type": "number"
                  },
                  "unitPrice": {
                    "type": "number"
                  }
                },
                "required": [
                  "uid",
                  "orgUid",
                  "quantity",
                  "unitPrice"
                ]
              }


            }
          },
          "required": [
            "referenceNo",
            "lpoReferenceNo",
            "institutionCode",
            "departmentCode",
            "payeeName",
            "payeeBankAccount",
            "payeeBankName",
            "payeeAccountName",
            "payeeBic",
            "amount",
            "currency",
            "invoiceNo",
            "invoiceDate",
            "attachments",
            "items"
          ]
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}