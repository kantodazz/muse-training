{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "properties": {
        "messageHeader": {
          "type": "object",
          "properties": {
            "sender": {
              "type": "string"
            },
            "receiver": {
              "type": "string"
            },
            "msgId": {
              "type": "string"
            },
            "messageType": {
              "type": "string"
            },
            "paymentType": {
              "type": "string"
            }
          },
          "required": [
            "sender",
            "receiver",
            "msgId",
            "messageType",
            "paymentType"
          ]
        },
        "messageSummary": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string"
            }
          },
          "required": [
            "createdAt"
          ]
        },
        "messageDetails": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "projectCode": {
                "type": "string"
              },
              "projectName": {
                "type": "string"
              },
              "implementorCode": {
                "type": "string"
              },
              "implementorName": {
                "type": "string"
              },
              "voteCode": {
                "type": "string"
              },
              "voteName": {
                "type": "string"
              },
              "donorCode": {
                "type": "string"
              },
              "donorName": {
                "type": "string"
              },
              "amount": {
                "type": "number"
              },
              "currency": {
                "type": "string"
              },
              "exchangeRate": {
                "type": "number"
              },
              "applyDate": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "sbc": {
                "type": "string"
              },
              "sbcDesc": {
                "type": "string"
              },
              "gfsCode": {
                "type": "string"
              },
              "gfsDesc": {
                "type": "string"
              }
            },
            "required": [
              "projectCode",
              "projectName",
              "implementorCode",
              "implementorName",
              "voteCode",
              "voteName",
              "donorCode",
              "donorName",
              "amount",
              "currency",
              "exchangeRate",
              "applyDate",
              "description",
              "sbc",
              "sbcDesc",
              "gfsCode",
              "gfsDesc"
            ]
          }
        }
      },
      "required": [
        "messageHeader",
        "messageSummary",
        "messageDetails"
      ]
    },
    "digitalSignature": {
      "type": "string"
    }
  },
  "required": [
    "message",
    "digitalSignature"
  ]
}