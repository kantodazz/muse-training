@model IFMIS.Areas.PayrollManagement.Models.PayrollJob

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<style>
</style>
<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">
    <div class="row">
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
        </div>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> Payroll Processing </h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!--end widget edit box-->
                        <!-- widget content -->
                        <div class="widget-body">
                            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PayrollProcessId, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-5">
                                            @Html.DropDownListFor(model => model.PayrollProcessId, ViewBag.Process as SelectList, "Select Job", new { @class = "form-control select2" })
                                            @Html.ValidationMessageFor(model => model.PayrollProcessId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-2">
                                            Active
                                            @Html.RadioButtonFor(model => model.Status, true, new { @checked = true })
                                            InActive
                                            @Html.RadioButtonFor(model => model.Status, false)
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-offset-2 col-md-3">
                                            <input type="button" onclick="addJob()" value="Create" class="btn btn-info" />
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col-md-3" id="myNotification">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    @*<input type="button" class="btn btn-primary" value="Job History" style="position: absolute; right: 100px;" href='@Url.Action("MyAction", "MyController")'>*@
                                    <fieldset class="scheduler-border">
                                        <legend class="scheduler-border"><strong>Payroll Process</strong></legend>
                                        <table class="table table-bordered table-condensed table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Process Code</th>
                                                    <th>Job Status </th>
                                                    <th>Started Time</th>
                                                    <th>Finished Time</th>
                                                    <th> Action </th>
                                                </tr>
                                            </thead>
                                            @{
                                                int j = 0;
                                            }
                                            <tbody>
                                                @if (ViewBag.job != null)
                                                {
                                                    foreach (var item in ViewBag.job)
                                                    {
                                                        j++;
                                                        <tr>
                                                            <td>@j</td>
                                                            <td>@item.PayrollProcess.Description</td>
                                                            <td>@item.OverallStatus</td>
                                                            <td>@item.StatedAt</td>
                                                            <td>@item.FinishedAt</td>
                                                            <td>
                                                                <button type="button" id="pay" class="btn btn-info btn-sm" onclick="runPayroll(@item.PayrollJobId)">
                                                                    Run<span class="glyphicon glyphicon-play"></span>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="6"> <p style="text-align:center;"><strong>No Payroll Jobs for this month......</strong></p></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </fieldset>
                                    <!-- end widget content -->
                                </div>
                            }
                            <!-- end widget content -->
                        </div>
                        <!-- end widget div -->
                    </div>
                    <!-- end widget -->
                </div>
            </article>
        </div>
    </section>
    <!-- end widget grid -->
</div>
<!-- end widget div -->
@section pagespecific {
    <!--PAGE RELATED PLUGIN(S)-->
    <script src="~/Scripts/libs/jquery.validate.min.js"></script>
    <script src="~/Scripts/libs/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/libs/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        var addJob = function (){
            debugger
            //$.validator.unobtrusive.parse("#form");
            if (!$("#form").valid()){
                return false;
            }

            var url = '@Url.Action("CreateJob", "PayrollJobs")';

            var model = $("#form").serialize();
            $.ajax({
                type: "POST",
                url: url,
                data: model,
                success: function (response) {
                    var notification = '';
                    if (response.success) {
                        notification = '<div class="alert alert-info">' + response.responseMessage + '</div>';
                    }
                    else {
                        notification = '<div class="alert alert-danger">' + response.responseMessage + '</div>';
                    }
                    $("#myNotification").html(notification);
                    $("#myNotification").fadeIn(2400).delay(4000).fadeOut(2400);
                    reload();
                },
                error: function (error){
                    $("#myNotification").html('<div class="alert alert-danger">' + error + '</div>');
                }
            });
        };

        function reload(){
            window.location.reload();
        }

        var runPayroll = function (id) {
            debugger
            $('#divLoader').show();
            $("#pay").prop('disabled', true);
            var url = '@Url.Action("RunPayrollJobs", "PayrollJobs")/' + id;

            $.ajax({
                type: "POST",
                url: url,
                success: function (response) {
                    $('#divLoader').hide();
                    if (response == "Success"){
                        swal("Run Successfully!", { icon: "success" }).then((e) =>{
                           window.location.reload();
                        });
                    }
                    else {
                        swal("Error on Running Payroll contact system administrator!", { icon: "error" }).then((e) => {
                           window.location.reload();
                        });
                    }
                },
                error: function (err){
                    $('#divLoader').hide();
                    $("#pay").prop('disabled', false);
                    swal(err.statusText);
                },
            });
        };
    </script>
}