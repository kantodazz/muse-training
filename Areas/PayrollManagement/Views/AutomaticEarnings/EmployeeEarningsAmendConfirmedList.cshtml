        function approveAmendEmployee(i, id){
            debugger;
            if (i == 'x') i = id;
            swal({
                title: "Approval!",
                text: "Are you sure you want to Approve?",
                buttons: [
                  'Yes',
                  'No'
                ],
            }).then(function (isConfirm){
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {
                    approveEarning(i)
                }
            });
        };

        var approveEarning = function (id) {
            var url = '@Url.Action("ApproveAmend", "AutomaticEarnings")/' + id;
            $.ajax({
                type: "POST",
                url: url,
                data: { id: id },
                success: function (response) {
                    if (response == "success") {
                        swal("Approved Successfully!",{ icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                    } else if (response == "DbException") {
                        swal("Error on Approving!", { icon: "error" }).then((e) => {
                            window.location.reload();
                        });
                    }
                },
                error: function (xhr){
                    swal("An error has occured, contact system support");
                },
            });
        };

