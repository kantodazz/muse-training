@{
    ViewBag.Title = "Deductions Approval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }
    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    td {
        padding: 5px;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label{
        position: relative;
        top: -12px;
        background-color: white;
        width: 110px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .entry-label1 {
        position: relative;
        top: -12px;
        background-color: white;
        width: 140px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .total-amount {
        float: right;
    }

    .wh-holding {
        color: #008636;
        font-size: 10px;
    }

    .bubble-w {
        width: 5px;
        height: 5px;
        border-radius: 100%;
        background-color: plum;
        border: 1px solid red;
    }
</style>
<div id="divLoader"></div>
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div class="widget-body">
                        <div class="row">
                            <div class="col-md-6">
                                <a class="btn btn-info " onclick="approve()">
                                    <i class="glyphicon glyphicon-thumbs-up"></i> Approve
                                </a>
                            </div>
                            <br /><br /><br />
                        </div>
                        <table id="tblUsers" class="table table-bordered table-condensed table-amount">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th></th>
                                    <th>Employee Name</th>
                                    <th>Check Number</th>
                                    <th>Deduction Code</th>
                                    <th>Loan Amount</th>
                                    <th>Deduction Amount</th>
                                    <th>Reason</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section pagespecific{

    <script>
        //============ INIT DATA TABLES START =====================
    $(function (){
        BindDataTable();
        $("#divLoader").show();
    });

  var BindDataTable = function () {
      var url = '@Url.Action("GetDeductionList", "Deduction")';
    $("#tblUsers").DataTable({
        "bServerSide": true,
        "sAjaxSource": url,
        "fnServerParams": function (aoData) {
            aoData.push({ "name": "overallStatus", "value": "Confirmed" });
        },
        "fnServerData": function (sSource, aoData, fnCallback) {
            $.ajax({
                type: "GET",
                url: sSource,
                data: aoData,
                success: function (data) {
                    fnCallback(data);
                    $("#divLoader").hide();
                },
                error: function () {
                    $("#divLoader").hide();
                    swal("An error occurred while fetching data.");
                },
                complete: function () {
                    $("#divLoader").hide();
                }
            });
        },
        "aoColumns": [
            {
                render: function (data, type, row, meta) {
                    return meta.row + meta.settings._iDisplayStart + 1;
                }
            },
            {
                "bSortable": false,
                "render": function (data, type, row, meta) {
                    return '<input type="checkbox" value="' + row.EmployeeDeductionId + '" class="checkBoxConfirm">';
                }
            },
            { "mData": "FullName" },
            { "mData": "CheckNumber" },
            { "mData": "DedDescription" },
            {
                "mData": "LoanAmount",
                render: $.fn.dataTable.render.number(',', '.', 2),
                className: "text-right"
            },
            {
                "mData": "MonthlyDeductionAmount",
                render: $.fn.dataTable.render.number(',', '.', 2),
                className: "text-right"
            },
            { "mData": "Remarks" },
            { "mData": "OverallStatus" },
            {
                "mData": "EmployeeDeductionId",
                "bSortable": false,
                "render": function (EmployeeDeductionId, type, row, meta) {
                    return '<div class="btn-group">\
                                            <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                            <span class="caret"></span>\
                                            <span class="sr-only">Toggle Dropdown</span>\
                                        </button>\
                                        <ul class="dropdown-menu">\
                                            <li><a href="#" onclick="reject(' + EmployeeDeductionId + ')"> Reject </a></li>\
                                        </ul>\
                                        </div>';
                }
            },
        ],
        "drawCallback": function (settings) {
            var api = this.api();
            var rows = api.rows({ page: 'current' }).nodes();
            var last = null;
            api.column(3, { page: 'current' }).data().each(function (group, i) {
                if (last !== group) {
                    $(rows).eq(i).before('<tr class="group"><td style="font-weight: bold;" colspan="8">' + group + '</td></tr>');
                    last = group;
                }
            });
        }
    });
  };

  var approve = function (){         
            var csvIds = [];
            $("input:checkbox.checkBoxConfirm").each(function () {
                if ($(this).prop("checked")) {
                    csvIds.push($(this).val());
                }
            });

            if (csvIds.length == 0) {
                swal("No record selected!");
                return;
            }

            swal({
                title: "Confirmation!",
                text: "Are you sure you want to Confirm?",
                buttons: [
                    'Yes',
                    'No'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {
                    approveDeduction(csvIds)
                }
            });
        }

        function approveDeduction(csvIds) {
            var url = '@Url.Action("ApproveMultDeduction", "Deduction")';

            $.ajax({
                type: "POST",
                url: url,
                data: { ids: csvIds },
                success: function (response) {
                    if (response == "Success") {
                        swal("Deduction Approved Successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                    } else if (response == "DbException") {
                        swal("Error on approving deduction!", { icon: "error" }).then((e) => {
                            window.location.reload();
                        });
                    }
                },
                error: function (xhr) {
                    swal("An error has occured, contact system support");
                },
            });
        };

    function approveOld(i){
            swal({
                title: 'Approve this Item?',
                buttons: [
                  'NO',
                  'YES'
                ],
                dangerMode: true,
            }).then(function (isConfirmed) {
                if (isConfirmed) {
                    $("#saveLoader-" + i + "").toggle(true)
                    $("#drop-" + i + "").toggle(false)
                    approvePost(i, false);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

       function approvePost(Id){
            $.ajax({
                type: "post",
                url: '@Url.Action("ApproveDeduction", "Deduction")',
                data: { "Id": Id},
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Saved Successfully!",{ icon: "success" })
                            .then((e) => {
                            window.location.reload();
                        });
                     }else {
                        swal(response);
                    }
                },
                failure: function (error){
                    swal(error);
                }
            });
        }

       function reject(i){
            swal({
                text: 'Rejection Reason',
                content: "input",
                button: {
                    text: "Save",
                    closeModal: true,
                },
            }).then(remark => {
                if (!remark) {
                    swal("No reason was provided");
                } else {
                    $("#saveLoader-" + i + "").toggle(true)
                    $("#drop-" + i + "").toggle(false)
                    confirmRejection(i, remark);
                };
            });
            $('#confirmModal').modal('hide');
        }

        function confirmRejection(Id, remark){
            var url = '@Url.Action("RejectDeduction", "Deduction")';
            $.ajax({
                type: "post",
                url: url,
                data: { "Id": Id, "Remark": remark, status: "Rejected By Approver" },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {

                    if (response == "Success") {
                        swal("Saved Successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error){
                    swal(error);
                }
            });
        }
    </script>
}
