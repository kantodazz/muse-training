@model IFMIS.Areas.Coadmis.Models.LegalFramework
@{
    ViewBag.Title = "Legal Framework List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="divLoader"></div>
<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">

        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <!-- Button trigger modal -->
            <!--<a data-toggle="modal" href="#myModal" class="btn btn-success btn-lg pull-right header-btn hidden-mobile"><i class="fa fa-circle-arrow-up fa-lg"></i> Launch form modal</a>-->
        </div>
    </div>

    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Summary of Legal and Regulatory Framework List </h2>

                    </header>

                    <!-- widget div-->
                    <div>
                        <a href="#" class="btn btn-info" onclick="showFrameworkModal()">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            Add Framework
                        </a>

                        <hr />
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <table class="table table-striped table-bordered table-hover table-condensed" id="tblLegalFramework">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Category</th>
                                        <th>Framework</th>
                                        <th>Act No.</th>
                                        <th>Year</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
<!-- Start of create modal -->
<div class="modal fade" id="divModal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog" style="width: 750px">
        <div class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblmodal">Add Legal Framework</h4>
            </div>
            <div class="modal-body" id="divModalBody"></div>
            <div class="modal-footer">
                <button class="btn btn-info role-save" onclick="saveFramework()">
                    <i class="fa fa-save"></i>
                    <img src="~/Content/img/loading.gif" id="saveLoader" />
                    Save
                </button>
                <button class="btn btn-default role-cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- End of create modal -->
<!-- Start of edit modal -->
<div class="modal fade" id="divEditModal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog" style="width: 750px">
        <div class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblmodal">Update Legal Framework</h4>
            </div>
            <div class="modal-body" id="divEditModalBody"></div>
            <div class="modal-footer">
                <button class="btn btn-info role-save" onclick="updateFramework()">
                    <i class="fa fa-save"></i>
                    <img src="~/Content/img/loading.gif" id="saveEditLoader" />
                    Save
                </button>
                <button class="btn btn-default role-cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- End of edit modal -->

@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->
    <script>
        var datatable = $("#tblLegalFramework").dataTable();
        $(".saveLoader").hide();
        var showFrameworkModal = function () {

            var url = '@Url.Action("Create", "LegalFramework")';

            $("#divModalBody").load(url, function (response, status, xhr) {
                if (status == "error") {
                    if (!$(".modal-header").hasClass("alert-danger")) {
                        $(".modal-header").removeClass("alert-info").addClass("alert-danger");
                        $(".role-save").css("display", "none");
                    }
                    $("#divModalBody").html("Error on creating legal framework, contact system support");
                }
                $("#divModal").modal("show");
                $("#saveLoader").hide();
            });
        };

        //function to reset bootstrap modal popups
        $("#divModal").on("hidden.bs.modal", function () {
            $(".modal-header").removeClass("alert-danger").addClass("alert-info");
            $(".role-save").css("display", "inline-block");
            $("#divModalBody").html("");
        });

        $.ajax({
            type: "get",
            url: '@Url.Action("GetLegalFrameworks", "LegalFramework")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                data = response.data;
                datatable.fnClearTable();
                for (var i = 0; i < data.length; i++)
                    {
                        datatable.fnAddData([i + 1,
                            data[i]["LegalFrameworkCategory"],
                            data[i]["LegalRegulatoryFramework"],
                            data[i]["ActNo"],
                            data[i]["Year"],
                            data[i]["Status"],
                            '<div class="btn-group" id="drop-' + i + '">\
                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                                </button>\
                                <ul class="dropdown-menu">\
                                    <li><a href="#" onclick="showEditFrameworkModel('+ data[i]["LegalFrameworkId"] + ',\'' + data[i]["LegalRegulatoryFramework"] + '\',\'' + data[i]["LegalFrameworkCategory"] + '\',\'' + data[i]["ActNo"] + '\',\'' + data[i]["Year"] + '\', \'' + data[i]["Status"] + '\')">Edit</a></li>\
                                    <li><a href="#" onclick="deleteFramwork('+ data[i]["LegalFrameworkId"] + ')">Delete</a></li>\
                                </ul>\
                            </div>\ '
                        ]);
                }
            },
            failure: function (error)
            {
                swal(error);
            }
        });

        var showEditFrameworkModel = function (id, name, category, actno, year, legalStatus) {

            var url = '@Url.Action("Edit", "LegalFramework")';

            $("#divEditModalBody").load(url, function (response, status, xhr) {
                if (status == "error") {
                    if (!$(".modal-header").hasClass("alert-danger")) {
                        $(".modal-header").removeClass("alert-info").addClass("alert-danger");
                        $(".role-save").css("display", "none");
                    }
                    $("#divEditModalBody").html("Error on updating legal framework, contact system support");
                }

                $('#ActNo').val(actno);
                $('#Year').val(year);
                $('#LegalRegulatoryFramework').val(name);
                $('#LegalFrameworkCategory').val(category);
                $('#Status').val(legalStatus);
                $('#LegalFrameworkId').val(id);
                $("#divEditModal").modal("show");
                $("#saveEditLoader").hide();
            });
        };

        function saveFramework() {
            var LegalRegulatoryFramework = $("#LegalRegulatoryFramework").val();
            var LegalFrameworkCategory = $("#LegalFrameworkCategory").val();
            var ActNo = $("#ActNo").val();
            var Year = $("#Year").val();
            var Status = $("#Status").val();

            if (LegalRegulatoryFramework == '') {
                swal("Please add regulatory framework");
                return false;
            }

            if (LegalFrameworkCategory == '') {
                swal("Please add regulatory framework");
                return false;
            }

            if (ActNo == '') {
                swal("Please add act no");
                return false;
            }

            if (Year == '') {
                swal("Please add year");
                return false;
            }

            if (Status == '') {
                swal("Please select status");
                return false;
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('LegalRegulatoryFramework', LegalRegulatoryFramework);
            formData.append('LegalFrameworkCategory', LegalFrameworkCategory);
            formData.append('ActNo', ActNo);
            formData.append('Year', Year);
            formData.append('Status', Status);

            postFormData(formData);
        }

        function postFormData(formData) {
            $("#saveLoader").show();
            $("#saveLoader").toggle(true);
            var url = '@Url.Action("create", "LegalFramework")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $('#divModal').modal('hide');
                    $("#saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Legal framework created successfully", { icon: "success" })
                            .then((m) => {
                                window.location.replace('@Url.Action("LegalFrameworkList", "LegalFramework")');
                            });
                    } else if (response == "Duplicate") {
                        swal("Legal Framework already exist", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else if (response == "Invalid") {
                        swal("Operation Failed. Please contact System Administrator!", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else {
                        $("#saveLoader").toggle(false);
                        swal("Failed to create legal framework", { icon: "warning" });
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function updateFramework() {
            var LegalRegulatoryFramework = $("#LegalRegulatoryFramework").val();
            var LegalFrameworkCategory = $("#LegalFrameworkCategory").val();
            var Status = $("#Status").val();
            var ActNo = $("#ActNo").val();
            var Year = $("#Year").val();
            var id = $("#LegalFrameworkId").val();

            if (LegalRegulatoryFramework == '') {
                swal("Please add regulatory framework");
                return false;
            }

            if (LegalFrameworkCategory == '') {
                swal("Please add framework category");
                return false;
            }

            if (ActNo == '') {
                swal("Please add Act number");
                return false;
            }

            if (Year == '') {
                swal("Please add year");
                return false;
            }

            if (Status == '') {
                swal("Please select status");
                return false;
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('LegalRegulatoryFramework', LegalRegulatoryFramework);
            formData.append('LegalFrameworkCategory', LegalFrameworkCategory);
            formData.append('ActNo', ActNo);
            formData.append('Year', Year);
            formData.append('Status', Status);
            formData.append('LegalFrameworkId', id);

            putFormData(formData);
        }

        function putFormData(formData) {
            $("#saveEditLoader").show();
            $("#saveEditLoader").toggle(true);
            var url = '@Url.Action("Edit", "LegalFramework")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $('#divEditModalBody').modal('hide');
                    $("#saveEditLoader").toggle(true);
                    if (response == "Success") {
                        swal("Legal framework updated successfully", { icon: "success" })
                            .then((m) => {
                                window.location.replace('@Url.Action("LegalFrameworkList", "LegalFramework")');
                            });
                    } else if (response == "Duplicate") {
                        swal("Legal Framework already exist", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else if (response == "Invalid") {
                        swal("Operation Failed. Please contact System Administrator!", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else if (response == "Not Found") {
                        swal("Legal Framework not found", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else {
                        $("#saveEditLoader").toggle(false);
                        swal("Failed to update legal framework", { icon: "warning" });
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        //Delete action start here
        function deleteFramwork(id) {
            swal({
                text: "Are you Sure you want to delete this framework",
                buttons: [
                    'No',
                    'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    deleteLegalFramework(id);
                } else {
                    swal("Cancelled", "No changes was made");
                }
            });

        }

        function deleteLegalFramework(id) {
             var url = '@Url.Action("Delete", "LegalFramework")';
            $.ajax({
                type: "post",
                url: url,
                data: { "id": id },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Legal framework deleted Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }

                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

    </script>

}


