@model IFMIS.Areas.Coadmis.Models.LawsRegulationVM

<form>
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.LegalFrameworkId, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-sm-8">
                @Html.DropDownList("LegalFrameworkId", ViewBag.LegalFrameworks as SelectList, "Select summary of legal framework", new { @class = "form-control select2" })
                @Html.ValidationMessageFor(model => model.LegalFrameworkId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProcedureCompliance, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.ProcedureCompliance, new { @class = "form-control", @rows = 5, @cols = 50 })
                @Html.ValidationMessageFor(model => model.ProcedureCompliance, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AuditApproach, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.AuditApproach, new { @class = "form-control", @rows = 5, @cols = 50 })
                @Html.ValidationMessageFor(model => model.AuditApproach, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-sm-8">
                @Html.DropDownList("Status", ViewBag.Status as SelectList, "Select status", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FileName, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.FileName, new { @class = "form-control", @type = "file", @accept = ".pdf" })
                @Html.ValidationMessageFor(model => model.FileName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        $("select").select2();
    });

</script>