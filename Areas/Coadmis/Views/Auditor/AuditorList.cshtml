
@{
    ViewBag.Title = "Auditor List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .loadingImg {
        display: none;
    }
</style>
<div id="content" style="margin: 5px;">
    <div class="row"></div>
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> @ViewBag.Title</h2>
                    </header>

                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <a class="btn btn-info" href='@Url.Action("CreateAuditor", "Auditor")'>
                                    <i class="glyphicon glyphicon-plus"></i> Add New
                                </a>
                            </div>
                            <div class="col-md-6"></div>
                        </div>
                        <div class="widget-body " style="padding-top:10px;width:100%">
                            @Html.AntiForgeryToken()
                            <table class="table  table-bordered table-hover table-condensed" id="dataTableList">
                                <thead>
                                    <tr>
                                        <th style="text-align:right;width:4%">#</th>
                                        <th style="text-align:left;">Full Name</th>
                                        <th>Check Number</th>
                                        <th>Phone Number</th>
                                        <th style="text-align:right">Email Address</th>
                                        <th>Address</th>
                                        <th style="text-align:right">Position</th>
                                        <th style="text-align:right">Professional</th>
                                        <th style="text-align:right">Status</th>
                                        <th style="text-align:center">Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </article>

        </div>
    </section>

</div>

@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->
    <script type="text/javascript">
        $(document).ajaxStart(function () {
            $(".loadingImg").show();

        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $(".loadingImg").hide();
        });

        $(document).ready(function () {
            BindDataTable();
        });

        var BindDataTable = function (response) {
            $("#dataTableList").DataTable({
                "bServerSide": true,
                "iDisplayLength": 10,
                "aLengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "sAjaxSource": '@Url.Action("GetAuditorList", "Auditor")',
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        type: "Get",
                        data: aoData,
                        url: sSource,
                        success: fnCallback
                    })
                },
                "aoColumns": [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "mData": "FirstName",
                        "render": function (FirstName, type, full, meta) {
                            var fullname = null;
                            if (full.MiddleName != null) {
                                fullname = full.FirstName + " " + full.MiddleName + " " + full.LastName;
                            } else {
                                fullname = full.FirstName + " " + full.LastName;
                            }
                            return fullname;
                        }
                    },
                    { "mData": "CheckNumber" },
                    { "mData": "PhoneNumber" },
                    { "mData": "EmailAddress" },
                    { "mData": "Address" },
                    { "mData": "PositionName" },
                    {
                        "mData": "AuditorProfessional",
                        "render": function (AuditorProfessional, type, full, meta) {
                            var Aprofessional = "";

                            //console.log("AuditorProfessional:", AuditorProfessional.);
                            //if (AuditorProfessional.Length > 0) {
                                AuditorProfessional.forEach((item) => {
                                    console.log("item:", item);
                                    if (Aprofessional == "") {
                                        Aprofessional = item.ProfessionalName;
                                    }
                                    else {
                                        Aprofessional = Aprofessional + "," + item.ProfessionalName;
                                    }

                                });
                            //}
                            
                            return Aprofessional;
                        }
                    },
                    { "mData": "Status" },
                    {
                        "mData": "AuditorId",
                        "render": function (AuditorId, type, full, meta) {
                               return '<div class="btn-group" id="drop">\
                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                <span class="caret"></span\
                                <span class="sr-only"></span>\
                                </button>\
                                <ul class="dropdown-menu dropdown-menu-right">\
                                    <li><a class="dropdown-item" href="@Url.Action("EditAuditor", "Auditor")/?id=' + AuditorId + '">Edit</a></li>\
                                    <li><a href="#" onclick="cancelAuditor('+full.CheckNumber+')">Cancel</a></li>\
                                </ul>\
                            </div>\ ';
                        }
                    },
                ]
            });
        }

        function cancelAuditor(checkNumber) {
            swal({
                title: 'Cancel Auditor ?',
                text: "Are you sure you want to Cancel Audior: " + checkNumber + " This process cannot be undone",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    cancelAuditorDetail(checkNumber);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });

        }

        function cancelAuditorDetail(checkNumber) {
            var url = '@Url.Action("CancelAuditor", "Auditor")';
            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('CheckNumber', checkNumber);

            $.ajax({
                /*type: "post",
                url: url,
                data: { "CheckNumber": checkNumber },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",*/
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response == "Success") {
                        swal("Cancelled Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal("Error Cancelling Auditor", { icon: "warning" });
                    }
                },
                failure: function (error) {
                    swal("Error Cancelling Auditor", { icon: "warning" });
                }
            });
        }
    </script>
}




