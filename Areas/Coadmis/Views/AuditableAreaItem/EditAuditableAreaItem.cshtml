<div id="content" style="margin: 5px;">
    <div class="row"></div>
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> @ViewBag.Title</h2>
                    </header>

                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">
                            <div class="row setup-content">
                                @Html.AntiForgeryToken()
                                <form>
                                    <div class="form-horizontal">
                                        <div class="col-xs-12">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">Auditable Area</label>
                                                <div class="col-md-8">
                                                    <select id="AuditableAreaId" class="form-control select2">
                                                        @if (ViewBag.AuditableAreaList != null)
                                                        {
                                                            <option value="">Select Auditable Area</option>
                                                            foreach (var auditableArea in ViewBag.AuditableAreaList)
                                                            {
                                                                if (ViewBag.AuditableAreaId == auditableArea.AuditableAreaId)
                                                                {
                                                                    <option value='@auditableArea.AuditableAreaId' selected>@auditableArea.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value='@auditableArea.AuditableAreaId'>@auditableArea.Name</option>
                                                                }
                                                            }

                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-2">Name<span class="redStar">*</span></label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(model => model.Name, new { @Class = "input", @required = "required", style = "width:100%; " })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Code<span class="redStar">*</span></label>
                                                <div class="col-md-3">
                                                    @Html.TextBoxFor(model => model.Code, new { @Class = "input", @required = "required", style = "width:100%; ", @maxlength = "100" })
                                                </div>
                                                <label class="control-label col-md-2">Status<span class="redStar">*</span></label>
                                                <div class="col-md-3">
                                                    @Html.DropDownList("Status", new List<SelectListItem>{
                                                        new SelectListItem{ Text="--Select ---", Value = "" },
                                                        new SelectListItem{ Text="Active", Value = "Active" },
                                                        new SelectListItem{ Text="Inactive", Value = "Inactive" },
                                                        }, new { @class = "form-control select2", @required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                                </div>

                                            </div>

                                            <div class="form-group">
                                                @*<label class="control-label col-md-2">Engagement</label>
                                                    <div class="col-md-3">
                                                        <select id="EngagementId" class="form-control select2">
                                                            @if (ViewBag.EngagementList != null)
                                                            {
                                                                <option value="">Select Engagement</option>
                                                                foreach (var engagement in ViewBag.EngagementList)
                                                                {

                                                                    if (ViewBag.EngagementId == engagement.EngagementId)
                                                                    {
                                                                        <option value='@engagement.EngagementId' selected>@engagement.EngagementName</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value='@engagement.EngagementId'>@engagement.EngagementName</option>
                                                                    }
                                                                }

                                                            }
                                                        </select>
                                                    </div>*@

                                                @*<label class="control-label col-md-2">Auditable Area</label>
                                                    <div class="col-md-3">
                                                        <select id="AuditableAreaId" class="form-control select2">
                                                            @if (ViewBag.AuditableAreaList != null)
                                                            {
                                                                <option value="">Select Auditable Area</option>
                                                                foreach (var auditableArea in ViewBag.AuditableAreaList)
                                                                {
                                                                    if (ViewBag.AuditableAreaId == auditableArea.AuditableAreaId)
                                                                    {
                                                                        <option value='@auditableArea.AuditableAreaId' selected>@auditableArea.Name</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value='@auditableArea.AuditableAreaId'>@auditableArea.Name</option>
                                                                    }
                                                                }

                                                            }
                                                        </select>
                                                    </div>*@
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <div class="col-md-2"></div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("AuditableAreaItemList", "AuditableAreaItem")" style="margin-right:5px" type="submit" class="btn btn-info pull-left"><i class="glyphicon glyphicon-arrow-left"></i> Back  </a>
                                    <button type="submit" class="btn btn-info" onclick="saveAditableAreaItemForm()" id="saveAuditableAreaItemBtn">
                                        <i class="fa fa-save"></i>Update
                                        <img src="~/Content/img/loading.gif" class="loadingImg" />
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </article>

        </div>
    </section>

</div>

