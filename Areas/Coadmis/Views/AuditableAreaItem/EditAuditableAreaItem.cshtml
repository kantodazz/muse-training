        function saveAditableAreaItemForm() {
            var errorMessage = [];
            var name = $("#Name").val();
            var code = $("#Code").val();
            //var engagementId = $("#EngagementId").val();
            var auditableAreaId = $("#AuditableAreaId").val();
            var auditableAreaName = $("#AuditableAreaId option:selected").text();
             var auditableAreaCodeEnd = 0;
            var totalAuditableAreaCode = 0;
            var auditableAreaCode = auditableAreaName.substring(0, auditableAreaName.indexOf('-'));
            /*var previousYearAmount = $("#PreviousYearAmount").val();
            var currentYearAmount = $("#CurrentYearAmount").val();*/
            var status = $("#Status").val();

            if (name == '' || code == '' || auditableAreaId == '' || status == '') {
                if (name == '') {
                    errorMessage.push("Name");
                }

                /*if (previousYearAmount == '') {
                    errorMessage.push("Previous Year Amount");
                }

                if (currentYearAmount == '') {
                    errorMessage.push("Current Year Amount");
                }
                if (engagementId == '') {
                    errorMessage.push("Engagement");
                }*/

                if (auditableAreaId == '') {
                    errorMessage.push("Auditable Area");
                }

                if (code == '') {
                    errorMessage.push("Code");
                }

                if (status == '') {
                    errorMessage.push("Status");
                }

                swal("Please fill the correct values for fields: " + errorMessage);
                $(".loadingImg").toggle(false);
                $("#saveAuditableAreaItemBtn").prop('disabled', false);
                return false;
            }
            else{
            auditableAreaCodeEnd = 200;
                auditableAreaCodeEnd = parseInt(auditableAreaCodeEnd);
                totalAuditableAreaCode = parseInt(auditableAreaCode) + parseInt(auditableAreaCodeEnd);
                if (parseInt(code) >= parseInt(auditableAreaCode) && parseInt(code) <= totalAuditableAreaCode) {
            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('AuditableAreaItemId','@ViewBag.AuditableAreaItemId');
            formData.append('Name', name);
            formData.append('Code', code);
            /*formData.append('PreviousYearAmount', previousYearAmount);
            formData.append('CurrentYearAmount', currentYearAmount);
            formData.append('EngagementId', engagementId);*/
            formData.append('AuditableAreaId', auditableAreaId);
            formData.append('AuditableAreaName', auditableAreaName);
            formData.append('Status', status);
            postFormData(formData);
           } else {
                    swal("Code Should be between: " + parseInt(auditableAreaCode) + " and " + totalAuditableAreaCode);
                    $(".loadingImg").toggle(false);
                    $("#saveAuditableAreaItemBtn").prop('disabled', false);
                    return false;
                }
            }
        }

    function postFormData(formData) {
        url = '@Url.Action("UpdateAuditableAreaItem", "AuditableAreaItem")';

        $("#saveAuditableAreaItemBtn").prop('disabled', true);
        $(".loadingImg").toggle(true);
        $.ajax({
            url: url,
            data: formData,
            type: 'POST',
            contentType: false,
            processData: false,
            success: function (response) {
                $("#saveAuditableAreaItemBtn").prop('disabled', true);
                $(".loadingImg").toggle(true);
                if (response == "Success") {
                    swal("Saved Successfully!", { icon: "success" })
                        .then((m) => {
                           var url = '@Url.Action("AuditableAreaItemList", "AuditableAreaItem")';
                           window.location.replace(url);
                        });
                } else {
                    $("#saveAuditableAreaItemBtn").prop('disabled', false);
                    $(".loadingImg").toggle(false);
                    swal(response)
                }
            },
            failure: function (error) {
                $("#saveAuditableAreaItemBtn").prop('disabled', false);
                $(".loadingImg").toggle(false);
                swal("An error occured: ",response)
            }
        });
    }

    </script>
}




