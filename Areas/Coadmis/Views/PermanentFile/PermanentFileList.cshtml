@{
    ViewBag.Title = "Permanent Files List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .loadingImg {
        display: none;
    }
</style>
<div id="content" style="margin: 5px; padding-top: 50px">
    <div class="row"></div>
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> @ViewBag.Title</h2>
                    </header>

                    <div class="widget-body">
                        <a href="#" onclick="showFileModal()" class="btn btn-info">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            Open File
                        </a>
                        <hr />
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <table class="table table-striped table-bordered table-hover table-condensed" id="tblPermanentFile">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>File Name</th>
                                    <th>Reference No.</th>
                                    <th style="width: 35%">Client</th>
                                    <th>Client Category</th>
                                    <th>Region</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </article>

        </div>
    </section>
</div>

<div class="modal fade" id="divFileModal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog" style="width: 650px">
        <div class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblmodal">Add File</h4>
            </div>
            <div class="modal-body" id="divFileModalBody"></div>
            <div class="modal-footer">
                <button class="btn btn-info role-save" onclick="saveFile()">
                    <i class="fa fa-save"></i>
                    <img src="~/Content/img/loading.gif" id="saveFileLoader" />
                    Save
                </button>
                <button class="btn btn-default role-cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="divEditFileModal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog" style="width: 650px">
        <div class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblmodal">Update File</h4>
            </div>
            <div class="modal-body" id="divEditFileModalBody"></div>
            <div class="modal-footer">
                <button class="btn btn-info role-save" onclick="updateFile()">
                    <i class="fa fa-save"></i>
                    <img src="~/Content/img/loading.gif" id="saveEditFileLoader" />
                    Save
                </button>
                <button class="btn btn-default role-cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->
    <script type="text/javascript">
        var datatable = $("#tblPermanentFile").dataTable();
        var showFileModal = function () {

            var url = '@Url.Action("Create", "PermanentFile")';

            $("#divFileModalBody").load(url, function (response, status, xhr) {
                if (status == "error") {
                    if (!$(".modal-header").hasClass("alert-danger")) {
                        $(".modal-header").removeClass("alert-info").addClass("alert-danger");
                        $(".role-save").css("display", "none");
                    }
                    $("#divFileModalBody").html("Error on creating permanent file, contact system support");
                }
                $("#divFileModal").modal("show");
                $("#saveFileLoader").hide();
            });
        };

        //function to reset bootstrap modal popups
        $("#divFileModal").on("hidden.bs.modal", function () {
            $(".modal-header").removeClass("alert-danger").addClass("alert-info");
            $(".role-save").css("display", "inline-block");
            $("#divFileModalBody").html("");
        });

        $.ajax({
            type: "get",
            url: '@Url.Action("GetPermanentFiles", "PermanentFile")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                data = response.data;
                datatable.fnClearTable();
                for (var i = 0; i < data.length; i++)
                    {
                        datatable.fnAddData([i + 1,
                            data[i]["PermanentFileName"],
                            data[i]["ReferenceNo"],
                            data[i]["Client"],
                            data[i]["ClientCategory"],
                            data[i]["Region"],
                            data[i]["Status"],
                            '<div class="btn-group" id="drop-' + i + '">\
                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                                </button>\
                                <ul class="dropdown-menu">\
                             <li><a href="#" onclick="showEditFileModel('+ data[i]["PermanentFileId"] + ',\'' + data[i]["Status"] + '\')">Edit</a></li>\
                             <li><a href="@Url.Action("FileContent", "PermanentFile")/?id='+ data[i]["PermanentFileId"] +'">Add Contents</a></li>\
                                </ul>\
                            </div>\ '
                        ]);
                }
            },
            failure: function (error)
            {
                swal(error);
            }
        });

        var showEditFileModel = function (id, status) {

            var url = '@Url.Action("Edit", "PermanentFile")?id='+id;

            $("#divEditFileModalBody").load(url, function (response, status, xhr) {
                if (status == "error") {
                    if (!$(".modal-header").hasClass("alert-danger")) {
                        $(".modal-header").removeClass("alert-info").addClass("alert-danger");
                        $(".role-save").css("display", "none");
                    }
                    $("#divEditFileModalBody").html("Error on updating file, contact system support");
                }
                $('#PermanentFileId').val(id);
                $("#divEditFileModal").modal("show");
                $("#saveEditFileLoader").hide();
            });
        };

        function saveFile() {
            debugger;
            var PermanentFileName = $("#PermanentFileName").val();
            var ClientInformationId = $("#ClientInformationId").val();
            var ReferenceNo = $("#ReferenceNo").val();

            if (PermanentFileName == '') {
                swal("Please add file name");
                return false;
            }

            if (ReferenceNo == '') {
                swal("Please add reference number");
                return false;
            }
            

            if (ClientInformationId == 0 || ClientInformationId == '' || ClientInformationId == null) {
                swal("Please select client");
                return false;
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('PermanentFileName', PermanentFileName);
            formData.append('ReferenceNo', ReferenceNo);
            formData.append('ClientInformationId', ClientInformationId);

            postFormData(formData);
        }

        function postFormData(formData) {
            $("#saveLoader").show();
            $("#saveLoader").toggle(true);
            var url = '@Url.Action("create", "PermanentFile")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $('#divModal').modal('hide');
                    $("#saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Permanent file created successfully", { icon: "success" })
                            .then((m) => {
                                window.location.replace('@Url.Action("PermanentFileList", "PermanentFile")');
                            });
                    } else if (response == "Duplicate") {
                        swal("Permanent file already exist for this client", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else if (response == "Invalid") {
                        swal("Operation Failed. Please contact System Administrator!", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else {
                        $("#saveLoader").toggle(false);
                        swal("Failed to create permanent file", { icon: "warning" });
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function updateFile() {
            debugger;
            var PermanentFileName = $("#PermanentFileName").val();
            var client = $("#ClientInformationId").val();
            var ReferenceNo = $("#ReferenceNo").val();
            var id = $("#PermanentFileId").val();

            if (PermanentFileName == '') {
                swal("Please add file name");
                return false;
            }

            if (ReferenceNo == '') {
                swal("Please add reference no");
                return false;
            }
            

            if (client == 0 || client == '' || client == null) {
                swal("Please select client");
                return false;
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('PermanentFileName', PermanentFileName);
            formData.append('ClientInformationId', client);
            formData.append('ReferenceNo', ReferenceNo);
            formData.append('PermanentFileId', id);

            putFormData(formData);
        }

        function putFormData(formData) {
            $("#saveEditLoader").show();
            $("#saveEditLoader").toggle(true);
            var url = '@Url.Action("Edit", "PermanentFile")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $('#divEditModalBody').modal('hide');
                    $("#saveEditLoader").toggle(true);
                    if (response == "Success") {
                        swal("Permanent file updated successfully", { icon: "success" })
                            .then((m) => {
                                window.location.replace('@Url.Action("PermanentFileList", "PermanentFile")');
                            });
                    } else if (response == "Duplicate") {
                        swal("Permanent file already exist", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else if (response == "Invalid") {
                        swal("Operation Failed. Please contact System Administrator!", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else if (response == "Not Found") {
                        swal("Permanent file not found", { icon: "warning" })
                            .then((m) => {
                                return;
                            });
                    } else {
                        $("#saveEditLoader").toggle(false);
                        swal("Failed to update permanent file", { icon: "warning" });
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
    </script>
}
