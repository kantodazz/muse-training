
@{
    ViewBag.Title = "Director List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .loadingImg {
        display: none;
    }
</style>
<div id="content" style="margin: 5px;">
    <div class="row"></div>
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> @ViewBag.Title</h2>
                    </header>

                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <a class="btn btn-info" href='@Url.Action("CreateDirector", "Director")'>
                                    <i class="glyphicon glyphicon-plus"></i> Add New
                                </a>
                            </div>
                            <div class="col-md-6"></div>
                        </div>
                        <div class="widget-body " style="padding-top:10px;width:100%">
                            @Html.AntiForgeryToken()
                            <table class="table  table-bordered table-hover table-condensed" id="dataTableList">
                                <thead>
                                    <tr>
                                        <th style="text-align:right;width:4%">#</th>
                                        <th style="text-align:left;">Full Name</th>
                                        <th style="text-align:left;">Start Date</th>
                                        <th style="text-align:left;">End Date</th>
                                        <th style="text-align:right">Status</th>
                                        <th style="text-align:center">Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </article>

        </div>
    </section>

</div>

@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->
    <script type="text/javascript">
        $(document).ajaxStart(function () {
            $(".loadingImg").show();

        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $(".loadingImg").hide();
        });

        $(document).ready(function () {
            BindDataTable();
        });

        var BindDataTable = function (response) {
            $("#dataTableList").DataTable({
                "bServerSide": true,
                "iDisplayLength": 10,
                "aLengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "sAjaxSource": '@Url.Action("GetDirectorList", "Director")',
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        type: "Get",
                        data: aoData,
                        url: sSource,
                        success: fnCallback
                    })
                },
                "aoColumns": [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "mData": "FirstName",
                        "render": function (FirstName, type, full, meta) {
                            var fullname = null;
                            if (full.MiddleName != null) {
                                fullname = full.Title + "." + full.FirstName + " " + full.MiddleName + " " + full.LastName;
                            } else {
                                fullname = full.Title + "." + full.FirstName + " " + full.LastName;
                            }
                            return fullname;
                        }
                    },
                    {
                        "mData": "StartedAt",
                        "render": function (value) {
                            if (value === null) return "";

                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            return dt.getDate() + "/" + (dt.getMonth() + 1) + "/" + dt.getFullYear();
                        }
                    
                        //"render": function (StartedAt) {
                        //    var date = new Date(StartedAt);
                        //    const monthNames = ["January", "February", "March", "April", "May", "June",
                        //        "July", "August", "September", "October", "November", "December"
                        //    ];

                        //    var month = date.getMonth();
                        //    return date.getDate() + "-" + monthNames[parseInt(month.toString().length > 1 ? month : "0" + month)] + "-" + date.getFullYear();
                        //}
                    },
                    {
                        "mData": "EndAt",
                        "render": function (value) {
                            if (value === null) return "";

                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            return dt.getDate() + "/" + (dt.getMonth() + 1) + "/" + dt.getFullYear();
                        }
                    },
                    { "mData": "Status" },
                    {
                        "mData": "DirectorId",
                        "render": function (DirectorId, type, full, meta) {
                                  return '<div class="btn-group" id="drop">\
                                    <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                    <span class="caret"></span\
                                    <span class="sr-only"></span>\
                                    </button>\
                                    <ul class="dropdown-menu dropdown-menu-right">\
                                        <li><a class="dropdown-item" href="@Url.Action("EditDirector", "Director")/?id=' + DirectorId + '">Edit</a></li>\
                                        <li><a href="#" onclick="ChangeStatus('+ DirectorId +')">Change Status</a></li>\
                                    </ul>\
                                </div>\ ';
                        }
                    },
                ]
            });

            // Custom function to format date as day/month/year
            function formatDate(dateString) {
                var date = new Date(dateString);
                var day = date.getDate();
                var month = date.getMonth() + 1;
                var year = date.getFullYear();

                // Ensure leading zeros for day and month
                day = day < 10 ? '0' + day : day;
                month = month < 10 ? '0' + month : month;

                return day + '/' + month + '/' + year;
            }
        }

        function ChangeStatus(DirectorId) {
            swal({
                title: 'Change Director Status ?',
                text: "Are you sure you want to Change Status?",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    ChangeStatuss(DirectorId);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });

        }

        function ChangeStatuss(DirectorId) {
            console.log("DirectorId :", DirectorId);
            var url = '@Url.Action("ChangeStatus", "Director")';
            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('DirectorId', DirectorId);

            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response == "Success") {
                        swal("Status Changed Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal("Error Status Changing", { icon: "warning" });
                    }
                },
                failure: function (error) {
                    swal("Error Status Changing", { icon: "warning" });
                }
            });
        }
    </script>
}





