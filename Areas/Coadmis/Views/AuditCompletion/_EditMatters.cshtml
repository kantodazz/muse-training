@model IFMIS.Areas.Coadmis.DTO.AddMattersVM

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "recommendationsEditForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.HiddenFor(model => model.PointFowardSignificantMatterId)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PointFowardSetupId, htmlAttributes: new { @class = "control-label col-md-2" })
