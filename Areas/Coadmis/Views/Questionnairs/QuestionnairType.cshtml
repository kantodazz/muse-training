@model IFMIS.Areas.Coadmis.Models.QuestionnairVM

@{
    ViewBag.Title = "Questionnair Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    .loadingImg {
        display: none;
    }

    body {
        margin-top: 40px;
    }

    .search-btn {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 5px;
        padding-right: 10px;
    }

    .search-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        padding-left: 10px;
    }

    .name-input-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        overflow: hidden;
    }

    .search-icon {
        padding: 0.5rem;
    }

    .search-button {
        background: #538AC5;
        border: 0;
        color: white;
        padding: 8px;
        border-radius: 0;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
        width: 205px;
    }

    input[type=text] {
        padding: 5px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    textarea {
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    .action-btn {
        width: 100px;
        color: white;
    }

    .form-label {
        text-align: right;
    }

    td {
        padding: 5px;
    }

    .info-box {
        padding: 10px;
        background-color: #ECF3F8;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    #itemUL li {
        margin-left: -40px;
        border-bottom: 1px solid silver;
        height: 26px;
        padding-left: 5px;
        padding-top: 8px;
        cursor: pointer;
    }

    .redStar {
        color: red;
        font-size: 15px;
    }
</style>
<div id="content" style="margin: 5px; padding-top: 50px">
    <div class="row"></div>
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i></span>
                        <h2> @ViewBag.Title</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <a onclick="showCreateModal()" style="margin-left:15px;" class="btn btn-info">
                                        <i class="fa fa-lg fa-fw fa-plus"></i>Add New
                                    </a>
                                </div>
                                <div class="col-md-6">

                                </div>
                            </div>
                            <table id="dt_application_list" class="table table-bordered table-condensed table-amount">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Questionnair Type</th>
                                        <th>Ref No.</th>
                                        <th style="width:50%">Description</th>
                                        <th>Status</th>
                                        <th style="width:30px">Actions</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@*create modal*@
<div class="modal fade" id="divModal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog" style="width: 650px">
        <div class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblmodal">Add Questionnaire Type</h4>
            </div>
            <div class="modal-body" id="divModalBody"></div>
            <div class="modal-footer">
                <button class="btn btn-info role-save" onclick="saveQuestionnaireType()">
                    <i class="fa fa-save"></i>
                    <img src="~/Content/img/loading.gif" id="saveLoader" />
                    Save
                </button>
                <button class="btn btn-default role-cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
@*end create modal*@

@*edit modal*@
<div class="modal fade" id="divEditModal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog" style="width: 650px">
        <div class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblmodal">Update Questionnaire Type</h4>
            </div>
            <div class="modal-body" id="divEditModalBody"></div>
            <div class="modal-footer">
                <button class="btn btn-info role-save" onclick="updateQuestionnaireType()">
                    <i class="fa fa-save"></i>
                    <img src="~/Content/img/loading.gif" id="saveEditLoader" />
                    Save
                </button>
                <button class="btn btn-default role-cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
@*end edit modal*@

@section pagespecific{
    <script>
        function showCreateModal() {
            $("#saveLoader").hide();
            var url = '@Url.Action("CreateQuestionnairType", "Questionnairs")';
            $("#divLoader").show();

            $("#divModalBody").load(url, function (response, status, xhr) {
                if (status == "error") {
                    if (!$(".modal-header").hasClass("alert-danger")) {
                        $(".modal-header").removeClass("alert-info").addClass("alert-danger");
                        $(".role-save").css("display", "none");
                    }
                    $("#divModalBody").html("Error on creating questionnaire type, contact system support");
                }
                $("#divModal").modal("show");
                $("#divLoader").hide();
            });
        }

        function ShowEditForm(id) {
            $("#saveEditLoader").hide();
            var url = '@Url.Action("EditQuestionnaireType", "Questionnairs")?id='+id;
            $("#divLoader").show();

            $("#divEditModalBody").load(url, function (response, status, xhr) {
                if (status == "error") {
                    if (!$(".modal-header").hasClass("alert-danger")) {
                        $(".modal-header").removeClass("alert-info").addClass("alert-danger");
                        $(".role-save").css("display", "none");
                    }
                    $("#divEditModalBody").html("Error on updating questionnaire type, contact system support");
                }
                $("#divEditModal").modal("show");
                $("#divLoader").hide();
            });
        }

        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $(".loadingImg").show();
        });

        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $(".loadingImg").hide();
        });

        $("#saveLoader").hide();
        function saveQuestionnaireType()
        {
            var questionnairType = $("#QuestionnairTypeName").val();
            var workingPaperRefNo = $("#WorkingPaperRefNo").val();
            var description = $("#Description").val();

            if (questionnairType == '') {
                swal("Please Fill questionnaire type", { icon: "warning" });
                return false;
            }

            if ( workingPaperRefNo == '') {
                swal("Please Fill working paper reference", { icon: "warning" });
                return false;
            }

            if (description == '') {
                swal("Please Fill description", { icon: "warning" });
                return false;
            }

            var formdata = new FormData();
            formdata.append("__RequestVerificationToken", $('[name=__RequestVerificationToken]').val());
            formdata.append("QuestionnairTypeName", questionnairType);
            formdata.append("WorkingPaperRefNo", workingPaperRefNo);
            formdata.append("Description", description);

            var url = '@Url.Action("SaveQuestionnairType", "Questionnairs")';
            var urlList = '@Url.Action("QuestionnairType", "Questionnairs")';
            $("#saveLoader").toggle(true);

            $.ajax({
                url: url,
                data: formdata,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $('#divModal').modal('hide');
                    $("#saveLoader").toggle(false);
                    if (response == "Success") {
                        swal("Saved Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.href = urlList;
                            });
                    } else if (response =="Dublicate") {
                        swal("Questionnaire type already exist!", { icon: "warning" });
                        return false;
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    $("#saveLoader").toggle(false);
                    swal(error);
                }
            });
        }

        $("#saveEditLoader").hide();
        function updateQuestionnaireType() {
            var questionnairType = $("#QuestionnairTypeName").val();
            var workingPaperRefNo = $("#WorkingPaperRefNo").val();
            var description = $("#Description").val();
            var id = $("#QuestionnairTypeId").val();

            if (questionnairType == '') {
                swal("Please Fill questionnaire type", { icon: "warning" });
                return false;
            }

            if ( workingPaperRefNo == '') {
                swal("Please Fill working paper reference", { icon: "warning" });
                return false;
            }

            if ( description == '') {
                swal("Please Fill description", { icon: "warning" });
                return false;
            }

            var formdata = new FormData();
            formdata.append("__RequestVerificationToken", $('[name=__RequestVerificationToken]').val());
            formdata.append("QuestionnairTypeName", questionnairType);
            formdata.append("WorkingPaperRefNo", workingPaperRefNo);
            formdata.append("Description", description);
            formdata.append("QuestionnairTypeId", id);

            var url = '@Url.Action("EditQuestionnaireType", "Questionnairs")';
            var urlList = '@Url.Action("QuestionnairType", "Questionnairs")';
            $("#saveEditLoader").toggle(true);

            $.ajax({
                url: url,
                data: formdata,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $('#divEditModal').modal('hide');
                    $("#saveEditLoader").toggle(false);
                    if (response == "Success") {
                        swal("Updated Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.href = urlList;
                            });
                    } else if (response =="Dublicate") {
                        swal("Questionnaire type already exist!", { icon: "warning" });
                        return false;
                    } else if (response =="Not Found") {
                        swal("Questionnaire type does not exist!", { icon: "warning" });
                        return false;
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    $("#saveEditLoader").toggle(false);
                    swal(error);
                }
            });
        }

        /* BASIC ;*/
        var responsiveHelper_dt_application_list = undefined;
        var responsiveHelper_datatable_fixed_column = undefined;
        var responsiveHelper_datatable_col_reorder = undefined;
        var responsiveHelper_datatable_tabletools = undefined;

        var breakpointDefinition = {
            tablet: 1024,
            phone: 480
        };
        /*BEGINNING DATA TABLE*/
        /*END DATA TABLE*/
        var dt_application_list = $('#dt_application_list').dataTable({
            "fnDrawCallback": function (oSettings) {
                $(".loading-gif").toggle(false)
            },
            "Dom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                "t" +
                "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
            "autoWidth": true,
        });

        $("#searchbox").on("keyup search input paste cut", function () {
            dt_application_list.DataTable().search(this.value).draw();
        });

        var data = [];
        var LoanProductId = null;
        var applicationDate = null;
        $.ajax({
            type: "get",
            url: '@Url.Action("GetQuestionnairTypeList", "Questionnairs")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                data = response.data;
                dt_application_list.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_application_list.fnAddData(
                        [i + 1,
                        data[i]["QuestionnairTypeName"],
                        data[i]["WorkingPaperRefNo"],
                        data[i]["Description"],
                        data[i]["Status"],
                        '<div class="btn-group id="drop-' + i + '">\
                            <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                            </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick="ShowEditForm(' + data[i]["QuestionnairTypeId"] + ')">Edit</a></li>\
                                <li><a href="#" onclick="Delete(' + data[i]["QuestionnairTypeId"] + ')">Cancel</a></li>\
                            </ul>\
                        </div>'
                    ]);
                }
            },
            failure: function (error) {
                swal(error);
            }
        });

        function Delete(i) {
            swal({
                text: "Are you sure you want to Cancel Selected Questionnair type?",
                buttons: [
                    'No',
                    'Yes'
                ],
                icon: "warning"
            }).then(function (isConfirm) {
                if (isConfirm) {
                    DeleteQuestionnairType(i);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });

        }

        function DeleteQuestionnairType(id) {
            var url = '@Url.Action("DeleteQuestionType", "Questionnairs")';
            $.ajax({
                type: "post",
                url: url,
                data: { "id": id },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Deleted Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    } else if(response == "Answer exist") {
                        swal("You cannot delete questionnaire type with answered questions", { icon: "warning" });
                    }
                    else {
                        swal("Error in deleting Questionnair Type", { icon: "warning" });
                    }
                },
                failure: function (error) {
                    swal("Error in deleteing Questionnair Type", { icon: "warning" });
                }
            });
            $('#confirmModal').modal('hide');
        }
    </script>
}

