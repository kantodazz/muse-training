</div>
@section pagespecific{

    <script>

        var dt_Loan_listing = $('#dt_Loan_listing').dataTable();
        $("#dt_Loan_listing_wrapper .dt-toolbar").remove();
        //$("#searchbox").on("keyup search input paste cut", function () {
        //    dt_Loan_listing.DataTable().search(this.value).draw();
        //});

        $("#searchbox").on("keyup search input paste cut", function () {
            if (!this.value) {
                dt_Loan_listing.fnClearTable();
            } else {
                searchLoanTableUpdate(this.value);
            }
        });

        // ====================== LOAD TABLE DATA START =====================
        var data = [];
        var globalPayeeId = null;

        $.ajax({
            type: "get",
            url: '@Url.Action("getLoanMonitoringList", "LoanMonitoring")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                debugger
                data = response.data;
                console.log(data);
                dt_Loan_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_Loan_listing.fnAddData([i + 1,
                       data[i]["CustomerName"],
                       data[i]["ApplicationNo"],
                       data[i]["LoanPurpose"],
                       toLabel(data[i]["AppliedLoanAmount"]),
                       toLabel(data[i]["LoanApprovedAmount"]),
                       toLabel(data[i]["DisbursedAmount"]),
                       data[i]["OverAllStatus"],
                         action(i, data[i]["OverAllStatus"], data[i]["MonitoringAttachment"])
                    ]);
                    $("#saveLoader-" + i + "").toggle(false)
                }

                if (data.length == 0) {
                    $("#loader").text("No matching records found")
                }
            },
            failure: function (error) {
                swal(error);
            }
        });



        function searchLoanTableUpdate(search) {
            $.ajax({
                type: "get",
                url: '@Url.Action("GetLoanListDt", "LoanMonitoring")/?search='+search+'',
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    debugger
                    data = response.data;
                    console.log(data);
                    dt_Loan_listing.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        dt_Loan_listing.fnAddData([i + 1,
                           data[i]["CustomerName"],
                           data[i]["ApplicationNo"],
                           data[i]["LoanPurpose"],
                           toLabel(data[i]["AppliedLoanAmount"]),
                           toLabel(data[i]["LoanApprovedAmount"]),
                           toLabel(data[i]["DisbursedAmount"]),
                           data[i]["OverAllStatus"],
                             action(i, data[i]["OverAllStatus"], data[i]["MonitoringAttachment"])
                        ]);
                        $("#saveLoader-" + i + "").toggle(false)
                    }

                    if (data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        //action
        function action(i, overallStatus,attachment) {
            debugger
            if ((overallStatus == "Legal" || overallStatus == "Debt Collector" || overallStatus == "Reschedule" || overallStatus == "Auction") && attachment == null) {
                return '<div class="btn-group" id="drop-' + i + '">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="@Url.Action("Changestatus","LoanMonitoring")/?id=' + data[i]["LoanApplicationId"] + '">Change Status</a></li>\
                                <li><a href="@Url.Action("UploadAttachment","LoanMonitoring")/?id=' + data[i]["LoanApplicationId"] + '">Upload Attachment</a></li>\
                            </ul>\
                        </div>\
                  <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" class="loading-gif"/>'
            }
            if ((overallStatus == "Legal" || overallStatus == "Debt Collector" || overallStatus == "Reschedule" || overallStatus == "Auction") && attachment == "Attached") {
                return '<div class="btn-group" id="drop-' + i + '">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="@Url.Action("UploadAttachment","LoanMonitoring")/?id=' + data[i]["LoanApplicationId"] + '">Upload Attachment</a></li>\
                                <li><a href="#" onclick="Confirm(' + i + ')">Confirm</a></li>\
                            </ul>\
                        </div>\
                  <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" class="loading-gif"/>'

            }
                return '<div class="btn-group" id="drop-' + i + '">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="@Url.Action("ViewLoanDetails","ViewLoanApplication")/?id=' + data[i]["LoanApplicationId"] + '">View</a></li>\
                                <li><a href="#" onclick="printRepaymentSchedule('+ i +')">Print Repayment Schedule</a></li>\
                                <li><a href="#" onclick="printClientCharges('+ i +')">Print Charges</a></li>\
                                <li><a href="@Url.Action("Changestatus","LoanMonitoring")/?id=' + data[i]["LoanApplicationId"] + '">Change Status</a></li>\
                            </ul>\
                        </div>\
                  <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" class="loading-gif"/>'
        }








        var dt_bulkyPayment_detail = $('#dt_bulkyPayment_detail').dataTable();
        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_bulkyPayment_detail.DataTable().search(this.value).draw();
        });
        $("#dt_bulkyPayment_detail_wrapper .dt-toolbar").remove();

        var dt_remark_detail = $('#dt_remark_detail').dataTable();
        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_remark_detail.DataTable().search(this.value).draw();
        });
        $("#dt_remark_detail_wrapper .dt-toolbar").remove();



        function openViewDialog(i) {
            globalPayeeId = i;
            debugger
            $("#CustomerName").text(data[i]["CustomerName"]);
            $("#ApplicationNumber").text(data[i]["ApplicationNo"]);
            $("#LoanPurpose").text(data[i]["LoanPurpose"]);
            $("#DisbursedAmount").text(data[i]["DisbursedAmount"]);
            $("#AppliedAmount").text(data[i]["AppliedLoanAmount"]);
            $("#ApprovedAmount").text(data[i]["LoanApprovedAmount"]);
            $("#ApplyDate").text(data[i]["ApplyDate"]);
            $("#OverAllStatus").text(data[i]["OverAllStatus"]);

            $.ajax({
                type: "get",
                url: '@Url.Action("GetAttachmentList", "LoanMonitoring")' + "/?applicationid=" + data[i]["LoanApplicationId"] + "&&source=" + data[i]["MonitoringStatus"],
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    console.log(response);
                    _data = response._data;
                    dt_bulkyPayment_detail.fnClearTable();
                    for (var i = 0; i < _data.length; i++) {
                        dt_bulkyPayment_detail.fnAddData([i + 1,
                           _data[i]["AttachmentTitle"],
                           _data[i]["SourceModule"],
                           '<a href="/Content/uploads/' + _data[i]["AttachmentName"] + '" target="_blank"><i class="fa fa-file-pdf-o"></i></a>',
                           _data[i]["FCreatedAt"],

                        ]);
                    }

                    if (_data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });

            //Remarks
            $.ajax({
                type: "get",
                url: '@Url.Action("GetRemarkList", "LoanMonitoring")' + "/?applicationid=" + data[i]["LoanApplicationId"] + "&&source=" + data[i]["MonitoringStatus"],
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    //console.log(response)
                    console.log(response);
                    _datar = response._datar;
                    dt_remark_detail.fnClearTable();
                    for (var i = 0; i < _datar.length; i++) {
                        dt_remark_detail.fnAddData([i + 1,
                           _datar[i]["ModuleId"],
                           _datar[i]["ModuleName"],
                           _datar[i]["OverAllStatus"],
                           _datar[i]["Remarks"],
                           '<a href="/Content/uploads/monitoring/' + _datar[i]["Attachment"] + '" target="_blank"><i class="fa fa-file-pdf-o"></i></a>',
                           _datar[i]["Destination"],
                           _datar[i]["FCreatedAt"],
                           _datar[i]["CreatedBy"],
                        ]);
                    }

                    if (_datar.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });

            $('#confirmModal').modal('show');
        }
        // *************** END SHOW VIEW DIALOG ********










        function Confirm(i) {
            $("#LoanApplicationId").text(data[i]["LoanApplicationId"]);
            document.getElementById("LoanApplicationId").value = data[i]["LoanApplicationId"];
            $('#commentModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function ConfirmForm() {
            debugger
            var LoanApplicationId = $("#LoanApplicationId").val();
            var Remarks = $("#Remarks1").val();
            var Attachment = $("#Attachment").val();

            if (LoanApplicationId == '' || Remarks == '') {
                var url = '@Url.Action("LoanMonitoringList", "LoanMonitoring")';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (Attachment != '') {

                var file = document.querySelector("#Attachment");
                if (/\.(pdf)$/i.test(file.files[0].name) === false) {
                    swal("Please Upload Attachment in PDF Format)");
                    return false;
                }
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('ModuleId', LoanApplicationId);
            formData.append('Remarks', Remarks);
            formData.append('Attachment', $("#Attachment")[0].files[0]);

            postConfirm(formData);
        }

        function postConfirm(formData) {
            $(".loadingImg").show();
            $("#confirmform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("Confirmation", "LoanMonitoring")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $("#confirmform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Record Confirmed successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        $("#confirmform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response)
                    }
                },
                failure: function (error) {
                    $("#confirmform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }


         function printRepaymentSchedule(i) {
            var customerId = data[i]["LoanCustomerId"],
                reportUrl = "@ViewBag.reportUrlName" + "PrintRepaymentSchedule.aspx",
                queryString = "customerid=" + customerId;
                $.ajax({
                        type: "GET",
                        url: '@Url.Action("ParameterEncryption", "LoanReport", new {area = "LoanMod"})',
                        contentType: "application/json; charset=utf-8",
                        datatype: "json",
                        data: { "query": queryString },
                        success: function (response) {
                            window.open(reportUrl + response);
                        }
                });
         }


        function printClientCharges(i) {
            var customerId = data[i]["LoanCustomerId"],
                reportUrl = "@ViewBag.reportUrlName" + "PrintClientCharges.aspx",
                queryString = "customerid=" + customerId;
                $.ajax({
                        type: "GET",
                        url: '@Url.Action("ParameterEncryption", "LoanReport", new {area = "LoanMod"})',
                        contentType: "application/json; charset=utf-8",
                        datatype: "json",
                        data: { "query": queryString },
                        success: function (response) {
                            window.open(reportUrl + response);
                        }
                });
        }

    </script>
}