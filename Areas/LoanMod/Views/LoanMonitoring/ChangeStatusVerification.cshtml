
@{
    ViewBag.Title = "Loan Monitoring";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    td {
        padding: 5px;
    }

    .table-amount td:nth-child(7) {
        text-align: right;
    }

    .table-view-details td:nth-child(4) {
        text-align: right;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 110px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .total-amount {
        float: right;
    }
</style>
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            <div class="row">
                                
                                <div class="col-md-3">
                                    
                                </div>
                                <div class="col-md-3">
                                    
                                </div>
                                <div class="col-md-12">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search searchIcon"></i>
                                        <input type="search" name="search" placeholder="Keywords..." id="searchbox">
                                        <button style="background-color:#2196F3;color:white" onclick="searchPayment()">Search</button>
                                    </div>
                                </div>
                            </div>
                            <table id="dt_Loan_listing" class="table table-bordered table-condensed table-amount">
                                <thead>

                                    <tr>
                                        <th>#</th>
                                        <th>Customer Name</th>
                                        <th>Application Number</th>
                                        <th>Loan Purpose</th>
                                        <th>Applied Amount</th>
                                        <th>Approved Amount</th>
                                        <th>Disbursed Amount</th>
                                        <th>OverAllStatus</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<!----------- VIEW DIALOG ----------------->
<div class="modal fade" id="confirmModal" style="left:4%">

    <div class="modal-dialog" style="width:80%;">
        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"> Information</h3>

            </div>
            <div class="modal-body">
                <div>
                    <div class="widget-body ">
                      
                            <fieldset class="scheduler-border">
                                <legend class="scheduler-border">Loan Application Information</legend>
                                <div style="padding-left:20px">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <table>
                                                <tr>
                                                    <th>1.Customer Name: </th>
                                                    <td id="CustomerName"></td>
                                                </tr>
                                                <tr>
                                                    <th>2.Application Number:</th>
                                                    <td id="ApplicationNumber"></td>
                                                </tr>
                                                <tr>
                                                    <th>3.Approved Amount:</th>
                                                    <td id="ApprovedAmount"></td>
                                                </tr>
                                                <tr>
                                                    <th>4.Apply Date:</th>
                                                    <td id="ApplyDate"></td>
                                                </tr>

                                            </table>

                                        </div>
                                        <div class="col-md-6">
                                            <table>
                                                <tr>
                                                    <th>5.Loan Purpose:</th>
                                                    <td id="LoanPurpose"></td>
                                                </tr>
                                                <tr>
                                                    <th>6.Applied Amount:</th>
                                                    <td id="AppliedAmount"></td>
                                                </tr>
                                                <tr>
                                                    <th>7.Disbursed Amount:</th>
                                                    <td id="DisbursedAmount"></td>
                                                </tr>

                                                <tr>
                                                    <th>8.OverallStatus:</th>
                                                    <td id="OverAllStatus"></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </fieldset>
                        <br />
                        <fieldset class="scheduler-border">
                            <legend class="scheduler-border">Attachment</legend>
                            <table id="dt_bulkyPayment_detail" class="table table-striped table-bordered table-hover table-condensed table-view-details" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>File</th>
                                        <th>Created At</th>
                                    </tr>
                                </thead>

                            </table>
                        </fieldset>

                        <fieldset class="scheduler-border">
                            <legend class="scheduler-border">Remark(s)</legend>
                            <table id="dt_remark_detail" class="table table-striped table-bordered table-hover table-condensed table-view-details" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>ModuleId</th>
                                        <th>ModuleName</th>
                                        <th>OverAllStatus</th>
                                        <th>Remarks</th>
                                        <th>Attachment</th>
                                        <th>Destination</th>
                                        <th>Created At</th>
                                        <th>CreatedBy</th>
                                    </tr>
                                </thead>

                            </table>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-info" data-dismiss="modal" style="width:100px;">
                        <i class="fa fa-times"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="commentModal" style="left:4%">
    <div class="modal-dialog" style="width:40%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"> Comment</h3>
            </div>
            <div class="modal-body">
                <div>
                    <div class="widget-body " style="padding-top:2px">
                        <input type="hidden" name="LoanApplicationId" id="LoanApplicationId" />
                        @Html.AntiForgeryToken()
                        <table style="margin-left:5%">
                            <tr>
                                <td class="form-label">
                                    Remarks
                                    <i class="fa fa-times" style="color:white" id="Title_1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <textarea style="width:300px" rows="2" id="Remarks1" maxlength="350"></textarea><br />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="form-label">
                                    Attachment
                                    <i class="fa fa-times" style="color:white" id="Title_1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <input type="file" name="Attachment" id="Attachment" class="input" style="width:300px" />
                                    </div>
                                </td>

                            </tr>
                        </table>
                    </div>
                </div>

                <div class="modal-footer">
                    <a href="#" class="btn btn-info" data-dismiss="modal">Cancel</a>
                    <button type="submit" class="btn btn-info" onclick="VerifyForm()" id="Verifiedform">
                        <i class="fa fa-times"></i>Verify
                        <img src="/Content/img/loading.gif" class="saveLoader" />
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
@section pagespecific{

    <script>

        var dt_Loan_listing = $('#dt_Loan_listing').dataTable();
        $("#dt_Loan_listing_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_Loan_listing.DataTable().search(this.value).draw();
        });

        // ====================== LOAD TABLE DATA START =====================
        var data = [];
        var globalPayeeId = null;
        $.ajax({
            type: "get",
            url: '@Url.Action("getChangeStatusVerification", "LoanMonitoring")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                data = response.data;
                dt_Loan_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_Loan_listing.fnAddData([i + 1,
                       data[i]["CustomerName"],
                       data[i]["ApplicationNo"],
                       data[i]["LoanPurpose"],
                       data[i]["AppliedLoanAmount"],
                       data[i]["LoanApprovedAmount"],
                       data[i]["DisbursedAmount"],
                       data[i]["OverAllStatus"],
                         '<div class="btn-group">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick= "openViewDialog(' + i + ')">View Loan</a></li>\
                                <li><a href="#" onclick="LoanVerify(' + i + ')">Verify</a></li>\
                                <li><a href="#" onclick= "reject(' + data[i]["LoanApplicationId"]  + ')">Reject</a></li>\
                            </ul>\
                        </div>'
                    ]);
                }

                if (data.length == 0) {
                    $("#loader").text("No matching records found")
                }
            },
            failure: function (error) {
                swal(error);
            }
        });

        var dt_bulkyPayment_detail = $('#dt_bulkyPayment_detail').dataTable();
        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_bulkyPayment_detail.DataTable().search(this.value).draw();
        });
        $("#dt_bulkyPayment_detail_wrapper .dt-toolbar").remove();

        var dt_remark_detail = $('#dt_remark_detail').dataTable();
        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_remark_detail.DataTable().search(this.value).draw();
        });
        $("#dt_remark_detail_wrapper .dt-toolbar").remove();



        function openViewDialog(i) {
            globalPayeeId = i;
            debugger
            $("#CustomerName").text(data[i]["CustomerName"]);
            $("#ApplicationNumber").text(data[i]["ApplicationNo"]);
            $("#LoanPurpose").text(data[i]["LoanPurpose"]);
            $("#DisbursedAmount").text(data[i]["DisbursedAmount"]);
            $("#AppliedAmount").text(data[i]["AppliedLoanAmount"]);
            $("#ApprovedAmount").text(data[i]["LoanApprovedAmount"]);
            $("#ApplyDate").text(data[i]["ApplyDate"]);
            $("#OverAllStatus").text(data[i]["OverAllStatus"]);

            $.ajax({
                type: "get",
                url: '@Url.Action("GetAttachmentList", "LoanMonitoring")' + "/?applicationid=" + data[i]["LoanApplicationId"] + "&&source=" + data[i]["MonitoringStatus"],
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    console.log(response);
                    _data = response._data;
                    dt_bulkyPayment_detail.fnClearTable();
                    for (var i = 0; i < _data.length; i++) {
                        dt_bulkyPayment_detail.fnAddData([i + 1,
                           _data[i]["AttachmentTitle"],
                           _data[i]["SourceModule"],
                           '<a href="/Content/uploads/' + _data[i]["AttachmentName"] + '" target="_blank"><i class="fa fa-file-pdf-o"></i></a>',
                           _data[i]["FCreatedAt"],
                     
                        ]);
                    }

                    if (_data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });

            //Remarks
            $.ajax({
                type: "get",
                url: '@Url.Action("GetRemarkList", "LoanMonitoring")' + "/?applicationid=" + data[i]["LoanApplicationId"] + "&&source=" + data[i]["MonitoringStatus"],
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    //console.log(response)
                    console.log(response);
                    _datar = response._datar;
                    dt_remark_detail.fnClearTable();
                    for (var i = 0; i < _datar.length; i++) {
                        dt_remark_detail.fnAddData([i + 1,
                           _datar[i]["ModuleId"],
                           _datar[i]["ModuleName"],
                           _datar[i]["OverAllStatus"],
                           _datar[i]["Remarks"],
                           '<a href="/Content/uploads/monitoring/' + _datar[i]["Attachment"] + '" target="_blank"><i class="fa fa-file-pdf-o"></i></a>',
                           _datar[i]["Destination"],
                           _datar[i]["FCreatedAt"],
                           _datar[i]["CreatedBy"],
                        ]);
                    }

                    if (_datar.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });

            $('#confirmModal').modal('show');
        }
        // *************** END SHOW VIEW DIALOG ********

        function Verified(id) {
            var url = '@Url.Action("Verification", "LoanMonitoring")';
            $.ajax({
                type: "post",
                url: url,
                data: { id: id },
                success: function (response) {
                    if (response == "Success") {
                        swal("Record Verified successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        swal(response + "An error has occured, contact system support");
                    }
                },
                error: function (xhr) {
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },
            });
        }

        function LoanVerified(i, id) {
            if (i == 'x') i = id;
            swal({
                title: "Verification",
                text: "Are you sure you want to Verify this record ? ",
                buttons: [
                  'Yes',
                  'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {

                    Verified(i);
                }
            });
            $('#confirmModal').modal('hide');
        }



        function LoanVerify(i) {
            $("#LoanApplicationId").text(data[i]["LoanApplicationId"]);
            document.getElementById("LoanApplicationId").value = data[i]["LoanApplicationId"];
            $('#commentModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function VerifyForm() {
            debugger
            var LoanApplicationId = $("#LoanApplicationId").val();
            var Remarks = $("#Remarks1").val();
            var Attachment = $("#Attachment").val();

            if (LoanApplicationId == '' || Remarks == '') {
                var url = '@Url.Action("ChangeStatusVerification", "LoanMonitoring")';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (Attachment != '') {

                var file = document.querySelector("#Attachment");
                if (/\.(pdf)$/i.test(file.files[0].name) === false) {
                    swal("Please Upload Attachment in PDF Format)");
                    return false;
                }
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('ModuleId', LoanApplicationId);
            formData.append('Remarks', Remarks);
            formData.append('Attachment', $("#Attachment")[0].files[0]);

            postVerified(formData);
        }

        function postVerified(formData) {
            $(".loadingImg").show();
            $("#Verifiedform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("Verification", "LoanMonitoring")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $("#Verifiedform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Record Verified successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        $("#Verifiedform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response)
                    }
                },
                failure: function (error) {
                    $("#Verifiedform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }





        function reject(i, id) {
            if (i == 'x') i = id;
            swal({
                title: "Rejection Reason",
                closeOnClickOutside: false,
                content: "input",
                buttons: [
                  'Cancel',
                  'Save'
                ],
            }).then((value) => {
                var inputValue = `${value}`;
                if (inputValue == "null") {
                    swal("Cancelled");
                }
                else {
                    rejectReasons(i, `${value}`)
                }
            });
        }

        var rejectReasons = function (id, reason) {
            var rejectionReason = reason;
            $.ajax({
                type: "POST",
                url: "RejectVerifier",
                data: { ids: id, reason: rejectionReason },
                success: function (response) {
                    if (response == "Success") {
                        swal("Rejection Successfully Saved", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else if (response == "emptyreason") {
                        swal("Rejection Reason is Required", { icon: "warning" }).then((e) => {
                            window.location.reload();
                        });

                    } else if (response == "DbException") {
                        swal(response + "An error has occured, contact system support");
                    }
                },
                error: function (xhr) {
                    //console.log(xhr.responseText);
                    swal("An error has occured, contact system support");
                    $("#divLoader").hide();
                },
            });
        };

    </script>
}