        function confirmDialog(i) {
            swal({
                title: 'Confirm Appraisal ?',
                text: "This process cannot be undone",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    $("#saveLoader-" + i + "").toggle(true)
                    $("#drop-" + i + "").toggle(false)
                    confirmLoanAppraisal(data[i]["ApplicationNo"]);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });

        }

        function cancelDialog(i) {
            swal({
                title: 'Cancel Appraisal ?',
                text: "This process cannot be undone",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    $("#saveLoader-" + i + "").toggle(true)
                    $("#drop-" + i + "").toggle(false)
                    cancelLoanAppraisal(data[i]["ApplicationNo"]);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });

        }

