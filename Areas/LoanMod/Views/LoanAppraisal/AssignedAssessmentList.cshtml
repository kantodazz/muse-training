            $(".loadingImg").show();
            $("#confirmAppraisal").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("RejectExamineLoanAppraisal", "LoanAppraisal")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (resultData) {
                    $("#confirmAppraisal").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (resultData.response == "Success") {
                        swal("Loan Appraisal Rejected Successfully!", { icon: "success" })
                            .then((m) => {
                                location.reload();
                            });
                    } else {
                        $("#confirmAppraisal").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(resultData.response)
                    }
                },
                failure: function (error) {
                    $("#confirmAppraisal").prop('disabled', false);
                    $(".saveLoader").toggle(false);
