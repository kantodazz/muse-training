            var LoanApplicationNo = $("#ApplicationNo4").val();
            var Remarks = $("#Remarks2").val();
            var Attachment = $("#Attachment2").val();

            if (LoanApplicationNo == '' || Remarks == '') {
                var url = '@Url.Action("ExamineLoanAppraisal", "LoanAppraisal")';
