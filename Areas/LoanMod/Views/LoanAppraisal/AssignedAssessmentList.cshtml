    </div>
</div>


@section pagespecific{

    <script>

        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $(".loadingImg").show();
            document.getElementById("ImageLoader").style.marginLeft = "auto";
            document.getElementById("ImageLoader").style.marginRight = "auto";
            document.getElementById("ImageLoader").style.position = "absolute";
            document.getElementById("ImageLoader").style.top = "50%";
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $(".loadingImg").hide();
        });

        /* BASIC ;*/
        var responsiveHelper_dt_loan = undefined;
        var responsiveHelper_datatable_fixed_column = undefined;
        var responsiveHelper_datatable_col_reorder = undefined;
        var responsiveHelper_datatable_tabletools = undefined;

        var breakpointDefinition = {
            tablet: 1024,
            phone: 480
        };
        /*BEGINNING DATA TABLE*/
        /*END DATA TABLE*/
        var dt_appraisal_list = $('#dt_appraisal_list').dataTable({
            "fnDrawCallback": function (oSettings) {
                $(".loading-gif").toggle(false)
            }
        });

        //$("#dt_appraisal_list_wrapper .dt-toolbar").remove();

        $("#searchbox").on("keyup search input paste cut", function () {
            dt_appraisal_list.DataTable().search(this.value).draw();
        });


        function ToJavaScriptDate(value) {
            var pattern = /Date\(([^)]+)\)/;
            var results = pattern.exec(value);
            var dt = new Date(parseFloat(results[1]));
            return dt.getDate() + "/" + (dt.getMonth() + 1) + "/" + dt.getFullYear();
        }

        var data = [];
        var LoanApplicationId = null;
        $.ajax({
            type: "get",
            url: '@Url.Action("GetAssignedAssessmentList", "LoanAppraisal")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                data = response.data;
                dt_appraisal_list.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    var displayConfirm = 'display:none;';

                    var unSecuredUrl = 'display:none;';
                    var unSecuredEditedUrl = 'display:none;';

                    var securedUrl = 'display:none;';
                    var securedEditedUrl = 'display:none;';

                    var securedSecondEditedUrl = 'display:none;';

                    var displayCancel = null;
                    var displayAppraisalForm = null;
                    var loanSecurityName = data[i]["LoanSecurityName"];

                    if (loanSecurityName === '@IFMIS.Libraries.Constants.SECURED.Trim().ToUpper()') {
                       
                        if (data[i]["OverallStatus"] == '@IFMIS.Libraries.Constants.APPRAISAL_EVALUATION_ASSIGNMENT') {
                            unSecuredUrl = 'display:none;';
                            securedUrl = 'display:none;';
                            unSecuredEditedUrl = 'display:none;';
                            securedEditedUrl = 'display:none;';
                            securedSecondEditedUrl = '';
                        }

                        if (data[i]["IsRejected"] == '@IFMIS.Libraries.Constants.FALSE') {
                            unSecuredUrl = 'display:none;';
                            securedUrl = 'display:none;';
                            unSecuredEditedUrl = 'display:none;';
                            securedEditedUrl = '';
                            securedSecondEditedUrl = 'display:none;';
                        }

                        if (data[i]["OverallStatus"] == '@IFMIS.Libraries.Constants.APPRAISAL_PENDING') {
                            displayConfirm = '';
                            unSecuredUrl = 'display:none;';
                            securedUrl = 'display:none;';
                            unSecuredEditedUrl = 'display:none;';
                            securedEditedUrl = '';
                            securedSecondEditedUrl = 'display:none;';
                        }


                        if (data[i]["OverallStatus"] == '@IFMIS.Libraries.Constants.APPRAISAL_PENDING' && data[i]["ProposedLoanAmount"] != 0 && data[i]["AppraisalForm"] != '' && data[i]["AppraisalForm"] != 'NULL' && data[i]["ValuationForm"] != '' && data[i]["ValuationForm"] != 'NULL' && data[i]["ForcedValuePercentage"] != 0) {
                            displayConfirm = '';
                            unSecuredUrl = 'display:none;';
                            securedUrl = 'display:none;';
                            unSecuredEditedUrl = 'display:none;';
                            securedEditedUrl = 'display:none;';
                            securedSecondEditedUrl = '';
                        }

                        if (data[i]["OverallStatus"] == '@IFMIS.Libraries.Constants.ASSIGNED' || data[i]["OverallStatus"] == '@IFMIS.Libraries.Constants.APPRAISAL_INITIAL') {
                            displayConfirm = 'display:none;';
                            unSecuredUrl = 'display:none;';
                            securedUrl = '';
                            unSecuredEditedUrl = 'display:none;';
                            securedEditedUrl = 'display:none;';
                            securedSecondEditedUrl = 'display:none;';
                        }
                    } else {
                        
                        if (data[i]["IsRejected"] == '@IFMIS.Libraries.Constants.FALSE') {
                            unSecuredUrl = 'display:none;';
                            securedUrl = 'display:none;';
                            unSecuredEditedUrl = '';
                            securedEditedUrl = 'display:none;';
                            securedSecondEditedUrl = 'display:none;';
                        }

                        if (data[i]["OverallStatus"] == '@IFMIS.Libraries.Constants.APPRAISAL_PENDING') {
                            displayConfirm = '';
                            unSecuredUrl = 'display:none;';
                            securedUrl = 'display:none;';
                            unSecuredEditedUrl = '';
                            securedEditedUrl = 'display:none;';
                            securedSecondEditedUrl = 'display:none;';
                        }
                        if ((data[i]["OverallStatus"] == '@IFMIS.Libraries.Constants.ASSIGNED') || (data[i]["OverallStatus"] == '@IFMIS.Libraries.Constants.APPRAISAL_INITIAL')) {
                            displayConfirm = 'display:none;';
                            unSecuredUrl = '';
                            securedUrl = 'display:none;';
                            unSecuredEditedUrl = 'display:none;';
                            securedEditedUrl = 'display:none;';
                            securedSecondEditedUrl = 'display:none;';
                        }
                    }

                    var amount = data[i]["AppliedLoanAmount"];
                    if (amount != null) {
                        amount = "<p align='right'>" + toLabel(data[i]["AppliedLoanAmount"]); +"</p>"
                    } else {
                        amount = "<p align='right'>" + data[i]["AppliedLoanAmount"]; +"</p>"
                    }

                    dt_appraisal_list.fnAddData([i + 1,
                       data[i]["ApplicationNo"],
                       data[i]["CustomerName"],
                       amount,
                       data[i]["OverallStatus"],
                      '<div class="btn-group" id="drop-' + i + '">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                 <li><a href="@Url.Action("ViewLoanDetails", "ViewLoanApplication")/?Id=' + data[i]["LoanApplicationId"] + '">View</a></li>\
                                   <li style="' + displayAppraisalForm + '"><a target="_blank" href="@Url.Action("PrintSiteVisitForm", "LoanReport", new { area = "LoanMod" })/?customerId=' + data[i]["LoanCustomerId"] + '&&loanSecurityId=' + data[i]["LoanSecurityId"] + '">Print Appraisal Form</a></li>\
                                 <li style="' + unSecuredUrl + '"><a href="@Url.Action("CreateUnSecuredLoanAppraisalDetails", "LoanAppraisal")/?application=' + data[i]["ApplicationNo"] + '">Appraisal Form</a></li>\
                                 <li style="' + unSecuredEditedUrl + '"><a href="@Url.Action("EditUnSecuredLoanAppraisalDetails", "LoanAppraisal")/?application=' + data[i]["ApplicationNo"] + '">Edit Appraisal Form</a></li>\
                                 <li style="' + securedUrl + '"><a href="@Url.Action("CreateLoanAppraisalDetails", "LoanAppraisal")/?application=' + data[i]["ApplicationNo"] + '">Appraisal Form</a></li>\
                                 <li style="' + securedEditedUrl + '"><a href="@Url.Action("EditLoanAppraisalDetails", "LoanAppraisal")/?application=' + data[i]["ApplicationNo"] + '">Edit Appraisal Form</a></li>\
                                 <li style="' + securedSecondEditedUrl + '"><a href="@Url.Action("EditSecondLoanAppraisalDetails", "LoanAppraisal")/?application=' + data[i]["ApplicationNo"] + '">Edit Appraisal Form</a></li>\
                                 <li style="'+ displayConfirm + '"><a href="#" onclick="confirmDialog(' + i + ')">Confirm</a></li>\
                                 <li style="' + displayCancel + '"><a href="#" onclick="cancelDialog(' + i + ')">Cancel</a></li>\
                                  <li><a href="#" onclick="rejectDialog(' + i + ')">Reject</a></li>\
                            </ul>\
                        </div>\ '
                    ]);

                }
            },
            failure: function (error) {
                swal(error);
            }
        });

        /* END BASIC */
        function examineAppraisal(i) {
            $("#ApplicationNo1").text(data[i]["ApplicationNo"]);
            $("#TinNo1").text(data[i]["TinNo"]);
            $("#CustomerName1").text(data[i]["CustomerName"]);
            $("#ApplicationNo3").text(data[i]["ApplicationNo"]);
            document.getElementById("ApplicationNo3").value = data[i]["ApplicationNo"];
            $('#AppraisalExamination').modal('show');
        }


        $(".saveLoader").toggle(false);
        /*START EXAMINE LOAN APPRAISAL EXAMINATION*/
        function examineAppraisalForm() {
            var LoanApplicationNo = $("#ApplicationNo3").val();
            var Remarks = $("#Remarks1").val();
            var Attachment = $("#Attachment1").val();

            if (LoanApplicationNo == '' || Remarks == '') {
                var url = '@Url.Action("ExamineLoanAppraisal", "LoanAppraisal")';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (Attachment != '') {

                var file = document.querySelector("#Attachment1");
                if (/\.(pdf)$/i.test(file.files[0].name) === false) {
                    swal("Please Upload Attachment in PDF Format)");
                    return false;
                }
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('ModuleName', LoanApplicationNo);
            formData.append('Remarks', Remarks);
            formData.append('Attachment', $("#Attachment1")[0].files[0]);

            postFormData(formData);
        }

        function postFormData(formData) {
            $(".loadingImg").show();
            $("#examineAppraisal").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("ExamineLoanAppraisal", "LoanAppraisal")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (resultData) {
                    $("#examineAppraisal").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (resultData.response == "Success") {
                        swal("Loan Appraisal Examined Successfully!", { icon: "success" })
                            .then((m) => {
                                location.reload();
                            });
                    } else {
                        $("#examineAppraisal").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(resultData.response)
                    }
                },
                failure: function (error) {
                    $("#examineAppraisal").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }
        /*END EXAMINE LOAN APPRAISAL EXAMINATION*/
        /*START REJECT LOAN APPRAISAL EXAMINATION*/
