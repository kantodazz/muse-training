        function printSiteVisitForm(i) {
            var loanSecurityId = data[i]["LoanSecurityId"],
                customerId = data[i]["LoanCustomerId"],
                reportUrl = "@ViewBag.reportUrlName" + "PrintSiteVisitForm.aspx",
                queryString = "loancategory=" + loanSecurityId + "&customerid=" + customerId;
                $.ajax({
                        type: "GET",
                        url: '@Url.Action("ParameterEncryption", "LoanReport", new {area = "LoanMod"})',
                        contentType: "application/json; charset=utf-8",
                        datatype: "json",
                        data: { "query": queryString },
                        success: function (response) {
                            window.open(reportUrl + response);
                        }
                });
        }
