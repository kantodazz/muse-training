@model IFMIS.Areas.LoanMod.Models.LoanSubProductVM
@{
    ViewBag.Title = "Loan Sub Product Details";

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content" style="margin: 5px; padding-top: 30px">
    <div class="row"></div>

    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title </h2>

                    </header>


                    <div class="jarviswidget" id="wid-id-12" data-widget-colorbutton="false" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false">

                        <table class="table  table-hover table-condensed">

                            <tbody>

                                <tr>
                                    <td style="width:20%">
                                        Product Name
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.LoanProductName)
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:20%">
                                        Sub Product Name
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.SubProductName)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:20%">
                                        Sub Product Code
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.SubProductCode)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:20%">
                                        Description
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.SubProductDesc)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:20%">
                                        Interest Code
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.AccountReceivableOverPaymentDesc) <br />
                                        @Html.DisplayFor(model => model.AccountReceivableOverPayment)
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:20%">
                                        Interest Rate (%)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.InterestRate) 
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:20%">
                                        Grace Period 
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.GracePeriod)
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:20%">
                                        Receivable Accounts
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.AccountsReceivableDesc)<br />
                                        @Html.DisplayFor(model => model.AccountsReceivable)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:20%">
                                        Loan Control Accounts
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.LoanControlAccountDesc)<br />
                                        @Html.DisplayFor(model => model.LoanControlAccount)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:20%">
                                        Receivable Interest Accounts
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.InterestReceivableAccountDesc)<br />
                                        @Html.DisplayFor(model => model.InterestReceivableAccount)
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:20%">
                                        Interest Revenue Account
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.InterestRevenueAccountDesc)<br />
                                        @Html.DisplayFor(model => model.InterestRevenueAccount)
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:20%">
                                        Loan In Progress
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.LoanInProgressAccountDesc)<br />
                                        @Html.DisplayFor(model => model.LoanInProgressAccount)
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:20%">
                                        Deferred Interest
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.InterestDeferredAccountDesc)<br />
                                        @Html.DisplayFor(model => model.InterestDeferredAccount)
                                    </td>
                                </tr>


                                <tr>
                                    <td style="width:20%">
                                        Penalt Debtor
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.PenaltyDebtorDesc)<br />
                                        @Html.DisplayFor(model => model.PenaltyDebtor)
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:20%">
                                        Penalt Income
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.PenaltyIncomeDesc)<br />
                                        @Html.DisplayFor(model => model.PenaltyIncome)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:20%">
                                        Require Motor Registration
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.RequireMotorRegistration)
                                    </td>
                                </tr>

                                <tr>
                                    <td style="width:20%">
                                        Status
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Status)
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                    </div>

                    <div class="col-md-offset-2">
                        <a href="@Request.UrlReferrer" style="margin-right:5px" type="submit" class="btn btn-info pull-left"><i class="glyphicon glyphicon-arrow-left"></i> Back  </a>

                    </div>


                </div>
            </article>

        </div>
    </section>

</div>