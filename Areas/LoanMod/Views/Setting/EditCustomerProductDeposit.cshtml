@model IFMIS.Areas.LoanMod.Models.CustomerProductDepositVM
@{
    ViewBag.Title = "Edit Customer Product Deposit";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .search-btn {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 5px;
        padding-right: 10px;
    }

    .search-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        padding-left: 10px;
    }

    .name-input-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        overflow: hidden;
    }

    .search-icon {
        padding: 0.5rem;
    }

    .search-button {
        background: #538AC5;
        border: 0;
        color: white;
        padding: 8px;
        border-radius: 0;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
        width: 205px;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    textarea {
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    .action-btn {
        width: 100px;
        color: white;
    }

    .form-label {
        text-align: right;
    }

    td {
        padding: 5px;
    }

    .info-box {
        padding: 10px;
        background-color: #ECF3F8;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .loadingImg {
        display: none;
    }
</style>

<div id="content" style="margin: 5px; padding-top: 30px">
    <div class="row"></div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div>
                        <div class="widget-body">

                            @Html.AntiForgeryToken()
                            <div class="row" style="padding:1% 5% 0 5%;">
                                <div class="col-lg-3 col-sm-12 "></div>
                                <div class="col-md-6 col-lg-6 col-sm-12 ">
                                    <table>
                                        <input type="hidden" name="CustomerProductDepositId" value="@ViewBag.CustomerProductDepositId" id="CustomerProductDepositId" />

                                        <tr>
                                            <td class="form-label">
                                                Customer Type Name
                                                <i class="fa fa-times" style="color:white"></i>
                                            </td>
                                            <td>
                                                <select id="CustomerTypeId" style="width:300px" class="form-control select2">
                                                    @foreach (var ctypeName in ViewBag.CustomerTypeList)
                                                    {
                                                        if (ViewBag.CustomerTypeId == ctypeName.CustomerTypeId)
                                                        {
                                                            <option value='@ctypeName.CustomerTypeId' selected>@ctypeName.CustomerName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value='@ctypeName.CustomerTypeId'>
                                                                @ctypeName.CustomerName
                                                            </option>
                                                        }
                                                    }
                                                </select>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="form-label">
                                                Loan Product Name
                                                <i class="fa fa-times" style="color:white"></i>
                                            </td>
                                            <td>
                                                <select id="LoanProductId" style="width:300px" class="form-control select2">
                                                    @foreach (var lnSubProd in ViewBag.LoanProductList)
                                                    {
                                                        if (ViewBag.LoanProductId == lnSubProd.LoanProductId)
                                                        {
                                                            <option value='@lnSubProd.LoanProductId' selected>@lnSubProd.ProductName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value='@lnSubProd.LoanProductId'>
                                                                @lnSubProd.ProductName
                                                            </option>
                                                        }
                                                    }
                                                </select>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="form-label">
                                                Loan Deposit (%)
                                                <i class="fa fa-times" style="color:white"></i>
                                            </td>
                                            <td>
                                                @Html.TextBoxFor(model => model.LoanDepositPercentage, new { @Class = "input", @required = "required", style = "width:300px; ", type = "number", min = "0" })
                                                @Html.ValidationMessageFor(model => model.LoanDepositPercentage, "", new { @class = "text-danger" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td>
                                                <a class="btn btn-info" href='@Url.Action("CustomerProductDepositList", "Setting")' style="margin-right:5px">
                                                    <i class="glyphicon glyphicon-arrow-left"></i>Back
                                                </a>
                                                <button type="submit" class="btn btn-info" id="form_submision">
                                                    <i class="fa fa-save"></i>Update
                                                    <img src="~/Content/img/loading.gif" id="saveLoader" />
                                                </button>
                                            </td>
                                        </tr>
                                    </table>
                                </div>

                                <div class="col-lg-3 col-sm-12 "></div>
                            </div>

                        </div>
                    </div>

                </div>
            </article>
        </div>
    </section>
</div>



@section pagespecific{
    <script>
        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $(".loadingImg").show();

        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $(".loadingImg").hide();
        });

        $("#saveLoader").toggle(false);
        $("#form_submision").click(function () {
            var LoanDepositPercentage = $("#LoanDepositPercentage").val();
            var CustomerTypeId = $("#CustomerTypeId").val();
            var LoanProductId = $("#LoanProductId").val();
            var CustomerProductDepositId = $("#CustomerProductDepositId").val();

            if (LoanDepositPercentage == '' || CustomerTypeId == 'Select Loan Security'  || LoanProductId == 'Select Loan Product') {
                var url = '@Url.Action("EditCustomerProductDeposit", "Setting", new { id = ViewBag.CustomerProductDepositId })';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (LoanDepositPercentage < 0 ) {
                swal("Negative Input for Loan Deposit is not allowed");
                return false;
            }

            if (LoanDepositPercentage > 100) {
                swal("Loan Deposit should not exceed 100%");
                return false;
            }
             
            if (new RegExp('^[0-9]+$').test(LoanDepositPercentage) == false) {
                swal("Loan Deposit should be between 1 and 100");
                return false;
            }
            var form_data = {
            "__RequestVerificationToken": $('[name=__RequestVerificationToken]').val(),
            "LoanDepositPercentage": LoanDepositPercentage,
            "CustomerTypeId": CustomerTypeId,
            "LoanProductId": LoanProductId,
            "CustomerProductDepositId": CustomerProductDepositId
        }

        var url = '@Url.Action("EditCustomerProductDeposit", "Setting")';
        var urlList = '@Url.Action("CustomerProductDepositList", "Setting")';
        $("#form_submision").prop('disabled', true);
        $("#saveLoader").toggle(true);
        $.ajax({
            type: "post",
            url: url,
            data: form_data,
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                $("#form_submision").prop('disabled', false);
                $("#saveLoader").toggle(false);
                if (response == "Success") {
                    swal("Updated Successfully!", { icon: "success" })
                        .then((value) => {
                            window.location.href = urlList;
                        });
                }
                else {
                    swal(response);
                }
            },
            failure: function (error) {
                $("#form_submision").prop('disabled', false);
                $("#saveLoader").toggle(false);
                swal(error);
            }
        });
        });
    </script>
}



