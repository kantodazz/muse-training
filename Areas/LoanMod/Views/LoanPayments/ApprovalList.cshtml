        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"> Information</h3>

            </div>
            <div class="modal-body">
                <div>
                    <div class="widget-body ">

                        <fieldset class="scheduler-border">
                            <legend class="scheduler-border">Payment Information</legend>
                            <div style="padding-left:20px">
                                <div class="row">
                                    <div class="col-md-6">
                                        <table>
                                            <tr>
                                                <th>1.Payee Code:</th>
                                                <td id="PayeeCode"></td>
                                            </tr>
                                            <tr>
                                                <th>2.Bank Name: </th>
                                                <td id="BankName"></td>
                                            </tr>
                                            <tr>
                                                <th>3.Bank BIC:</th>
                                                <td id="BankBIC"></td>
                                            </tr>
                                            <tr>
                                                <th>4.OverallStatus:</th>
                                                <td id="OverallStatus"></td>
                                            </tr>
                                        </table>

                                    </div>
                                    <div class="col-md-6">
                                        <table>
                                            <tr>
                                                <th>5.Payee Name: </th>
                                                <td id="PayeeName"></td>
                                            </tr>
                                            <tr>
                                                <th>6.Account Number:</th>
                                                <td id="AccountNumber"></td>
                                            </tr>
                                            <tr>
                                                <th>7.Bill Amount:</th>
                                                <td id="BillAmount"></td>
                                            </tr>
                                            <tr>
                                                <th>8.Fee Category:</th>
                                                <td id="FeeCategory"></td>
                                            </tr>

                                        </table>
                                    </div>
                                </div>

                            </div>
                        </fieldset>
                        <br />
                        <fieldset class="scheduler-border">
                            <legend class="scheduler-border">Loan Information</legend>
                            <table id="dt_bulkyPayment_detail" class="table table-striped table-bordered table-hover table-condensed table-view-details" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Application ID</th>
                                        <th>Application No</th>
                                        <th>Amount</th>
                                        <th>Created At</th>
                                    </tr>
                                </thead>

                            </table>
                        </fieldset>

                        <fieldset class="scheduler-border">
                            <legend class="scheduler-border">Remark(s)</legend>
                            <table id="dt_remark_detail" class="table table-striped table-bordered table-hover table-condensed table-view-details" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>ModuleId</th>
                                        <th>ModuleName</th>
                                        <th>OverAllStatus</th>
                                        <th>Remarks</th>
                                        <th>Attachment</th>
                                        <th>Destination</th>
                                        <th>Created At</th>
                                        <th>CreatedBy</th>
                                    </tr>
                                </thead>

                            </table>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-info" data-dismiss="modal" style="width:100px;">
                        <i class="fa fa-times"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="commentModal" style="left:4%">
    <div class="modal-dialog" style="width:40%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"> Comment</h3>
            </div>
            <div class="modal-body">
                <div>
                    <div class="widget-body " style="padding-top:2px">
                        <input type="hidden" name="LoanPaymentId" id="LoanPaymentId" />
                        @Html.AntiForgeryToken()
                        <table style="margin-left:5%">
                            <tr>
                                <td class="form-label">
                                    Remarks
                                    <i class="fa fa-times" style="color:white" id="Title_1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <textarea style="width:300px" rows="2" id="Remarks1" maxlength="350"></textarea><br />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="form-label">
                                    Attachment
                                    <i class="fa fa-times" style="color:white" id="Title_1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <input type="file" name="Attachment" id="Attachment" class="input" style="width:300px" />
                                    </div>
                                </td>

                            </tr>
                        </table>
