@section pagespecific{
    <script>
        var dt_Loan_payment = $('#dt_Loan_payment').dataTable();
        $("#dt_Loan_payment_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_Loan_payment.DataTable().search(this.value).draw();
        });

        var data = [];
        $.ajax({
            type: "get",
            url: '@Url.Action("getExaminePaymentlist", "LoanPayments")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                console.log(response);
                data = response.data;
                dt_Loan_payment.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_Loan_payment.fnAddData([i + 1,
                       data[i]["PayeeName"],
                       data[i]["PayeeCode"],
                       data[i]["BankAccountNo"],
                       data[i]["OperationalAmount"],
                       data[i]["OverallStatus"],
                         '<div class="btn-group">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick= "openViewDialog(' + i + ')">View Loan</a></li>\
                                <li><a href="#" onclick="Examine(' + i + ')">Approve</a></li>\
                                <li><a href="#" onclick="Reject(' + i + ')">Reject</a></li>\
                            </ul>\
                        </div>'
                    ]);
                }

                if (data.length == 0) {
                    $("#loader").text("No matching records found")
                }
            },
            failure: function (error) {
                swal(error);
            }
        });


        function Examine(i) {
            debugger;
            $("#LoanPaymentId").text(data[i]["LoanPaymentId"]);
            document.getElementById("LoanPaymentId").value = data[i]["LoanPaymentId"];
            $('#commentModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function ConfirmForm() {
            debugger
            var LoanPaymentId = $("#LoanPaymentId").val();
            var Remarks = $("#Remarks1").val();
            var Attachment = $("#Attachment").val();

            if (LoanPaymentId == '' || Remarks == '') {
                var url = '@Url.Action("PaymentList", "LoanPayments")';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (Attachment != '') {

                var file = document.querySelector("#Attachment");
                if (/\.(pdf)$/i.test(file.files[0].name) === false) {
                    swal("Please Upload Attachment in PDF Format)");
                    return false;
                }
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('ModuleId', LoanPaymentId);
            formData.append('Remarks', Remarks);
            formData.append('Attachment', $("#Attachment")[0].files[0]);

            postVerified(formData);
        }

        function postVerified(formData) {
            $(".loadingImg").show();
            $("#confirmform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("Approval", "LoanPayments")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $("#confirmform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Approved Successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        $("#confirmform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response)
                    }
                },
                failure: function (error) {
                    $("#confirmform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }


        var dt_bulkyPayment_detail = $('#dt_bulkyPayment_detail').dataTable();
        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_bulkyPayment_detail.DataTable().search(this.value).draw();
        });
        $("#dt_bulkyPayment_detail_wrapper .dt-toolbar").remove();

        var dt_remark_detail = $('#dt_remark_detail').dataTable();
        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_remark_detail.DataTable().search(this.value).draw();
        });
        $("#dt_remark_detail_wrapper .dt-toolbar").remove();



        function openViewDialog(i) {
            globalPayeeId = i;
            $("#PayeeName").text(data[i]["PayeeName"]);
            $("#PayeeCode").text(data[i]["PayeeCode"]);
            $("#BankName").text(data[i]["BankName"]);
            $("#AccountNumber").text(data[i]["BankAccountNo"]);
            $("#BillAmount").text(data[i]["OperationalAmount"]);
            $("#OverallStatus").text(data[i]["OverallStatus"]);
            $("#FeeCategory").text(data[i]["FeeCategory"]);
            $("#BankBIC").text(data[i]["PayeeBIC"]);

            $.ajax({
                type: "get",
                url: '@Url.Action("GetLoanList", "LoanPayments")' + "/?id=" + data[i]["LoanPaymentId"],
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    _data = response._data;
                    dt_bulkyPayment_detail.fnClearTable();
                    for (var i = 0; i < _data.length; i++) {
                        dt_bulkyPayment_detail.fnAddData([i + 1,
                           _data[i]["LoanApplicationId"],
                           _data[i]["ApplicationNo"],
                           _data[i]["BillAmount"],
                           _data[i]["ChargeName"],

                        ]);
                    }

                    if (_data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });

            //Remarks
            $.ajax({
                type: "get",
                url: '@Url.Action("GetRemarkList", "LoanPayments")' + "/?id=" + data[i]["LoanPaymentId"] + "&&source=" + 'LoanPayment',
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    //console.log(response)
                    console.log(response);
                    _datar = response._datar;
                    dt_remark_detail.fnClearTable();
                    for (var i = 0; i < _datar.length; i++) {
                        dt_remark_detail.fnAddData([i + 1,
                           _datar[i]["ModuleId"],
                           _datar[i]["ModuleName"],
                           _datar[i]["OverAllStatus"],
                           _datar[i]["Remarks"],
                           '<a href="/Content/uploads/monitoring/' + _datar[i]["Attachment"] + '" target="_blank"><i class="fa fa-file-pdf-o"></i></a>',
                           _datar[i]["Destination"],
                           _datar[i]["FCreatedAt"],
                           _datar[i]["CreatedBy"],
                        ]);
                    }

                    if (_datar.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });

            $('#confirmModal').modal('show');
        }
        // *************** END SHOW VIEW DIALOG ********


        function Reject(i) {
            $("#LoanPaymentId").text(data[i]["LoanPaymentId"]);
            document.getElementById("LoanPaymentId").value = data[i]["LoanPaymentId"];
            $('#RejectModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function RejectForm() {
            debugger
            var LoanPaymentId = $("#LoanPaymentId").val();
            var Remarks = $("#Remarks").val();
            var Attachment = $("#Attachment").val();

            if (LoanPaymentId == '' || Remarks == '') {
                var url = '@Url.Action("ExamineList", "LoanPayments")';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (Attachment != '') {

                var file = document.querySelector("#Attachment");
                if (/\.(pdf)$/i.test(file.files[0].name) === false) {
                    swal("Please Upload Attachment in PDF Format)");
                    return false;
                }
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('ModuleId', LoanPaymentId);
            formData.append('Remarks', Remarks);
            formData.append('Attachment', $("#Attachment")[0].files[0]);

            rejected(formData);
        }

        function rejected(formData) {
            $(".loadingImg").show();
            $("#rejectform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("RejectionExamination", "LoanPayments")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $("#rejectedform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Record Rejected successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        $("#rejectform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response)
                    }
                },
                failure: function (error) {
                    $("#rejectform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }


    </script>
}
