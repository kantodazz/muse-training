        //    $.ajax({
        //        type: "GET",
        //        url: url,
        //        contentType: "html",
        //        success: function (response) {
        //            $("#Customer").empty();
        //            $("#Customer").append(response);
        //        }
        //    });
        //});


        function getInstitutionCustomers() {
            var url = "GetRepaymentCustomers/";

            $("#customerNo").select2({
                minimumInputLength: 4,  // minimumInputLength for sending ajax request to server
                width: 'resolve',   // to adjust proper width of select2 wrapped elements
                ajax: {
                    url: url, // Controller - Select2Demo and Action -AccessRemoteData
                    type: "GET",
                    dataType: 'json',
                    data: function (searchTerm) {
                        return {
                            searchTerm: searchTerm,
                            institutionCode: $("#InstitutionCode").val(),
                        };
                    },
                    results: function (data, page) {
                        return { results: data.vendors }; // data.vendors returning json data from Controller
                    }
                }
            });
        }

    </script>
}