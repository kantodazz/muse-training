@section pagespecific{
    <script>
    

        $("#btnSave").click(function () {
            debugger
            var auctineer = $("#NameAuctineer").val();
            var dateAuction = $("#DateAuction").val();
            var rate = $("#RateofPayment").val();
            if (auctineer == '') {
                swal("Auctioneer is Required")
                    .then((j) => {
                        $("#NameAuctineer").focus();
                        $("#NameAuctineer").css({ 'border-color': 'red' });
                    });
            } else if (dateAuction == '') {
                swal("Date of Auction is Required")
                    .then((j) => {
                        $("#DateAuction").focus();
                        $("#DateAuction").css({ 'border-color': 'red' });
                    });
            } else if (rate == '') {
                swal("Rate of Payment is Required")
                    .then((j) => {
                        $("#RateofPayment").focus();
                        $("#RateofPayment").css({ 'border-color': 'red' });
                    });
            }
            else {

                $("#NameAuctineer").css({ 'border-color': '' });
                $("#DateAuction").css({ 'border-color': '' });
                $("#RateofPayment").css({ 'border-color': '' });

                var form_data = {
                    "StartDate": $("#StartDate").val(),
                    "EndDate": $("#EndDate").val(),
                    "DateAuction": $("#DateAuction").val(),
                    "NameAuctineer": $("#NameAuctioneer").val(),
                    "Rate": $("#RateofPayment").val(),
                    "Remark": $("#Remark").val(),
                    "LoanApplicationId": '@ViewBag.LoanApplicationId',
                }

                var url = '@Url.Action("AddAuctionInfo", "Auctions")';
                var urlList = '@Url.Action("AuctionList", "Auctions")';

                $.ajax({
                    type: "post",
                    url: url,
                    data: form_data,
                    data: { vm: form_data, LoanApplicationId: '@ViewBag.LoanApplicationId' },
                    contenttype: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (response) {

                        if (response == "Success") {
                            swal("Saved Successfully!", { icon: "success" })
                                .then((value) => {
                                    window.location.href = urlList;
                                });
                        } else if (response == "Duplicate") {
                            swal("Duplicate information!", { icon: "warning" })
                                .then((value) => {
                                    window.location.href = urlList;
                                });
                        }
                        else {
                            swal(response);
                        }
                    },
                    failure: function (error) {

                        swal(error);
                    }
                });
            }

        });



    </script>
}
