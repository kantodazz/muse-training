@{
    ViewBag.Title = "Title Discharge List";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    td {
        padding: 5px;
    }

    .table-amount td:nth-child(7) {
        text-align: right;
    }

    .table-view-details td:nth-child(4) {
        text-align: right;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 110px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .total-amount {
        float: right;
    }
</style>
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div>
                        <div class="widget-body">
                            <a href="@Url.Action("AddTitleDischarge","TitleDischarges")" class="btn btn-info">
                                <span class="glyphicon glyphicon-plus"></span>
                                Add New
                            </a>
                            <hr class="simple" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search searchIcon"></i>
                                        <input type="search" name="search" placeholder="Keywords..." id="searchbox">
                                        <button style="background-color:#2196F3;color:white" onclick="searchPayment()">Search</button>
                                    </div>
                                </div>
                            </div>
                            <table id="dt_Loan_listing" class="table table-bordered table-condensed table-amount">
                                <thead>

                                    <tr>
                                        <th>#</th>
                                        <th>Customer Name</th>
                                        <th>Application Number</th>
                                        <th>Loan Purpose</th>
                                        <th>Applied Amount</th>
                                        <th>Approved Amount</th>
                                        <th>Disbursed Amount</th>
                                        <th>OverAllStatus</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

<div class="modal fade" id="UpdateModal" style="left:4%">
    <div class="modal-dialog" style="width:40%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Edit</h3>
            </div>
            <div class="modal-body">
                <div>
                    <div class="widget-body " style="padding-top:2px">
                        <input type="hidden" name="LoanApplicationId" id="LoanApplicationId" />
                        @Html.AntiForgeryToken()
                        <table style="margin-left:5%">

                            <tr>
                                <td class="form-label">
                                    Category:
                                    <i class="fa fa-times" style="color:white" id="LiquidationCategory1"></i>
                                </td>
                                <td>
                                    @*<select id="LiquidationCategory" style="width:300px">
                                        <option value="Choose Category" selected="selected"></option>
                                        @foreach (var Lifestatus in ViewBag.LiquidationCategories)
                                        {
                                            <option value='@Lifestatus.CategoryName'>@Lifestatus.CategoryName</option>}
                                    </select>*@
                                </td>
                            </tr>
                            <tr>
                                <td class="form-label">
                                    Remark:
                                    <i class="fa fa-times" style="color:white" id="Remark1"></i>
                                </td>
                                <td>
                                    <textarea style="width:300px" rows="2" id="Remark" maxlength="350"></textarea><br />
                                </td>
                            </tr>

                            <tr>
                                <td class="form-label">
                                    Attachment
                                    <i class="fa fa-times" style="color:white" id="Attachment1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <input type="file" name="Attachment" id="Attachment" class="input" style="width:300px" />
                                    </div>
                                </td>
                            </tr>

                        </table>
                    </div>
                </div>

                <div class="modal-footer">
                    <a href="#" class="btn btn-info" data-dismiss="modal">Cancel</a>
                    <button type="submit" class="btn btn-info" onclick="btnSave()" id="Verifiedform">
                        <i class="fa fa-times"></i>Save
                        <img src="/Content/img/loading.gif" class="saveLoader" />
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="commentModal" style="left:4%">
    <div class="modal-dialog" style="width:40%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"> Comment</h3>
            </div>
            <div class="modal-body">
                <div>
                    <div class="widget-body " style="padding-top:2px">
                        <input type="hidden" name="LoanApplicationId" id="LoanApplicationId" />
                        @Html.AntiForgeryToken()
                        <table style="margin-left:5%">
                            <tr>
                                <td class="form-label">
                                    Remarks
                                    <i class="fa fa-times" style="color:white" id="Title_1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <textarea style="width:300px" rows="2" id="Remarks1" maxlength="350"></textarea><br />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="form-label">
                                    Attachment
                                    <i class="fa fa-times" style="color:white" id="Title_1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <input type="file" name="Attachment" id="Attachment" class="input" style="width:300px" />
                                    </div>
                                </td>

                            </tr>
                        </table>
                    </div>
                </div>

                <div class="modal-footer">
                    <a href="#" class="btn btn-info" data-dismiss="modal">Cancel</a>
                    <button type="submit" class="btn btn-info" onclick="ConfirmForm()" id="confirmform">
                        <i class="fa fa-times"></i>Confirm
                        <img src="/Content/img/loading.gif" class="saveLoader" />
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
@section pagespecific{

    <script>

        var dt_Loan_listing = $('#dt_Loan_listing').dataTable();
        $("#dt_Loan_listing_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_Loan_listing.DataTable().search(this.value).draw();
        });


        var data = [];
        var globalPayeeId = null;
        $.ajax({
            type: "get",
            url: '@Url.Action("getTitle", "TitleDischarges")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                console.log(response);
                data = response.data;
                dt_Loan_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_Loan_listing.fnAddData([i + 1,
                       data[i]["CustomerName"],
                       data[i]["ApplicationNo"],
                       data[i]["LoanPurpose"],
                       data[i]["AppliedLoanAmount"],
                       data[i]["LoanApprovedAmount"],
                       data[i]["DisbursedAmount"],
                       data[i]["OverAllStatus"],
                         '<div class="btn-group">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="@Url.Action("ViewLoanDetails","ViewLoanApplication")/?id=' + data[i]["LoanApplicationId"] + '">View</a></li>\
                                <li><a href="@Url.Action("Edit","TitleDischarges")/?id=' + data[i]["LoanApplicationId"] + '">Edit</a></li>\
                                <li><a href="#" onclick="LoanConfirm(' + i + ')">Confirm</a></li>\
                            </ul>\
                        </div>'
                    ]);
                }

                if (data.length == 0) {
                    $("#loader").text("No matching records found")
                }
            },
            failure: function (error) {
                swal(error);
            }
        });


        function Edit(i) {
            $("#LoanApplicationId").text(data[i]["LoanApplicationId"]);
            document.getElementById("LoanApplicationId").value = data[i]["LoanApplicationId"];
            $('#UpdateModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function btnSave() {
            debugger
            var LoanApplicationId = $("#LoanApplicationId").val();
            var Remark = $("#Remark").val();
            var Attachment = $("#Attachment").val();
            var LiquidationCategory = $("#LiquidationCategory").val();


            if (LoanApplicationId == '' || Remark == '') {
                var url = '@Url.Action("LiquidationList", "LoanLiquidations")';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (Attachment != '') {

                var file = document.querySelector("#Attachment");
                if (/\.(pdf)$/i.test(file.files[0].name) === false) {
                    swal("Please Upload Attachment in PDF Format)");
                    return false;
                }
            }
            var form_data = {
                "Attachment": $("#Attachment").val(),
                "Remark": $("#Remark").val(),
                "LiquidationCategoryName": $("#LiquidationCategory").val(),
                "LoanApplicationId": $("#LoanApplicationId").val(),
            }

            $(".loadingImg").show();
            $("#Verifiedform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("EditLiquidation", "LoanLiquidations")';
            var urlList = '@Url.Action("LiquidationList", "LoanLiquidations")';
            $.ajax({
                type: "post",
                url: url,
                data: form_data,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    $("#Verifiedform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Saved Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.href = urlList;
                            });
                    }
                    else {
                        $("#Verifiedform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response);
                    }
                },
                failure: function (error) {
                    $("#Verifiedform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error);
                }
            });
        }

        function LoanConfirm(i) {
            $("#LoanApplicationId").text(data[i]["LoanApplicationId"]);
            document.getElementById("LoanApplicationId").value = data[i]["LoanApplicationId"];
            $('#commentModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function ConfirmForm() {
            debugger
            var LoanApplicationId = $("#LoanApplicationId").val();
            var Remarks = $("#Remarks1").val();
            var Attachment = $("#Attachment").val();

            if (LoanApplicationId == '' || Remarks == '') {
                var url = '@Url.Action("TitleDischargeList", "TitleDischarges")';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (Attachment != '') {

                var file = document.querySelector("#Attachment");
                if (/\.(pdf)$/i.test(file.files[0].name) === false) {
                    swal("Please Upload Attachment in PDF Format)");
                    return false;
                }
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('ModuleId', LoanApplicationId);
            formData.append('Remarks', Remarks);
            formData.append('Attachment', $("#Attachment")[0].files[0]);

            postVerified(formData);
        }

        function postVerified(formData) {
            $(".loadingImg").show();
            $("#confirmform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("Confirmation", "TitleDischarges")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $("#confirmform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Record Confirmed successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        $("#confirmform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response)
                    }
                },
                failure: function (error) {
                    $("#confirmform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }

    </script>
}