@section Scripts{

    <script>
        $(function () {

            var url = '@Url.Action("GetLoans", "LoanApplicationTracker")';

            $("#Id").select2({
                minimumInputLength: 2,  // minimumInputLength for sending ajax request to server
                width: 'resolve',   // to adjust proper width of select2 wrapped elements
                placeholder: 'Search Loan',
                allowClear: false,
                initSelection: function (element, callback) {
                    var id = $(element).val();
                    if (id !== "") {
                        $.ajax('@Url.Action("GetSelectedLoan", "Loan")', {
                            data: { id: id },
                            dataType: "json"
                        }).done(function (data) {
                            callback(data);
                        });
                    }
                },
                ajax: {
                    url: url, // Controller - Select2Demo and Action -AccessRemoteData
                    type: "GET",
                    dataType: 'json',
                    data: function (term) {
                        return {
                            term: term
                        };
                    },
                    results: function (data, page) {
                        return { results: data.loans }; // data.CountryList returning json data from Controlle
                    }
                }
            });
        });

        $('#Id').on("change", function () {
            $("#divLoader").show();
            var id = $("#Id").val();
            var url = '@Url.Action("GetLoanRecoveries", "LoanApplicationTracker")';

            $.ajax({
                type: "GET",
                url: url,
                data: { id: id },
                success: function (response) {
                    $("#searchResults").show();
                    $("#searchResults").html(response);
                },
                error: function () {
                    swal({
                        text: "An error occurred while processing your request, try again later",
                        icon: "error",
                        button: "OK",
                    });
                },
                complete: function () {
                    $("#divLoader").hide();
                }
            });

        });

    </script>
}
