                    formData.append('file', $('input[type=file]')[0].files[0]);

                    var url = '@Url.Action("UploadAttachmentCase", "LoanMonitoring")';
                    $("#form_submision").prop('disabled', true);
                    $("#saveLoader").toggle(true);
                    if (!isSubmitted) {
                        isSubmitted = true
                        $.ajax({
                            type: "post",
                            url: url,
                            data: formData,
                            contentType: false,
