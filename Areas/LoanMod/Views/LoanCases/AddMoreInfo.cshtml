                success: function (response) {
                    data = response.data;
                    dt_table.fnClearTable();
                   
                    for (var i = 0; i < data.length; i++) {
                        dt_table.fnAddData([i + 1,
                           data[i]["AttachmentTitle"],
                           data[i]["SourceModule"],
                           '<a href="/Content/uploads/' + data[i]["AttachmentName"] + '"target="_blank"><i class="fa fa-file-pdf-o"></i></a>',
                           data[i]["FCreatedAt"],
                            '<a href="#" onclick="remove(' + i + ')">\
                         <i class="glyphicon glyphicon-trash"></i></a>',
                        ]);
                        $("#saveLoader-" + i + "").toggle(false)
                    }
                   
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        loadData();
        //var attachments = []
        $("#form_submision").click(function () {
            //debugger
            if (voucherSummaryFormValidation()) {

                try {

                    var formData = new FormData();
                    formData.append('Title', $("#Title").val());
                    //formData.append('Description', $("#Description").val());
