@section pagespecific{
    <script>
        $('#caseclosingdate3').toggle(false);
        $('#NextHearingDate').toggle(false);

        $("#btnSave").click(function () {
            debugger
            var caseNumber = $("#CaseNumber").val();
            var caseDesc = $("#casedescription").val();
            var caseStatus = $("#CaseStatus").val();
            if (caseNumber == '') {
                swal("Case Number is Required")
                    .then((j) => {
                        $("#CaseNumber").focus();
                        $("#CaseNumber").css({ 'border-color': 'red' });
                    });
            } else if (caseDesc == '') {
                swal("Case Description is Required")
                    .then((j) => {
                        $("#casedescription").focus();
                        $("#casedescription").css({ 'border-color': 'red' });
                    });
            } else if (caseStatus == '') {
                swal("Case Status is Required")
                    .then((j) => {
                        $("#CaseStatus").focus();
                        $("#CaseStatus").css({ 'border-color': 'red' });
                    });
            }
            else {

                $("#CaseNumber").css({ 'border-color': '' });
                $("#casedescription").css({ 'border-color': '' });
                $("#CaseStatus").css({ 'border-color': '' });

                var form_data = {
                    "CaseNumber": $("#CaseNumber").val(),
                    "CaseDescription": $("#casedescription").val(),
                    "Court": $("#NameoftheCourt").val(),
                    "Lawyer": $("#NameoftheLawyer").val(),
                    "Plaintiff": $("#Plaintiff").val(),
                    "Defendant": $("#Defendant").val(),
                    "DisputeAmount": $("#DisputeAmount").val(),
                    "CaseStatus": $("#CaseStatus").val().trim(),
                    "CaseOpeningDate": $("#CaseOpeningDate").val(),
                    "CaseClosingDate": $("#CaseClosingDate").val(),
                    "NextHearingDate": $("#NextHearDate").val(),
                    "Remark": $("#Remark").val(),
                    "LoanApplicationId": '@ViewBag.LoanApplicationId',
                }

                var url = '@Url.Action("AddMoreInfo", "LoanCases")';
                var urlList = '@Url.Action("CaseList", "LoanCases")';

                $.ajax({
                    type: "post",
                    url: url,
                    data: form_data,
                    data: { vm: form_data, LoanApplicationId: '@ViewBag.LoanApplicationId' },
                    contenttype: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (response) {

                        if (response == "Success") {
                            swal("Saved Successfully!", { icon: "success" })
                                .then((value) => {
                                    window.location.href = urlList;
                                });
                        } else if (response == "Duplicate") {
                            swal("Duplicate information!", { icon: "warning" })
                                .then((value) => {
                                    window.location.href = urlList;
                                });
                        }
                        else {
                            swal(response);
                        }
                    },
                    failure: function (error) {

                        swal(error);
                    }
                });
            }

        });

        $("#CaseStatus").change(function () {
            var caseStatus2 = $("#CaseStatus").val();
            debugger
            if (caseStatus2 == "Closed") {
                $('#caseclosingdate3').toggle(true);
                $('#NextHearingDate').toggle(false);
            } else {
                $('#caseclosingdate3').toggle(false);
                $('#NextHearingDate').toggle(true);
            }
        });

        function attach() {
            $("#attachModal").modal('show')
        }

    </script>
    <script>
        $("#saveLoader").toggle(false);
