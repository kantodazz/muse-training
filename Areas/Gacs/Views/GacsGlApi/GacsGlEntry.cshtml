@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Final Acc Submission";
}

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    td {
        padding: 5px;
    }

    .table-amount td:nth-child(7) {
        text-align: right;
    }

    .table-view-details td:nth-child(4) {
        text-align: right;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 150px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .total-amount {
        float: right;
    }
</style>
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            <div style="display:flex;justify-content:flex-start;text-align:center">
                                <div>
                                    Financial Year:
                                    <select id="FinancialYear">
                                        @foreach (var fy in ViewBag.FinancialYears)
                                        {
                                            <option value="@fy.FinancialYearCode">@fy.FinancialYearDesc</option>
                                        }
                                    </select>
                                </div>
                                <div style="margin-left:20px"><button class="btn btn-info" onclick="validate()" id="submit">UPDATE BALANCES</button></div>
                            </div>
                            <table id="dt_table" class="table table-bordered table-condensed table-amount">
                                <thead>
                                    <tr>
                                        <th style="width:30px">#</th>
                                        <th>RefNo</th>
                                        <th>Financial Year</th>
                                        <th>Num Records</th>
                                        <th>Total</th>
                                        <th>CreatedAt</th>
                                        <th>OverallStatus</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section pagespecific{
    <script>
        var dt_table = $('#dt_table').dataTable({
            "language": {
                "emptyTable": '<strong id="loader"></strong>',
                "zeroRecords": "No matching records found"
            }
        });

        $("#dt_table_wrapper .dt-toolbar").remove();

        var data = [];
        function validate() {
            var fy = $("#FinancialYear").val()
            if(fy && parseInt(fy)>=2000){
                Submit()
            } else {
                swal("Invalid Financial Year")
            }
        }

        function Submit() {
            countTimeTaken()
            $("#submit").prop('disabled', true)
            $.ajax({
                type: "POST",
                url: '@Url.Action("MigrateGlData", "GacsGlApi")',
                data: { source: window.location.origin, fy: $("#FinancialYear").val() },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    clearInterval(myInt)
                    $("#submit").prop('disabled', false)
                    if (response.Status == "Success") {
                        swal(response.Message || "Submitted Successfully!", { icon: "success" })
                            .then(yes=> {
                                $("#submit").text("SUBMIT")
                                window.location.reload()
                            })
                    } else {
                        $("#submit").text(`Failed...${timeTaken}`)
                        swal(response.Message)
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function Confirm(GacsMuseGlSummaryId) {
            swal({
                title: 'Are you sure?',
                buttons: ['No','Yes'],
            })
            .then(yes=> {
                if(yes){
                    ConfirmPost(GacsMuseGlSummaryId)
                }
            })
        }

        function ConfirmPost(GacsMuseGlSummaryId) {
            $("#saveLoader-" + GacsMuseGlSummaryId + "").toggle(true)
            $("#drop-" + GacsMuseGlSummaryId + "").toggle(false)
            $.ajax({
                type: "POST",
                url: '@Url.Action("Confirm", "GacsGlApi")',
                data: { GacsMuseGlSummaryId },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    $("#saveLoader-" + GacsMuseGlSummaryId + "").toggle(false)
                    $("#drop-" + GacsMuseGlSummaryId + "").toggle(true)
                    if (response == "Success") {
                        swal("Submitted Successfully!", { icon: "success" })
                            .then(yes=> {
                            window.location.reload()
                        })
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function GetData() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetGlSummary", "GacsGlApi")',
                data: { status: "Pending" },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.data
                    dt_table.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        dt_table.fnAddData([i + 1,
                           data[i]["RefNo"],
                           data[i]["FinancialYear"],
                           data[i]["NumTrx"],
                           toLabel(data[i]["OriginalNetChange"]),
                           data[i]["CreatedAtFormatted"],
                           data[i]["OverallStatus"],
                           '<div class="btn-group" id="drop-' + data[i].GacsMuseGlSummaryId + '">\
                            <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                 <span class="sr-only"></span>\
                            </button>\
                          <ul class="dropdown-menu">\
                                <li><a href="#" onclick= " Confirm(' + data[i].GacsMuseGlSummaryId + ')">Confirm</a></li>\
                           </ul>\
                         </div>\
                         <img src="/Content/img/loading.gif" id="saveLoader-' + data[i].GacsMuseGlSummaryId + '" class="loading-gif"/>'
                        ]);
                        $("#saveLoader-" + data[i].GacsMuseGlSummaryId + "").toggle(false)
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        GetData();
        var myInt = null;
        var timeTaken = ""
        function countTimeTaken() {
            var s = 0
            myInt = setInterval(() => {
                var seconds = s % 60
                var min = ~~(s / 60)
                timeTaken = `[${min}:${seconds.toString().padStart(2, '0')}]`
                $("#submit").text(`Please wait...${timeTaken}`)
                s++;
            },1000)
        }
    </script>
}
