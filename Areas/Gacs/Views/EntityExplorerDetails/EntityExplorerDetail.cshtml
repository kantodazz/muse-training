@section Scripts{
    <script>
        $(function () {
            BindDataTable();
        });

        var BindDataTable = function (response) {
            var subSummaryId = '@Model.SubSummaryId';
            var url = '@Url.Action("GetEntityExplorerDetails", "EntityExplorerDetails")';
            $("#dt_basic").DataTable({
                "bServerSide": true,
                "sAjaxSource": url,
                "fnServerParams": function (aoData) {
                    aoData.push({ "name": "subSummaryId", "value": subSummaryId });
                },
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        type: "GET",
                        url: sSource,
                        data: aoData,
                        success: fnCallback
                    });
                },
                "aoColumns": [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "mData": "SectorDesc" },
                    { "mData": "SubSectorDesc" },
                    { "mData": "FiscalYear" },
                    { "mData": "EntityCode" },
                    { "mData": "EntityDesc" },
                    {
                        data: 'ActualExpenditure',
                        render: $.fn.dataTable.render.number(',', '.', 2),
                        className: "text-right"
                    }
                ]
            });
        };

    </script>
}