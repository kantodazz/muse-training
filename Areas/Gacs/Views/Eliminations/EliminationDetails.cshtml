@model IFMIS.Areas.Gacs.Models.EliminationDetailsVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" style="margin: 5px; padding-top: 30px">
    <div class="row"></div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div>
                        <div class="widget-body">

                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#tab_1" data-toggle="tab">Summary</a></li>
                                    <li><a href="#tab_2" data-toggle="tab">Details(s) List <span class="badge bg-color-grey inbox-badge"></span></a></li>
                                </ul>
                                <br />
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab_1">
                                        <div class="widget-body " style="padding-top:10px; width:100%;">
                                            <table width="100%">
                                                <tr>
                                                    <td colspan="1">
                                                        <div style="padding-left:5%">

                                                            <dl class="dl-horizontal">

                                                                <dt>
                                                                    @Html.DisplayNameFor(model => model.FiscalYear)
                                                                </dt>

                                                                <dd>
                                                                    @Html.DisplayFor(model => model.FiscalYear)
                                                                </dd>

                                                                <dt>
                                                                    @Html.DisplayNameFor(model => model.InstCode)
                                                                </dt>

                                                                <dd>
                                                                    @Html.DisplayFor(model => model.InstCode)
                                                                </dd>

                                                                <dt>
                                                                    @Html.DisplayNameFor(model => model.EntityDescription)
                                                                </dt>

                                                                <dd>
                                                                    @Html.DisplayFor(model => model.EntityDescription)
                                                                </dd>

                                                                <dt>
                                                                    @Html.DisplayNameFor(model => model.GfsCode)
                                                                </dt>

                                                                <dd>
                                                                    @Html.DisplayFor(model => model.GfsCode)
                                                                </dd>


                                                                <dt>
                                                                    @Html.DisplayNameFor(model => model.GfsDesc)
                                                                </dt>

                                                                <dd>
                                                                    @Html.DisplayFor(model => model.GfsDesc)
                                                                </dd>

                                                                <dt>
                                                                    @Html.DisplayNameFor(model => model.ActualTotal)
                                                                </dt>

                                                                <dd>
                                                                    @Html.DisplayFor(model => model.ActualTotal)
                                                                </dd>


                                                                <dt>
                                                                    @Html.DisplayNameFor(model => model.EliminationMatchNo)
                                                                </dt>

                                                                <dd>
                                                                    @Html.DisplayFor(model => model.EliminationMatchNo)
                                                                </dd>

                                                                <dt>
                                                                    @Html.DisplayNameFor(model => model.EliminationMatchDate)
                                                                </dt>

                                                                <dd>
                                                                    @Html.DisplayFor(model => model.EliminationMatchDate)
                                                                </dd>


                                                                <dt>
                                                                    @Html.DisplayNameFor(model => model.OverallStatus)
                                                                </dt>

                                                                <dd>
                                                                    @Html.DisplayFor(model => model.OverallStatus)
                                                                </dd>

                                                            </dl>
                                                        </div>

                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="tab_2">
                                            <table id="dt_basic" class="table table-striped table-bordered table-hover table-condensed" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Eliminator TrxID</th>
                                                        <th>Entity Code</th>
                                                        <th>Entity Name</th>
                                                        <th>Gfs Code</th>
                                                        <th>Gfs Description</th>
                                                        <th>Eliminator Actual Total</th>
                                                        <th>OverallStatus</th>

                                                    </tr>
                                                </thead>
                                                @{int i = 0;}
                                                @foreach (var item in Model.GacsEliminationDetails)
                                                {
                                                    i++;
                                            <tr>
                                                <td>@i</td>
                                                <td>@Html.DisplayFor(modelItem => item.EliminatorTrxID)</td>
                                                <td>@Html.DisplayFor(modelItem => item.EliminatorInstCode)</td>
                                                <td>@Html.DisplayFor(modelItem => item.EliminatorEntityDescription)</td>
                                                <td>@Html.DisplayFor(modelItem => item.EliminatorGfsCode)</td>
                                                <td>@Html.DisplayFor(modelItem => item.EliminatorGfsDesc)</td>
                                                <td>@Html.DisplayFor(modelItem => item.EliminatorActualTotal)</td>
                                                <td>@Html.DisplayFor(modelItem => item.OverallStatus)</td>

                                                
                                            </tr>
                                                }
                                            </table>

                                    </div>

                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-2 col-md-offset-2">
                                                <a class="btn btn-info" style="margin-right:5px" onclick="window.history.back()">
                                                    <i class="glyphicon glyphicon-arrow-left"></i>Back
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>