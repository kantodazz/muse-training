@section pagespecific{

    <script>
        var dt_trxsummary = $('#dt_trxsummary').dataTable({
            "language": {
                "emptyTable": '<strong id="loader">Loading...</strong>',
                "zeroRecords": "No matching records found"
            }
        });
        $("dt_trxsummary_wrapper .dt-toolbar").remove();

        var data = []
        function loadPaymentDetails() {
            var url = '@Url.Action("GetEliminationByInstSummary", "Eliminations")';
            $.ajax({
                type: "get",
                url: url,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.data;
                    console.log(data);
                    dt_trxsummary.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        var Id = data[i]["institutionCode"]
                        dt_trxsummary.fnAddData([i + 1,
                           /* '<input type="checkbox" id="row-' + Id + '" onchange="rowChecked(' + Id + ')" value=' + data[i]["institutionCode"] + ' />',*/
                            data[i]["financialYear"],
                            data[i]["institutionCode"],
                            data[i]["entityName"],
                            data[i]["totalAmount"].toLocaleString(),
                              '<div class="btn-group">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                              <li><a href="#" onclick="view(' + i + ')">View Detail</a></li>\
                              <li><a href="#" onclick="postElimination(' + i + ')">Run Elimination</a></li>\
                              <li><a href="#" onclick="Reject(' + i + ')">Reject</a></li>\
                            </ul>\
                        </div>'
                        ]);
                    }

                    if (data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
        loadPaymentDetails()


        var checkedRows = [];
        function rowChecked(rowId) {
            debugger;
            console.log(rowId)
            if ($("#row-" + rowId).is(":checked")) {
                checkedRows.push(rowId);
            } else {
                remove(checkedRows, rowId);

            }

        }

        function checkAll() {
            debugger;
            checkedRows = [];
            if ($("#checkall").is(":checked")) {
                for (var i = 0; i < data.length; i++) {
                    var Id = data[i]["institutionCode"]
                    checkedRows.push(Id);
                    $("#row-" + Id).prop('checked', true);
                }
            } else {
                for (var i = 0; i < data.length; i++) {
                    var Id = data[i]["institutionCode"]
                    $("#row-" + Id).prop('checked', false);
                }
            }
        }

        function remove(array, val) {
            var found = array.indexOf(val);
            while (found !== -1) {
                array.splice(found, 1);
                found = array.indexOf(val);
            }
        }


        function postElimination(i) {
            if (i == 'x') i = globalPayeeId;
            swal({
                title: 'Posting Elimination',
                text: "Are you sure you want to Post this elimination",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    postEliminationByInstitution(data[i]["institutionCode"]);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });

        }


        function postEliminationByInstitution(institutionCode) {
            var url = '@Url.Action("postingEliminationByInstitution", "Eliminations")'
            $.ajax({
                type: "post",
                url: url,
                data: { institutionCode },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Posted Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }



        function postAllEliminate() {
            swal({
                title: 'Posting Elimination',
                text: "Are you sure you want to Post All elimination",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    allElimination();
                } else {
                    swal("Cancelled", "No change was made");
                }
            });

        }


        function allElimination() {
            var url = '@Url.Action("postingAllElimination", "Eliminations")'
            $.ajax({
                type: "post",
                url: url,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Posted Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }


        // =============== Rejection Start ==================
        function Reject(i) {
            debugger;
            $("#institutionCode").text(data[i]["institutionCode"]);
            document.getElementById("institutionCode").value = data[i]["institutionCode"];
            $('#RejectModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function RejectedForm() {
            debugger
            var institutionCode = $("#institutionCode").val();
            var remarks = $("#rejectremarks").val();

            if (institutionCode == '' || remarks == '') {
                var url = '@Url.Action("PostEliminationList", "Eliminations")';
                swal("Please Fill All the required Fields");
                return false;
            }

            postRejection(institutionCode, remarks);
        }

        function postRejection(institutionCode, remarks) {
            $(".loadingImg").show();
            $("#rejectform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("RejectionEliminationByInstitution", "Eliminations")';
            $.ajax({
                url: url,
                data: { institutionCode: institutionCode, remarks: remarks },
                type: 'POST',
                success: function (response) {
                    $("#rejectform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Rejected successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        $("#rejectform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response)
                    }
                },
                failure: function (error) {
                    $("#rejectform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }
        // =============== End Rejection ===============

    </script>
}
