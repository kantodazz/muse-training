@model IFMIS.Areas.IFMISTZ.Models.InstitutionListVm

@{
    ViewBag.Title = "GacsAgeAnalysisRPTv";
    ViewBag.Description = "form wizards";
    //Layout = "~/Views/Shared/_Default.cshtml";

}

<style>
    .input {
        border-width: 1px 0 1px 1px;
        border-color: #ccc;
        border-style: solid;
        width: 110px;
        height: 32px;
    }

    .input_page {
        border: 1px solid #ccc;
        width: 145px;
        height: 32px;
    }

    span {
        cursor: pointer;
    }
</style>

<script type="text/javascript">

    function GACSAgeAnalysis() {
        var entityCode = $("#VoteCode").val().trim(),
            analysisType = $("#AnalysisType").val().trim(),
            financialYear = $("#FinancialYear").val().trim(),
            url = "@Model.UrlName" + "AgeAnalysis.aspx";

        var isNotSupplied = validateReportParameters(["#VoteCode", "#AnalysisType", "#FinancialYear"]),
            queryString = "vote_code=" + entityCode + "&analysis_type=" + analysisType + "&curr_fiscal_yr=" + financialYear;

        if (isNotSupplied)
            $(isNotSupplied).attr("style", "border: 1px solid red");
        else
        {
            $.ajax({
                    type: "GET",
                    url: '@Url.Action("ParameterEncryption", "Reports", new { area = "Gacs" })',
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    data: { "query": queryString },
                    success: function (response) {
                        window.open(url + response);
                    }
            });
        }
    }
    function GetEntityVotes() {

        var url = "GetEntityVotes/";

        $("#VoteCode").select2({
            minimumInputLength: 2,  // minimumInputLength for sending ajax request to server
            width: 'resolve',   // to adjust proper width of select2 wrapped elements
            ajax: {
                url: url, // Controller - Select2Demo and Action -AccessRemoteData
                type: "GET",
                dataType: 'json',
                data: function (searchTerm) {
                    return {
                        searchTerm: searchTerm,
                    };
                },
                results: function (data, page) {
                    return { results: data.votes }; // data.vendors returning json data from Controller
                }
            }
        });
    }
    function validateReportParameters(parameterList) {
        var resetStyle = function (parameterList) {
            for (var i = 0; i < parameterList.length; i++) {
                $(parameterList[i]).attr("style", "border: 1px solid #ccc");
            }
        }
        resetStyle(parameterList);

        for (var i = 0; i < parameterList.length; i++) {
            if (!$(parameterList[i]).val().trim()) {
                return parameterList[i];
            }
        }
        return null;
    }
</script>
<!-- MAIN CONTENT -->
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">

        </div>
    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> Age Analysis Report Parameters </h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Vote
                                    </div>
                                    <div class="col-md-5">
                                        <input id="VoteCode" name="VoteCode" class="form-control padding-left-10" type="text" placeholder="Search Vote by Vote Code or Name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Analysis type
                                    </div>
                                    <div class="col-md-3">
                                        <select id="AnalysisType" name="AnalysisType" class="select2 form-control padding-left-10">
                                            <option value=""> -- Select Analysis type -- </option>
                                            <option value="Payable">Payables</option>
                                            <option value="PrePayment">PrePayment</option>
                                            <option value="Receivable">Receivable</option>
                                            <option value="CreditRisk">CreditRisk</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Financial Year
                                    </div>
                                    <div class="col-md-5">
                                        <input type="number" name="FinancialYear" id="FinancialYear" min="1" placeholder="Pick Number" class="input_page padding-left-10 padding-right-10" />
                                    </div>
                                </div>

                                <hr class="simple" />
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn action-btn btn btn-info" onclick="GACSAgeAnalysis()">
                                            View Report
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->