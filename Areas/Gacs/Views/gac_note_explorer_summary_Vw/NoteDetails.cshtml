                        <div class="widget-body">
                            <hr class="simple" />
                            <div class="row">
                                <div class="col-md-8" style="text-align:left">
                                    <div>
                                        <b>&nbsp;&nbsp;Fiscal Year:</b> @ViewBag.Detail.FiscalYear
                                    </div>
                                    <div>
                                        <b>&nbsp;&nbsp;Note Number:</b> @ViewBag.Detail.Note_No
