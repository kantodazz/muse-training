                                    <tr style="background-color: #f5f5f5; color:black">
                                        <th>#</th>
                                        <th>Fiscal Year</th>
                                        @*<th>Note Number</th>
                                        <th>Note Description</th>*@
                                        <th> Entity Code</th>
                                        <th>Entity Description</th>
                                        <th>GFS Code</th>
                                        <th>GFS Code Description</th>
                                        <th> Gov Actual Expenditure</th>
                                    </tr>
                                </thead>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td style="text-align:right">
                                            @i
                                        </td>
                                       <td>
                                            @Html.DisplayFor(modelItem => item.FiscalYear)
                                        </td>
                                       @* <td>
                                            @Html.DisplayFor(modelItem => item.Note_No)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Note_Desc)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EntityCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EntityDescription)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.gfs_code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.gfs_description)
                                        </td>
                                        <td style="text-align:right">
                                            @Convert.ToDecimal(item.Gov_Actual_Exp).ToString("0#,0.00")
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <!-- end widget content -->
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    @*<div class="col-md-2">
                                        </div>*@
