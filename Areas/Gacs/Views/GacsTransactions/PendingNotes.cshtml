                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ReportCategory)
                                            </td>
                                            <td style="text-align:right">
                                                @string.Format("{0:#,0.00}", item.ActualTotal)
                                            </td>
                                        </tr>
