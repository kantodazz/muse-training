@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Gacs Non Current Asset Trxes";
}

<style>
    .search-btn {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 5px;
        padding-right: 10px;
        width: 40px;
    }

    .name-input-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        overflow: hidden;
    }

    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }


    td {
        padding: 5px;
    }

    .tooltip1 {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

        .tooltip1 .tooltiptext {
            visibility: hidden;
            padding: 8px;
            border: solid 1px #ccc;
            border-radius: 6px;
            padding: 5px 0;
            position: absolute;
            z-index: 1;
            top: -40px;
            left: 110%;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            background-color: white;
        }

            .tooltip1 .tooltiptext::after {
                content: "";
                position: absolute;
                top: 50%;
                right: 100%;
                margin-top: -5px;
                border-width: 5px;
                border-style: solid;
                border-color: transparent white transparent transparent;
            }

    .closetip {
        border: 0;
        outline: 0;
        color: #808080;
        left: 0;
        border-radius: 100%;
    }

    .amount-input {
        border: 1px solid #ccc;
        outline: none;
        border-radius: 3px;
    }

    /*.tooltip1:target .tooltiptext {
      visibility: visible;
    }*/
</style>
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-6"></div>
                                <div class="col-md-6">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search searchIcon"></i>
                                        <input type="search" name="search" placeholder="Search..." id="searchbox">
                                    </div>
                                </div>
                            </div>

                            <div style="overflow-x:scroll;">
                                <table id="dt_table" class="table table-bordered table-condensed table-amount">
                                    <thead>
                                        <tr>
                                            <th style="width:30px">#</th>
                                            <th>Gfs Code</th>
                                            <th>Gfs Code Descr</th>
                                            <th>Ownership Perc(%)</th>
                                            <th>Opening Bal(±)</th>
                                            <th>Addition Monetary</th>
                                            <th>Addition Non Monetary</th>
                                            <th>Share Surplus/Defic-Associate(±)</th>
                                            <th>Dividend Received</th>
                                            <th>Dividend Not Received</th>
                                            <th>Borrowing Cost</th>
                                            <th>Transfer Amt(-)</th>
                                            <th>Revaluation Adj</th>
                                            <th>Profit For Year</th>
                                            <th>Other Reserves</th>
                                            <th>Minority Interest</th>
                                            <th>FairValue Changes(±)</th>
                                            <th>Disposal Amt</th>
                                            <th>Interest Charged</th>
                                            <th>Other Changes</th>
                                            <th>Issued During</th>
                                            <th>Repayment Principal</th>
                                            <th>Repayment Interest</th>
                                            <th>Foreign Currency</th>
                                            <th>Adjustment(±)</th>
                                            <th>Closing Bal</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <hr />
                            <div>
                                <button class="btn btn-info" onclick="history.back()" style="margin-right:5px">
                                    <i class="glyphicon glyphicon-arrow-left"></i>Back
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section pagespecific{

    <script>
        var dt_table = $('#dt_table').dataTable({
            "language": {
                "emptyTable": '<strong id="loader" style="color:green">No matching records found</strong>',
                "zeroRecords": "No matching records found"
            },
        });
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_table.DataTable().search(this.value).draw();
        });
        $("#dt_table_wrapper .dt-toolbar").remove();

        var data = []
        function LoadData() {
            $("#loader").text("Loading...")
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetGacsNonCurrentAssetTrx", "GacsTransactions")',
                data: { TrxID: '@ViewBag.TrxID' },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response.error) {
                        swal(response.error)
                    } else {
                        data = response.data;
                        displayData()
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
        LoadData()
       

        function updateTrx(Id, label) {
            var amount = $(`#Amount_${Id}_${label}`).val()
            if (amount || amount == 0) {
                data = data.filter(a=> {
                    if (a.AssetID == Id) {
                        a[label] = amount
                    }
                    return a
                })
                closeDialog(`${Id}_${label}`);
                displayData();
                updateBackend({ Id, label, amount });
            }
        }

        function updateBackend(params) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateNonCurrentAssetTrx", "GacsTransactions")',
                data: params,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response != "Success") {
                        swal(response).then(_=>window.location.reload())
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function showDialog(Id) {
            document.getElementById(Id).style.visibility = "visible"
        }

        function closeDialog(Id) {
            setTimeout(() => {
                document.getElementById(Id).style.visibility = "hidden"
            }, 1)
        }

        function displayData() {
            dt_table.fnClearTable();
            for (var i = 0; i < data.length; i++) {
                var Id = data[i].AssetID
                var status = data[i].OverallStatus
                dt_table.fnAddData([i + 1,
                   data[i]["GfsCode"],
                   data[i]["GfsCodeDescr"],
                   EditBox(toLabel(data[i]["OwnershipPerc"]), Id, "OwnershipPerc", status),
                   EditBox(toLabel(data[i]["OpeningBal"]), Id, "OpeningBal", status),
                   EditBox(toLabel(data[i]["AdditionMonetary"]), Id, "AdditionMonetary", status),
                   EditBox(toLabel(data[i]["AdditionNonMonetary"]), Id, "AdditionNonMonetary", status),
                   EditBox(toLabel(data[i]["ShareAssociate"]), Id, "ShareAssociate", status),
                   EditBox(toLabel(data[i]["DividendReceived"]), Id, "DividendReceived"),
                   EditBox(toLabel(data[i]["DividendNotReceived"]), Id, "DividendNotReceived", status),
                   EditBox(toLabel(data[i]["BorrowingCost"]), Id, "BorrowingCost", status),
                   EditBox(toLabel(data[i]["TransferAmt"]), Id, "TransferAmt", status),
                   EditBox(toLabel(data[i]["RevaluationAdj"]), Id, "RevaluationAdj", status),
                   EditBox(toLabel(data[i]["ProfitForYear"]), Id, "ProfitForYear", status),
                   EditBox(toLabel(data[i]["OtherReserves"]), Id, "OtherReserves", status),
                   EditBox(toLabel(data[i]["MinorityInterest"]), Id, "MinorityInterest", status),
                   EditBox(toLabel(data[i]["FairValueChanges"]), Id, "FairValueChanges", status),
                   //EditBox(toLabel(data[i]["WrittenOff"]), Id, "WrittenOff", status),
                   EditBox(toLabel(data[i]["DisposalAmt"]), Id, "DisposalAmt", status),
                   EditBox(toLabel(data[i]["InterestCharged"]), Id, "InterestCharged", status),
                   EditBox(toLabel(data[i]["OtherChanges"]), Id, "OtherChanges", status),
                   EditBox(toLabel(data[i]["IssuedDuring"]), Id, "IssuedDuring", status),
                   EditBox(toLabel(data[i]["RepaymentPrincipal"]), Id, "RepaymentPrincipal", status),
                   EditBox(toLabel(data[i]["RepaymentInterest"]), Id, "RepaymentInterest", status),
                   EditBox(toLabel(data[i]["ForeignCurrency"]), Id, "ForeignCurrency", status),
                   EditBox(toLabel(data[i]["Adjustment"]), Id, "Adjustment", status),
                   EditBox(toLabel(data[i]["ClosingBal"]), Id, "ClosingBal", status),
                ]);
            }
        }

