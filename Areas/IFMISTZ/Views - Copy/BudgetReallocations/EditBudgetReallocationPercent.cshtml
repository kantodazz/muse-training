<style>
    .search-btn {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 5px;
        padding-right: 10px;
    }

    .search-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        padding-left: 10px;
    }

    .name-input-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        overflow: hidden;
    }

    .search-icon {
        padding: 0.5rem;
    }

    .search-button {
        background: #538AC5;
        border: 0;
        color: white;
        padding: 8px;
        border-radius: 0;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
        width: 205px;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    textarea {
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    .action-btn {
        width: 100px;
        color: white;
    }

    .form-label {
        text-align: right;
    }

    td {
        padding: 5px;
    }

    .info-box {
        padding: 10px;
        background-color: #ECF3F8;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
</style>

<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Update Budget Reallocation Percent</h2>
                    </header>
                    <div>
                        <div class="widget-body">
                            <div>
                                <div style="display:flex;justify-content:center;align-items:center;padding-bottom:8px">
                                    <div>
                                        <div style="display:flex">
                                            <div style="text-align:right;width:180px;padding-right:8px;margin-top:6px">Reallocation Type</div>
                                            <div>
                                                <select style="width:300px;border-radius:4px;padding:8px" id="reallocationType">
                                                    <option>WITHIN</option>
                                                    <option>ACROSS</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div style="display:flex;justify-content:center;align-items:center;padding-bottom:8px" id="_institutionCode">
                                    <div>
                                        <div style="display:flex">
                                            <div style="text-align:right;width:180px;padding-right:8px;margin-top:6px">Vote</div>
                                            <div>
                                                <select style="width:300px;border-radius:4px;padding:8px" id="institutionCode">
                                                    @foreach (var item in ViewBag.institutionList)
                                                    {
                                                        <option value='@item.Value'>@item.Text</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div style="display:flex;justify-content:center;align-items:center;padding-bottom:8px">
                                    <div>
                                        <div style="display:flex">
                                            <div style="display:flex;justify-content:center;align-items:center;padding-right:8px;">Budget Reallocation(%)</div>
                                            <div><percent-input style="width:300px;border-radius:4px;margin-right:-15px" id="budgetReallocationPercent" /></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row" style="padding-bottom:8px">
                            <div class="col-md-2"></div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-info" onclick="createBudgetReallocationPercent()">
                                    <i class="fa fa-save"></i>SAVE
                                    <img src="~/Content/img/loading.gif" id="saveLoader" />
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>


@section pagespecific{
    <script>

        $(function () {
            $("#saveLoader").toggle(false)
            $("#reallocationType").val('@ViewBag.ReallocationP.ReallocationType')
            $("#institutionCode").val('@ViewBag.ReallocationP.InstitutionCode')
            $("#budgetReallocationPercent").val('@ViewBag.ReallocationP.ReallocationPercent')
            $("#_budgetReallocationPercent").val('@ViewBag.ReallocationP.ReallocationPercent')
            $("#reallocationType").trigger('change')
        })

        $("#reallocationType").change(function () {
            if(this.value != "WITHIN"){
                $("#_institutionCode").toggle(false)
            } else {
                $("#_institutionCode").toggle(true)
            }
        })

        function createBudgetReallocationPercent() {
            var url = '@Url.Action("CreateBudgetReallocationPercent", "BudgetReallocations")';
            if ($("#budgetReallocationPercent").val()) {
                $("#saveLoader").toggle(true)
                $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        reallocationType: $("#reallocationType").val(),
                        institutionCode: $("#institutionCode").val(),
                        institutionName: $("#institutionCode :selected").text()?$("#institutionCode :selected").text().split("-")[1].trim():"",
                        budgetReallocationPercent: $("#_budgetReallocationPercent").val(),
                    },
                    contenttype: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (response) {
                        $("#saveLoader").toggle(false)
                        if (response == "Success") {
                            swal("Saved Successfully!", { icon: "success" })
                                .then((value) => {
                                    window.location.href = '@Url.Action("BudgetReallocationPercentList", "BudgetReallocations")';
                                });
                        } else {
                            swal(response);
                        }
                    },
                    failure: function (error) {
                        swal(error);
                    }
                });
            } else {
                swal("Reallocation % is required")
            }
        }
    </script>
}


