                                                                                <th style="text-align:center;width:8%">Select</th>

                                                                            </tr>
                                                                        </thead>
                                                                 
                                                                        <tbody></tbody>
                                                                    </table>

                                                                </div>
                                                            </div>

                                                        </div>
                                                        <div class="tab-pane fade" id="hr2">
                                                            <div class="widget-body no-padding">
                                                                <br />

                                                                <div class="custom-scroll" style="height:290px; overflow-y: scroll;">

                                                                    <table class="table table-bordered table-hover table-condensed" id="gl_Accounts">
                                                                        <thead>
                                                                            <tr>
                                                                                <th style="text-align:left;width:5%">#</th>

                                                                                <th style="text-align:left">Expenditure Line Item</th>

                                                                                <th style="text-align:left;width:15%">Funding Reference</th>


                                                                                <th style="text-align:right;width:12%">Amount</th>
            
                                                                            </tr>
