                                                <img src="~/Media/Images/ajax_loader.gif" class="loadingImg" />
                                            </div>*@
                                            <table class="table  table-hover table-condensed">

                                                <tbody>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Prepayment Number
                                                        </td>
                                                        <td>
                                                            <strong>@Html.DisplayFor(model => model.PrePaymentNo)</strong>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Description
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => model.PrePaymentDesc)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Prepayment Amount
                                                        </td>
                                                        <td>
