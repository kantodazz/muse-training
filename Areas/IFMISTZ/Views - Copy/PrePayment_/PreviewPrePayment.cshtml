                                                {
                                                   foreach (var attach in ViewBag.Attachment)
                                                    {
                                                        <tr>
                                                            <td>@attach.Title</td>
                                                            <td>@attach.Description</td>
                                                            <td> <a href="@Url.Action("LoanAttachmentView", "PrePayment", new { Filename = attach.FileName, PathName = "uploads" })" target="_blank"><i class="fa fa-file-pdf-o"></i></a></td>
                                                        </tr>
                                                    }
                                                 }

                                                    @if (ViewBag.PrePaymentRAttachment != null)
                                                    {
                                                        foreach (var item in ViewBag.PrePaymentRAttachment)
                                                        {
                                                            <tr>
                                                                <td>@item.Title</td>
                                                                <td>@item.Description</td>
                                                                <td> <a href="@Url.Action("LoanAttachmentView", "PrePayment", new { Filename = item.FileName, PathName = "uploads" })" target="_blank"><i class="fa fa-file-pdf-o"></i></a></td>
                                                            </tr>
                                                        }
                                                    }

                                                </table>

                                            @if (ViewBag.PrePaymentReceivingAttachment != null)
                                            {
                                                <span>Attachments</span>
                                                        <table class="table  table-hover table-condensed" style="border:0px;">
                                                            <tr>
                                                                <th>Title</th>
                                                                <th>Reference Number</th>
                                                                <th>Attachment</th>
                                                            </tr>
                                                            @foreach (var attach in ViewBag.PrePaymentReceivingAttachment)
                                                            {
                                                                <tr>
                                                                    <td>@attach.DocumentName</td>
                                                                    <td>@attach.ReferenceNumber</td>
                                                                    <td> <a href="@Url.Action("AttachmentView", "PrePayment", new { Filename = attach.FileName, PathName = "~/Media/PrePayment/Receiving" })" target="_blank"><i class="fa fa-file-pdf-o"></i></a></td>
