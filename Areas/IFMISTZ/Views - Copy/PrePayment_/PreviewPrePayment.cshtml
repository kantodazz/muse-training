                                                                <div class="custom-scroll" style="height:290px; overflow-y: scroll;">
                                                                    <table class="table table-bordered table-hover table-condensed" id="items">
                                                                        <thead>
                                                                            <tr>
                                                                                <th style="text-align:right;width:5%">#</th>
                                                                                <th style="text-align:left;width:25%">Class</th>
                                                                                <th style="text-align:left">Item</th>

