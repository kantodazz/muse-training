                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => model.Currency)
                                                            @Html.DisplayFor(model => model.ItemsValues)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            GL Accounts Value
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => model.Currency)
                                                            @Html.DisplayFor(model => model.ItemCharge)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Sub Budget Class
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => model.SubBudgetClass)-@Html.DisplayFor(model => model.SegmentDesc)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Currency Used
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => model.Currency)
                                                        </td>
                                                    </tr>


                                                    <tr>
                                                        <td style="width:20%">
                                                            Supplier
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => model.SupplierName)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Apply Date
                                                        </td>
                                                        <td>
                                                            @Convert.ToDateTime(Model.ApplyDate).ToString("dd/MM/yyyy") 
                                                        </td>
                                                    </tr>
                                                    
                                                    
                                                    <tr>
                                                        <td style="width:20%">
                                                             Status
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => model.OverallStatus)
                                                        </td>
                                                    </tr>
