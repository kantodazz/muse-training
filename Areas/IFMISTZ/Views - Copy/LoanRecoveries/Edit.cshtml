@model IFMIS.Areas.IFMISTZ.Models.LoanVM
@{
    ViewBag.Title = "Edit Loan Recovery Items";
    decimal? amount = 0;
    decimal? amount2 = 0;
    decimal? deduct = 0;
}

<style type="text/css">
    .loadingImg {
        display: none;
    }
</style>


<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row"></div>
    <!-- widget grid -->
