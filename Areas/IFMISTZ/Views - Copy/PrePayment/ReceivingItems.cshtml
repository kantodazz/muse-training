                                            <tr>
                                                <td>Received Amount</td>

                                                <td>
                                                    <strong>
                                                        @if (Model.ReceivedAmount != null)
                                                        {
                                                            @Convert.ToDecimal(Model.ReceivedAmount).ToString("#,##0.00");
                                                        }
                                                        else
                                                        {
                                                            <span>0.00</span>
                                                        }

                                                    </strong>

                                                </td>
                                            </tr>


