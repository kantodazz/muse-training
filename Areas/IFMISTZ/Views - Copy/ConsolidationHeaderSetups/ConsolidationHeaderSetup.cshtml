        })

       function Cancel(i) {
                status = "Cancelled";
                swal({
                    title: "Are you sure?",
                    text: "Consolidation Header Name will be Cancelled!",
                    buttons: [
                      'No',
                      'Yes'
                    ],
                }).then(function (isConfirm) {
                    if (isConfirm) {
                        ChangeItemStatus(i, status);

                    } else {
                        swal("Cancelled", "No change was made");
                    }
                });
            }
       function Activate(i, status) {
           
           if (status == "Active") {
            nstatus = "Inactive";
        } else {
            nstatus = "Active";
        }
           swal({
               title: "Are you sure?",
               text: "Consolidation Header Status will be changed!",
               buttons: [
                 'No',
                 'Yes'
               ],
           }).then(function (isConfirm) {
               if (isConfirm) {
                   ChangeItemStatus(i, nstatus);

               } else {
                   swal("Cancelled", "No change was made");
               }
           });
       }
            function ChangeItemStatus(i, status) {
                var url = '@Url.Action("ChangeStatus", "ConsolidationHeaderSetups")';
                $.ajax({
                    type: "post",
                    url: url,
                    data: {
                        Status: status,
                        ConsolidationHeaderSetupId: i
                    },
                    contenttype: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (response) {

                        if (response == "Success") {
                            swal("Changed Successfully!", { icon: "success" })
                                .then((value) => {
                                    window.location.reload();
                                });
                        }
                        else {
                            swal(response);
                        }

                    },
                    failure: function (error) {
                        swal(error);
                    }
                });
            }





</script>
}