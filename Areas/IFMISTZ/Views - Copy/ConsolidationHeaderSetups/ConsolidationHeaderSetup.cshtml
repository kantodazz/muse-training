@model IFMIS.Areas.IFMISTZ.Models.ConsolidationHeaderSetup

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .input[type="text"], select {
        border: 1px solid lightgray;
        width: 100%;
        height: 35px;
    }

    .search-icon {
        padding: 0.5rem;
    }

    input[type=search] {
        padding: 4px;
        border-radius: 4px;
    }

    .search-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        padding-left: 10px;
    }

    .search-btn {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 5px;
        padding-right: 10px;
    }

    .textarea {
        border: 1px solid lightgray;
        width: 100%;
    }

    .input[type="text"]:focus {
        border: 1px solid lightblue;
    }

    th {
        text-align: center;
    }
</style>
<div id="content" style="margin: 5px; padding-top: 5%">

    <section id="widget-grid" class="">
        <div class="row">

            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>

                        <h2 style="color:black;">ConsolidationGroupSetup Creation.</h2>

                    </header>
                    <div>
                        <div class="widget-body" style="padding-top:10px; width:100%;">
                            <table style="width:100%;">
                                <tr>
                                    <td>
                                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                                        {
                                            <div style="padding-left:15%">
                                                @Html.AntiForgeryToken()


                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">Consolidation Entity Code:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.DropDownList("ConsolidationHeaderCode", ViewBag.instutionflag as List<SelectListItem>, "", new { @Class = "input", style = "width:300px; ", required = "required" })
                                                            @Html.ValidationMessageFor(model => model.ConsolidationHeaderCode, "", new { @class = "text-danger" })
                                                     </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">Consolidation Entity Name:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.TextBoxFor(model => model.ConsolidationHeaderName, new { @Class = "input", style = "width:300px; ", required = "required", })
                                                            @Html.ValidationMessageFor(model => model.ConsolidationHeaderName, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">Transaction Elimination:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            <select name="EliminationFlag" type="number" class="input" style="width:300px" required="required">
                                                                <option value="0">None</option>
                                                                <option value="1">Transfers</option>
                                                                <option value="2">Transfers and Gov. Entity</option>
                                                            </select>
                                                         
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="margin-left:45%;">
                                                <div class="form-group">

                                                    <div class="col-md-5">

                                                        <button type="submit" class="btn action-btn btn btn-info" id="submit">
                                                            <i class="fa fa-save"></i>
                                                            <img src="~/Content/img/loading.gif" id="saveLoader" />
                                                            Save
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                        }

                                    </td>
                                    <td colspan="1"></td>
                                </tr>
                            </table>

                        </div>

                        <table id="dt_basic" class="table table-condensed table-bordered">
                            <thead>
                                <tr>
                                    <th style="width:50px">No.</th>
                                    <th> Consolidation Entity Code</th>
                                    <th> Consolidation Entity Name</th>
                                    <th> Transaction Elimination</th>
                                    <th> Status</th>
                                    <th style="width:100px">Action</th>
                                </tr>
                            </thead>
                            @{ int i = 0;

                            }

                            @foreach (var group in ((IEnumerable<IFMIS.Areas.IFMISTZ.Models.ConsolidationHeaderSetup>)ViewBag.list).GroupBy(a => a.ConsolidationHeaderSetupId))
                            {

                                <tbody>
                                    @foreach (var item in group)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td style="text-align:left"> @item.ConsolidationHeaderCode</td>
                                            <td style="text-align:left"> @item.ConsolidationHeaderName</td>
                                            <td style="text-align:left">
                                            @{ 
                                                string Elimination = "";
                                                if (item.EliminationFlag == 0)
                                                {
                                                    Elimination = "None";
                                                }
                                                else if (item.EliminationFlag ==1)
                                                {
                                                    Elimination = "Transfers";
                                                }
                                                else if (item.EliminationFlag == 2)
                                                {
                                                    Elimination = "Transfers and Gov. Entity";
                                                }

                                            }
                                             @Elimination</td>
                                            <td style="text-align:left"> @item.Status</td>
                                            <td style="text-align:left">
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <ul class="dropdown-menu">

                                                        <li>
                                                            <a href="@Url.Action("Edit", "ConsolidationHeaderSetups",new {id=item.ConsolidationHeaderSetupId })" class="btn-xs edit">
                                                                <i class="fa fa-edit"></i>  Edit
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="@Url.Action("Details", "ConsolidationHeaderSetups",new {id=item.ConsolidationHeaderSetupId })" class="btn-xs edit">
                                                                <i class="fa fa-edit"></i>  Details
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="#" Onclick="Activate(@item.ConsolidationHeaderSetupId,'@item.Status')" class="btn-xs edit">
                                                                <i class="fa fa-trash-o"></i>
                                                                @{
                                                                    string newstatus = "";
                                                                    if (item.Status == "Active")
                                                                    {
                                                                        newstatus = "Deactivate";
                                                                    }
                                                                    else
                                                                    {
                                                                        newstatus = "Activate";
                                                                    }
                                                                }

                                                                @newstatus
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="#" Onclick="Cancel(@item.ConsolidationHeaderSetupId)" class="btn-xs edit">
                                                                <i class="fa fa-trash-o"></i>  Cancel
                                                            </a>
                                                        </li>
                                                   

                                                    </ul>
                                                </div>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            }
                        </table>
                        <br />
                        <br />
                    </div>
                </div>
            </article>
        </div>
    </section>

</div>

@section pagespecific{
    <script>

    $("form").submit(function () {
        $("#saveLoader").toggle(true);
        $('#submit').attr("disabled", true);
    });

    $("#saveLoader").toggle(false);
    $("#submit").prop('disabled', false);

    if ('@TempData["Success"]' == 'Success') {
        swal("Saved Successfully!", { icon: 'success' })
             .then(Ok=> {
                 window.location.href = '@Url.Action("ConsolidationHeaderSetup", "ConsolidationHeaderSetups")';
             });
    } else if ('@TempData["Success"]' == 'No') {

        swal("This ConsolidationName already Created!!")

    };


