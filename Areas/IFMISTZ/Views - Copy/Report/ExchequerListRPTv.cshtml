@section scripts
{
    <script>
        $("#CompSearch").css({ "display": "none" });
        $("#CompName").css({ "display": "none" });
        GetVotes();
        function ExchequerListRPT() {
            var entityCode = $("#InstitutionCode").val().trim(),
                fundType = $("#FundType").val().trim(),
                startDate = $("#StartDate").val().trim(),
                endDate = $("#EndDate").val().trim(),
                componentSearch = $("#componentSearch").val().trim(),
                componentName = $("#componentName").val().trim(),
                userId = "@Model.UserId",
                url = "@Model.UrlName" + "ExchequerListRPT.aspx",
                url2 = "@Model.UrlName" + "ExchequerListRPTComp.aspx";

            var isNotSupplied = validateReportParameters(["#InstitutionCode", "#StartDate", "#EndDate", "#FundType"]);

            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else
            {
                if (fundType === "000") {
                    var queryString = "inst-code=" + entityCode + "&start-date=" + startDate + "&end-date=" + endDate + "&fundType=" + fundType + "&userId=" + userId + "&componentName=" + componentName + "&componentSearch=" + componentSearch;
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("ParameterEncryption", "Report")',
                        contentType: "application/json; charset=utf-8",
                        datatype: "json",
                        data: { "query": queryString },
                        success: function (response) {
                            window.open(url2 + response);
                        }
                    });
                }

                else
                {
                    var queryString = "inst-code=" + entityCode + "&start-date=" + startDate + "&end-date=" + endDate + "&fundType=" + fundType + "&userId=" + userId;
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("ParameterEncryption", "Report")',
                        contentType: "application/json; charset=utf-8",
                        datatype: "json",
                        data: { "query": queryString },
                        success: function (response) {
                            window.open(url + response);
                        }
                    });
                }
            }
        }


        $("#InstitutionCode").change(function () {

            var entityCode = $(this).val();
            var url = "GetExchequerTypes/?institutionCode=" + entityCode;

            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#FundType").empty();
                    $("#FundType").append(response);
                }
            });
        });


        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);

            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val().trim()) {
                    return parameterList[i];
                }
            }
            return null;
        }

        $("#FundType").change(function () {
            var fundType = $(this).val();

            if (fundType === "000") {
                $("#CompSearch").css({ "display": "block" });
                $("#CompName").css({ "display": "block" });
            }
            else {
                $("#CompSearch").css({ "display": "none" });
                $("#CompName").css({ "display": "none" });
            }
        });

        function GetVotes() {
                const url = "GetExchequerInstitutionList/";
                $.ajax({
                    type: "GET",
                    url: url,
                    contentType: "html",
                    success: function (response) {
                        $("#InstitutionCode").empty();
                        $("#InstitutionCode").append(response);
                    }
                });
        }

        $("#componentSearch").on("keyup search input paste cut", function () {
            var searchTerm = $(this).val(),
                entityCode = $("#InstitutionCode").val().trim();
            var url = "GetExchequerComponents/?institutionCode=" + entityCode + "&searchTerm=" + searchTerm;

            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#componentName").empty();
                    $("#componentName").append(response);
                }
            });
        });

    </script>
}