@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.GepgBillSubResp>

@{
    ViewBag.Title = "Invalid Bills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Invalid Bills</div>
        <div class="panel-body">

            <table class="table table-striped table-bordered table-hover table-condensed" id="tblInvalidBills">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BillId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PayCntrNum)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrxSts)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrxStsCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </th>
                    </tr>
                </thead>

                @{
                int i = 0;
                }

                <tbody>
                    @foreach (var item in Model)
                {
                    i++;
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayCntrNum)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrxSts)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrxStsCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                        </tr>
                }
                </tbody>

            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#tblInvalidBills").DataTable({
                //"scrollX": true
            });
        });
    </script>
}
