        function computeJournalTypeCode() {
            // Full Retirement
            if (parseFloat($("#TotalAmountToRetire").val().split(",").join("")) == parseFloat($("#TotalIssueAmount").val().split(",").join(""))) {
                return "IRF"
            }

            // Partial Retirement
            if (parseFloat($("#TotalAmountToRetire").val().split(",").join("")) > 0) {
                return "IRP"
            }

            // Partial Retirement - Return All
            if (parseFloat($("#CashAmount").val().split(",").join(""))
                == parseFloat($("#TotalIssueAmount").val().split(",").join(""))
                && (parseFloat($("#TotalAmountToRetire").val().split(",").join("")) == 0)
                ) {
                return "IRR"
            }
        }

