@section pagespecific{

    <script>

        // ============ INIT DATA TABLES START =====================
        var dt_imprest_listing = $('#dt_imprest_listing').dataTable({
            "fnDrawCallback": function (oSettings) {
                $(".loading-gif").toggle(false)
            }

        });

        $("#dt_imprest_listing_wrapper .dt-toolbar").remove();

        $("#searchbox").on("keyup search input paste cut", function () {
            dt_imprest_listing.DataTable().search(this.value).draw();
        });

        var dt_search_gl_item = $('#dt_search_gl_item').dataTable();

        $("#dt_search_gl_item_wrapper .dt-toolbar").remove();

        $("#searchbox_gl").on("keyup search input paste cut", function () {
            dt_search_gl_item.DataTable().search(this.value).draw();
        });



        var dt_payee_details = $('#dt_payee_details').dataTable({
            'sDom': 't',
            "autoWidth": false,
            "searching": false,
            "bPaginate": false,
            "info": false,
            "columns": [
                { title: "Payee Name" },
                { title: "Payee code" },
                { title: "Bank Name" },
                { title: "Bank Account No" },
                { title: "Address" }]
        });

        var dt_voucher_detail = $('#dt_voucher_detail').dataTable({
            'sDom': 't',
            "autoWidth": true,
            "searching": false,
            "bPaginate": false,
            "info": false,
            "data": [],
            "columns": [
                { title: "Expenditure Line Item" },
                { title: "Item Description" },
                { title: "Funding Reference" },
                { title: "Issued Amount" },
                 { title: "Retired Amount" }
            ]
        });


        // ********************** INIT DATA TABLES END **********************


        // ====================== LOAD TABLE DATA START =====================
        var data = [];
        var imprestRetirement = [];
        var globalImprestId = null;
        $.ajax({
            type: "get",
            url: '@Url.Action("GetPendingImprest", "ImprestRetirement")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                data = response.data;
                //debugger
                dt_imprest_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_imprest_listing.fnAddData([i + 1,
                        data[i]["ImprestNo"],
                        data[i]["RetirementNo"],
                       data[i]["PayeeCode"],
                       data[i]["PayeeName"],
                       data[i]["ImprestTypeDesc"],
                       data[i]["OperationalAmount"].toLocaleString(),
                        data[i]["RetirementStatus"],
                         '<div class="btn-group" id="drop-' + i + '">\
                          <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                           </button>\
                         <ul class="dropdown-menu">\
                             <li><a href="#" onclick= "openViewDialog(' + i + ')">Details</a></li>\
                             <li><a href="#" onclick="attach(' + i + ')">Attach</a></li>\
                               <li><a href="#" onclick="viewAttachment(' + i + ')">View Attachment</a></li>\
                             <li><a href="#" onclick="confirm(' + i + ')">Confirm</a></li>\
                             <li><a href="#" onclick="cancel(' + i + ')">Cancel</a></li>\
                        </ul>\
                  </div>\
                  <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" class="loading-gif"/>'
                    ]);
                    $("#saveLoader-" + i + "").toggle(false)
                }
            },
            failure: function (error) {
                swal(error);
            }
        });


        // =============== OPEN VIEW DIALOG START ==================
        /**
        * Show View Dialog
        * param  {Int} i - Id of the selected Item
        */
        function openViewDialog(i) {
            globalPayeeId = i;
            $("#_Payeename").text(data[i]["PayeeName"]);
            $("#_PayeeCode").text(data[i]["PayeeCode"]);
            $("#_PayeeBankName").text(data[i]["PayeeBankName"]);
            $("#_PayeeAddress").text(data[i]["PayeeAddress"]);

            dt_voucher_detail.fnClearTable();
            var TotalAmount = 0;
            var imprestDetailsIds = [];
            dt_voucher_detail.fnClearTable();
            data[i]["ImprestDetails"].forEach(row => {
                dt_voucher_detail.fnAddData([
                    row["ExpenditureGlAccount"].split("|").join("-"),
                    row["ExpenditureGlAccountDesc"],
                    row["FundingRef"],
                    row["IssuedAmount"].toLocaleString(),
                    row["ExpensedAmount"].toLocaleString(),
                ]);
                TotalAmount = TotalAmount + parseFloat(row["IssuedAmount"]);
                imprestDetailsIds.push(row["ImprestDetailId"]);
            });

            $("#Description1").text(data[i]["Description"]);
            $("#totalAmount").text(TotalAmount.toLocaleString() + ".00");
            $("#reasonId").text(data[i]["Remark"] ? data[i]["Remark"] : "-");
            $("#statusId").text("Overal:- " + data[i]["OverallStatus"] + " | Retirement:- " + data[i]["RetirementStatus"]);
            $("#InvoiceNo1").text(data[i]["InvoiceNo"]);
            $("#total_voucher_amount1").val(data[i]["OperationalAmount"]);
            $("#RetirementDate1").text(data[i]["RetirementDateFormatted"]);
            $("#ApplyDate1").text(data[i]["ApplyDateFormatted"]);
            $("#ImprestType1").text(data[i]["ImprestTypeDesc"]);
            $("#SubBudgetClass1").text(data[i]["SubBudgetClass"]);
            $('#confirmModal').modal('show');

        }
        // *************** END SHOW VIEW DIALOG ********************


        //======================== REJECT START ==============================
        /**
        * Show Rejection Dialog
        * param  {Int} i - Id of the selected Item
        */
        function fullRetirement(i) {
            if (i == 'x') i = globalImprestId;
            swal({
                text: 'Retirement Date',
                content: {
                    element: "input",
                    attributes: {
                        type: "date",
                    },
                },
                button: {
                    text: "SAVE",
                    closeModal: true,
                },
            }).then(date => {
                if (!date) {
                    swal("No Date was provided");
                } else {
                    $("#saveLoader-" + i + "").toggle(true)
                    $("#drop-" + i + "").toggle(false)
                    confirmFull(i, date);
                };
            });
            $('#confirmModal').modal('hide');
        }

        /**
         * Send Rejection signal to the backend
         * param  {Int} i - Id of the selected Item
         */
        function confirmFull(Id, date) {

            var url = '@Url.Action("CreateImprestRetirement", "ImprestRetirement")';
            var imprest = data[Id];
            for (var i = 0; i < imprest["ImprestDetails"].length; i++) {
                imprest["ImprestDetails"][i]["ExpensedAmount"] = 0;

            }

            var form_data = {
                imprest: imprest,
                depositRef: "Not Required",
                retirementDate: date,
                imprestRetirementType: "Full Retirement",
                journalTypeCode: "IRF"
            }

            console.log(form_data);

            var url = '@Url.Action("CreateImprestRetirement", "ImprestRetirement")';
            $.ajax({
                type: "post",
                url: url,
                data: form_data,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Saved Successfully!", { icon: 'success' }).then((e) => {
                            window.location.reload();
                        });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
        //********************* REJECT END *************************


        function openPartialReirementDialog(i) {
            //debugger
            globalImprestId = i;
            dt_search_gl_item.fnClearTable();
            var index = 0;
            console.log(data[i]["ImprestDetails"]);
            data[i]["ImprestDetails"].forEach(row => {
                dt_search_gl_item.fnAddData([
                    index + 1,
                    row["ExpenditureGlAccount"].split("|").join("-"),
                    row["ExpenditureGlAccountDesc"],
                    row["FundingRef"],
                    row["IssuedAmount"],
                    '<amount-input placeholder="Amount" id="Id-' + index + '" onkeyup="amountChanged(' + index + ')" />'
                ]);
                index++;
            });

            $("#TotalIssueAmount").val(data[i]["BaseAmount"].toLocaleString());
            $("#TotalAmountToRetire").val(data[i]["BaseAmount"].toLocaleString());
            $("#CashAmount").val(0);
            $('#glItemsModal').modal('show');
        }

        var form_data_status = [];
        var all_amounts = {};

        function amountChanged(i) {
            //debugger
            if ($("#_Id-" + i).val()) {
                safeProceed(i);
            }
        }

        function safeProceed(i) {
            //debugger
            var data = dt_search_gl_item.DataTable().rows().data();
            var row = data.rows(i).data()[0]
            var original_amount = parseFloat(row[4]);
            var entered_amount = parseFloat($("#_Id-" + i).val().split(",").join(""));
            all_amounts["Id-" + i] = $("#_Id-" + i).val().split(",").join("");

            var CashAmount = original_amount - entered_amount;

            if (CashAmount < 0) {
                form_data_status.push(i);
                $("#Id-" + i).css({ 'color': 'red' });
            } else {
