                                            </tr>
                                            <tr>
                                                <th> Payee Code: </th>
                                                <td id="_payeeCode"></td>
                                            </tr>
                                            
                                        </table>
                                    </div>

                                    <div class="col-md-6">
                                        <table>
                                        
                                            <tr>
                                                <th> Institution Name:</th>
                                                <td id="_InstitutionName"></td>
                                            </tr>
                                            <tr>
                                                <th> Payee Name:</th>
                                                <td id="_PayeeName"></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <table>
                                            <tr>
                                                <th> Account Number:</th>
                                                <td id="_AccountNumber"></td>
                                            </tr>
                                            <tr>
                                                <th> Bank Name:</th>
                                                <td id="_BankName"></td>
                                              </tr>
                                        </table>
                                    </div>

                                    <div class="col-md-6">
                                        <table>
                                            <tr>
                                                <th> Account Name:</th>
                                                <td id="_AccountName"></td>
                                            </tr>
                                            <tr>
                                                <th> BIC:</th>
                                                <td id="_Bic"></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <table>
                                       
                                            <tr>
                                                <th> Category:</th>
                                                <td id="_Category"></td>
                                            </tr>
                                        </table>
                                    </div>

                                    <div class="col-md-6">
                                        <table>
                                       
                                            <tr>
                                                <th> Overallstatus:</th>
                                                <td id="_OverallStatus"></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                        <br />

                    </div>
                </div>
                <div class="modal-footer">

                    <button class="btn btn-info" data-dismiss="modal" style="width:100px;">
                        <i class="fa fa-times"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


@section pagespecific{

    <script>
        // ============ INIT DATA TABLES START =====================

        var dt_config_listing = $('#dt_config_listing').dataTable({
            "fnDrawCallback": function (oSettings) {
                $(".loading-gif").toggle(false)
            }
        });

        $("#dt_config_listing_wrapper .dt-toolbar").remove();

        $("#searchbox").on("keyup search input paste cut", function () {
            dt_config_listing.DataTable().search(this.value).draw();
        });

        // ====================== LOAD TABLE DATA START =====================
        var data = [];
        $.ajax({
            type: "get",
            url: '@Url.Action("PendingInstitutionPayee", "InstitutionPayeeConfig")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                data = response.data;
                dt_config_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_config_listing.fnAddData([i + 1,
                       data[i]["InstitutionCode"],
                       data[i]["InstitutionName"],
                       data[i]["PayeeName"],
                       data[i]["Accountnumber"],
                       data[i]["AccountName"],
                       data[i]["Category"],
                  
                      '<div class="btn-group" id="drop-' + i + '">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                               <li><a href="@Url.Action("Edit", "InstitutionPayeeConfig")/?InstitutionConfigId=' + data[i]["InstitutionPayeeConfigId"] + '"><i class="glyphicon glyphicon-pencil"></i>Edit</a></li>\
                               <li><a href="#" onclick="openViewDialog(' + i + ')"><i class="glyphicon glyphicon-eye-open"></i>View</a></li>\
                                <li><a href="#" onclick="Delete(' + i + ')"><i class="glyphicon glyphicon-trash"></i>Cancel</a></li>\
                            </ul>\
                        </div>\ '
                    ]);

                }
            },
            failure: function (error) {
                swal(error);
            }
        });


        function Delete(i) {
            if (i == 'x');
            swal({
                title: "Are you sure?",
                text: "Once Cancelled, you will not be able to recover this !",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    deleteItemConfirmed(data[i]["InstitutionPayeeConfigId"])
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
            $('#confirmModal').modal('hide');
        }


        function deleteItemConfirmed(Id) {
            debugger
            var url = '@Url.Action("Delete", "InstitutionPayeeConfig")';
            $.ajax({
                type: "post",
                url: url,
                data: { "InstitutionConfigId": Id },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {

                    if (response == "Success") {
                        swal("Cancelled Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }

                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function openViewDialog(i) {
            globalPayeeId = i;
            $("#_InstitutionCode").text(data[i]["InstitutionCode"]);
            $("#_InstitutionName").text(data[i]["InstitutionName"]);
            $("#_PayeeName").text(data[i]["PayeeName"]);
            $("#_AccountName").text(data[i]["AccountName"]);
            $("#_AccountNumber").text(data[i]["Accountnumber"]);
            $("#_BankName").text(data[i]["BankName"]);
            $("#_Category").text(data[i]["Category"]);
            $("#_OverallStatus").text(data[i]["OverallStatus"]);
            $("#_payeeCode").text(data[i]["PayeeCode"]);
            $("#_Bic").text(data[i]["BIC"]);

            $('#confirmModal').modal('show');
        }
        // *************** END SHOW VIEW DIALOG ********************

    </script>
}


