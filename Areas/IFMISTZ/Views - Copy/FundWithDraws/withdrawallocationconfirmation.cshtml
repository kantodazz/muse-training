        function Confirm(i, id) {
            debugger;
            if (i == 'x') i = id;
            swal({
                title: "Are you sure?",
                text: "This process cannot be undone",
                buttons: [
                    'Yes',
                    'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {

                    ConfirmWithDraw(i)
                }
            });
            // $('#confirmModal').modal('hide');
        }


        function reject(i, id) {
            debugger;
            swal({
                title: "Rejection Reason",
                closeOnClickOutside: false,
                content: "input",
                buttons: [
                    'Cancel',
                    'Save'
                ],
            }).then((value) => {
                //'
                debugger;
                var inputValue = `${value}`;
                if (inputValue == "null") {
                    swal("Cancelled");

                }
                else {
                    rejectReasons(i, `${value}`)
                }

            });
        }

        var rejectReasons = function (id, reason) {
            debugger;
            var rejectionReason = reason;

            $("#divLoader").show();

            $.ajax({
                type: "POST",
                url: "RejectDistribution",
                data: { ids: id, reason: rejectionReason },
                success: function (response) {
                    if (response == "Success") {
                        swal("Rejection Successfully Saved", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                        //location.hide();
                        $("#divLoader").hide();

                    } else if (response == "DbException") {
                        swal(response + "An error has occured, contact system support");
                        $("#divLoader").hide();
                    }
                },
                error: function (xhr) {
                    //console.log(xhr.responseText);
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },
            });

        };



            var withdrawsAllocation = function (did) {
            debugger;
            var allocationId = did;

            var url = '@Url.Action("WithDrawEdit", "FundWithDraws")';

            $.ajax({
                type: "POST",
                url: url,
                data: { id: allocationId },
                success: function (response) {
                    if (response[0] == "Success") {
                        //$(".modal-body #summaryId").val(response[3]);
                        $(".modal-body #allocationId").val(allocationId);
                        $(".modal-body #Amount").val(response[2]);
                        $(".modal-body #FundBalance").val(response[1]);
                        $("#detailsModal").modal("show");  // show modal
                    }
                    else if (response[0] == "DbException") {
                        alert("An error has occured, contact system support" + response[0]);
                        $("#divLoader").hide();
                    }

                    $("#Amount").autoNumeric({ aNeg: "-" }).trigger("change");
                    $("#FundBalance").autoNumeric({ aNeg: "-" }).trigger("change");
                },
                error: function (xhr) {
                    console.log(xhr.responseText);
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },

            })
        }



        function Delete(i, id) {
            debugger;
            if (i == 'x') i = id;
            swal({
                title: "Are you sure?",
                text: "Withdraw will be Cancelled",
                buttons: [
                    'Yes',
                    'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
