                    swal("Cancelled", "No change was made");
                } else {

                    CancelWithDraw(i)
                }
            });
            // $('#confirmModal').modal('hide');
        };

        var CancelWithDraw = function (did) {
            debugger;
            $("#divLoader").show();
            if (did != "") {
                var url = '@Url.Action("DeleteAllocationWithDraw", "FundWithDraws")';
                $.ajax({
                    url: url,
                    data: { id: did },
                    type: "POST",
                    success: function (response) {
                        $("#divLoader").hide();
                            if (response == "Success") {
                                swal("WithDraw Cancelled Successfully!", { icon: "success" })
