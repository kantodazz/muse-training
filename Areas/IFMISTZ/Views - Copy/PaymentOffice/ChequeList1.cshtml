@section pagespecific{
    <script>
        var dt_voucher_listing = $('#dt_voucher_listing').dataTable();

        $("#dt_voucher_listing_wrapper .dt-toolbar").remove();

        $("#searchbox").on("keyup search input paste cut", function () {
            dt_voucher_listing.DataTable().search(this.value).draw();
        });

        $("#bankAccounts").change(function () {
            dt_voucher_listing.DataTable().search(this.value).draw();
            var rows = dt_voucher_listing.DataTable().rows().data(0);
            for (var i = 0; i < rows.length; i++) {
                $("#row-" + i).prop('checked', false);
            }
            $("#selectedItems").text("No Item(s) Selected");
        })

        var data = [];
        var globalPayeeId = null;
        $(document).ready(function () {
            loadTableData();
        });

        function loadTableData() {
            var bankAccounts = []
            actionTemplate = function (i, PaymentSlipFilePath) {
                return PaymentSlipFilePath == 'NA'?'<div class="btn-group" id="drop-' + i + '">\
                         <button type="button" class="btn btn-info btn-xs \
                           dropdown-toggle" data-toggle="dropdown" \
                           aria-haspopup="true" aria-expanded="false">\
                           <span class="caret"></span\
                            <span class="sr-only"></span>\
                         </button>\
                         <ul class="dropdown-menu">\
                           <li><a href="#" onclick= "openViewDialog(' + i + ')">View</a></li>\
                           <li><a href="#" onclick="reverse(' + i + ')">Cancel & Reverse</a></li>\
                           <li><a href="#" onclick="reGenerate(' + i + ')">Cancel & Regenerate</a></li>\
                           <li><a href="#" onclick="reject(' + i + ')">Reject</a></li>\
                           <li><a href="#" onclick="reset(' + i + ')">Reset</a></li>\
                         </ul>\
                      </div>\
                    <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" />':
                    '<div class="btn-group" id="drop-' + i + '">\
                         <button type="button" class="btn btn-info btn-xs \
                           dropdown-toggle" data-toggle="dropdown" \
                           aria-haspopup="true" aria-expanded="false">\
                           <span class="caret"></span\
                            <span class="sr-only"></span>\
                         </button>\
                         <ul class="dropdown-menu">\
                           <li><a href="#" onclick= "openViewDialog(' + i + ')">View</a></li>\
                           <li><a href="/Content/uploads/' + PaymentSlipFilePath + '">View Slip</a></li>\
                           <li><a href="#" onclick="reset(' + i + ')">Reset and Reprint</a></li>\
                           <li><a href="#" onclick="reGenerate(' + i + ')">Cancel & Regenerate</a></li>\
                           <li><a href="#" onclick="reverse(' + i + ')">Cancel & Reverse</a></li>\
                         </ul>\
                      </div>\
                    <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" />'
                // <li><a href="#" onclick="reject(' + i + ')">Reject</a></li>
            }
            $.ajax({
                type: "get",
                url: '@Url.Action("GetPaymentSummary", "PaymentOffice")',
                data: { overallStatus: "ChequePrinted", source: 'ChequeList' },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.data;
                    dt_voucher_listing.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        dt_voucher_listing.fnAddData([i+1,
                           data[i]["PaymentNo"],
                           data[i]["NumTrx"],
                           toLabel(data[i]["OperationalAmount"]),
                           data[i]["PayerBankAccount"],
                           data[i]["PaymentMethod"],
                           data[i]["CreatedAtFormatted"],
                           data[i]["OverallStatus"],
                           actionTemplate(i, data[i]["PaymentSlipFilePath"]),
                           '<input  type="checkbox" id="row-' + i + '" onchange="rowChecked(' + i + ')"/>'
                        ]);
                        $("#saveLoader-" + i + "").toggle(false)
                        if (!bankAccounts.includes(data[i]["PayerBankAccount"])) {
                            bankAccounts.push(data[i]["PayerBankAccount"]);
                        }
                    }
                    createBankAccountsFilter(bankAccounts);
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function createBankAccountsFilter(bankAccounts) {
            var optionsList = [];
            var bankAccSelect = document.getElementById("bankAccounts")
            bankAccounts.forEach(bankAcc => {
                let option = document.createElement('option')
                option.value = bankAcc
                option.text = bankAcc
                bankAccSelect.appendChild(option);
            });
            $("#bankAccounts").trigger('change');
        }

        var checkedRows = [];
        function rowChecked(rowId) {
            $("#checkall").prop('checked', false);
            if ($("#row-" + rowId).is(":checked")) {
                checkedRows.push(rowId);
            } else {
                remove(checkedRows, rowId);
            }
            toggleConfirmButton();
        }

        function checkAll() {
            checkedRows = [];
            if ($("#checkall").is(":checked")) {
                for (var i = 0; i < data.length; i++) {
                    checkedRows.push(i);
                    $("#row-" + i).prop('checked', true);
                }
            } else {
                for (var i = 0; i < data.length; i++) {
                    $("#row-" + i).prop('checked', false);
                }
            }
            toggleConfirmButton();
        }

        $("#confirm").attr('disabled', true);

        function toggleConfirmButton() {
            var TotalAmount = 0;
            if (checkedRows.length > 0) {
                var data = dt_voucher_listing.DataTable().rows().data();
                checkedRows.forEach(rowId=> {
                    var row = data.rows(rowId).data()[0];
                    TotalAmount = TotalAmount + toNumber(row[3]);
                });
                $("#confirm").attr('disabled', false);
                $("#selectedItems").text(checkedRows.length + " Item(s) Selected ~ Total: " + toLabel(TotalAmount));
            } else {
                $("#confirm").attr('disabled', true);
                $("#selectedItems").text("No Item(s) Selected");
            }
        }

        function remove(array, val) {
            var found = array.indexOf(val);
            while (found !== -1) {
                array.splice(found, 1);
                found = array.indexOf(val);
            }
        }

        function confirmPayment() {
            swal({
                text: "Approve Selected Item(s)?",
                buttons: ["NO", "YES"],
            }).then((willGenerate) => {
                if (willGenerate) {
                    $("#confirm").attr('disabled', true);
                    postConfimedPayment();
                } else {
                    swal("Cancelled");
                }
            });
        }

        function postConfimedPayment() {
            paymentSummaryIds = [];
            checkedRows.forEach(rowId => {
                paymentSummaryIds.push(data[rowId]['PaymentSummaryId']);
            });

            var url = '@Url.Action("ConfirmPaymentFile", "PaymentOffice")';
            $.ajax({
                type: "POST",
                url: url,
                data: { "paymentSummaryIds": paymentSummaryIds, source: "ChequeList" },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == 'Success') {
                        swal("Approved successfully!", { icon: "success" })
                        .then((e) => {
                            window.location.reload();
                        });
                    } else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }


        var dt_view = $('#dt_view').dataTable();

        $("#dt_view_wrapper .dt-toolbar").remove();

        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_view.DataTable().search(this.value).draw();
        });

        function openViewDialog(i) {
            $("#_InstitutionName").text(data[i]["InstitutionName"])
            $("#_InstitutionCode").text(data[i]["InstitutionCode"])
            $("#reasonId").text(data[i]["RejectedReason"] ? data[i]["RejectedReason"] : "-")
            viewData(data[i]["PaymentSummaryId"]);
            $("#viewModal").modal("show");
        }
        function sourceModule(d) {
            switch (d["SourceModule"]) {
                case "Purchase":
                    if (!d["SourceModuleReferenceNo"]) {
                        return d["SourceModule"];
                    } else {
                        return d["SourceModuleReferenceNo"].includes("PO") ?
                        '<a href="@Url.Action("PreviewReceiving","Procurement")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d) :
                        '<a href="@Url.Action("PreviewReceiving", "Contract")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    }
                    break;
                case "Contract":
                    if (!d["SourceModuleReferenceNo"]) {
                        return d["SourceModule"];
                    } else {
                        return d["SourceModuleReferenceNo"].includes("PO") ?
                        '<a href="@Url.Action("PreviewReceiving","Procurement")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d) :
                        '<a href="@Url.Action("PreviewReceiving", "Contract")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    }
                    break;
                case "Accrual Purchase":
                    if (!d["SourceModuleReferenceNo"]) {
                        return d["SourceModule"];
                    } else {
                        return d["SourceModuleReferenceNo"].includes("PO") ?
                        '<a href="@Url.Action("PreviewReceiving","Procurement")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d) :
                        '<a href="@Url.Action("PreviewReceiving", "Contract")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    }
                    break;
                case "Accrual Contract":
                    if (!d["SourceModuleReferenceNo"]) {
                        return d["SourceModule"];
                    } else {
                        return d["SourceModuleReferenceNo"].includes("PO") ?
                        '<a href="@Url.Action("PreviewReceiving","Procurement")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d) :
                        '<a href="@Url.Action("PreviewReceiving", "Contract")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    }
                    break;
                case "Prepayment":
                    return '<a href="@Url.Action("PreviewPrepayment","Prepayment")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    break;
                case "Imprest":
                    return '<a href="@Url.Action("ImprestDetails","Imprest")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    break;
                case "BulkPayment":
                    return '<a href="@Url.Action("PaymentDetails", "PaymentBatches")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    break;
                case "Loan":
                    return '<a href="@Url.Action("PreviewLoanTracker","Loan")/' + d["SourceModuleReferenceNo"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                default:
                    return d["SourceModule"] + withholdingTemplate(d);
            }
        }
        function viewData(Id) {
            $.ajax({
                type: "GET",
                url: '@Url.Action("getpaymentvoucher", "PaymentVoucher")' + "/?overallStatus=Generated&&paymentSummaryId=" + Id + "",
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    d = response.data;
                    dt_view.fnClearTable();
                    for (var i = 0; i < d.length; i++) {
                        dt_view.fnAddData([i + 1,
                           d[i]["PVNo"],
                           d[i]["Payeename"],
                           d[i]["PaymentDesc"],
                           d[i]["PayeeBankAccount"],
                           d[i]["PayeeBankName"],
                           d[i]["PayerBankName"],
                           d[i]["PayerBankAccount"],
                           toLabel(d[i]["OperationalAmount"]),
                            calculate(d[i]),
                           '<a target="_blank" href="@Url.Action("AttachmentView", "PaymentVoucherAttachments")/?groupId=' + d[i]["PaymentVoucherId"] + '&&sourceModule='+d[i]["SourceModule"]+'"><i class="fa fa-file-pdf-o"></i></a>',
                           sourceModule(d[i]),
                        ]);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

    /**
      * Show Rejection Dialog
      * param  {Int} i - Id of the selected Item
    */
        function reject(i) {
            swal({
                text: 'Rejection Reason',
                content: "input",
                button: {
                    text: "SAVE",
                    closeModal: true,
                },
            }).then(remark => {
                if (!remark) {
                    swal("No reason was provided");
                } else {
                    $("#saveLoader-" + i + "").toggle(true)
                    $("#drop-" + i + "").toggle(false)
                    confirmRejection(data[i]["PaymentSummaryId"], remark);
                };
            });
        }

     /**
      * Send Rejection signal to the backend
      * param  {Int} i - Id of the selected Item
     */
        function confirmRejection(Id, remark) {
            var url = '@Url.Action("RejectPaymentFile", "PaymentOffice")';
            $.ajax({
                type: "post",
                url: url,
                data: { "paymentSummaryId": Id, "remark": remark },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {

                    if (response == "Success") {
                        swal("Saved Successfully!", { icon: "success" })
                        .then((e) => {
                            window.location.reload();
                        });
                    }
                    else {
                        swal(response);
                    }

                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
