@section pagespecific {
    <script type="text/javascript">

        var LoadExchequerFunds = function () {

            $("#divLoader").show();

            $.ajax({
                type: "post",
                url: '@Url.Action("LoadExchequerFunds", "FundAllocations")',
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Exchequer Funds Successfully Imported..");
                        $("#divLoader").hide();
                        window.location.reload();
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }




        var PostToGl = function () {

            $("#divLoader").show();

            $.ajax({
                type: "post",
                url: '@Url.Action("PostExchequerFunds", "FundAllocations")',
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Funds Successfully Posted..");
                        $("#divLoader").hide();
                        window.location.reload();
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function loadExhequerDetails() {
            $.ajax({
                type: "post",
                url: '@Url.Action("LoadExchequerFunds", "FundAllocations")',
                contenttype: "application/json; charset=utf-8",
