        var PayeeId = 0;
        var deactivatePayee = function (id) {
            PayeeId = id
            $("#deactivatePayeeModal").modal("show");

        };

        var saveRejection = function () {
            var url = '@Url.Action("DeactivatePayee", "Payees")';
            if ($("#deactivateReason").val() == "") {
                swal("Deactivation Reason is required..!")
            } else {
                $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        DeactivateReason: $("#DeactivateReason").val(),
                        PayeeId
                    },
                    success: function (response) {
                        if (response == "Success") {
                            swal({
                                text: "saved successfully!",
                                icon: "success",
                                button: "OK",
                            }).then(function () {
                                location.reload();
                            });
