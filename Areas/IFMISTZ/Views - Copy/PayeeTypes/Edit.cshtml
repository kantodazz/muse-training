@model IFMIS.Areas.IFMISTZ.Models.PayeeType

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .input[type="text"], select {
        border: 1px solid lightgray;
        width: 100%;
        height: 35px;
    }

    .search-icon {
        padding: 0.5rem;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    .search-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        padding-left: 10px;
    }

    .search-btn {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 5px;
        padding-right: 10px;
    }

    .textarea {
        border: 1px solid lightgray;
        width: 100%;
    }

    .input[type="text"]:focus {
        border: 1px solid lightblue;
    }

    th {
        text-align: center;
    }
</style>
<div id="content" style="margin: 5px; padding-top: 5%">

    <section id="widget-grid" class="">
        <div class="row">

            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>

                        <h2 style="color:black;">PayeeType Creation.</h2>

                    </header>
                    <div>
                        <div class="widget-body" style="padding-top:10px; width:100%;">
                            <table style="width:100%;">
                                <tr>
                                    <td>
                                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                                        {
                                            <div style="padding-left:17%">

                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @Html.HiddenFor(model => model.PayeeTypeId)

                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">Payee Type:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                     
                                                            @Html.TextBoxFor(model => model.PayeeTypeCode, new { @Class = "input", style = "width:300px; ", required = "required" })
                                                              @Html.ValidationMessageFor(model => model.PayeeTypeCode, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">GFS Code:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.TextBoxFor(model => model.GfsCode, new { @Class = "input", style = "width:300px; ", type = "hidden", required = "required" })
                                                            <a class="search-btn" onclick="SearchGFS(1)" href="#" style="display:block;width:300px" id="CostCode2">
                                                                <i class="fa fa-search search-icon"></i>
                                                                @ViewBag.Gfs
                                                            </a>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">GFS Description:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.TextAreaFor(model => model.GfsDescription, new { @Class = "input", style = "width:300px; ", cols = "10", rows = "2", required = "required" })
                                                            @Html.ValidationMessageFor(model => model.GfsDescription, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">Withheld GfsCode:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.TextBoxFor(model => model.WithheldGfsCode, new { @Class = "input", style = "width:300px; ", type = "hidden", required = "required" })
                                                            <a class="search-btn" onclick="SearchGFS(2)" href="#" style="display:block;width:300px" id="withheld2">
                                                                <i class="fa fa-search search-icon"></i>
                                                                @ViewBag.withheld
                                                            </a>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">Withheld GFSCode Description:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.TextAreaFor(model => model.WithheldGfsDesc, new { @Class = "input", style = "width:300px; ", cols = "10", rows = "2", required = "required" })
                                                            @Html.ValidationMessageFor(model => model.WithheldGfsDesc, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">Retention GFS Code:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.TextBoxFor(model => model.RetentionGfsCode, new { @Class = "input", style = "width:300px; ", type = "hidden", required = "required" })
                                                            <a class="search-btn" onclick="SearchGFS(3)" href="#" style="display:block;width:300px" id="retention2">
                                                                <i class="fa fa-search search-icon"></i>
                                                                @ViewBag.rete
                                                            </a>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right;">Retention GFS Description:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.TextAreaFor(model => model.RetentionGfsDesc, new { @Class = "input", style = "width:300px; ", cols = "10", rows = "2", required = "required" })
                                                            @Html.ValidationMessageFor(model => model.RetentionGfsDesc, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                                <div class="form-actions">
                                                    <div class="row">
                                                        <div class="col-md-7">
                                                            <a href='@Url.Action("PayeeType", "PayeeTypes")' class="btn btn-info" style="   width:80px;border-radius:1px;color:black">
                                                                <i class="glyphicon glyphicon-arrow-left"></i>
                                                                Back
                                                            </a>
                                                            <button type="submit" class="btn action-btn btn btn-info">
                                                                <i class="fa fa-save"></i>
                                                                Save
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>


                                        }

                                    </td>
                                </tr>
                            </table>
                        </div>



                    </div>
                </div>
            </article>
        </div>
    </section>

</div>
<div class="modal fade" id="gfssearch" style="left:4%">

    <div class="modal-dialog" style="width:80%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"> Search GFS Code</h3>
            </div>
            <div class="modal-body">
                <div>
                    <div class="row" style="padding-top:1%;padding-bottom:1%">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                            <div class="search-container submit-btn" style="float:right">
                                <i class="fa fa-search search-icon"></i>
                                <input type="search" name="search" placeholder="Search..." id="gfssearchbox">
                            </div>
                        </div>
                    </div>
                    <table id="gfstable" class="table table-striped table-bordered table-hover table-condensed" width="100%">
                        <thead>
                            <tr>
                                <th style="width:30px">#</th>
                                <th>GFS Code:</th>
                                <th>GFS Description:</th>
                                <th style="width:30px">Action</th>
                            </tr>
                        </thead>
                    </table>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info" id="btn_save_gl_items">
                        <i class="fa fa-save"></i>Save
                    </button>
                    <button class="btn btn-info" data-dismiss="modal">
                        <i class="fa  fa-times"></i>Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@section pagespecific{
    <script>
        if ('@TempData["Success"]' == 'Success') {
            swal("Saved Successfully!", { icon: 'success' })
                 .then(Ok=> {
                     window.location.href = '@Url.Action("PayeeType", "PayeeTypes")';
                 });
        } else if ('@TempData["Success"]' == 'No') {

            swal("This Payee Type already Created!!")

        };
     
        $("#PayeeTypeCode").val('@ViewBag.payeecode');
        $("#GfsCode").val('@ViewBag.Gfs');
        $("#GfsDescription").val('@ViewBag.gfsdesc');
        $("#WithheldGfsCode").val('@ViewBag.withheld');
        $("#WithheldGfsDesc").val('@ViewBag.withdesc');
        $("#RetentionGfsCode").val('@ViewBag.rete');
        $("#RetentionGfsDesc").val('@ViewBag.retedesc');
       





        var searchCode = 0;
        function SearchGFS(code) {
            searchCode = code;
            $('#gfssearch').modal('show');
        }

        var gfstable = $('#gfstable').dataTable();
        $("#gfstable_wrapper .dt-toolbar").remove();

        $("#gfssearchbox").on("keyup search input paste cut", function () {
            if (!this.value) {
                gfstable.fnClearTable();
            } else {
                SearchGlAccount1(this.value);
            }
        });


         var data = [];
        function SearchGlAccount1(search) {
            var url = '@Url.Action("GetGfsCode", "PayeeTypes")/?search=' + search + '';

            $.ajax({
                type: "get",
                url: url,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    //=== UPDATE SEARCH GI TABLE ====
                    data = response.data;
                    gfstable.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        gfstable.fnAddData([i,
                           data[i]["SegmentCode"],
                          data[i]["SegmentDesc"],
                          '<a href="#" onclick="gfs(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                        ]);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function gfs(rowId) {
            var data = gfstable.DataTable().rows().data();
        var row = data[rowId];

        if (searchCode == 1) {
            $("#CostCode2").html(row[1]);
            $("#GfsCode").val(row[1]);
            $("#GfsDescription").val(row[2]);
        }
        if (searchCode == 2) {
            $("#withheld2").html(row[1]);
            $("#WithheldGfsCode").val(row[1]);
            $("#WithheldGfsDesc").val(row[2]);
        }
        if (searchCode == 3) {
            $("#retention2").html(row[1]);
            $("#RetentionGfsCode").val(row[1]);
            $("#RetentionGfsDesc").val(row[2]);
        }


        $('#gfssearch').modal('hide');
    }

    </script>
}
