@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->
    <script src="/scripts/plugin/bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>
    <script src="/scripts/plugin/fuelux/wizard/wizard.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        
       
        $(".approval").on('click', function () {
            var id = $(this).data('id');
            var r = confirm("Do you what to approve this Local Purchase Order ?");
            if (!r) {
                return;
            }
            var url = '@Url.Action("ApproveLPO", "Procurement")';
            $.ajax(
{
    type: "POST",
    url: url,
    data: { id: id },
    success: function (response) {
        if (response == "Success") {
            alert("Local Purchase Order successfully  approved");
            $("#status").text("Submitted for approval");
            $(".lpo").hide();
            $(".approval").hide();      
        }
        else {
            alert("Failed to submit for approval ,DbException");
        }
    },
    error: function (xhr) {
        //console.log(xhr.responseText);
        alert("An error has occured, contact system support");
        $("#divLoader").hide();
    },

});
        });
    });
</script>

