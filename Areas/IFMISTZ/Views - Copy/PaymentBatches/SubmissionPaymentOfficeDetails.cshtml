@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.BulkPayment>
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .searchContainer {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    .info-box {
        padding: 8px;
        background-color: #ECF3F8;
        /*padding-top:10px;*/
        /*text-align: center;*/
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 180px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }
</style>
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget " id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Payment Details List </h2>
                    </header>
                    <div>
                        <div style="padding-left:20px;">
                        <a href="@Url.Action("SubmissionPaymentOffice","PaymentBatches")" class="btn btn-info">
                            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                            Back
                        </a>
           
                        </div>
                        <hr class="simple" />
                        <div class="table-responsive">
                            @{
                                int i = 0;
                                int j = 0;
                                decimal? totalAmount = 0;
                                decimal? operationalAmountGL = 0;
                            }



                            <div class="col-md-12">
                                <section id="widget-grid">
                                    <div class="row">
                                        <article class="col-sm-12 col-md-12 col-lg-12">

                                            <div class="widget-body" style="padding-top:10px">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="payee-entry">
                                                            <div class="entry-label">Payment Batch Summary</div>
                                                            <div style="padding-left:20px;padding-right:20px">
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <table>
                                                                            <tr>
                                                                                <th>Batch Number: </th>
                                                                                <td>@ViewBag.Batch.BatchNo</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <th>Batch Description:</th>
                                                                                <td>@ViewBag.Batch.BatchDesc</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <th>No of Transactions:</th>
                                                                                <td>@ViewBag.Batch.NoTrx</td>
                                                                            </tr>

                                                                            <tr>
                                                                                <th>Total Amount:</th>
                                                                                <td>@string.Format("{0:#,0.00}", ViewBag.Batch.TotalAmount)</td>
                                                                            </tr>

                                                                            <tr>
                                                                                <th>Overallstatus:</th>
                                                                                <td>@ViewBag.Batch.OverallStatus</td>
                                                                            </tr>
                                                                            @if (ViewBag.Batch.OverallStatusDescription == "" || ViewBag.Batch.OverallStatusDescription == null)
                                                                            {
                                                                                <tr class="hidden"></tr> }
                                                                            else
                                                                            {
                                                                                <tr>
                                                                                    <th>OverallStatus Description:</th>
                                                                                    <td>@ViewBag.Batch.OverallStatusDescription</td>
                                                                                </tr>
                                                                            }

                                                                            @if (ViewBag.Batch.RejectedReason == "" || ViewBag.Batch.RejectedReason == null)
                                                                            {
                                                                                <tr class="hidden"></tr> }
                                                                            else
                                                                            {
                                                                                <tr>
                                                                                    <th>Reason:</th>
                                                                                    <td>@ViewBag.Batch.RejectedReason</td>
                                                                                </tr>
                                                                            }


                                                                       </table>

                                                                        <div style="padding-top:5px">
                                                                            <table id="dt_voucher_detail" class="table table-striped table-bordered table-hover table-condensed" width="100%"></table>
                                                                            <div style="padding-bottom:10px" id="infoPanel">
                                                                                <div class="info-box">No GL Items Selected</div>
                                                                            </div>
                                                                        </div>
                                                                        <div style="float:right;padding-bottom:10px;padding-right:60px">
                                                                            <strong>TOTAL AMOUNT (<strong id="currency2">TZS</strong>): </strong>
                                                                            <strong id="total_amount">0.00</strong>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>

                                                    <div style="padding-top:5px" class="col-md-12">
                                                        <div class="searchContainer" style="float:right">
                                                            <i class="fa fa-search searchIcon"></i>
                                                            <input type="search" name="search" placeholder="Search..." id="searchbox">
                                                        </div>
                                                    </div>
                                                </div>
                                                <table id="dt_basicGL" class="table table-bordered table-hover table-condensed table-responsive" style="width:100%">
                                                    <thead>
                                                        <tr>

                                                            <th>#</th>

                                                            <th>
                                                                @Html.DisplayNameFor(model => model.BeneficiaryCode)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.BeneficiaryName)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.BeneficiaryAccountNo)
                                                            </th>

                                                            <th>
                                                                @Html.DisplayNameFor(model => model.BankBic)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.BankName)
                                                            </th>
                                                            <th style="text-align:right">
                                                                @Html.DisplayNameFor(model => model.Amount)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.PaymentDescription)
                                                            </th>

                                                            <th>
                                                                @Html.DisplayNameFor(model => model.OverallStatus)
                                                            </th>

                                                            @*<th></th>*@

                                                        </tr>

                                                    </thead>

                                                    @foreach (var item in Model)
                                                    {
                                                        i++;
                                                        <tr>

                                                            <td>@i</td>


                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.BeneficiaryCode)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.BeneficiaryName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.BeneficiaryAccountNo)
                                                            </td>

                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.BankBic)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.BankName)
                                                            </td>


                                                            <td style="text-align: right">
                                                                @string.Format("{0:#,0.00}", item.Amount)
                                                            </td>


                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.PaymentDescription)
                                                            </td>

                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.OverallStatus)
                                                            </td>

                                                        </tr>

                                                    }

                                                </table>
                                            </div>

                                        </article>
                                    </div>
                                </section>
                            </div>



                        </div>

                    </div>
                </div>
            </article>
        </div>
    </section>
</div>


@section pagespecific{
    <script>

        var dt_basicGL = $('#dt_basicGL').dataTable();
        $("#dt_basicGL_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_basicGL.DataTable().search(this.value).draw();
        });

        $(document).ready(function () {
            $("#dt_voucher_detail_wrapper .dt-toolbar").remove();
            $("#dt_voucher_detail_wrapper .dt-toolbar-footer").remove();

            preLoadData();
        });

        function amounttotal() {
            debugger
            var total_amount = 0;
            var data = dt_voucher_detail.DataTable().rows().data();
            $("#total_amount").text("0.00");
            for (var i = 0; i < data.length; i++) {
                row = data.rows(i).data()[0];
                total_amount = parseFloat(total_amount) + parseFloat(row[3].split(",").join(""));
                $("#total_amount").text(total_amount.toLocaleString());
            }
        }



        function toggleTableInfo() {
            var data = dt_voucher_detail.DataTable().rows().data();
            if (data.length > 0) {
                $("#dt_voucher_detail").toggle(true);
                $("#infoPanel").toggle(false);
                amounttotal();
            } else {
                $("#dt_voucher_detail").toggle(false);
                $("#infoPanel").toggle(true);
            }
        }
        var dt_voucher_detail = $('#dt_voucher_detail').dataTable({
            "data": [],
            "columns": [
                { title: "Expenditure Line Item" },
                { title: "Item Description" },
                { title: "Funding Allocation Reference" },
                { title: "Expense Amount" }
            ]
        });

        function preLoadData() {
            var url = '@Url.Action("GetPaymentBatchCoasDetails", "PaymentBatches")';
            $.ajax({
                type: "get",
                url: url + "/?id=@ViewBag.Batch.PaymentBatchID",
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.data;
                    console.log(data)
                    dt_voucher_detail.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        dt_voucher_detail.fnAddData([
                           data[i]["DrGlAccount"].split("|").join("-"),
                           data[i]["DrGlAccountDesc"],
                           data[i]["FundingReferenceNo"],
                           data[i]["BaseAmount"].toLocaleString(),
                        ]);
                    }
                    toggleTableInfo();
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
    </script>

}
