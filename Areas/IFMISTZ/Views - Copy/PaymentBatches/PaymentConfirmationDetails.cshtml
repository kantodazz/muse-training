@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.BulkPayment>
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .searchContainer {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;

    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    .info-box {
        padding: 8px;
        background-color: #ECF3F8;
        /*padding-top:10px;*/
        /*text-align: center;*/
        border: 1px solid #ccc;
        border-radius: 5px;


    }
     .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 200px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        padding-bottom: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }
</style>
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget " id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Payment Details List </h2>
                    </header>
                    <div>
                        <div class="table-responsive">
                            @{
                                int i = 0;
                            }

                            <a class="btn btn-info" style="margin-right:5px" onclick="window.history.back()">
                                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>Back
                            </a>
                   
                            @if (ViewBag.Batch.PaymentCategory == "PAYMENT") { 
                            <a href="@Url.Action("Create","BulkPayments", new { id =  ViewBag.Batch.PaymentBatchID })" class="btn btn-info"> 
                               <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                Add Payee
                            </a>
                            }
                            else
                            {
                                <a href="@Url.Action("AddUnapplied","UnappliedBatches", new { id =  ViewBag.Batch.PaymentBatchID })" class="btn btn-info">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    Add Beneficiary
                                </a>
                            }
                           
                            <hr class="simple" />
                            <div class="col-md-12">
                                <section id="widget-grid">
                                    <div class="row">
                                        <article class="col-sm-12 col-md-12 col-lg-12">

                                            <div class="widget-body" style="padding-top:10px">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="payee-entry">
                                                            <div class="entry-label">Payment Batch Summary</div>
                                                            <div style="padding-left:20px;padding-right:20px">
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <div class="col-md-6">
                                                                            <table>
                                                                                <tr>
                                                                                    <th>Payment Category: </th>
                                                                                    <td>@ViewBag.Batch.PaymentCategory</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>Batch Number: </th>
                                                                                    <td>@ViewBag.Batch.BatchNo</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>No of Transactions:</th>
                                                                                    <td>@ViewBag.Batch.NoTrx</td>
                                                                                </tr>

                                                                                @if (ViewBag.Batch.SourceAccountNo != null)
                                                                                {
                                                                                    <tr>
                                                                                        <th>Source Account Number: </th>
                                                                                        <td>@ViewBag.Batch.SourceAccountNo</td>
                                                                                    </tr>
                                                                                }
                                                                                @if (ViewBag.Batch.PayerBankAccount != null)
                                                                                {
                                                                                    <tr>
                                                                                        <th>Payer Bank Account: </th>
                                                                                        <td>@ViewBag.Batch.PayerBankAccount</td>
                                                                                    </tr>
                                                                                }

                                                                                @if (ViewBag.Batch.PayeeBankAccount != null)
                                                                                {
                                                                                    <tr>
                                                                                        <th>Payee BankAccount: </th>
                                                                                        <td>@ViewBag.Batch.PayeeBankAccount</td>
                                                                                    </tr>
                                                                                }

                                                                                @if (ViewBag.Batch.SubBudgetClass != null)
                                                                                {
                                                                                    <tr>
                                                                                        <th>Sub Budget Class: </th>
                                                                                        <td>@ViewBag.Batch.SubBudgetClass</td>
                                                                                    </tr>
                                                                                }

                                                                                <tr>
                                                                                    <th>Overallstatus:</th>
                                                                                    <td>@ViewBag.Batch.OverallStatus</td>
                                                                                </tr>
                                                                                @if (ViewBag.Batch.OverallStatusDescription == "" || ViewBag.Batch.OverallStatusDescription == null)
                                                                                {
                                                                                    <tr class="hidden"></tr>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <tr>
                                                                                        <th>OverallStatus Description:</th>
                                                                                        <td>@ViewBag.Batch.OverallStatusDescription</td>
                                                                                    </tr>
                                                                                }



                                                                            </table>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <table>

                                                                                @if (ViewBag.Batch.BulkPaymentMethod != null)
                                                                                {
                                                                                    <tr>
                                                                                        <th>Payment Method: </th>
                                                                                        <td>@ViewBag.Batch.BulkPaymentMethod</td>
                                                                                    </tr>
                                                                                }


                                                                                <tr>
                                                                                    <th>Batch Description:</th>
                                                                                    <td>@ViewBag.Batch.BatchDesc</td>
                                                                                </tr>

                                                                                @if (ViewBag.Batch.TotalAmount == 0 || ViewBag.Batch.TotalAmount == null)
                                                                                {
                                                                                    <tr>
                                                                                        <th>Total Amount:</th>
                                                                                        <td>0.00</td>
                                                                                    </tr>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <tr>
                                                                                        <th>Total Amount:</th>
                                                                                        <td>@string.Format("{0:#,0.00}", ViewBag.Batch.TotalAmount)</td>
                                                                                    </tr>
                                                                                }

                                                                                @if (ViewBag.Batch.SourceAccountName != null)
                                                                                {
                                                                                    <tr>
                                                                                        <th>Source Account Number: </th>
                                                                                        <td>@ViewBag.Batch.SourceAccountName</td>
                                                                                    </tr>
                                                                                }

                                                                                @if (ViewBag.Batch.PayerBankName != null)
                                                                                {
                                                                                    <tr>
                                                                                        <th>Payer Account Name: </th>
                                                                                        <td>@ViewBag.Batch.PayerBankName</td>
                                                                                    </tr>
                                                                                }

                                                                                @if (ViewBag.Batch.Payeename != null)
                                                                                {
                                                                                    <tr>
                                                                                        <th>Payee Name: </th>
                                                                                        <td>@ViewBag.Batch.Payeename</td>
                                                                                    </tr>
                                                                                }

                                                                                @if (ViewBag.Batch.StPaymentFlag == false)
                                                                                {
                                                                                    <tr class="hidden"></tr>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <tr>
                                                                                        <th>ParentInstitutionCode:</th>
                                                                                        <td>@ViewBag.Batch.ParentInstitutionCode</td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <th>ParentInstitutionName:</th>
                                                                                        <td>@ViewBag.Batch.ParentInstitutionName</td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <th>SubWarrantCode:</th>
                                                                                        <td>@ViewBag.Batch.SubWarrantCode</td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <th>SubWarrantDescription:</th>
                                                                                        <td>@ViewBag.Batch.SubWarrantDescription</td>
                                                                                    </tr>
                                                                                }

                                                                                @if (ViewBag.Batch.RejectedReason == "" || ViewBag.Batch.RejectedReason == null)
                                                                                {
                                                                                    <tr class="hidden"></tr>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <tr>
                                                                                        <th>Reason:</th>
                                                                                        <td>@ViewBag.Batch.RejectedReason</td>
                                                                                    </tr>
                                                                                }

                                                                            </table>
                                                                        </div>
                                                                        <div class="col-md-12">
                                                                            <div style="padding-top:5px">
                                                                                <table id="dt_glitem_detail" class="table table-striped table-bordered table-hover table-condensed" width="100%">
                                                                                </table>
                                                                                <div style="padding-bottom:10px" id="infoPanel">
                                                                                    <div class="info-box">No GL Items Selected</div>
                                                                                </div>
                                                                            </div>
                                                                            <div style="float:right;padding-bottom:10px;padding-right:60px">
                                                                                <strong>TOTAL AMOUNT (<strong id="currency2">TZS</strong>): </strong>
                                                                                <strong id="total_amount">0.00</strong>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                   
                                                    <div style="padding-top:5px" class="col-md-12">
                                                        <div class="searchContainer" style="float:right">
                                                            <i class="fa fa-search searchIcon"></i>
                                                            <input type="search" name="search" placeholder="Search..." id="searchbox">
                                                        </div>
                                                    </div>
                                                </div>
                                               
                                                <table id="dt_basicGL" class="table table-bordered table-hover table-condensed table-responsive" style="width:100%">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Beneficiary Code</th>
                                                            <th>Beneficiary Name</th>
                                                            <th>Account Number</th>
                                                            <th>Bank Bic</th>
                                                            <th>Bank Name</th>
                                                            <th>No.Of Days</th>
                                                            <th>Rate</th>
                                                            <th style="text-align:right">Amount</th>
                                                            <th>Description</th>
                                                            <th>OverallStatus</th>
                                                            <th>Rejection Reason</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>

                                                    @foreach (var item in Model)
                                                    {
                                                        i++;
                                                        <tr>
                                                            <td>@i</td>
                                                            <td>@Html.DisplayFor(modelItem => item.BeneficiaryCode)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.BeneficiaryName)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.BeneficiaryAccountNo)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.BankBic)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.BankName)</td>
                                                            <td style="text-align: right">@string.Format("{0:#,0.00}", item.NumberOfDays)</td>
                                                            <td style="text-align: right">@string.Format("{0:#,0.00}", item.Rate)</td>
                                                            <td style="text-align: right">@string.Format("{0:#,0.00}", item.Amount)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.PaymentDescription)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.OverallStatus)</td>
                                                            
                                                            <td>@Html.DisplayFor(modelItem => item.RejectedReason)</td>
                                                            <td style="text-align: center">
                                                                <!-- Split button -->
                                                                <div class="btn-group">
                                                                    <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                        <span class="caret"></span>
                                                                        <span class="sr-only">Toggle Dropdown</span>
                                                                    </button>
                                                                    <ul class="dropdown-menu">
                                                                        <li><a href="#" onclick="cancelpayment(@item.BulkPaymentID)"><i class="fa fa-trash-o fa-fw"></i>Cancel</a></li>
                                                                        <li><a href="@Url.Action("PaymentAdjustment","BulkPayments",new { id=item.BulkPaymentID })"><i class="fa fa-pencil fa-fw"></i> Edit</a></li>
                                                                    </ul>
                                                                </div>
                                                            </td>
                                                        </tr>

                                                    }

                                                </table>
                                            </div>
                                         
                                        </article>
                                    </div>
                                </section>
                            </div>

                        </div>

                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

<!--Start of delete confirmation modal section-->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header alert alert-danger" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

                <h4 class="modal-title" id="lblmodal">Confirm Delete</h4>
            </div>
            <div class="modal-body" id="modal-body">
                <p class="success-message">Are you sure you want to delete this record ? </p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-info delete-confirm">Yes</button>
                <button class="btn btn-info confirm-confirm">Yes</button>
                <button class="btn btn-default delete-cancel" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<!--End of delete confirmation modal section-->

@section pagespecific{
    <script>

        var dt_basicGL = $('#dt_basicGL').dataTable();
        $("#dt_basicGL_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_basicGL.DataTable().search(this.value).draw();
        });


        var cancelpayment2 = function (id) {
     
            if ($('.modal-header').hasClass('alert-info')) {
                $('.modal-header').removeClass('alert-info').addClass('alert-danger');
            }
            $('.success-message').html('').html('Are you sure you want to delete this record ?');
            $('.confirm-confirm').css('display', 'none');
            $('.delete-confirm').css('display', 'inline');
            $("#modal").modal({
                backdrop: "static",
                keyboard: false
            });

            $(".delete-confirm").click(function () {
                //debugger
                if (id != "") {
                    var url = '@Url.Action("DeleteConfirmed","BulkPayments")';
                    $.ajax({
                        url: url,
                        data: { id: id },
                        type: "POST",
                        success: function (response) {
                            if (response == "Success") {
                                //now re-using the boostrap modal popup to show info message.
                                //dynamically we will change background colour
                                if ($('.modal-header').hasClass('alert-danger')) {
                                    $('.modal-header').removeClass('alert-danger').addClass('alert-info');
                                    //hide ok button as it is not necessary
                                    $('.delete-confirm').css('display', 'none');
                                    $('.confirm-confirm').css('display', 'none');
                                    $('.delete-cancel').html('Close').click(function () {
                                        location.reload();
                                    });
                                } else {
                                    //hide ok button as it is not necessary
                                    $('.delete-confirm').css('display', 'none');
                                    $('.confirm-confirm').css('display', 'none');
                                    $('.delete-cancel').html('Close').click(function () {
                                        location.reload();
                                    });
                                }
                                $('.success-message').html('Record deleted successfully');
                            }
                            else {
                                //hide ok button as it is not necessary
                                $('.delete-confirm').css('display', 'none');
                                $('.delete-cancel').html('Close').click(function () {
                                    location.reload();
                                });
                                $('.success-message').html(response);
                            }
                        }, error: function (err) {
                            if (!$('.modal-header').hasClass('alert-danger')) {
                                $('.modal-header').removeClass('alert-info').addClass('alert-danger');
                                $('.delete-confirm').css('display', 'none');
                            }
                            $('.success-message').html(err.statusText);
                        }
                    });
                }
            });
        };

        //function to reset bootstrap modal popups
        $('#modal').on('hidden.bs.modal', '.modal', function () {
            $(".modal-header").removeClass(' ').addClass('alert-danger');
            $('.delete-confirm').css('display', 'inline-block');
            $('.success-message').html('').html('Are you sure you want to delete this record ?');
        });

        function CancelBulkPaymentDetails(id) {
            var url = '@Url.Action("DeleteConfirmed","BulkPayments")';
            $.ajax({
                url: url,
                data: { id: id },
                type: "POST",
                success: function (response) {
                    if (response == "Success") {
                        swal("Record Cancelled Successfully", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                    } else if (response == "DbException") {
                        swal(response + "An error has occured, contact system support");
                    }
                },
                error: function (xhr) {
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },
            });
        }


        function cancelpayment(i, id) {
            if (i == 'x') i = id;
            swal({
             
                text: "Are you sure you want to Cancel this record ?",
                icon: "warning",
            
                buttons: [
                  'Yes',
                  'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {

                    CancelBulkPaymentDetails(i);
                }
            });
            $('#confirmModal').modal('hide');
        }


        $(document).ready(function () {
            $("#dt_glitem_detail_wrapper .dt-toolbar").remove();
            $("#dt_glitem_detail_wrapper .dt-toolbar-footer").remove();
            preLoadData();
        });

        function amounttotal() {
            //debugger
            var total_amount = 0;   
            var data = dt_glitem_detail.DataTable().rows().data();
                $("#total_amount").text("0.00");
                for (var i = 0; i < data.length; i++) {
                    row = data.rows(i).data()[0];
                    total_amount = parseFloat(total_amount) + parseFloat(row[3].split(",").join(""));
                    $("#total_amount").text(total_amount.toLocaleString());
                    }
                }

        
      
        function toggleTableInfo() {
            var data = dt_glitem_detail.DataTable().rows().data();
            if (data.length > 0) {
                $("#dt_glitem_detail").toggle(true);
                $("#infoPanel").toggle(false);
                amounttotal();
            } else {
                $("#dt_glitem_detail").toggle(false);
                $("#infoPanel").toggle(true);
            }
        }
        var dt_glitem_detail = $('#dt_glitem_detail').dataTable({
            "data": [],
            "columns": [
                { title: "Expenditure Line Item" },
                { title: "Item Description" },
                { title: "Funding Allocation Reference" },
                { title: "Expense Amount" }
            ]
        });

        function preLoadData() {
            var url = '@Url.Action("GetPaymentBatchCoasDetails", "PaymentBatches")';
            $.ajax({
                type: "get",
                url: url + "/?id=@ViewBag.Batch.PaymentBatchID",
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.data;
                    console.log(data)
                    dt_glitem_detail.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        dt_glitem_detail.fnAddData([
                           data[i]["DrGlAccount"].split("|").join("-"),
                           data[i]["DrGlAccountDesc"],
                           data[i]["FundingReferenceNo"],
                           data[i]["BaseAmount"].toLocaleString(),
                        ]);
                    }
                    toggleTableInfo();
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
    </script>

}
