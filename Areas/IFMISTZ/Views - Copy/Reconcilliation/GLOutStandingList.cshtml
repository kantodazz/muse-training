@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.GLOutoStandingVw>
@{
    ViewBag.Title = "Reconciliation Status";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">
                    <header style="background-color:#2196F3">
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>GL OutStanding List</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body">
                            
                                @*<div class="">
                                    <a href="@Url.Action("ReconcilliationStatus", "Reconcilliation")" class="btn btn-success btn-flat">
                                        <span class="glyphicon glyphicon-back" aria-hidden="true"></span>
                                        Reconcilliation Status
                                    </a>
                                </div>*@
                         
                               
                                @if (Model.Count() > 0)
                                {
                                    <div class="table-responsive">
                                        @{
                                            int i = 0;
                                            decimal? BasetotalAmount = 0;
                                            decimal? OpertotalAmount = 0;

                                        }
                                        <p>
                                            <table style="width:50%">
                                               
                                                <tr>
                                                    <td>
                                                        <strong>ACCOUNT NUMBER:</strong> 
                                                        
                                                        @Model.Select(a => a.BankAccount).FirstOrDefault()

                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <strong>ACCOUNT NAME  :</strong>
                                                        @Model.Select(a => a.AccountName).FirstOrDefault()
                                                    </td>
                                                </tr>

                                            </table>
                                            <br/>
                                            @foreach (var group in Model.GroupBy(a => a.OperationalTransaType))
                                            {
                                                @*<div class="group-header">
                                                    <span class="h3">@group.Key.ToUpper()</span>
                                                    @*<span class="badge bg-success">@group.Count()</span>*@
                                                @*</div>*@

                                                <div class="group-header">
                                                    @if (group.Key == "CR")
                                                    {
                                                        <span class="h3">Payment</span>
                                                        @*<span class="badge bg-success">@group.Count()</span>*@
                                                    }
                                                    else if (group.Key == "DR")
                                                    {
                                                        <span class="h3">Receipt</span>
                                                        @*<span class="badge bg-success">@group.Count()</span>*@
                                                    }

                                                </div>

                                                <table class="table table-bordered table-condensed">
                                                    <thead>
                                                        <tr>
                                                            @*<th>Account Number</th>
                                                               <th>Account Name</th>*@
                                                            <th>Date</th>
                                                            <th>Legal Number</th>
                                                            <th>Description</th>
                                                            <th>Transaction Type</th>
                                                            @*<th style="text-align:right">Base Amount</th>*@
                                                            <th style="text-align:right">Operational Amount</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody>
                                                        @*@foreach (var group in Model.GroupBy(a => a.DescriptionGL))
                                    {
                                        <tr class="group-header">
                                            <td colspan="8">
                                                <span class="h3">@group.Key.ToUpper()</span>
                                                <span class="badge bg-success">@group.Count()</span>
                                            </td>
                                        </tr>*@
                                                        @foreach (var item in group)
                                                        {
                                                            i++;
                                                            BasetotalAmount += item.BaseAmountGL;
                                                            OpertotalAmount += item.OperationalAmountGL;
                                                            <tr>
                                                                @*<td>@item.BankAccount</td>
                                            <td>@item.AccountName</td>*@
                                                                <td>@string.Format("{0: dd/MM/yyyy}", item.TransactionDate)</td>
                                                                <td>@item.LegalNumber</td>
                                                                <td>@item.DescriptionGL</td>
                                                                <td style="text-align:right">
                                                                    @if (item.BaseAmountGL > 0)
                                                                    {
                                                                        @item.BaseTransaType
                                                                    }
                                                                    else if (item.OperationalAmountGL > 0)
                                                                    {
                                                                        @item.OperationalTransaType
                                                                    }
                                                                </td>
                                                                @*<td style="text-align:right">@string.Format("{0:#,0.00}", item.BaseAmountGL)</td>*@
                                                                <td style="text-align:right">@string.Format("{0:#,0.00}", item.OperationalAmountGL)</td>
                                                            </tr>
                                                        }
                                                        <tr class="group-footer" style="background:#f5f5f5; color:#000000">

                                                            <td colspan="4" style="text-align:right">Total</td>

                                                            @*<td style="text-align:right">
                                                                @string.Format("{0:#,0.00}", group.Sum(x => x.BaseAmountGL))
                                                            </td>*@
                                                            <td style="text-align:right">
                                                                @string.Format("{0:#,0.00}", group.Sum(x => x.OperationalAmountGL))
                                                            </td>
                                                        </tr>
                                                        @*}*@
                                                    </tbody>

                                                    @*<tfoot>
                                    <tr style="background:#f5f5f5; color:#000000">
                                        <td colspan="6" style="text-align:right">Total</td>
                                        <td style="text-align:right">@string.Format("{0:#,0.00}", BasetotalAmount)</td>
                                        <td style="text-align:right">@string.Format("{0:#,0.00}", OpertotalAmount)</td>

                                    </tr>
                                </tfoot>*@

                                                </table>
                                            }
                                    </div>

                                            }
                                            else
                                            {
                                                <p class="alert alert-info">

                                                    No General Ledger Oustanding

                                                </p>

                                            }
                            </div>
                    </div>

                </div>
            </article>
        </div>
    </section>
</div>
