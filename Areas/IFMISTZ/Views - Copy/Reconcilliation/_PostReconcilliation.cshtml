@model IFMIS.Areas.IFMISTZ.Models.PostReconcilliationVM

<div>
       
@using (Html.BeginForm("PostReconcilliation", "Reconcilliation", FormMethod.Post, new { enctype = "multipart/form-data", id = "postRecoForm" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AccountName)
    @Html.HiddenFor(model => model.BankAccount)
    @Html.HiddenFor(model => model.TransactionDate)
    @Html.HiddenFor(model => model.ReceiptBankPaGL)
    @Html.HiddenFor(model => model.PaBankReceiptGL)
    @Html.HiddenFor(model => model.TotalOutStandingGL)
    @Html.HiddenFor(model => model.TotalAdjustedBalance)
    @Html.HiddenFor(model => model.TotalReconciled)
    @Html.HiddenFor(model => model.CheckDate)
    @Html.HiddenFor(model => model.OpeningBalanceBank)
    @Html.HiddenFor(model => model.ClosingBalanceBank)
    @Html.HiddenFor(model => model.OpeningBalanceGL)
    @Html.HiddenFor(model => model.ClosingBalanceGL)
    @Html.HiddenFor(model => model.ReceiptBankPaGL)
    @Html.HiddenFor(model => model.TotalOutStandingPaymentGL)
    @Html.HiddenFor(model => model.TotalOutStandingReceiptGL)
    @Html.HiddenFor(model => model.TotalOutStandingReceiptBank)
    @Html.HiddenFor(model => model.TotalOutStandingPaymentBank)




    <table class="table table-bordered table-condensed" style="width:60%;">
        <thead style="background: #F6F6F6;">
            <th colspan="2">Description</th>
            <th style="text-align:right;">Amount</th>
        </thead>

        <tbody>
            <tr>
                <td colspan="2">Balance AS Per Bank Statement As At &nbsp;<strong> @string.Format("{0:  dd MMMM,yyyy}", Model.CheckDate)</strong></td>
                <td style="text-align:right">@string.Format("{0:#,#.00;(#,#.00)}", Model.ClosingBalanceBank)</td>
            </tr>

            <tr>
                <td colspan="3">Less:</td>
            </tr>

            <tr>
                <td style="width:5%">1.</td>
                <td>Receipt in Bank Not in Cash Book</td>
                <td style="text-align:right">@string.Format("{0:#,#.00;(#,#.00)}", Model.TotalOutStandingReceiptBank)</td>
            
            </tr>
            <tr>
                <td>2</td>
                <td>Payment in Cash Book  Not in Bank</td>
                <td style="text-align:right">@string.Format("{0:#,#.00;(#,#.00)}", Model.TotalOutStandingPaymentGL)</td>
            
            </tr>

            <tr style="background: #F6F6F6;">
                <td colspan="2">Total Less</td>
                <td style="text-align:right">@string.Format("{0:#,#.00;(#,#.00)}", Model.ReceiptBankPaGL)</td>
            </tr>

            <tr>
                <td colspan="3">Add:</td>
            </tr>

            <tr>
                <td>1.</td>
                <td>Payment in Bank Not in Cash Book</td>
                <td style="text-align:right">@string.Format("{0:#,#.00;(#,#.00)}", Model.TotalOutStandingPaymentBank)</td>
            
            </tr>
            <tr>
                <td>2.</td>
                <td>Receipt in Cash Book Not in Bank</td>
                <td style="text-align:right">@string.Format("{0:#,#.00;(#,#.00)}", Model.TotalOutStandingReceiptGL)</td>
               
            </tr>
            <tr style="background: #F6F6F6;">
                <td colspan="2">Total Add</td>
                <td style="text-align:right">@string.Format("{0:#,#.00;(#,#.00)}", Model.PaBankReceiptGL)</td>
            </tr>
           
            <tr>

                <td colspan="2"><strong>Adjusted Bank Balance</strong>(Balance -Total less + Total Add):</td>
                <td style="text-align:right">@string.Format("{0:#,#.00;(#,#.00)}", Model.TotalAdjustedBalance)</td>
            </tr>

            <tr>
                <td colspan="2"><strong>Balance as Per CashBook:</strong> </td>
                <td style="text-align:right">@string.Format("{0:#,#.00;(#,#.00)}", Model.ClosingBalanceGL)</td>
            </tr>

          

        </tbody>
    </table>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6">
        

            <a href="@Url.Action("ReconcilliationStatus","Reconcilliation")" class="btn btn-info">
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                Back
            </a>

            <button type="button" class="btn btn-info" style="text-align:left" onclick="confirm()">
               <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                Confirm
            </button>
            </div>
        </div>

}
</div>
