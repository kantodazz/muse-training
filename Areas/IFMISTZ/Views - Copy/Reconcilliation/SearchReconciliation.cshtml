                        } else if (response == "CurrentMonth") {

                            if ($('.modal-header').hasClass('alert-info')) {
                                $('.delete-confirm').css('display', 'none');
                                $('.delete-cancel').html('Close').click(function () {

                                });
                            }
                            $('.success-message').html('You can not Confirm the Current Month');

                        }
                    }
                });

            }
            else {

                if ($('.modal-header').hasClass('alert-info')) {
                    $('.delete-confirm').css('display', 'none');
                    $('.delete-cancel').html('Close').click(function () {

                    });
                }
                $('.success-message').html('Make sure the Adjusted Balance is equal to closing gl Balance  ');


            }

