            var ClosingBalance = parseFloat($("#ClosingBalanceGL").val());
            var ClosingBalanceGL = ClosingBalance.toFixed(2);
            var TotalAdjustedBalance = AdjustedBalance.toFixed(2);
            $("#responseModal").modal('show');
            $(".delete-confirm").click(function () {
                if (TotalAdjustedBalance == ClosingBalanceGL) {
