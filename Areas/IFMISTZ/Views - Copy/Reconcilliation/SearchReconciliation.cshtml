        function ToJavaScriptDate(value) {
            var pattern = /Date\(([^)]+)\)/;
            var results = pattern.exec(value);
            var dt = new Date(parseFloat(results[1]));
            return dt.getFullYear() + "/" + (dt.getMonth() + 1) + "/" + dt.getDate();
        }
        var search = function () {
            var AccountNumber = $("#BankAccount").val();
            var chkDate = $("#CheckDate").val();
            if (AccountNumber == '' || chkDate == '') {

                swal("Please Select All the required Fields");
                return false;
            }
            $("#searchbtn").prop('disabled', true);
            $("#divLoader").show();
            var url = '@Url.Action("GetTransactionList", "Reconcilliation")';
            $.ajax({
                type: "post",
                url: url,
                data: { AccountNumber: AccountNumber, chkDate: chkDate },
                success: function (response) {
                    //console.log(response);
                    $("#searchResults").show();
                    $("#searchResults").html(response);
                    $("#divLoader").hide();
                    $("#searchbtn").prop('disabled', false);
                },complete: function () {

                    $("#divLoader").hide();
                    $("#searchbtn").prop('disabled', false);

                }
            });
        };

