        var accountType = 0
        function openSearchGL(type) {
            console.log($("#ApplyDate").val())
            if (!$("#ApplyDate").val()) {
                swal("Please choose apply date")
                return
            }
            loadGlItems()
            if ($("#SubBudgetClass").val() == "Please choose sub budget class"
                && $("#AdjustType").val() != "Account Journal Adjustment") {
                swal("Please choose sub budget class")
            }
            accountType = type;
            if ($("#SubBudgetClass").val() == "Please choose sub budget class"
                && $("#AdjustType").val() != "Account Journal Adjustment") {
                swal("Please choose sub budget class")
            } else {
                $("#glItemsModal").modal('show');
            }
        }

        var dt_search_gl_item = $('#dt_search_gl_item').dataTable({
            "language": {
                "emptyTable": "<strong id='loader'>No data available in table</strong>"
            }
        });
        $("#dt_search_gl_item_wrapper .dt-toolbar").remove();
        $("#searchbox_").on("keyup search input paste cut", function () {
            dt_search_gl_item.DataTable().search(this.value).draw();
        });

        var _data = [];

        function loadGlItems() {
            if ($("#AdjustType").val() == 'Account Journal Adjustment') {
                loadJournalAdjustmentDetails('AJ')
            } else if ($("#AdjustType").val() == 'Journal Adjustment') {
                loadJournalAdjustmentDetails('GJ')
            } else if ($("#AdjustType").val() == 'Subwarrant Adjustment') {
                loadJournalAdjustmentDetails('SW')
            }
        }

        function loadJournalAdjustmentDetails(JournalCode) {
            $("#loader").text("Loading please wait...")
            var subWarrant = null
            if ($("#AdjustType").val().includes("Subwarrant")) {
                subWarrant =  $("#SubWarrant").val()
            }
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetFundBalance1", "TransactionAdjustment")',
                data: {
                    JournalCode,
                    subBudgetClass: $("#SubBudgetClass").val(),
                    subWarrant,
                    applyDate: $("#ApplyDate").val(),
                },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    _data = response.data;
                    dt_search_gl_item.fnClearTable();
                    for (var i = 0; i < _data.length; i++) {
                        dt_search_gl_item.fnAddData([i + 1,
                           _data[i]["GlAccount"].split("|").join("-"),
                           _data[i]["GlAccountDesc"],
                           _data[i]["ExpenditureToDate"].toLocaleString(),
                           _data[i]["FundBalance"].toLocaleString(),
                           _data[i]["FundingRefNo"],
                           _data[i]["SublevelCode"],
                           '<a href="#" onclick="glItemClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                        ]);
                    }
                    $("#loader").text("No data found...");
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }


        function glItemClicked(i) {
            if (!checkForDuplicateGLAccount(i)) {
                swal("GL account with this reference number exists..!!")
            } else {
                if (accountType == 0) {
                    CR_ids.push(_data[i])
                } else {
                    DR_ids.push(_data[i])
                }
                updateTableGlAccJournalAdjustment()
            }
        }

        function checkForDuplicateGLAccount(i) {
            var isValid = true
            CR_ids.concat(DR_ids).forEach(d=> {
                if (d["GlAccount"] == _data[i]["GlAccount"]
                    && d["FundingRefNo"] == _data[i]["FundingRefNo"]) {
                    isValid = false
                }
            });
            return isValid
        }

        function removeGlAccCr(j) {
            swal({
                title: "Remove this Item?",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    CR_ids.splice(j, 1)
                    updateTableGlAccJournalAdjustment()
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

        function removeGlAccDr(j) {
            swal({
                title: "Remove this Item?",
                buttons: ['No','Yes'],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    DR_ids.splice(j, 1)
                    updateTableGlAccJournalAdjustment()
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

        function updateTableGlAccJournalAdjustment() {
            var DrCr = [];
            for (var j = 0; j < DR_ids.length; j++) {
                DrCr.push(
                     '<tr>\
                            <td><a href="#" onclick="removeGlAccDr('+ j + ')">' + DR_ids[j]["GlAccount"].split("|").join("-") + '</a></td>\
                             <td>' + DR_ids[j]["ExpenditureToDate"].toString().toLocaleString() + '</td>\
                             <td>' + DR_ids[j]["FundBalance"].toString().toLocaleString() + '</td>\
                             <td><amount-input onkeyup="computeTotalAmounts()" id="IdDr-' + j + '"/></td>\
                            <td>-</td>\
                      </tr>')
            }

            for (var j = 0; j < CR_ids.length; j++) {
                DrCr.push(
                     '<tr>\
                           <td><a href="#" onclick="removeGlAccCr('+ j + ')">' + CR_ids[j]["GlAccount"].split("|").join("-") + '</a></td>\
                            <td>' + CR_ids[j]["ExpenditureToDate"].toString().toLocaleString() + '</td>\
                            <td>' + CR_ids[j]["FundBalance"].toString().toLocaleString() + '</td>\
                            <td>-</td>\
                            <td><amount-input onkeyup="computeTotalAmounts()" id="IdCr-' + j + '"/></td>\
                      </tr>')
            }

            DrCr.push('<tr>\
                        <td colspan="3" style="border-bottom-color:white;border-left-color:white;text-align:right;"><strong>TOTAL</strong></td>\
                        <td><strong id="dr_amount">0</strong></td>\
                        <td><strong id="cr_amount">0</strong></td>\
                      </tr>')

            DrCr = DrCr.toString().replace("]", "").replace("[", "")
            DrCr = DrCr.split(",").join("")
            $("#table_crdr2").html(DrCr);
            $("#glItemsModal").modal('hide')
        }

        var glItemsList = []
        var dr_status = [];
        var cr_status = [];

        function computeTotalAmounts() {
            var TotalCr = 0;
            var TotalDr = 0;
            glItemsList = [];

            for (var j = 0; j < DR_ids.length; j++) {
                var val = $("#_IdDr-" + j + "").val() ? $("#_IdDr-" + j + "").val().split(",").join("") : 0
                TotalDr += parseFloat(val)

                if (val > 0) {
                    glItemsList.push({
                        GLAccount: DR_ids[j]["GlAccount"],
                        Amount: val,
                        TrxType: "DR",
                        FundingRefNo: DR_ids[j]["FundingRefNo"],
                        SubLevelCode: DR_ids[j]["SublevelCode"],
                        ParentInstitutionCode: DR_ids[j]["ParentInstitutionCode"],
                        ParentInstitutionName: DR_ids[j]["ParentInstitutionName"],
                    })
                }

                if ($("#AdjustType").val() != "Account Journal Adjustment") {
                    if (DR_ids[j]["GlAccount"][69] == '2' || DR_ids[j]["GlAccount"][69] == '3') {
                        if (val > DR_ids[j]["FundBalance"]) {
                            $("#_IdDr-" + j + "").css({ 'color': 'red' });
                            dr_status.push(j)
                        } else {
                            $("#_IdDr-" + j + "").css({ 'color': 'black' });
                            remove(dr_status, j)
                        }
                    } else if (DR_ids[j]["GlAccount"][69] == '1') {
                        if (val > DR_ids[j]["ExpenditureToDate"]) {
                            $("#_IdDr-" + j + "").css({ 'color': 'red' });
                            dr_status.push(j)
                        } else {
                            $("#_IdDr-" + j + "").css({ 'color': 'black' });
                            remove(dr_status, j)
                        }
                    }
                }
            }

            for (var j = 0; j < CR_ids.length; j++) {
                var val = $("#_IdCr-" + j + "").val() ? $("#_IdCr-" + j + "").val().split(",").join("") : 0
                TotalCr += parseFloat(val)

                if (val > 0) {
                    glItemsList.push({
                        GLAccount: CR_ids[j]["GlAccount"],
                        Amount: val,
                        TrxType: "CR",
                        FundingRefNo: CR_ids[j]["FundingRefNo"],
                        SubLevelCode: CR_ids[j]["SublevelCode"],
                        ParentInstitutionCode: CR_ids[j]["ParentInstitutionCode"],
                        ParentInstitutionName: CR_ids[j]["ParentInstitutionName"],
                    })
                }

                if ($("#AdjustType").val() != "Account Journal Adjustment") {
                    if (CR_ids[j]["GlAccount"][69] == '2' || CR_ids[j]["GlAccount"][69] == '3') {
                        if (val > CR_ids[j]["ExpenditureToDate"]) {
                            $("#_IdCr-" + j + "").css({ 'color': 'red' });
                            cr_status.push(j)
                        } else {
                            $("#_IdCr-" + j + "").css({ 'color': 'black' });
                            remove(cr_status, j)
                        }
                    }
                }
            }

            $("#cr_amount").text(TotalCr.toLocaleString());
            $("#dr_amount").text(TotalDr.toLocaleString());
        }

