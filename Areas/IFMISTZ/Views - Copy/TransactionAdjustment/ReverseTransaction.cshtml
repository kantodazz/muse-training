@section pagespecific{
    <script>
        $(document).ready(function () {
            getJournalType();
            $("#saveLoader").toggle(false);
            $("#table_crdr2Container").toggle(false)
        });

        var CR_ids = [];
        var DR_ids = [];

        var CR_values = {};
        var DR_values = {};

        var journalCodes = [];
        var journalCodesList = [];
        function getJournalType() {
            $.ajax({
                type: "get",
                url: '@Url.Action("GetJournalType", "TransactionAdjustment")',
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    d = response.data;
                    for (var i = 0; i < d.length; i++) {
                        if (!journalCodesList.includes(d[i]["JournalCode"])) {
                            journalCodesList.push(d[i]["JournalCodeDesc"]);
                            journalCodes.push({
                                code: d[i]["JournalCode"],
                                desc: d[i]["JournalCodeDesc"]
                            });
                        }
                    }
                    createJournalCodeFilter(journalCodes);
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function createJournalCodeFilter(journalCodes) {
            var optionsList = [];
            optionsList.push('<option value="0" selected="selected">Please choose Journal Code</option>');
            journalCodes.forEach(code => {
                optionsList.push('<option value=' + code.code + '>' + code.code + ' - ' + code.desc + '</option>');
            });
            var options = optionsList.toString();
            options = options.replace("]", "");
            options = options.replace("[", "");
            options = options.replace(",", "");
            $("#JournalCode").html(options);
        }

        var globalJournalTypeCode = "";
        function searchLegalNumber() {
            if ($("#JournalCode").val() != "0") {
                globalJournalTypeCode = $("#JournalCode").val();
                $('#legalItemModal').modal('show');
            } else {
                swal("Please choose Journal Code");
            }
        }

        var dt_payment = $('#dt_payment').dataTable();
        $("#dt_payment_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            if (!this.value) {
                dt_payment.fnClearTable();
            } else {
                loadPaymentDetails(this.value);
            }
        });

        var data = [];
        var legalNumberArray = [];
        var legalNumberArrayDrCr = [];

        function loadPaymentDetails(search) {
            var url = '@Url.Action("GetPayement", "TransactionAdjustment")';
            $.ajax({
                type: "get",
                url: url + "/?journalTypeCode=" + globalJournalTypeCode + "&&search=" + search,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.data;
                    dt_payment.fnClearTable();
                    legalNumberArray = [];
                    legalNumberArrayDrCr = [];

                    for (var i = 0; i < data.length; i++) {
                        if (!legalNumberArray.includes(data[i]["LegalNumber"])) {

                            compute = getDrCrAccounts(data, data[i]["LegalNumber"])
                            legalNumberArrayDrCr[i] = compute

                            dt_payment.fnAddData([i + 1,
                              data[i]["LegalNumber"],
                              data[i]["PayeeName"],
                              data[i]["TransactionDesc"],
                              compute.amount.toLocaleString(),
                              data[i]["ApprovedAtFormatted"],
                              '<a href="#" onclick="paymentClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                            ])
                            legalNumberArray.push(data[i]["LegalNumber"])
                        }
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function getDrCrAccounts(data, legalNumber) {
            var Amount = 0

            for (var i = 0; i < data.length; i++) {
                if (data[i]["LegalNumber"] == legalNumber
                    && data[i]["TransactionType"] == "DR") {
                    Amount += parseFloat(data[i]["OperationalAmount"]);
                }
            }
            return { amount: Amount }
        }

        var paymentVoucherId = 0
        var TotarCr = 0;
        var TotalDr = 0;

        function paymentClicked(i) {
            TotarCr = 0;
            TotalDr = 0;

            if (data[i]["ReconcilliationStatus"] == "Matched") {
                swal("Reconcilled Payment Cannot be reversed!")
            } else {
                paymentVoucherId = data[i]["GeneralLedgerId"];
                var DrCr = [];
                for (var j = 0; j < data.length; j++) {

                    if (data[i]["LegalNumber"] == data[j]["LegalNumber"]) {

                        if (data[j]["TransactionType"] == "CR") {
                            DrCr.push(
                                '<tr>\
                                <td>' + data[j]["GlAccountCode"] + '</td>\
                                 <td>-</td>\
                                 <td>' + data[j]["OperationalAmount"].toLocaleString() + '</td>\
                           </tr>')
                            TotarCr += parseFloat(data[j]["OperationalAmount"])
                        } else {
                            DrCr.push(
                              '<tr>\
                                <td>' + data[j]["GlAccountCode"] + '</td>\
                                <td>' + parseFloat(data[j]["OperationalAmount"]).toLocaleString() + '</td>\
                                <td>-</td>\
                           </tr>')
                            TotalDr += parseFloat(data[j]["OperationalAmount"])
                        }

                    }

                }

                DrCr.push('<tr>\
                          <td style="border-bottom-color:white;border-left-color:white;text-align:right;" ><strong>TOTAL</strong></td>\
                          <td><strong id="TotalDr"></strong></td>\
                          <td><strong id="TotarCr"></strong></td>\
                      </tr>')



                DrCr = DrCr.toString().replace("]", "").replace("[", "")
                DrCr = DrCr.split(",").join("")
                $("#table_crdr").html(DrCr);
                $("#TotalDr").text(TotalDr.toLocaleString() + ".00/=")
                $("#TotarCr").text(TotarCr.toLocaleString() + ".00/=")
                $("#LegalNumberLabel").text(data[i]["LegalNumber"])
                $("#LegalNumber").val(data[i]["LegalNumber"])
                $("#JournalNumber").val(data[i]["TransactionJournalNumber"])
                $('#legalItemModal').modal('hide')
            }
        }

        function commitTransactionReversal() {
            if (voucherSummaryFormValidation()) {
                if ($("#AdjustType").val() != "Transaction Reversal") {
                    if (parseFloat($("#cr_amount").text())
                        != parseFloat($("#dr_amount").text())
                        || parseFloat($("#dr_amount").text()) == 0
                        ) {
                        swal("Unbalanced or Zero DR/CR Amounts");
                    } else {
                        if (dr_status.length > 0 || cr_status.length > 0) {
                            swal("You have exceeded fund balance or expenditure amount.");
                        } else {
                            saveTransactionReversal()
                        }
                    }
                } else {
                    CheckTransactionReverseStatus()
                }
            } else {
                swal("Please provide all the missing details.")
            }
        }

        function CheckTransactionReverseStatus() {
            $("#form_submision").prop('disabled', true);
            var url = '@Url.Action("CheckTransactionReverseStatus", "TransactionAdjustment")';
            $.ajax({
                type: "get",
                url: url + "/?LegalNumber=" + $("#LegalNumber").val(),
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    $("#form_submision").prop('disabled', false);
                    data = response.data
                    if (data.length > 0) {
                        data = data[0]
                        if (data["Payment"] == "NO" && data["Voucher"] == "NO") {
                            saveTransactionReversal()
                        } else {
                            if (data["Payment"] != "NO") {
                                swal(data["Payment"])
                            } else if (data["Voucher"] != "NO") {
                                swal(data["Voucher"])
                            }
                        }
                    } else {
                        saveTransactionReversal()
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        var isSaved = false
        function saveTransactionReversal() {
            if (isSaved) return;
            isSaved = true
            var form_data = {}
            var url = ""

            $("#form_submision").prop('disabled', true);

            if ($("#AdjustType").val() == "Transaction Reversal") {
                url = '@Url.Action("ReverseTransaction", "TransactionAdjustment")'
                form_data = {
                    AdjustType: $("#AdjustType").val(),
                    JournalCode: "GJ",
                    Reason: $("#Reason").val(),
                    Description: $("#Description").val(),
                    LegalNumber: $("#LegalNumber").val(),
                    JournalNumber: $("#JournalNumber").val(),
                    ApplyDate: $("#ApplyDate2").val(),
                    PaymentJournalCode: $("#JournalCode").val()
                }
            } else if ($("#AdjustType").val() == "Subwarrant Adjustment") {
                url = '@Url.Action("JournalAdjustment", "TransactionAdjustment")'
                form_data = {
                    AdjustType: $("#AdjustType").val(),
                    JournalCode: "SW",
                    Reason: $("#Reason").val(),
                    Description: $("#Description").val(),
                    DocumentNumber: $("#DocumentNumber").val(),
                    ApplyDate: $("#ApplyDate").val(),
                    AmountToReceive: $("#dr_amount").text(),
                    GlItemsList: glItemsList
                }

        }else{
         url = '@Url.Action("JournalAdjustment", "TransactionAdjustment")'
        form_data = {
            AdjustType: $("#AdjustType").val(),
            JournalCode: $("#AdjustType").val() == "Account Journal Adjustment"?"AJ":"GJ",
            Reason: $("#Reason").val(),
            Description: $("#Description").val(),
            DocumentNumber: $("#DocumentNumber").val(),
            ApplyDate: $("#ApplyDate").val(),
            AmountToReceive: $("#dr_amount").text(),
            GlItemsList: glItemsList
        }
        }

            $.ajax({
                type: "post",
                url: url,
                data: form_data,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    $("#form_submision").prop('disabled', false);
                    $("#saveLoader").toggle(false);
                    if (response == "Success") {
                        swal("Saved Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.href = '@Url.Action("PendingReversal", "TransactionAdjustment")'
                            });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    $("#form_submision").prop('disabled', false);
                    $("#saveLoader").toggle(false);
                    swal(error);
                }
            });
        }

        function voucherSummaryFormValidation() {
            $("#JournalCode_1").attr("style", "color: white;");
            var isNotValid = false;
            if ($("#AdjustType").val() == "Transaction Reversal") {
                if ($("#JournalCode").val().trim() == "0") {
                    $("#JournalCode_1").attr("style", "color: red;");
                    return false
                }
                isNotValid = validateInputsParameters([
                "#LegalNumber",
                "#Description",
                "#ApplyDate2"
                ]);
            } else {
                isNotValid = validateInputsParameters([
                 "#Description",
                 "#ApplyDate"
                ]);
            }

            if (isNotValid) {
                $(isNotValid + "_1").attr("style", "color: red;");
                return false
            }
