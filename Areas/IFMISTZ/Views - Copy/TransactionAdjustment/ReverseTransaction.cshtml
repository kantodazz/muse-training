                            <td>-</td>\
                         </tr>')
                    TotalDr += parseFloat($("#_Id-" + Id + "").val().split(",").join(""))
                }
            })

            CR_ids.forEach(Id => {
                var row = _data1.rows(Id).data()[0]
                if (parseFloat($("#_Id-" + Id + "").val().split(",").join("")) > 0) {
                    DrCr.push(
                         '<tr>\
                              <td>' + row[1] + '</td>\
                              <td>' + row[3] + '</td>\
                              <td>' + row[4] + '</td>\
                             <td>-</td>\
                             <td>' + $("#_Id-" + Id + "").val() + '</td>\
                         </tr>')
                    TotalCr += parseFloat($("#_Id-" + Id + "").val().split(",").join(""))
                }
            })

            if (TotalDr > 0 || TotalCr > 0) {
                DrCr.push('<tr>\
                        <td colspan="3" style="border-bottom-color:white;border-left-color:white;text-align:right;"><strong>TOTAL</strong></td>\
                        <td><strong>' + TotalDr.toLocaleString() + '</strong></td>\
                        <td><strong>' + TotalCr.toLocaleString() + '</strong></td>\
                      </tr>')

                DrCr = DrCr.toString().replace("]", "").replace("[", "")
                DrCr = DrCr.split(",").join("")
                $("#table_crdr2").html(DrCr);
            }
            $("#glItemsModal").modal('hide')
        }

        function remove(array, val) {
            var found = array.indexOf(val);
            while (found !== -1) {
                array.splice(found, 1);
                found = array.indexOf(val);
            }
        }

