@{
    ViewBag.Title = "Bank Statement List";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    td {
        padding: 5px;
    }

    .table-amount td:nth-child(7) {
        text-align: right;
    }

    .table-view-details td:nth-child(4) {
        text-align: right;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 110px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .total-amount {
        float: right;
    }
</style>
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div>
                        <div class="widget-body">
                            <a href="@Url.Action("UploadStatement","BankStatements")" class="btn btn-info">
                                <span class="glyphicon glyphicon-plus"></span>
                                Add New
                            </a>
                            <hr class="simple" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search searchIcon"></i>
                                        <input type="search" name="search" placeholder="Keywords..." id="searchbox">
                                        <button style="background-color:#2196F3;color:white" onclick="searchPayment()">Search</button>
                                    </div>
                                </div>
                            </div>
                            <table id="dt_Statement_listing" class="table table-bordered table-condensed table-amount">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Account Number</th>
                                        <th>Account Name</th>
                                        <th>Statement Date</th>
                                        <th>Opening Balance</th>
                                        <th>Closing Balance</th>
                                        <th>Bank Name</th>
                                        <th>Bank Bic</th>
                                        <th>OverAllStatus</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

    

<div class="modal fade" id="commentModal" style="left:4%">
    <div class="modal-dialog" style="width:40%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"> Comment</h3>
            </div>
            <div class="modal-body">
                <div>
                    <div class="widget-body " style="padding-top:2px">
                        <input type="hidden" name="BankStatementSummaryId" id="BankStatementSummaryId" />
                        @Html.AntiForgeryToken()
                        <table style="margin-left:5%">
                            <tr>
                                <td class="form-label">
                                    Remarks
                                    <i class="fa fa-times" style="color:white" id="remarks1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <textarea style="width:300px" rows="2" id="remarks" maxlength="350"></textarea><br />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="form-label">
                                    Attachment
                                    <i class="fa fa-times" style="color:white" id="attachment1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <input type="file"  id="attachment" class="input" style="width:300px" />
                                    </div>
                                </td>

                            </tr>
                        </table>
                    </div>
                </div>

                <div class="modal-footer">
                    <a href="#" class="btn btn-info" data-dismiss="modal">Cancel</a>
                    <button type="submit" class="btn btn-info" onclick="ConfirmForm()" id="confirmform">
                        <i class="fa fa-times"></i>Confirm
                        <img src="/Content/img/loading.gif" class="saveLoader" />
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>

<!----------- Statement Details View ----------------->
<div class="modal fade" id="StatementDetailsModal" style="left:4%">
    <div class="modal-dialog" style="width:80%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Bank Statement Details</h3>
            </div>
            <div class="modal-body">
                <div>
                    <div class="widget-body ">
                        <div class="payee-entry">
                            <div class="entry-label">Bank Statement Summary</div>
                            <div style="padding-left:20px">
                                <div class="row">
                                    <div class="col-md-6">
                                        <table>
                                            <tr>
                                                <th>1.Account Number: </th>
                                                <td id="AccountNumber"></td>
                                            </tr>
                                            <tr>
                                                <th>2.Statement Date:</th>
                                                <td id="StatementDate"></td>
                                            </tr>
                                            <tr>
                                                <th>3.Bank Name:</th>
                                                <td id="BankName"></td>
                                            </tr>

                                        </table>
                                    </div>
                                    <div class="col-md-6">
                                        <table>
                                            <tr>
                                                <th>4.Account Name:</th>
                                                <td id="AccountName"></td>
                                            </tr>
                                            <tr>
                                                <th>5.Opening Balance:</th>
                                                <td id="OpeningBalance"></td>
                                            </tr>
                                            <tr>
                                                <th>6.Closing Balance:</th>
                                                <td id="ClosingBalance"></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
               
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                                <div class="search-container" style="float:right">
                                    <i class="fa fa-search searchIcon"></i>
                                    <input type="search" name="search" placeholder="Search..." id="searchboxView">
                                </div>
                            </div>
                        </div>
                        <br />
                        <table id="dt_BankStatement_detail" class="table table-striped table-bordered table-hover table-condensed table-view-details" width="100%">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>BankStatementSummaryId</th>
                                    <th>Transaction Ref</th>
                                    <th>Related Ref</th>
                                    <th>TransactionType</th>
                                    <th>TransactionAmount</th>
                                    <th>Description</th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-info" data-dismiss="modal" style="width:100px;">
                        <i class="fa fa-times"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section pagespecific{

    <script>

        var dt_Statement_listing = $('#dt_Statement_listing').dataTable();
        $("#dt_Statement_listing_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_Statement_listing.DataTable().search(this.value).draw();
        });

        var data = [];
        $.ajax({
            type: "get",
            url: '@Url.Action("getBankstatement", "BankStatements")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                console.log(response);
                data = response.data;
                dt_Statement_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_Statement_listing.fnAddData([i + 1,
                       data[i]["BankAccountNumber"],
                       data[i]["BankAccountName"],
                       data[i]["StatementDateFormatted"],
                       toLabel(data[i]["OpeningBalance"]),
                       toLabel(data[i]["ClosingBalance"]),
                       data[i]["BankName"],
                       data[i]["BankBic"],
                       data[i]["OverallStatus"],
                         '<div class="btn-group">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick="ViewStatementDetails(' + i + ')">Statement Details</a></li>\
                                <li><a href="#" onclick="StatementCancel(' + i + ')">Cancel</a></li>\
                                <li><a href="#" onclick="StatementConfirm(' + i + ')">Confirm</a></li>\
                            </ul>\
                        </div>'
                    ]);
                }

                if (data.length == 0) {
                    $("#loader").text("No matching records found")
                }
            },
            failure: function (error) {
                swal(error);
            }
        });

     // =============== Bank Statement Confirmation Start ==================
        function StatementConfirm(i) {
          //debugger
            $("#BankStatementSummaryId").text(data[i]["BankStatementSummaryId"]);
            document.getElementById("BankStatementSummaryId").value = data[i]["BankStatementSummaryId"];
            $('#commentModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function ConfirmForm() {
           // debugger
            var BankStatementSummaryId = $("#BankStatementSummaryId").val();
            var remarks = $("#remarks").val();
            var attachment = $("#attachment").val();

            if (BankStatementSummaryId == '' || remarks == '') {
                var url = '@Url.Action("BankStatementList", "BankStatements")';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (attachment != '') {

                var file = document.querySelector("#attachment");
                if (/\.(pdf)$/i.test(file.files[0].name) === false) {
                    swal("Please Upload Attachment in PDF Format)");
                    return false;
                }
            }

            //var formData = new FormData()
           // formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
           // formData.append('BankStatementSummaryId', BankStatementSummaryId);
            //formData.append('Remarks', remarks);
            //formData.append('Attachment', $("#attachment")[0].files[0]);
            //console.log(formData);

            postStatementConfirm(BankStatementSummaryId, remarks);
        }

        function postStatementConfirm(BankStatementSummaryId, remarks) {
            //console.log(formData);
            $(".loadingImg").show();
            $("#confirmform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("Confirmation", "BankStatements")';
            $.ajax({
                url: url,
                data: { BankStatementSummaryId: BankStatementSummaryId, remarks: remarks },
                type: 'POST',
                //contentType: false,
                //processData: false,
                success: function (response) {
                    $("#confirmform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Confirmed successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        $("#confirmform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response, { icon: "warning" }).then((e) => {
                            window.location.reload();
                        });
                    }
                },
                failure: function (error) {
                    $("#confirmform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }
        // =============== End Bank Statement Confirmation ===============


        // =============== Bank Statement Details Start ==================
        /**
        * Show Bank Statement Details
        */
        var dt_BankStatement_detail = $('#dt_BankStatement_detail').dataTable();
        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_BankStatement_detail.DataTable().search(this.value).draw();
        });
        $("#dt_BankStatement_detail_wrapper .dt-toolbar").remove();

        function ViewStatementDetails(i) {
            $("#AccountNumber").text(data[i]["BankAccountNumber"]);
            $("#AccountName").text(data[i]["BankAccountName"]);
            $("#OpeningBalance").text(toLabel(data[i]["OpeningBalance"]));
            $("#ClosingBalance").text(toLabel(data[i]["ClosingBalance"]));
            $("#StatementDate").text(data[i]["StatementDateFormatted"]);
            $("#BankName").text(data[i]["BankName"]);

            $.ajax({
                type: "get",
                url: '@Url.Action("GetStatementDetails", "BankStatements")' + "/?summaryid=" + data[i]["BankStatementSummaryId"],
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    var _data = response.data2;
                    dt_BankStatement_detail.fnClearTable();
                    for (var i = 0; i < _data.length; i++) {
                        dt_BankStatement_detail.fnAddData([i + 1,
                           _data[i]["BankStatementSummaryId"],
                           _data[i]["TransactionRef"],
                           _data[i]["RelatedRef"],
                           _data[i]["TransactionType"],
                           _data[i]["TransactionAmount"],
                           _data[i]["Description"],
                        ]);
                    }

                    if (_data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });

            $('#StatementDetailsModal').modal('show');
        }

        // =============== END Bank Statement Detail ===============



        function StatementCancel(i, id) {
            if (i == 'x') i = id;
           var id = data[i]["BankStatementSummaryId"];
            swal({
                title: "Confirm Delete",
                text: "Are you sure you want to delete this Statement ? ",
                buttons: [
                  'Yes',
                  'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {
                    StatementDelete(id);
                }
            });
            $('#confirmModal').modal('hide');
        }


        function StatementDelete(id) {
            //debugger
            var url = '@Url.Action("DeleteStatement", "BankStatements")';
            $.ajax({
                type: "post",
                url: url,
                data: { id: id },
                success: function (response) {
                    if (response == "Success") {
                        swal("Record Deleted Successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                    } else {
                        swal(response);
                    }
                },
                error: function (xhr) {
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },
            });
        }


    </script>
}