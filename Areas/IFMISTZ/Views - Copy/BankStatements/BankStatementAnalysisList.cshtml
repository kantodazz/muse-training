                                            </tr>
                                            <tr>
                                                <th>5.Opening Balance:</th>
                                                <td id="OpeningBalance"></td>
                                            </tr>
                                            <tr>
                                                <th>6.Closing Balance:</th>
                                                <td id="ClosingBalance"></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br />
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                                <div class="search-container" style="float:right">
                                    <i class="fa fa-search searchIcon"></i>
                                    <input type="search" name="search" placeholder="Search..." id="searchboxView">
                                </div>
                            </div>
                        </div>
                        <br />
                        <table id="dt_BankStatement_detail" class="table table-striped table-bordered table-hover table-condensed table-view-details" width="100%">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>BankStatementSummaryId</th>
                                    <th>Transaction Ref</th>
                                    <th>Related Ref</th>
                                    <th>TransactionType</th>
                                    <th>TransactionAmount</th>
                                    <th>Description</th>


                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-info" data-dismiss="modal" style="width:100px;">
                        <i class="fa fa-times"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section pagespecific{

    <script>

        var dt_Statement_listing = $('#dt_Statement_listing').dataTable();
        $("#dt_Statement_listing_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_Statement_listing.DataTable().search(this.value).draw();
        });

        var data = [];
        $.ajax({
            type: "get",
            url: '@Url.Action("GetBankStatementAnalysisList", "BankStatements")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                console.log(response);
                data = response.data;
                dt_Statement_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_Statement_listing.fnAddData([i + 1,
                       data[i]["BankAccountNumber"],
                       data[i]["AccountName"],
                       data[i]["StatementDateFormatted"],
                       toLabel(data[i]["PrevCloseBalance"]),
                       toLabel(data[i]["OpeningBalance"]),
                       toLabel(data[i]["OpeningBalanceDiscrepancy"]),
                       toLabel(data[i]["TotalDebit"]),
                       toLabel(data[i]["TotalCredit"]),
                       toLabel(data[i]["ClosingBalance"]),
                       toLabel(data[i]["ExpectedClosingBalance"]),
                       toLabel(data[i]["ClosingBalanceDiscrepancy"]),
                       data[i]["OverallStatus"],

                       action(i, data[i]["OverallStatus"])
                    ]);
                    $("#saveLoader-" + i + "").toggle(false)
                }

                if (data.length == 0) {
                    $("#loader").text("No matching records found")
                }
            },
            failure: function (error) {
                swal(error);
            }
        });

          //action
        function action(i, overallStatus) {
           // debugger
            if (overallStatus == "MISSING" ) {
                return '<div class="btn-group" id="drop-' + i + '">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick="Request(' + i + ')">Request Bank Statement</a></li>\
                            </ul>\
                        </div>\
                  <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" class="loading-gif"/>'
            }
            if (overallStatus != "MISSING") {
                return '<div class="btn-group" id="drop-' + i + '">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick="Reject(' + i + ')"></a></li>\
                            </ul>\
                        </div>\
                  <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" class="loading-gif"/>'
            }

        }



        function Request(i) {
           //debugger
            let accountNumber = data[i]["BankAccountNumber"];
            let statementDate = data[i]["StatementDateFormatted"];
            swal({
                title: "RequestBankStatement",
                text: "Are you sure you want to Request Bank Statement of Statement Date  " + statementDate + " for Account Number   " + accountNumber + " ?",
                buttons: [
                    'Yes',
                    'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {

                    validation(i);
                }
            });
            $('#confirmModal').modal('hide');
        }


        function validation(i) {
           //debugger

            let accountNumber = data[i]["BankAccountNumber"];
            let statementDate = data[i]["StatementDateFormatted"];
           // let statementDateReq = data[i]["StatementDateReq"];


            //let accountNumber = accountNumber1 ;
            //let statementDate = statementDate1 ;

            if (accountNumber == "") {
                swal({
                    icon: "warning",
                    title: "Please Select Account Number !",
                });
                return false;
            }


            if (statementDate == "") {

                swal({
                    icon: "warning",
                    title: "Please Statement Date is Required !",
                });

                return false;
            }
            //debugger
            RequestBankStatement(accountNumber, statementDate);
        };

          function RequestBankStatement(a,b) {
          //debugger
       
              //let account = data[i]["BankAccountNumber"];
              //let statementDate = data[i]["StatementDate"];

              let account = a;
              let statementDate = b;

              console.log(account,statementDate);
         

                var url = '@Url.Action("RequestBankStatement", "BankStatements")';
                $("#saveLoader").toggle(true);
                $.ajax({
                    type: "POST",
                    url: url,
                    data: { account: account,  statementDate: statementDate },
                    success: function (response) {
                        if (response == "Success") {
                            swal("Bank Statement Requested Successfully!", { icon: "success" }).then((e) => {
                                $("#saveLoader").toggle(false);
                                window.location.reload();
                               
                            });


                        } else {
                            swal(response, { icon: "warning" }).then((e) => {
                                $("#saveLoader").toggle(false);
                                window.location.reload();
                               
                            });
                        };
                    },
                    error: function (err) {
                        swal(err.statusText)
                        $("#saveLoader").toggle(false);
                    }
                });
            };


