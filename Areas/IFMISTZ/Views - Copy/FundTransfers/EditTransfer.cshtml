@section pagespecific{
    <script>
        


        $(document).ready(function () {
            $("#BankAccountBalance").autoNumeric({ aNeg: "-" }).trigger("change");
            $("#dt_search_gl_item_wrapper .dt-toolbar").remove();
            $("#dt_search_payee_wrapper .dt-toolbar").remove();
            $("#dt_voucher_detail_wrapper .dt-toolbar").remove();
            $("#dt_voucher_detail_wrapper .dt-toolbar-footer").remove();
            if ($("#type").val() == "Within") {
                $("#transferamount").show();
                $("#coa").hide();
                $("#infoPanel").hide();
                $("#amountLabel").hide();
            }
            else {
                $("#transferamount").hide();
                $("#coa").show();
                $("#infoPanel").show();
                $("#amountLabel").show();
            }
            $("#subclassto").hide();
        });


        $("#type").change(function () {
            debugger
            var type = $(this).val();
            if (type == "Within") {
                $("#coa").hide();
                $("#transferamount").show();
                $("#insitutionwithin").hide();
                $("#insitutionbetween").show();
                $("#infoPanel").hide();
                $("#amountLabel").hide();
            }
            else {
                $("#coa").show();
                $("#infoPanel").show();
                $("#amountLabel").show();
                $("#transferamount").hide();
                $("#insitutionwithin").hide();
                $("#insitutionbetween").show();
            }
        });


        $("#category").change(function () {
            debugger
            var type = $(this).val();
            if (type == "Bank") {
                $("#bankto").show();
                $("#subclassto").hide();

            }
            else {
                $("#bankto").hide();
                $("#subclassto").show();
            }
        });

        $("#SubBudgetClass").change(function () {
            debugger
            var reference = $(this).val();

            var url = "GetFundReferenceData/?reference=" + reference;

            $.ajax({
                type: "POST",
                url: url,
                contentType: "html",
                success: function (response) {
                    if (response[0] == "Success") {

                        $("#BankAccountFrom").val(response[3]);
                        $("#sbclassfrom").val(response[2]);
                        $("#BankAccountBalance").val(response[1]);
                        $("#BankAccountBalance").autoNumeric({ aNeg: "-" }).trigger("change");
                    }
                    else {
                        swal(response[0])
                    }
                    $("#BankAccountBalance").autoNumeric({ aNeg: "-" }).trigger("change");
                },
            })
        });

        $("#SubBudgetClassOG").change(function () {
            debugger
            var accountNumber = $(this).val();
            var textdesc = $("#SubBudgetClass option:selected").text();
            var subbudgetclassfrom = textdesc.split('-')[0].trim();
            $("#sbclassfrom").val(subbudgetclassfrom);
            var url = "GetBankAccount/?accountNumber=" + accountNumber;

            $.ajax({
                type: "POST",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#BankAccountFrom").empty();
                    $("#BankAccountFrom").append(response);
                }
            })
        });


        $("#SubBudgetClassTo").change(function () {
            debugger
            var subBudgetClass = $(this).val();

            var url = "GetBankAccount/?subBudgetClass=" + subBudgetClass;

            $.ajax({
                type: "POST",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#BankAccountTo").empty();
                    $("#BankAccountTo").append(response);
                }
            })
        });


        $("#institutionBetween").change(function () {
            debugger
            var institutioncode = $(this).val();

            var url = "GetBankAccountByInstitution/?institutioncode=" + institutioncode;

            $.ajax({
                type: "POST",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#BankAccountTo").empty();
                    $("#BankAccountTo").append(response);
                }
            })

        });


        $("#institutionBetween").change(function () {
            debugger
            var institutionCode = $(this).val();

            var url = "GetSubBudgetClass/?level2Code=" + institutionCode;

            $.ajax({
                type: "POST",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#subbudgetclassto").empty();
                    $("#subbudgetclassto").append(response);
                }
            })
        });




        $("#BankAccountFrom").change(function () {
            debugger;
            var bankAccountNum = $(this).val();
            var institutioncode = $("#instCode").val();

            var url = "GetBankBalance/?institutioncode=" + institutioncode + "&&accountNum=" + bankAccountNum;

            $.ajax({
                type: "POST",
                url: url,
                contentType: "html",
                success: function (response) {
                    if (response[0] == "Success") {
                        $("#BankAccountBalance").val(response[1]);
                    }
                    $("#BankAccountBalance").autoNumeric({ aNeg: "-" }).trigger("change");
                },
                failure: function (error) {
                    swal(error);
                }

            })
        });




        // =========== START VOUCHER DETAILS ===============
        var dt_voucher_detail = $('#dt_voucher_detail').dataTable({
            "data": [],
            "columns": [
                { title: "Expenditure Line Item" },
                { title: "Item Description" },
                { title: "Funding Allocation Reference" },
                { title: "Expense Amount" }
            ]
        });

        // =========== END VOUCHER DETAILS ====================


        ///========== SEARCH GL =====
        var responsiveHelper_dt_search_gl_item = undefined;
        var dt_search_gl_item = $('#dt_search_gl_item').dataTable();

        $("#searchbox2").on("keyup search input paste cut", function () {
            dt_search_gl_item.DataTable().search(this.value).draw();
        });
        var SubBudgetClassOld = $("#SubBudgetClass").val();

        $("#SubBudgetClass").change(function () {

            var _data = dt_voucher_detail.DataTable().rows().data();
            if (_data.length > 0) {
                confirmSubBudgetClassChange(SubBudgetClassOld, $(this).val());
            } else {
                var subbudgetClass = $("#sbclassfrom").val();
                updateSearchGITable(subbudgetClass);
            }
            SubBudgetClassOld = $(this).val();
        });

        function updateSearchGITable(subbudgetClass) {
            //subBudgetClassList = subBudgetClassList.split(";");

            var url = '@Url.Action("GetFundbalance", "FundTransfers")';
            var fundBalanceParams = { "subbudgetClass": subbudgetClass };

            //$("#currency").text(subBudgetClassList[1].trim());
            //$("#currency2").text(subBudgetClassList[1].trim());
            $.ajax({
                type: "post",
                url: url,
                data: fundBalanceParams,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    //=== UPDATE SEARCH GI TABLE ====
                    data = response.data;
                    dt_search_gl_item.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        dt_search_gl_item.fnAddData([i,
                           data[i]["GlAccount"].split("|").join("-"),
                           data[i]["GlAccountDesc"],
