@section Scripts{
    <script>

        $(document).ready(function () {
            GetUnpaidBills();
        });

        var GetUnpaidBills = function () {
            var url = '@Url.Action("GetUnpaidBills", "Billings")';

            $.ajax({
                type: "GET",
                url: url,
                success: function (response) {
                    BindDataTable(response);
                }
            });
        };

        var BindDataTable = function (response) {
            $("#tblUnpaidBills").DataTable({
                "aaData": response,
                "aoColumns": [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "mData": "BillId" },
                    { "mData": "PayCntrNum" },
                    { "mData": "DisplayName" },
                    { "mData": "PhoneNumber" },
                    { "mData": "EmailAddress" },
                    {
                        data: 'BillAmount',
                        render: $.fn.dataTable.render.number(',', '.', 2),
                        className: "text-right"
                    },
                    { "mData": "OverallStatus" },
                    {
                        "mData": "BillingId",
                        "bSortable": false,
                        "render": function (Id, type, full, meta) {
                             return '<div class="btn-group">\
                           <button type="button" class="btn btn-info btn-xs "><i class="fa fa-tasks"></i></button>\
                           <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                   <span class="caret"></span>\
                                       <span class="sr-only"></span>\
                           </button>\
                           <ul class="dropdown-menu">\
                               <li><a href="@Url.Action("PrintBill", "Billings")/' + Id + '" target="_blank">Invoice</a></li>\
                               <li><a href="@Url.Action("PrintTransferForm", "Billings")/' + Id + '" target="_blank">Transfer Letter</a></li>\
                               <li><a href="#" onclick="cancelBill('+ Id +')">Cancel</a></li>\
                            </ul >\
                           </div>'
                        }
                    },
                ]
            });
        }

        var cancelBill = function (id) {
            var url = '@Url.Action("CancelBill", "Billings")/' + id;

            if ($('.modal-header').hasClass('alert-danger')) {
                $('.modal-header').removeClass('alert-danger').addClass('alert-info');
            }

            $("#modal-body").load(url, function () {
                $("#modal").modal({
                    backdrop: "static",
                    keyboard: false
                });
            });
        }

        var saveCancelled = function () {
            $.validator.unobtrusive.parse("#formBill");
            if (!$("#formBill").valid()) {
                return false;
            }
            var url = '@Url.Action("CancelBill", "Billings")';

            var model = $("#formBill").serialize();

            $.ajax({
                type: "POST",
                url: url,
                data: model,
                success: function (response) {
                    if (response == "Success") {
                        alert("Bill successfully cancelled!");
                        location.reload();
                    } else if (response == "Error") {
                        alert("Error, bill not cancelled successfully. Contact System Support.");
                    }
                    else {
                        alert(response);
                    }
                },
                error: function (response) {
                    alert(response)
                    location.reload();
                }
            });
        };

    </script>
}
