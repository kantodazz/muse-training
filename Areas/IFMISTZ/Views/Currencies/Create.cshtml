@model IFMIS.Areas.IFMISTZ.Models.Currency

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .input[type="text"], select {
        border: 1px solid lightgray;
        width: 100%;
        height: 35px;
    }
        .input[type="number"], select {
        border: 1px solid lightgray;
        width: 100%;
        height: 35px;
    }
    .textarea {
        border: 1px solid lightgray;
        width: 100%;
    }

    .input[type="text"]:focus {
        border: 1px solid lightblue;
    }
</style>
   <div id="content" style="margin: 5px; padding-top: 5%">

    <section id="widget-grid" class="">
        <div class="row">

            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>

                        <h2 style="color:black;">Create Currency </h2>
                   </header>
                    <div>
                        <div class="widget-body " style="padding-top:10px; width:100%;">
                         
                            <table style="width:100%">
                                <tr>
                                    <td colspan="1">
                                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div style="padding-left:18%">

                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right">Currency Code:</label>
                                                    <div class="col-md-9">
                                                        <div class="input-group">
                                                            @Html.TextBoxFor(model => model.CurrencyCode, new { @Class = "input", style = "width:300px; ", required = "required" })
                                                            @Html.ValidationMessageFor(model => model.CurrencyCode, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right">Currency Name:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.TextBoxFor(model => model.CurrencyName, new { @Class = "input", style = "width:300px; ", required = "required" })
                                                            @Html.ValidationMessageFor(model => model.CurrencyName, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                              
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right">Country Name:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.DropDownList("CountryId", ViewBag.Country as List<SelectListItem>, "", new { @Class = "input", style = "width:300px", required = "required" })
                                                            @*@Html.DropDownList("CountryId", null, htmlAttributes: new { @Class = "input", style = "width:300px; "})*@
                                                            @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
                                                  
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-3 control-label" style="text-align:right">Currency DigitalCode:</label>
                                                    <div class="col-md-9 inputGroupContainer">
                                                        <div class="input-group">
                                                            @Html.TextBoxFor(model => model.CurrencyDigitalCode, new { @Class = "input", style = "width:300px; ", type="number", required = "required" })
                                                            @Html.ValidationMessageFor(model => model.CurrencyDigitalCode, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                         
                                            </div>

                                            <div class="form-actions">
                                                <div class="row">
                                                    <div class="col-md-7">
                                                        <a href='@Url.Action("CurrencyList", "Currencies")' class="btn btn-info" style="   width:80px;border-radius:1px;color:black">
                                                            <i class="glyphicon glyphicon-arrow-left"></i>
                                                            Back
                                                        </a>
                                                        <button type="submit" id="submit" class="btn action-btn btn btn-info">
                                                            <i class="fa fa-save"></i>
                                                            <img src="~/Content/img/loading.gif" id="saveLoader" />
                                                            Save
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                             }
                                    <td colspan="1"></td>
                                </tr>
                            </table>
                        </div>


                    </div>
                </div>

            </article>
        </div>
    </section>
    </div>
@section pagespecific{

    <script>

        if ('@TempData["Success"]' == 'Success') {
            swal("Saved Successfully!", { icon: 'success' })
                 .then(Ok=> {
                     window.location.href = '@Url.Action("CurrencyList", "Currencies")';
                 });
        } else if ('@TempData["Success"]' == 'No') {

            swal("This Currency already Created!!")

        };

        $("form").submit(function () {
            $("#saveLoader").toggle(true);
            $('#submit').attr("disabled", true);
        });

        $("#saveLoader").toggle(false);
        $("#submit").prop('disabled', false);


    </script>
}