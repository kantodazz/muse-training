@section pagespecific{

    <script>

        var dt_Statement_listing = $('#dt_Statement_listing').dataTable();
        $("#dt_Statement_listing_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_Statement_listing.DataTable().search(this.value).draw();
        });

        var data = [];

        $.ajax({
            type: "get",
            url: '@Url.Action("GetWithHoldingSummary", "WithHolding")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                console.log(response);
                data = response.data;
                dt_Statement_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_Statement_listing.fnAddData([i + 1,
                        data[i]["WithhoderCode"],
                        data[i]["WithhoderTIN"],
                        data[i]["WithhoderName"],
                        toLabel(data[i]["TotalAmount"]),
                        data[i]["PayeeAccountName"],
                        data[i]["PayeeBankAccount"],
                        data[i]["PayeeBankName"],
                        data[i]["MsgID"],
                        data[i]["ControlNumber"],
                        data[i]["OverallStatus"],
                        action(i, data[i]["OverallStatus"])
                    ]);
                    $("#saveLoader-" + i + "").toggle(false)
                }

                if (data.length == 0) {
                    $("#loader").text("No matching records found")
                }
            },
            failure: function (error) {
                swal(error);
            }
        });


        //action
        function action(i, overallStatus) {
    
            if (overallStatus == "Awaiting Control Number" || overallStatus == "Invalid") {
                return '<div class="btn-group" id="drop-' + i + '">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                            <li><a href="#" onclick="ViewDetails(' + i + ')"> Details</a></li>\
                            <li><a href="#" onclick="WithholdCancel(' + i + ')">Cancel</a></li>\
                            <li><a href="#" onclick="WithholdRequest(' + i + ')">Request Control Number</a></li>\
                            </ul>\
                        </div>\
                  <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" class="loading-gif"/>'
            }
            if (overallStatus == "Control Number Received") {
                return '<div class="btn-group" id="drop-' + i + '">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick="ViewDetails(' + i + ')"> Details</a></li>\
                                <li><a href="#" onclick="WithholdConfirm(' + i + ')">Confirm</a></li>\
                                <li><a href="#" onclick="WithholdCancel(' + i + ')">Cancel</a></li>\
                            </ul>\
                        </div>\
                  <img src="/Content/img/loading.gif" id="saveLoader-' + i + '" class="loading-gif"/>'
            }
        }

     // ===============  Confirm Start ==================
        function WithholdConfirm(i) {
            $("#WithHoldingSummaryId").text(data[i]["WithHoldingSummaryId"]);
            document.getElementById("WithHoldingSummaryId").value = data[i]["WithHoldingSummaryId"];
            $('#ApprovalModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function ApproveForm() {
            debugger
            var WithHoldingSummaryId = $("#WithHoldingSummaryId").val();
            var remarks = $("#remarks").val();
           

            if (WithHoldingSummaryId == '' || remarks == '') {
                var url = '@Url.Action("BankStatementList", "WithHolding")';
                swal("Please Fill All the required Fields");
                return false;
            }
            postWithholdConfirm(WithHoldingSummaryId, remarks);
        }

        function postWithholdConfirm(WithHoldingSummaryId, remarks) {
            $(".loadingImg").show();
            $("#approveform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("WithholdingConfirmation", "WithHolding")';
            $.ajax({
                url: url,
                //data: formData,
                data: { WithHoldingSummaryId: WithHoldingSummaryId, remarks: remarks },
                type: 'POST',
                //contentType: false,
                //processData: false,
                success: function (response) {
                    $("#approveform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Confirmed Successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {

                        $("#approveform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response, { icon: "warning" }).then((e) => {
                            window.location.reload();
                        });
                    }
                },
                failure: function (error) {
                    $("#approveform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }
        // =============== End Confirmation ===============


        // =============== Cancellation Start =============
        function WithholdCancel(i) {
            $("#WithHoldingSummaryId").text(data[i]["WithHoldingSummaryId"]);
            document.getElementById("WithHoldingSummaryId").value = data[i]["WithHoldingSummaryId"];
            $('#RejectModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function RejectedForm() {
            debugger
            var WithHoldingSummaryId = $("#WithHoldingSummaryId").val();
            var remarks = $("#remarksr").val();

            if (WithHoldingSummaryId == '' || remarks == '') {
                var url = '@Url.Action("WithholdingSummary", "WithHolding")';
                swal("Please Fill All the required Fields");
                return false;
            }

            var formData = new FormData()
            formData.append('__RequestVerificationToken', $('[name=__RequestVerificationToken]').val());
            formData.append('WithHoldingSummaryId', WithHoldingSummaryId);
            formData.append('CancelRemark', remarks);
            postWithRejection(formData);
        }

        function postWithRejection(formData) {
            $(".loadingImg").show();
            $("#rejectform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("WithholdingCancellation", "WithHolding")';
            $.ajax({
                url: url,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                success: function (response) {
                    $("#rejectform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Cancelled successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        $("#rejectform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response)
                    }
                },
                failure: function (error) {
                    $("#rejectform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }
        // =============== End Cancellation ===============

        // =============== Details Start ==================

        /**
        * Show WithHolding Details Details
        */
        var dt_BankStatement_detail = $('#dt_BankStatement_detail').dataTable();
        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_BankStatement_detail.DataTable().search(this.value).draw();
        });
        $("#dt_BankStatement_detail_wrapper .dt-toolbar").remove();

        function ViewDetails(i) {

            $("#withholderCode").text(data[i]["WithhoderCode"]);
            $("#withholderName").text(data[i]["WithhoderName"]);
            $("#withholderTIN").text(data[i]["WithhoderTIN"]);
            $("#totalAmount").text(toLabel(data[i]["TotalAmount"]));
            $("#overalstatus").text(data[i]["OverallStatus"]);
            $("#controlNumber").text(data[i]["ControlNumber"]);
            $("#payeeBankAccount").text(data[i]["PayeeBankAccount"]);
            $("#payeeAccountName").text(data[i]["PayeeAccountName"]);
            $("#payeeBankName").text(data[i]["PayeeBankName"]);
            $("#payeeBIC").text(data[i]["PayeeBIC"]);
            $("#subBudgetClass").text(data[i]["SubBudgetClass"]);
            $("#msgID").text(data[i]["MsgID"]);
           

            $.ajax({
                type: "get",
                url: '@Url.Action("GetWithHoldDetails", "WithHolding")' + "/?summaryid=" + data[i]["WithHoldingSummaryId"],
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    var _data = response.data2;
                    dt_BankStatement_detail.fnClearTable();
                    for (var i = 0; i < _data.length; i++) {
                        dt_BankStatement_detail.fnAddData([i + 1,
                           _data[i]["PVNo"],
                           _data[i]["Payeename"],
                            toLabel(_data[i]["VoucherOperationalAmount"]),
                           toLabel(_data[i]["OperationalWithHoldingAmount"]),
                            _data[i]["ControlNumber"],
                            _data[i]["OverallStatus"],

                        ]);
                    }

                    if (_data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });

            $('#StatementDetailsModal').modal('show');
        }

        // =============== END  Detail ===============



        function WithholdRequest(i, id) {
            debugger
            if (i == 'x') i = id;
            var id = data[i]["WithHoldingSummaryId"];
            swal({
                title: "Request Control Number",
                text: "Are you sure you want Request Number ? ",
                buttons: [
                  'Yes',
                  'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {

                    requestControlWithholdingTax(id);
                }
            });
            $('#confirmModal').modal('hide');
        }


        function requestControlWithholdingTax(id) {
            
            var url = '@Url.Action("RequestControlWHTAsync", "WithHolding")';
            $.ajax({
                type: "post",
                url: url,
                data: { id: id },
                success: function (response) {
                    if (response == "Success") {
                        swal("Request Successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                    } else {
                        swal(response);
                    }
                },
                error: function (xhr) {
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },
            });
        }


    </script>
}
