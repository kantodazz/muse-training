
@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.PendingCoaVM>
@{
    ViewBag.Title = "Pending Coa List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    td {
        padding: 5px;
    }

    .table-amount td:nth-child(7) {
        text-align: right;
    }

    .table-view-details td:nth-child(4) {
        text-align: right;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 110px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .total-amount {
        float: right;
    }
</style>
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div>
                        <div class="widget-body">
                            <a href="@Url.Action("UploadCoa", "COAs")" class="btn btn-info">
                                <span class="glyphicon glyphicon-plus"></span>
                                Add New
                            </a>

                            <hr class="simple" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search searchIcon"></i>
                                        <input type="search" name="search" placeholder="Keywords..." id="searchbox">
                                        <button style="background-color:#2196F3;color:white" onclick="searchPayment()">Search</button>
                                    </div>
                                </div>
                            </div>
                            <table id="dt_coa_listing" class="table table-bordered table-condensed table-amount">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Vote</th>
                                        <th>Sub Vote</th>
                                        <th>TR</th>
                                        <th>Cost<br /> Center</th>
                                        <th>Sub<br />Budget<br />Class</th>
                                        <th style="width:300px">Gl Account</th>
                                        <th>GFS Code</th>
                                        <th>GFS Desc</th>
                                        <th>Status</th>
                                        <th style="width:50px">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>



<div class="modal fade" id="commentModal" style="left:4%">
    <div class="modal-dialog" style="width:40%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"> Comment</h3>
            </div>
            <div class="modal-body">
                <div>
                    <div class="widget-body " style="padding-top:2px">
                        <input type="hidden" name="CoaId" id="CoaId" />
                        @Html.AntiForgeryToken()
                        <table style="margin-left:5%">
                            <tr>
                                <td class="form-label">
                                    Remarks
                                    <i class="fa fa-times" style="color:white" id="remarks1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <textarea style="width:300px" rows="2" id="remarks" maxlength="350"></textarea><br />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="form-label">
                                    Attachment
                                    <i class="fa fa-times" style="color:white" id="attachment1"></i>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <input type="file" id="attachment" class="input" style="width:300px" />
                                    </div>
                                </td>

                            </tr>
                        </table>
                    </div>
                </div>

                <div class="modal-footer">
                    <a href="#" class="btn btn-info" data-dismiss="modal">Cancel</a>
                    <button type="submit" class="btn btn-info" onclick="ApprovalForm()" id="approvalform">
                        <i class="fa fa-times"></i>Confirm
                        <img src="/Content/img/loading.gif" class="saveLoader" />
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>






@section pagespecific{

    <script>
        var dt_coa_listing = $('#dt_coa_listing').dataTable();
        $("#dt_coa_listing_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            dt_coa_listing.DataTable().search(this.value).draw();
        });

        var data = [];
        $.ajax({
            type: "get",
            url: '@Url.Action("getPendingCoaList", "COAs")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                debugger;
                console.log(response);
                data = response.data;
                dt_coa_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_coa_listing.fnAddData([i + 1,
                        data[i]["Vote"],
                        data[i]["SubVote"],
                        data[i]["TR"],
                        data[i]["CostCentre"],
                        data[i]["SubBudgetClass"],
                        data[i]["GlAccount"].split("|").join("-"),
                        data[i]["GfsCode"],
                        data[i]["GFSDesc"],
                        data[i]["Status"],
                         '<div class="btn-group">\
                              <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick="ViewDetails(' + data[i]["CoaId"] + ')"> Details</a></li>\
                                <li><a href="#" onclick="EditCoa(' + data[i]["CoaId"] + ')"> Edit</a></li>\
                                <li><a href="#" onclick="Cancel(' + i + ')">Cancel</a></li>\
                                <li><a href="#" onclick="Confirm(' + i + ')">Confirm</a></li>\
                            </ul>\
                        </div>'
                    ]);
                }
                if (data.length == 0) {
                    $("#loader").text("No matching records found")
                }
            },
            failure: function (error) {
                swal(error);
            }
        });

        var ViewDetails = function (id) {
            $("#divLoader").show();
            window.location = '@Url.Action("Details", "COAs")/' + id;
        };


        var EditCoa = function (id) {
            $("#divLoader").show();
            window.location = '@Url.Action("Edit", "COAs")/' + id;
        };

        function Cancel(i, id) {
            var status = "CANCELLED";
            if (i == 'x') i = id;
            var id = data[i]["CoaId"]
            swal({
                title: "Confirm Delete",
                text: "Are you sure you want to delete this record ? ",
                buttons: [
                  'Yes',
                  'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {
                    ConfirmDelete(id,status);
                }
            });
            $('#confirmModal').modal('hide');
        }

        function ConfirmDelete(id,status) {
            debugger
            var url = '@Url.Action("ChangeCoaStatus", "COAs")';
            $.ajax({
                type: "post",
                url: url,
                data: { Status: status, coaId: id },
                success: function (response) {
                    if (response == "Success") {
                        swal("Record Cancelled Successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                    } else {
                        swal(response);
                    }
                },
                error: function (xhr) {
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },
            });
        }


     // ======= Start ========
        function Confirm(i) {
          debugger
            $("#CoaId").text(data[i]["CoaId"]);
            document.getElementById("CoaId").value = data[i]["CoaId"];
            $('#commentModal').modal('show');
        }

        $(".saveLoader").toggle(false);
        function ApprovalForm() {
           debugger
            var coaId = $("#CoaId").val();
            var remarks = $("#remarks").val();
            var attachment = $("#attachment").val();

            if (coaId == '' || remarks == '') {
                var url = '@Url.Action("PendingCoaList", "COAs")';
                swal("Please Fill All the required Fields");
                return false;
            }

            if (attachment != '') {

                var file = document.querySelector("#attachment");
                if (/\.(pdf)$/i.test(file.files[0].name) === false) {
                    swal("Please Upload Attachment in PDF Format)");
                    return false;
                }
            }
            postConfirm(coaId, remarks);
        }

        function postConfirm(coaId, remarks) {
            debugger
            //console.log(formData);
            $(".loadingImg").show();
            $("#approvalform").prop('disabled', true);
            $(".saveLoader").toggle(true);
            var url = '@Url.Action("CoaConfirmation", "COAs")';
            $.ajax({
                url: url,
                data: { CoaId: coaId, remarks: remarks },
                type: 'POST',
                //contentType: false,
                //processData: false,
                success: function (response) {
                    $("#approvalform").prop('disabled', true);
                    $(".saveLoader").toggle(true);
                    if (response == "Success") {
                        swal("Confirmed Successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });

                    } else {
                        $("#approvalform").prop('disabled', false);
                        $(".saveLoader").toggle(false);
                        swal(response, { icon: "warning" }).then((e) => {
                            window.location.reload();
                        });
                    }
                },
                failure: function (error) {
                    $("#approvalform").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error)
                }
            });
        }
        //=============== End confirmed    ===============

       

    </script>
}

