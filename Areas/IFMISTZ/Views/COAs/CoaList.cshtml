                    </div>
                </div>
            </article>
        </div>
    </section>
</div>



@section pagespecific{

    <script>
        // =============INITIOLIZATION OF THE DATATABLE =================//
        var dt_coa = $('#dt_coa').dataTable({

            "language": {
                "emptyTable": '<strong id="loader">No matching records found...</strong>',
                "zeroRecords": "No matching records found"
            }

        });
        $("#dt_coa_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            //if (!this.value) {
            //    dt_coa.fnClearTable();
            //} else {
            //    if (this.value.includes("-")) {
            //        searchTableUpdate(this.value.split('-').join('|'));
            //    } else {
            //        searchTableUpdate(this.value);
            //    }
            //}
        });



        // ============ INIT DATA TABLES START =====================
        var data = [];
        function loadTableData(){

            actionTemplate = function(i, id, Status) {
                return Status != "ACTIVE" ?
                      '<div class="btn-group">\
                       <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                          <span class="caret"></span>\
                                     <span class="sr-only"></span>\
                         </button>\
                        <ul class="dropdown-menu">\
                      <li><a href="@Url.Action("Edit", "COAs")/' + id + '">Edit</a></li>\
                     <li><a href="#" onclick="Activate(' + i + ')">Activate</a></li>\
                     <li><a href="#" onclick="Cancel(' + i + ')">Cancel</a></li>\
                     </ul>\
                    </div>'
                    :'<div class="btn-group">\
                      <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                      <span class="caret"></span>\
                       <span class="sr-only"></span>\
                         </button>\
                        <ul class="dropdown-menu">\
                      <li><a href="@Url.Action("Edit", "COAs")/' + id + '">Edit</a></li>\
                     <li><a href="#" onclick="Deactivate(' + i + ')">Deactivate</a></li>\
                     <li><a href="#" onclick="Cancel(' + i + ')">Cancel</a></li>\
                     </ul>\
          </div>'
            }
        }
            function searchTableUpdate(search) {
                var url = '@Url.Action("SearchCoa", "COAs")';
                $.ajax({
                    type: "get",
                    url: url + "/?search=" + search + "",
                    contenttype: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (response) {
                        data = response.data;
                        dt_coa.fnClearTable();
                        for (var i = 0; i < data.length; i++) {
                            dt_coa.fnAddData([i + 1,
                               data[i]["Vote"],
                               data[i]["SubVote"],
                               data[i]["TR"],
                               data[i]["CostCentre"],
                               data[i]["SubBudgetClass"],
                               data[i]["GlAccount"].split("|").join("-"),
                               data[i]["GfsCode"],
                               data[i]["GFSDesc"],
                               data[i]["Status"],
                               actionTemplate(i, data[i]["CoaId"], data[i]["Status"])
                            ]);
                        }
                    },
                    failure: function (error) {
                        swal(error);
                    }
                });
            }
            // ====================== LOAD TABLE DATA START =====================
            //var data = [];
            //function loadTableData() {
                var url = '@Url.Action("GetCoa", "COAs")';
                $.ajax({
                    type: "get",
                    url: url,
                    contenttype: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (response) {
                        data = response.data;
                        dt_coa.fnClearTable();
                        for (var i = 0; i < data.length; i++) {
                            dt_coa.fnAddData([i + 1,
                             data[i]["Vote"],
                             data[i]["SubVote"],
                             data[i]["TR"],
                             data[i]["CostCentre"],
                             data[i]["SubBudgetClass"],
                             data[i]["GlAccount"].split("|").join("-"),
                             data[i]["GfsCode"],
                             data[i]["GFSDesc"],
                             data[i]["Status"],
                             actionTemplate(i, data[i]["CoaId"], data[i]["Status"])
                            ]);
                        }
                    },
                    failure: function (error) {
                        swal(error);
                    }
                });

        function searchPayment() {
            $("#loader").text("Loading...")
            $.ajax({
                type: "get",
                url: '@Url.Action("GetCoaList", "COAs")' + "/?InstitutionCode=" + $("#InstitutionCode").val() + "&&keywords=" + $('#searchbox').val() + "",
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.data;
                    dt_coa.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        dt_coa.fnAddData([i + 1,
                        data[i]["Vote"],
                        data[i]["SubVote"],
                        data[i]["TR"],
                        data[i]["CostCentre"],
                        data[i]["SubBudgetClass"],
                        data[i]["GlAccount"].split("|").join("-"),
                        data[i]["GfsCode"],
                        data[i]["GFSDesc"],
                        data[i]["Status"],
                        actionTemplate(i, data[i]["CoaId"], data[i]["Status"])
                        ]);
                    }
                    if (data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        loadTableData();
        var globalCoaId = 0;
        function edit(i) {
            globalCoaId = i;
            $("#Vote").val(data[i]["Vote"]);
            $("#SubVote").val(data[i]["SubVote"]);
            validateInputsParameters(["#Vote", "#SubVote"])
            $("#editModal").modal('show');
        }



        function Delete(i) {
            swal({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover this COA!",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    deleteItemConfirmed(data[i]["CoaId"])
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

        /**
        * Send delete signal to the backend
        * param  {Int} i - Id of the selected Item
        */
        function deleteItemConfirmed(Id) {
            var url = '@Url.Action("DeleteCoa", "COAs")';
            $.ajax({
                type: "post",
                url: url,
                data: { "CoaId": Id },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {

                    if (response == "Success") {
                        swal("Deleted Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }

                },
                failure: function (error) {
                    swal(error);
                }
            });
        }



      function save() {
            if (voucherSummaryFormValidation()) {
                commitForm()
            } else {
                swal("Please fix form Errors")
            }
        }

        function commitForm() {
            $.ajax({
                type: "post",
                url: '@Url.Action("Edit", "COAs")',
                data: {
                    segmentId: data[globalCoaId]["CoaId"],
                    createCoaSegmentVm:{
                        cOAVersionId: $("#COAVersion").val(),
                        cOASegmentId: $("#COASegmentName").val(),
                        cOASegmentCode: $("#COASegmentCode").val(),
                        segmentDescription: $("#SegmentDescription").val(),
                    }
                },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    $("#form_submision").prop('disabled', false);
                    $("#saveLoader").toggle(false);
                    if (response == "Success") {
                        swal("Saved Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    $("#form_submision").prop('disabled', false);
                    $("#saveLoader").toggle(false);
                    swal(error);
                }
            });
        }

        function voucherSummaryFormValidation() {
            var isNotValid = validateInputsParameters([
                "#COASegmentCode",
                "#SegmentDescription",
            ]);

            if (isNotValid) {
                $(isNotValid + "_1").attr("style", "color: red;");
                return false
            }
            return true
        }

        function validateInputsParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i] + "_1").attr("style", "color: white;");
                }
            }

            resetStyle(parameterList);
            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val().trim()) {
                    return parameterList[i];
                }
            }
            return null;
        }
        function Cancel(i) {
            status = "CANCELLED";
            swal({
                title: "Are you sure?",
                text: "Coa Item  will be Cancelled!",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    ChangeCoaItemStatus(data[i]["CoaId"], status)
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

        function Activate(i) {
            status = "ACTIVE";
            swal({
                title: "Are you sure?",
                text: "Coa Item Status will be changed!",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    ChangeCoaItemStatus(data[i]["CoaId"], status)
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }
        function Deactivate(i) {
            status = "INACTIVE";
            swal({
                title: "Are you sure?",
                text: "Coa Item Status will be changed!",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    ChangeCoaItemStatus(data[i]["CoaId"],status);

                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

        function ChangeCoaItemStatus(Id, status) {
            var url = '@Url.Action("ChangeCoaStatus", "COAs")';
            $.ajax({
                type: "post",
                url: url,
                data: {
                    Status: status,
                    CoaId: Id
                },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {

                    if (response == "Success") {
                        swal("Changed Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }

                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
    </script>
}
