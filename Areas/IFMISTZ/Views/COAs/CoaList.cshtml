                                        <th>Vote</th>
                                        <th>Sub Vote</th>
                                        <th>TR</th>
                                        <th>Cost<br /> Center</th>
                                        <th>Sub<br/>Budget<br />Class</th>
                                        <th style="width:300px">Gl Account</th>
                                        <th>GFS Code</th>
                                        <th>GFS Desc</th>
