@section pagespecific {
    <script type="text/javascript">
        $(function () {
            BindDataTable();
        });

        var BindDataTable = function (response) {
            var url = '@Url.Action("GetSubmittedExchequers", "ExchequerRequests")';
            $("#dt_basic").DataTable({
                "bServerSide": true,
                "sAjaxSource": url,
                "fnServerParams": function (aoData) {
                    aoData.push({ "name": "overallStatus", "value": "Submitted" });
                },
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        type: "GET",
                        url: sSource,
                        data: aoData,
                        success: fnCallback
                    });
                },
                "aoColumns": [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "mData": "GlAccountGlAccountDesc" },
                    {
                        data: 'ExpenditureAmount',
                        render: $.fn.dataTable.render.number(',', '.', 2),
                        className: "text-right"
                    },
                    {
                        data: 'BudgetBalance',
                        render: $.fn.dataTable.render.number(',', '.', 2),
                        className: "text-right"
                    },
                    { "mData": "OverallStatus" },
                    {
                        "mData": "ExchequerRequestId",
                        "bSortable": false,
                        "render": function (Id, type, full, meta) {
                            if (full.OverallStatus == "Submitted") {
                                return '<div class="btn-group">\
                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                <span class="caret" ></span>\
                                <span class="sr-only">Toggle Dropdown</span>\
                                </button>\
                                <ul class="dropdown-menu">\
                                <li><a class="dropdown-item" href="@Url.Action("ExchequerRequestsDetails", "ExchequerRequests")/' + Id + '">Details</a><li>\
                                <li><a class="dropdown-item" href="#" onclick="submitReallocation('+ Id + ')">Request Exchequer</a><li>\
                             </ul>'
                            }
                            return '<div class="btn-group">\
                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                <span class="caret" ></span>\
                                <span class="sr-only">Toggle Dropdown</span>\
                                </button>\
                                <ul class="dropdown-menu">\
                                <li><a class="dropdown-item" href="@Url.Action("ExchequerRequestsDetails", "ExchequerRequests")/' + Id + '">Details</a><li>\
                             </ul>'
                        }
                    },
                ]
            });
        };

        var submitReallocation = function (id) {
             var url = '@Url.Action("SubmitReallocations", "ExchequerRequests")';
            swal({
                title: "Submission",
                text: "Are you sure you want to request exchequer",
                buttons: [
                    'Yes',
                    'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (!isConfirm) {
                    $("#divLoader").show();
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: { id: id },
                        success: function (response) {
                            if (response == "Success") {
                                swal("Exchequer Requested Successfully!", { icon: "success" }).then((e) => {
                                    window.location.reload();
                                });
                            } else if (response == "Invalid Json File") {
                                   swal("Invalid File Format!", { icon: "info" }).then((e) => {
                                });
                            }
                            else if (response == "Failed to send request") {
                                swal("Failed to send request!", { icon: "info" }).then((e) => {
                                });
                            }
                        },
                        error: function (xhr) {
                            swal("An error occurred while processing your request, try again later", { icon: "error" }).then((e) => {
                                window.location.reload();
                            });
                        },
                        complete: function () {
                            $("#divLoader").hide();
                        }
                    });
                }
            });
        };


        var transferDetails = function (id) {
            $("#divLoader").show();
            $("#btnSave").hide();
            var url = '@Url.Action("TransferDetails", "FundTransfers")/' + id;

            if ($('.modal-header').hasClass('alert-danger')) {
                $('.modal-header').removeClass('alert-danger').addClass('alert-info');
            }

            $('.modal-header').html('').html('Transfer Details');
            $("#modal-details-body").load(url, function () {
                $("#modal-details").modal({
                    backdrop: "static",
                    keyboard: false
                });
                $("#divLoader").hide();
            });
        };
    </script>
}
