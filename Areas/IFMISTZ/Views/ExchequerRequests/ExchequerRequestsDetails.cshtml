                                            @Html.DisplayNameFor(model => model.FundSource)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.FundSource)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.ComponentName)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.ComponentName)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.TransactionDesc)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.TransactionDesc)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.OverallStatus)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.OverallStatus)
                                        </dd>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.MsgId)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.MsgId)
                                        </dd>
                                    </dl>
                                    <hr />
                                    <table id="dt_basic" class="table table-condensed table-stripped table-hover table-bordered table-responsive">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Parent Institution Code</th>
                                                <th>Parent Institution Name</th>
                                                <th>Operational Currency</th>
                                                <th>OperationalAmount</th>
                                                <th>Base Currency</th>
                                                <th>Base Amount</th>
                                                <th>Amount</th>
                                                <th>Funding Source</th>
                                                <th>Funding Source Desc</th>
                                                <th>Sub Budget Class</th>
                                                <th>Vote Code</th>
                                                <th>Vote Desc</th>
                                                <th>GFS Code</th>
                                                <th>GFS Code Desc</th>
                                                <th>Gl Account</th>
                                                <th>Gl Account Desc</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int i = 0;
                                            }
                                            @foreach (var item in Model.DfundSummaries.OrderByDescending(a => a.DfundExpenditureSummaryId))
                                            {
                                                i++;
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.ParentInstitutionCode</td>
                                                    <td>@item.ParentInstitutionName</td>
                                                    <td>@item.OperationalCurrency</td>
                                                    <td style="text-align: right">@Html.DisplayFor(model => item.OperationalAmount, "_DecimalThousands")</td>
                                                    <td>@item.BaseCurrency</td>
                                                    <td style="text-align: right">@Html.DisplayFor(model => item.BaseAmount, "_DecimalThousands")</td>
                                                    <td style="text-align: right">@Html.DisplayFor(model => item.Amount, "_DecimalThousands")</td>
                                                    <td>@item.FundingSource</td>
                                                    <td>@item.FundingSourceDesc</td>
                                                    <td>@item.SubBudgetClass</td>
                                                    <td>@item.VoteCode</td>
                                                    <td>@item.VoteDesc</td>
                                                    <td>@item.GFSCode</td>
                                                    <td>@item.GFSCodeDescription</td>
                                                    <td>@item.GlAccount</td>
                                                    <td>@item.GlAccountDesc</td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                <span class="caret"></span>
                                                                <span class="sr-only">Toggle Dropdown</span>
                                                            </button>
                                                            @if (Model.OverallStatus == "Pending")
                                                            {
                                                                <ul class="dropdown-menu">
                                                                    <li><a href="#" onclick="cancelDfundSummaries(@item.DfundExpenditureSummaryId)">Cancel</a></li>
                                                                </ul>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
