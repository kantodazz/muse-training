        function openViewDialog(PaymentSummaryId) {
            var d = data.filter(v=>v.PaymentSummaryId == PaymentSummaryId)[0];
            $("#_InstitutionName").text(d["InstitutionName"])
            $("#_InstitutionCode").text(d["InstitutionCode"])
            $("#reasonId").text(d["RejectedReason"] ? d["RejectedReason"] : "-")
            viewData(d["PaymentSummaryId"]);
