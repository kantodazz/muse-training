@section pagespecific{
    <script>
        var dt_voucher_listing = $('#dt_voucher_listing').dataTable({
            "language": {
                "emptyTable": '<strong id="loader" style="color:green">No matching records found</strong>',
                "zeroRecords": "No matching records found"
            },
        });

        $("#dt_voucher_listing_wrapper .dt-toolbar").remove();

        $("#searchbox").on("keyup search input paste cut", function () {
            dt_voucher_listing.DataTable().search(this.value).draw();
        });

        $("#bankAccounts").change(function () {
            filterTableData(this.value.trim())
            checkedRows = []
            toggleConfirmButton()
            $("#checkall").prop('checked', false)
            $("#selectedItems").text("No Item(s) Selected");
        })

        $("#voteCodes").change(function () {
            filterTableData()
            checkedRows = []
            toggleConfirmButton()
            $("#checkall").prop('checked', false)
            $("#selectedItems").text("No Item(s) Selected");
        })

        $("#sbc").change(function () {
            filterTableData()
            checkedRows = []
            toggleConfirmButton()
            $("#checkall").prop('checked', false)
            $("#selectedItems").text("No Item(s) Selected");
        })

        var data = [];
        var globalPayeeId = null;
        $(document).ready(function () {
            loadTableData();
        });
        function viewAttachment(PaymentSummaryId) {
            window.location.href =
                '@Url.Action("AttachmentView", "PaymentVoucherAttachments")/?groupId=' + PaymentSummaryId + '&&sourceModule=PaymentSummary';
        }
        function actionTemplate(d) {
            return '<div class="btn-group" id="drop-' + d.PaymentSummaryId + '">\
                        <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                         <span class="caret"></span\
                         <span class="sr-only"></span>\
                        </button>\
                        <ul class="dropdown-menu">\
                          <li> <a href="#" onclick= "openViewDialog(' + d.PaymentSummaryId + ')">View</a></li>\
                          <li><a href="#" onclick= "reject(' + d.PaymentSummaryId + ')">Reject</a></li>\
                           <li><a href="/Content/uploads/' + d.PaymentSlipFilePath + '">View Slip</a></li>\
                           <li><a href="#" onclick="viewAttachment(' + d.PaymentSummaryId + ')">Additional Attachments</a></li>\
                        </ul>\
                    </div>\
                 <img src="/Content/img/loading.gif" id="saveLoader-' + d.PaymentSummaryId + '" class="loading-gif"/>\
            '
        }

        function loadTableData() {
            var bankAccounts = []
            var voteCodes = []
            var sbcs = []
            $("#loader").text("Loading please wait...")
            $.ajax({
                type: "get",
                url: '@Url.Action("GetPaymentSummaryPO", "CommunityPaymentBatch")',
                data: { source: "Approval", overallStatus: "Verified in CHW Payment Office" },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.data;
                    for (var i = 0; i < data.length; i++) {
                        var bankAcc = data[i]["PayerBankAccount"] == "9921180001" ? data[i]["SubTsaBankAccount"] : data[i]["PayerBankAccount"]
                        var voteCode = data[i].InstitutionCode;
                        var sbc = data[i].SubBudgetClass;
                        if (!bankAccounts.includes(bankAcc)) {
                            bankAccounts.push(bankAcc);
                        }
                        if (!voteCodes.includes(voteCode)) {
                            voteCodes.push(voteCode);
                        }
                        if (!sbcs.includes(sbc)) {
                            sbcs.push(sbc);
                        }
                    }
                    createBankAccountsFilter(bankAccounts);
                    createVoteCodesFilter(voteCodes);
                    createSBCFilter(sbcs);
                    $("#voteCodes").trigger('change');
                    $("#sbc").trigger('change');
                    if (data.length == 0) {
                        $("#loader").text("No record found.")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function createBankAccountsFilter(bankAccounts) {
            var bankAccSelect = document.getElementById("bankAccounts")
            bankAccounts.forEach(bankAcc => {
                let option = document.createElement('option')
                option.value = bankAcc
                option.text = bankAcc
                bankAccSelect.appendChild(option);
            });
        }

        function createVoteCodesFilter(voteCodes) {
            var voteCodeSelect = document.getElementById("voteCodes")
            if (voteCodeSelect) {
                voteCodes.forEach(voteCode => {
                    let option = document.createElement('option')
                    option.value = voteCode
                    option.text = voteCode
                    voteCodeSelect.appendChild(option);
                });
            }
        }

        function createSBCFilter(sbcs) {
            var sbcSelect = document.getElementById("sbc")
            if (sbcSelect) {
                sbcs.forEach(sbc => {
                    if (sbc) {
                        let option = document.createElement('option')
                        option.value = sbc
                        option.text = sbc
                        sbcSelect.appendChild(option);
                    }
                });
            }
        }

        function filterTableData(query) {
            let bankAccount = $("#bankAccounts").val()
            let _data = data.filter(v=> {
                if (v.PayerBankName.includes("TSA")) {
                    if (v.SubTsaBankAccount == bankAccount) {
                        return v
                    }
                } else if (v.PayerBankAccount == bankAccount) {
                    return v
                }
            })
            let voteCode = $("#voteCodes").val()
            if (voteCode) {
                _data = _data.filter(v => v.InstitutionCode == voteCode)
            }
            let sbc = $("#sbc").val()
            if (sbc) {
                _data = _data.filter(v => v.SubBudgetClass == sbc)
            }
            dt_voucher_listing.fnClearTable();
            for (var i = 0; i < _data.length; i++) {
                dt_voucher_listing.fnAddData([i + 1,
                  _data[i]["PaymentNo"],
                  _data[i]["NumTrx"],
                  toLabel(_data[i]["OperationalAmount"]),
                  _data[i]["SubBudgetClass"],
                  _data[i]["PayerBankAccount"],
                  _data[i]["PaymentMethod"],
                  _data[i]["FSentToPOAt"],
                  _data[i]["OverallStatus"],
                  _data[i]["RejectedReason"],
                  actionTemplate(_data[i]),
                  '<input  type="checkbox" id="row-' + _data[i].PaymentSummaryId + '" onchange="rowChecked(' + _data[i].PaymentSummaryId + ')"/>'
                ]);
                $("#saveLoader-" + _data[i].PaymentSummaryId + "").toggle(false)
            }
        }

        var checkedRows = [];
        function rowChecked(rowId) {
            if ($("#row-" + rowId).is(":checked")) {
                checkedRows.push(rowId);
            } else {
                remove(checkedRows, rowId);
            }
            toggleConfirmButton();
        }

        function checkAll() {
            checkedRows = [];
            if ($("#checkall").is(":checked")) {
                for (var i = 0; i < data.length; i++) {
                    checkedRows.push(i);
                    $("#row-" + i).prop('checked', true);
                }
            } else {
                for (var i = 0; i < data.length; i++) {
                    $("#row-" + i).prop('checked', false);
                }
            }
            toggleConfirmButton();
        }

        $("#confirm").attr('disabled', true);

        function toggleConfirmButton() {
            var TotalAmount = 0;
            if (checkedRows.length > 0) {
                checkedRows.forEach(rowId=> {
                    var row = data.filter(v=>v.PaymentSummaryId == rowId)[0];
                    TotalAmount = TotalAmount + toNumber(row.OperationalAmount);
                });

                $("#confirm").attr('disabled', false);
                $("#selectedItems").text(checkedRows.length + " Item(s) Selected ~ Total: " + toLabel(TotalAmount));
            } else {
                $("#confirm").attr('disabled', true);
                $("#selectedItems").text("No Item(s) Selected");
            }
        }
        function remove(array, val) {
            var found = array.indexOf(val);
            while (found !== -1) {
                array.splice(found, 1);
                found = array.indexOf(val);
            }
        }

        function confirmPayment() {
            swal({
                text: "Approved Selected Item(s)?",
                buttons: ["NO", "YES"],
            }).then((willGenerate) => {
                if (willGenerate) {
                    $("#confirm").attr('disabled', true);
                    postConfimedPayment();
                } else {
                    swal("Cancelled");
                }
            });
        }

        function postConfimedPayment() {
            var url = '@Url.Action("ApproveCHWVoucherPO", "CommunityPaymentBatch")';
            $.ajax({
                type: "post",
                url: url,
                data: { "paymentSummaryIds": checkedRows },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == 'Success') {
                        swal("Approved successfully!", { icon: "success" })
                        .then((e) => {
                            window.location.reload();
                        });
                    } else {
                        swal(response);
                    }
                },
