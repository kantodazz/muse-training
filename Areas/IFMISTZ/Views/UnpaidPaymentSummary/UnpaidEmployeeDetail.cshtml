                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>

                    <div>
                        @*<div class="row">
                                <div style="padding-left:10px;padding-right:10px">
                                    <div class="form-group">
                                        <div class="col-md-2">
                                            <button class="btn btn-info PrintBtn" id="Print" onclick="printSlip()">
