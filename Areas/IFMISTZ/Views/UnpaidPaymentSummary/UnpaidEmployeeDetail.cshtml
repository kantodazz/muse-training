                                        Decimal SubNET = 0, SubATS = 0, SubATE = 0, SubTOTAL = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        i++;
                                        SubNET += decimal.Parse(item.NetAmount.ToString());
                                        SubATE += decimal.Parse(item.AtEmployer.ToString());
                                        SubATS += decimal.Parse(item.AtSource.ToString());
                                        SubTOTAL += decimal.Parse(item.TotalAmout.ToString());

                                        <tr>
                                            <td>@i</td>
                                            @*<td><input type="checkbox" value="@item.UnpaidEmployeeDetailId" id="row-@item.UnpaidEmployeeDetailId" onchange="rowChecked(@item.UnpaidEmployeeDetailId)" class="checkBox1"></td>*@

                                            <td>
                                                @Html.DisplayFor(modelItem => item.CheckNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FullName)
                                            </td>
                                            <td style="text-align: right">
                                                @Html.DisplayFor(modelItem => item.NetAmount, "_DecimalThousands")
                                            </td>
                                            <td style="text-align: right">
                                                @Html.DisplayFor(modelItem => item.AtSource, "_DecimalThousands")
                                            </td>

                                            <td style="text-align: right">
                                                @Html.DisplayFor(modelItem => item.AtEmployer, "_DecimalThousands")
                                            </td>

                                            <td style="text-align: right">
                                                @Html.DisplayFor(modelItem => item.TotalAmout, "_DecimalThousands")
                                            </td>

                                            <td style="text-align: center">
                                                @Html.DisplayFor(modelItem => item.Checkdate, "_ShortDateTime")

