@section pagespecific{
    <script>
        var dt_voucher_listing = $('#dt_voucher_listing').dataTable({
            "language": {
                "emptyTable": '<strong id="loader">Loading...</strong>',
                "zeroRecords": "No matching records found"
            }
        });

        $("#dt_voucher_listing_wrapper .dt-toolbar").remove();

        $("#searchbox").on("keyup search input paste cut", function () {
            dt_voucher_listing.DataTable().search(this.value).draw();
        });

        var dt_payee_details = $('#dt_payee_details').dataTable({
            "sDom": 't',
            "autoWidth": false,
            "searching": false,
            "bPaginate": false,
            "info": false,
            "columns": [
                { title: "Payee Name" },
                { title: "Payee code" },
                { title: "Bank Name" },
                { title: "Bank Account No" },
                { title: "Address" }]
        });

        var dt_voucher_detail = $('#dt_voucher_detail').dataTable({
            "sDom": 't',
            "autoWidth": true,
            "searching": false,
            "bPaginate": false,
            "info": false,
            "data": [],
            "columns": [
                { title: "Expenditure Line Item" },
                { title: "Item Description" },
                { title: "Funding Reference" },
                { title: "Expense Amount" }
            ]
        });

        var data = [];
        var globalPayeeId = null;
        var summaryid = null;

        function loadPaymentData() {
            $("#loader").text("Loading...")
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetGeneratedPaymentSummary", "PaymentVoucher")',
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.data;
                    dt_voucher_listing.fnClearTable();
                    for (var i = 0; i < data.length; i++) {
                        var id = data[i].PaymentSummaryId;
                        dt_voucher_listing.fnAddData([i + 1,
                           data[i]["PaymentNo"],
                           data[i]["NumTrx"],
                           toLabel(data[i]["OperationalAmount"]),
                           data[i]["PayerBankAccount"],
                           data[i]["PaymentMethod"],
                           data[i]["OverallStatus"],
                           data[i]["CreatedAtFormatted"],
                            data[i]["OverallStatusDesc"],
                            tableActions(id, i)
                        ]);
                        $("#saveLoader-" + id + "").toggle(false)
                    }
                    if (data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function tableActions(id, i) {
            if ('@ViewBag.EnforceDigitalSignature' == "True") {
                if (data[i]["IsVerifierSigned"] == true) {
                    return `<div class="btn-group" id="drop-${id}">\
                                 <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                   <span class="caret"></span\
                                   <span class="sr-only"></span>\
                                 </button>\
                                 <ul class="dropdown-menu">\
                                   <li><a href="#" onclick= "openViewDialog(${i})">Details</a></li>\
                                   <li><a href="#" onclick="preview(${i})">Preview Payment Summary</a></li>\
                                   <li><a href="#" onclick= "verify(${i})">Verify</a></li>\
                                   <li><a href="#" onclick= "unGenerate(${id})">Un-generate</a></li>\
                                 </ul>\
                             </div>\
                             <img src="/Content/img/loading.gif" id="saveLoader-${id}" class="loading-gif"/>`
                } else {
                    return `<div class="btn-group" id="drop-${id}">\
                                 <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                   <span class="caret"></span\
                                   <span class="sr-only"></span>\
                                 </button>\
                                 <ul class="dropdown-menu">\
                                   <li><a href="#" onclick= "openViewDialog(${i})">Details</a></li>\
                                   <li><a href="#" onclick="sign(${i})">Sign</a></li>\
                                   <li><a href="#" onclick= "unGenerate(${id})">Un-generate</a></li>\
                                 </ul>\
                             </div>\
                             <img src="/Content/img/loading.gif" id="saveLoader-${id}" class="loading-gif"/>`
                }
            }
            else {
                return `<div class="btn-group" id="drop-${id}">\
                     <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                       <span class="caret"></span\
                       <span class="sr-only"></span>\
                     </button>\
                     <ul class="dropdown-menu">\
                       <li><a href="#" onclick= "openViewDialog(${i})">Details</a></li>\
                       <li><a href="#" onclick= "verify(${i})">Verify</a></li>\
                       <li><a href="#" onclick= "unGenerate(${id})">Un-generate</a></li>\
                     </ul>\
                 </div>\
                 <img src="/Content/img/loading.gif" id="saveLoader-${id}" class="loading-gif"/>`
            }
        }
        loadPaymentData();

        var paymentSummaryId = null;


        $("#saveLoader").toggle(false);
        function uploadFile() {
            swal({
                text: "Save this Slip?",
                buttons: ["NO", "YES"],
            }).then((confirmed) => {
                if (confirmed) {
                    uploadFilesConfirmed();
                } else {
                    swal("Cancelled");
                }
            });
        }

        function confirmPendingVoucher(i) {
            var url = '@Url.Action("ConfirmVoucher", "PaymentVoucher")';
            $.ajax({
                type: "post",
                url: url,
                data: { "PaymentVoucherId": i },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Confirmed Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
            $('#confirmModal').modal('hide');
        }

        function sign(i) {
            var id = data[i]["PaymentSummaryId"];
             voucherid = i;
             $(".modal-title").text("Payment Summary");

            $('label[for="Password"]').text("Please Provide a Passphrase for Signing a Payment Summary");
            $("#btnSaveComment").show();
            $("#btnSaveComment").text("Verify");
            $("#divLoader").show();

            var url = '@Url.Action("ReqSignCertificate", "PaymentVoucher")/?id=' + id +'&&stage=verify';

            $("#modal-body").load(url, function () {

                $("#modal").modal({
                    backdrop: "static",
                    keyboard: false
                });
                $('label[for="Password"]').text("Please Provide a Passphrase for Signing a Payment Summary");
                $("#divLoader").hide();
            });
         }

        function verify(i) {
            //After verification set
            var id = data[i]["PaymentSummaryId"];
            swal({
                title: 'Are you sure?',
                buttons: [
                    'NO',
                    'YES'
                ],
            }).then(function (isConfirmed) {
                if (isConfirmed) {
                    //$("#saveLoader-" + id + "").toggle(true)
                    //$("#drop-" + id + "").toggle(false)
                    Verifying(id);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }


        function Verifying(PaymentSummaryId) {
            $("#divLoader").show();
            var url = '@Url.Action("Verifying", "PaymentVoucher")';
            $.ajax({
                type: "POST",
                url: url,
                data: { PaymentSummaryId },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Done Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    swal(error);
                },
                complete: function () {
                    $("#divLoader").hide();
                }
            });
        }

        function preview(i) {
            var url = '@Url.Action("PreviewCertificate", "PaymentVoucher")/?fileName=' + data[i]["PaymentSummaryFilePath"];
             window.open(url, '_blank');
         }

        var dt_view = $('#dt_view').dataTable();

        $("#dt_view_wrapper .dt-toolbar").remove();

        $("#searchboxView").on("keyup search input paste cut", function () {
            dt_view.DataTable().search(this.value).draw();
        });

        function openViewDialog(i) {
            viewData(data[i]["PaymentSummaryId"]);
            $("#reasonId").text(data[i]["RejectedReason"] ? data[i]["RejectedReason"] : "-")
            $("#viewModal").modal("show");
        }

        function withholdingTemplate(d) {
            if (d['hasWithHolding'] && d["LiquidatedDemageAmount"] != null) {
                return '<br>\
                <i class="wh-holding">\
                    <table>\
                       <tr>\
                         <td><div class="bubble-w"></div></td>\
                         <td>Withholding</td>\
                       </tr>\
                         <tr>\
                         <td><div class="bubble-w"></div></td>\
                         <td>Liquidated Demage</td>\
                       </tr>\
                   </table>\
                </i>';
            } else if (d['hasWithHolding']) {
                return '<br>\
                <i class="wh-holding">\
                    <table>\
                       <tr>\
                         <td><div class="bubble-w"></div></td>\
                         <td>Withholding</td>\
                       </tr>\
                   </table>\
                </i>';
            } else if (d["LiquidatedDemageAmount"] != null) {
                return '<br>\
                <i class="wh-holding">\
                    <table>\
                         <tr>\
                         <td><div class="bubble-w"></div></td>\
                         <td>Liquidated Demage</td>\
                       </tr>\
                   </table>\
                </i>';
            } else {
                return '';
            }
        }

        function sourceModule(d) {
            switch (d["SourceModule"]) {
                case "Purchase":
                    if (!d["SourceModuleReferenceNo"]) {
                        return d["SourceModule"];
                    } else {
                        return d["SourceModuleReferenceNo"].includes("PO") ?
                        '<a href="@Url.Action("PreviewReceiving","Procurement")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d) :
                        '<a href="@Url.Action("PreviewReceiving", "Contract")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    }
                    break;
                case "Contract":
                    if (!d["SourceModuleReferenceNo"]) {
                        return d["SourceModule"];
                    } else {
                        return d["SourceModuleReferenceNo"].includes("PO") ?
                        '<a href="@Url.Action("PreviewReceiving","Procurement")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d) :
                        '<a href="@Url.Action("PreviewReceiving", "Contract")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    }
                    break;
                case "Accrual Purchase":
                    if (!d["SourceModuleReferenceNo"]) {
                        return d["SourceModule"];
                    } else {
                        return d["SourceModuleReferenceNo"].includes("PO") ?
                        '<a href="@Url.Action("PreviewReceiving","Procurement")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d) :
                        '<a href="@Url.Action("PreviewReceiving", "Contract")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    }
                    break;
                case "Accrual Contract":
                    if (!d["SourceModuleReferenceNo"]) {
                        return d["SourceModule"];
                    } else {
                        return d["SourceModuleReferenceNo"].includes("PO") ?
                        '<a href="@Url.Action("PreviewReceiving","Procurement")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d) :
                        '<a href="@Url.Action("PreviewReceiving", "Contract")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    }
                    break;
                case "Prepayment":
                    return '<a href="@Url.Action("PreviewPrepayment","Prepayment")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    break;
                case "Imprest":
                    return '<a href="@Url.Action("ImprestDetails","Imprest")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    break;
                case "BulkPayment":
                    return '<a href="@Url.Action("PaymentDetails", "PaymentBatches")/' + d["OtherSourceId"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                    break;
                case "Loan":
                    return '<a href="@Url.Action("PreviewLoanTracker","Loan")/' + d["SourceModuleReferenceNo"] + '">' + d["SourceModule"] + '</a>' + withholdingTemplate(d);
                default:
                    return d["SourceModule"] + withholdingTemplate(d);
            }
        }

        function viewData(Id) {
            $.ajax({
                type: "get",
                url: '@Url.Action("getpaymentvoucher", "PaymentVoucher")' + "/?overallStatus=Generated&&paymentSummaryId=" + Id + "",
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    d = response.data;
                    dt_view.fnClearTable();
                    for (var i = 0; i < d.length; i++) {
                        dt_view.fnAddData([i + 1,
                           d[i]["PVNo"],
                           d[i]["Payeename"],
                           d[i]["PaymentDesc"],
                           d[i]["PayeeBankAccount"],
                           d[i]["PayeeBankName"],
                           d[i]["PayerBankName"],
                           d[i]["PayerBankAccount"],
                           toLabel(d[i]["OperationalAmount"]),
                           calculate(d[i]),
                           '<a target="_blank" href="@Url.Action("AttachmentView", "PaymentVoucherAttachments")/?groupId=' + d[i]["PaymentVoucherId"] + '&&sourceModule=' + d[i]["SourceModule"] + '"><i class="fa fa-file-pdf-o"></i></a>',
                           sourceModule(d[i]),
                        ]);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function unGenerate(id) {
            swal({
                title: 'Are you sure?',
                buttons: [
                  'NO',
                  'YES'
                ],
            }).then(function (isConfirmed) {
                if (isConfirmed) {
                    $("#saveLoader-" + id + "").toggle(true)
                    $("#drop-" + id + "").toggle(false)
                    unGenerateConfirmed(id);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

        function unGenerateConfirmed(PaymentSummaryId) {

            var url = '@Url.Action("UnGeneratePayment", "PaymentVoucher")';
            $.ajax({
                type: "POST",
                url: url,
                data: { PaymentSummaryId },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Done Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

    </script>
}
