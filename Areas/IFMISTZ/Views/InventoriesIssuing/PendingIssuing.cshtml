        var confirmEntry = function (id,legal_number) {

                    swal({
                        title: 'Confirmation',
                        text: "Do you what to confirm issuing   " + legal_number + " ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                          var url = '@Url.Action("ConfirmEntry", "InventoriesIssuing")';
                            $.ajax(
                {
                    type: "POST",
                    url: url,
                    data: { id: id },
                    success: function (response) {
                        if (response == "Success") {

                            swal("Confirmed successfully", { icon: "success" })
                                      .then((value) => {
                                          location.reload();
                                      });


                        }
                        else {

                            swal(response);
                        }
                    },
                    error: function (xhr) {
                        swal(error);
                    },

                });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
        };


        var cancelEntry = function (id,legal_number) {

                    swal({
                        title: 'Confirmation',
                        text: "Do you what to cancel issuing   " + legal_number + " ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                          var url = '@Url.Action("CancelEntry", "InventoriesIssuing")';
                            $.ajax(
                {
                    type: "POST",
                    url: url,
                    data: { id: id },
                    success: function (response) {
                        if (response == "Success") {

                            swal("Cancelled successfully", { icon: "success" })
                                      .then((value) => {
                                          location.reload();
                                      });


                        }
                        else {

                            swal(response);
                        }
                    },
                    error: function (xhr) {
                        swal(error);
                    },

                });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
        };

     var previewIssuing = function (id) {
            debugger;
            var url = '@Url.Action("PreviewEntry", "InventoriesIssuing")';
            $("#divModalBody").load(url, { id: id }, function (response, status, xhr) {
                if (status == "error") {
                    $("#divModalBody").html("Error on accessing this details, contact system support.");
                }
                $("#divModal").modal("show");
            });
        };

        var previewIssuing = function (id, entrytype) {
            debugger;
            var url = '';
            if (entrytype == "Multiple") {
                url = '@Url.Action("PreviewInventoryEntry", "InventoriesIssuing")';
            } else {
                url = '@Url.Action("PreviewEntry", "InventoriesIssuing")';
            }
            $("#divModalBody").load(url, { id: id }, function (response, status, xhr) {
                if (status == "error") {
                    $("#divModalBody").html("Error on accessing this details, contact system support.");
                }
                $("#divModal").modal("show");
            });
        };

        var rejectIssuing = function (id, legal_number) {
            $("#legalNumber").text(legal_number);
            $("#rejectModal #Id").val(id);
            $('#rejectModal').modal('show');

        };

        var reduceQuantity = function (id, legal_number,quantity,uom) {
            $("#legal-number").text(legal_number);
            $("#reduceItemModal #Id").val(id);
            $("#reduceItemModal #OriginalQuantity").val(quantity);
            $("#reduceItemModal .unit").text(uom);
            $('#reduceItemModal').modal('show');

        };
        //var submitReject = function () {
        //    swal("Jesus help me");
        //}
        function SubmitReject(formData) {
            $("#btnSubmitReject").prop('disabled', true);
            var url = '@Url.Action("RejectEntry", "InventoriesIssuing")';
            var ajaxConfig = {
            type: "post",
            url: url,
            data: new FormData(formData),
            success: function (response) {
              $("#btnSubmitReject").prop('disabled', false);
                if (response == "Success") {
                    $('#rejectModal').modal('hide');
                     swal("Rejected  successfully!", { icon: "success" })
                    .then((value) => {
                       location.reload();
                    });
            }
            else {
            swal(response);
            }
            }
            }

            if ($(formData).attr('enctype') == "multipart/form-data") {
            ajaxConfig["contentType"] = false;
            ajaxConfig["processData"] = false;
            }
            $.ajax(ajaxConfig);
            return false;
            }
    function SubmitItem(formData) {
        $("#btnSubmitReduce").prop('disabled', true);
      var url = '@Url.Action("ReduceQuantity", "InventoriesIssuing")';
      var ajaxConfig = {
      type: "post",
      url: url,
      data: new FormData(formData),
      success: function (response) {
          $("#btnSubmitReduce").prop('disabled', false);
          if (response == "Success") {
              $('#reduceItemModal').modal('hide');
               swal("Data saved successfully!", { icon: "success" })
              .then((value) => {
                 location.reload();
              });
      }
      else {
      swal(response);
      }
      }
      }

      if ($(formData).attr('enctype') == "multipart/form-data") {
      ajaxConfig["contentType"] = false;
      ajaxConfig["processData"] = false;
      }
      $.ajax(ajaxConfig);
      return false;
      }

        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });

    </script>
}








