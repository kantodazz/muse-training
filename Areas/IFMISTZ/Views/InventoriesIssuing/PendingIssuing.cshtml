@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.InventoryIssuing>
@{
    ViewBag.Title = "Pending Inventories Issuing";
}


<div id="divLoader"></div>

<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br />
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> Pending Inventories Issuing </h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">

                            <div align="center">
                                <img src="~/Media/Images/ajax_loader.gif" class="loadingImg" style="display:none" />
                            </div>
                            <div class="row">
                                <div class="col-xs-9 col-sm-3 col-md-3 col-lg-3">
                                    <div class="input-group">
                                        <a href="@Url.Action("IssuingEntry", "InventoriesIssuing")" class="btn btn-info" style="width:120px;border-radius:1px;">
                                            <i class="fa fa-plus"></i>Add New
                                        </a>

                                    </div>
                                </div>
                            </div>
                            <table class="table  table-bordered table-hover table-condensed" id="dt_inventories">
                                <thead>
                                    <tr>
                                        <th style="text-align:right;width:4%"></th>
                                        <th style="text-align:left">Legal Number</th>
                                        <th style="text-align:left">Inventory Code</th>
                                        <th style="text-align:left">Item Name</th>
                                        <th style="text-align:left">Department/Cost Center</th>
                                        <th style="text-align:center">Quantity</th>
                                        <th style="text-align:left">UOM</th>
                                        <th style="text-align:right">Unit Price</th>
                                        <th style="text-align:right">Value</th>
                                        <th style="text-align:left">Status</th>
                                        <th style="text-align:center">Action</th>

                                    </tr>
                                </thead>

                                <tbody>
                                    @{var i = 0;}
                                    @foreach (var item in Model)
                                    {
                                        i++;

                                        <tr>
                                            <td style="text-align:right">
                                                @i
                                            </td>
                                            <td style="text-align:left">
                                                @Html.DisplayFor(modelItem => item.LegalNumber)
                                            </td>
                                            <td style="text-align:left">
                                                @Html.DisplayFor(modelItem => item.InventoryDetail.InventoryCode)
                                            </td>
                                            <td style="text-align:left">
                                                @Html.DisplayFor(modelItem => item.InventoryDetail.ItemName)
                                            </td>
                                            <td style="text-align:left">
                                                @Html.DisplayFor(modelItem => item.SubVote)- @Html.DisplayFor(modelItem => item.SubVoteName)

                                            </td>
                                            <td style="text-align:center">
                                                @Html.DisplayFor(modelItem => item.IssuedQuantity)
                                            </td>

                                            <td style="text-align:left">
                                                @Html.DisplayFor(modelItem => item.InventoryDetail.UOM)

                                            </td>

                                            <td style="text-align:right">


                                                @Html.DisplayFor(modelItem => item.InventoryDetail.UnitPrice)

                                            </td>
                                            <td style="text-align:right">
                                                @Html.DisplayFor(modelItem => item.InventoryValue)

                                            </td>

                                            <td style="text-align:left">
                                                @Html.DisplayFor(modelItem => item.OverallStatus)
                                            </td>
                                            <td style="text-align:center">

                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <ul class="dropdown-menu">

                                                        <li>
                                                            <a href="#" onclick="previewIssuing(@item.InventoryIssuingId)"> <i class="fa fa-search-minus"></i>  Preview</a>
                                                        </li>
                                                        <li>
                                                            <a href="@Url.Action("IssuingGLAccount", "InventoriesIssuing",new {id=item.InventoryIssuingId})" class="btn-xs edit">
                                                                <i class="fa fa-edit"></i> Assign GL
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="@Url.Action("AttachmentEntry", "PaymentVoucherAttachments",new {groupId=item.InventoryIssuingId,sourceModule="InventoryIssuing" })" class="btn-xs edit">
                                                                <i class="fa fa-edit"></i>  Attachments
                                                            </a>
                                                        </li>

                                                        @if (item.InventoryIssuingBulkId > 0)
                                                        {
                                                            <li><a href="#" onclick="rejectIssuing(@item.InventoryIssuingId,'@item.LegalNumber')" class="btn-xs edit"><i class="fa fa-edit"></i> Reject</a></li>
                                                            <li><a href="#" onclick="reduceQuantity(@item.InventoryIssuingId,'@item.LegalNumber',@item.IssuedQuantity,'@item.InventoryDetail.UOM')" class="btn-xs edit"><i class="fa fa-edit"></i> Reduce Quantity</a></li>

                                                        }
                                                        else
                                                        {
                                                            <li><a href="#" onclick="cancelEntry(@item.InventoryIssuingId,'@item.LegalNumber')" class="btn-xs edit"><i class="fa fa-edit"></i> Cancel</a></li>
                                                        }
                                                        <li><a href="#" onclick="confirmEntry(@item.InventoryIssuingId,'@item.LegalNumber')" class="btn-xs edit"><i class="fa fa-edit"></i> Confirm</a></li>

                                                    </ul>
                                                </div>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>





                    </div>


                </div>
            </article>

        </div>
    </section>

</div>



<div class="modal fade" id="rejectModal" style="left:4%">

    <div class="modal-dialog" style="width:35%;">
        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title" style="text-align:center"> Reject Requisition</h3>
                <h4 align="center">Legal Number <span id="legalNumber"></span></h4>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitReject(this)" }))
            {
                <div class="modal-body form-horizontal">

                    <br />

                    <input type="hidden" name="Id" id="Id" value="">
                    <div class="form-group">

                        <div class="col-md-12">
                            <textarea name="Reason" id="Reason" placeholder="Rejection reason" required rows="4" maxlength="250" class="form-control"></textarea>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <input class="btn btn-info" type="submit" id="btnSubmitReject" value="Save" />
                    @*<input type="submit" value="Submit" class="btn btn-success" id="btnSubmit" />*@

                </div>

            }
        </div>
    </div>
</div>

<div class="modal fade" id="reduceItemModal" style="left:4%">

    <div class="modal-dialog" style="width:35%;">
        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title" style="text-align:center"> Reduce Requsted Quantity</h3>
                <h4 align="center">Legal Number <span id="legal-number"></span></h4>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitItem(this)" }))
            {
                <div class="modal-body form-horizontal">

                    <br />
                    <div class="form-group">
                        <label class="col-md-5 control-label" style="text-align:left">Requested Quantity</label>
                        <div class="col-md-6">

                            <div class="input-group">
                                <input type="number" name="OriginalQuantity" id="OriginalQuantity" class="form-control" value="" readonly>
                                <span class="input-group-addon unit"></span>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-5 control-label" style="text-align:left">Agreed Quantity</label>
                        <div class="col-md-6">

                            <div class="input-group">
                                <input type="text" name="Quantity" id="Quantity" required class="form-control" value="">
                                <span class="input-group-addon unit"></span>
                            </div>
                        </div>

                    </div>
                    <input type="hidden" name="Id" id="Id" value="">
                    <div class="form-group">

                        <div class="col-md-12">
                            <textarea name="Reason" id="Reason" placeholder="Reason" required rows="4" maxlength="250" class="form-control"></textarea>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <input class="btn btn-info" type="submit" id="btnSubmitReduce" value="Save" />
                    @*<input type="submit" value="Submit" class="btn btn-success" id="btnSubmit" />*@

                </div>

            }
        </div>
    </div>
</div>


<div class="modal fade" id="divModal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog modal-lg" style="width:80%;">
        <div width="90%" class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblmodal">
                    Preview
                </h4>
            </div>
            <div class="modal-body" id="divModalBody">

            </div>

            <div id="divPaymentStatusLoader" style="text-align:center; display:none">
                <img src="~/assets/img/avatars/ajax_loader.gif" />
            </div>
        </div>
    </div>

</div>

