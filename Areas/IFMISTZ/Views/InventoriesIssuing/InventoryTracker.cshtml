@model IFMIS.Areas.IFMISTZ.Models.InventoryRequestVM
@{
    ViewBag.Title = "Inventories Tracker";
}
<style>

    .search-btn {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 5px;
        padding-right: 10px;
    }

    .search-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        padding-left: 10px;
    }

    .name-input-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        overflow: hidden;
    }

    .search-icon {
        padding: 0.5rem;
    }

    .search-button {
        background: #538AC5;
        border: 0;
        color: white;
        padding: 8px;
        border-radius: 0;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
        width: 205px;
    }

    input[type=text] {
        padding: 5px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    textarea {
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    .action-btn {
        width: 100px;
        color: white;
    }

    .form-label {
        text-align: right;
    }

    td {
        padding: 5px;
    }

    .info-box {
        padding: 10px;
        background-color: #ECF3F8;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
</style>



<div id="content" style="margin: 5px; padding-top: 30px">

    <div id="divLoader"></div>


    <!-- widget grid -->
    <br />
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title </h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Source, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-3">
                                    @Html.DropDownList("Source", new List<SelectListItem>{
                                new SelectListItem{ Text="--Select--", Value = "" },
                                new SelectListItem{ Text="LPO", Value = "LPO" },
                                new SelectListItem{ Text="PrePayment", Value = "PrePayment" },
                                new SelectListItem{ Text="Contract", Value = "Contract" },
                                }, new { @class = "form-control" })
                                </div>
                                @Html.LabelFor(model => model.FyId, htmlAttributes: new { @class = "control-label   col-md-2" })
                                <div class="col-md-2">
                                    @Html.DropDownListFor(model => model.FyId, Model.FinancialYearsList, "Select ", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FyId, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-3">
                                    <select id="SourceId" class="form-control select2"></select>
                                    @Html.ValidationMessageFor(model => model.SourceId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div id="loadinventories"></div>

                        </div>

                    </div>


                </div>
            </article>

        </div>
    </section>

</div>


@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->

    <script type="text/javascript">


        $("#Source").change(function (e) {
            var source = $(this).val();
            var fyId = $("#FyId").val();
            if (fyId) {
                if (source) {
                    fetchLegalNumber(fyId, source);
                }
            }
        });
        $("#FyId").change(function (e) {
            var fyId = $(this).val();
            var source = $("#Source").val();
            if (fyId) {
                if (source) {
                    fetchLegalNumber(fyId, source);
                }
            }
        });
        function fetchLegalNumber(fyId, source) {
           $("#SourceId").prop('selectedIndex', 0);
           $("#SourceId").empty();
           var url = '@Url.Action("GetLegalNumber", "InventoriesIssuing")';
            $.ajax({
                type: "POST",
                url: url,
                data: { fyId: fyId, source: source },
                success: function (response) {
                    $("#SourceId").append(response);
                }
            })

        }
        $("#SourceId").change(function (e) {
            var sourceId = $(this).val();
            var source = $("#Source").val();
            if (sourceId) {
                if (source) {
                    fetchInventories(sourceId, source);
                }
            }
        });
        function fetchInventories(id, source) {
              var url = '@Url.Action("LoadInventories", "InventoriesIssuing")';
            $("#loadinventories").load(url, { id: id, source: source }, function (response, status, xhr) {
                if (status == "error") {
                    $("#loadinventories").html("Error on accessing this details, contact system support.");
                }
            });
        }
      
        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });

    </script>
}












