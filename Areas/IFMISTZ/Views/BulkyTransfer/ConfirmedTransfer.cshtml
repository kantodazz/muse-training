@model IEnumerable<IFMIS.Models.FileUploadedDatum>

@{
    ViewBag.Title = "Bulky Fund Transfer Template";
}

<div id="divLoader">
</div>
<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
