                                        <th>
                                            @Html.DisplayNameFor(model => model.InstitutionNameTo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CostCenterName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ApplyDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Amount)
                                        </th>
                                    </tr>
                                </thead>
                                @{int i = 0;}
                                @foreach (var item in Model.OrderByDescending(a => a.FileUploadedDataId))
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstitutionNameTo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CostCenterName)
                                        </td>
                                        <td style="text-align: right">
                                            @Html.DisplayFor(modelItem => item.ApplyDate, "_ShortDateTime")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Amount, "_DecimalThousands")
                                        </td>
                                    </tr>
                                }
                            </table>
