@section Scripts{
    <script>

        $(function () {
            BindDataTable();
        });

        var BindDataTable = function (response) {
            var url = '@Url.Action("GetSubServiceProviders", "MuseSubServiceProviders")';
            $("#tblSubSps").DataTable({
                "bServerSide": true,
                "sAjaxSource": url,
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        type: "GET",
                        url: sSource,
                        data: aoData,
                        success: fnCallback
                    });
                },
                "aoColumns": [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "mData": "SpCodeSpName" },
                    { "mData": "SubSpCodeSubSpName" },
                    {
                        data: 'AllowSubSpPosting',
                        className: "text-center"
                    },
                    { "mData": "InstitutionCodeInstitutionName" },
                    {
                        "mData": "MuseSubServiceProviderId",
                        "bSortable": false,
                        "render": function (MuseSubServiceProviderId, type, full, meta) {
                            return '<div class="btn-group">\
                                <button type="button" class="btn btn-info btn-xs">\
                                    Action\
                                </button>\
                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                <span class="caret" ></span>\
                                <span class="sr-only">Toggle Dropdown</span>\
                                </button>\
                                <ul class="dropdown-menu">\
                                <li><a class="dropdown-item" href="@Url.Action("EditSubServiceProvider", "MuseSubServiceProviders")/' + MuseSubServiceProviderId + '">Edit</a><li>\
                                <li><a class="dropdown-item" href="#" onclick="subServiceProviderDetails('+ MuseSubServiceProviderId +')">Details</a><li>\
                                <li><a class="dropdown-item" href="#" onclick="cancelSubServiceProvider('+ MuseSubServiceProviderId +')">Cancel</a><li>\
                                </ul>'
                        }
                    },
                ]
            });
        };

        var subServiceProviderDetails = function (id) {
            $("#divLoader").show();
            $("#btnSave").hide();
            var url = '@Url.Action("SubServiceProviderDetails", "MuseSubServiceProviders")/' + id;

            $("#modal-body").load(url, function () {
                $("#modal").modal({
                    backdrop: "static",
                    keyboard: false
                });

                $("#divLoader").hide();
            });
        };

        var cancelSubServiceProvider = function (id) {

            swal({
                title: 'Confirmation',
                text: "Are you sure you want to cancel this record?",
                buttons: [
                    'No',
                    'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    $("#divLoader").show();
                    var url = '@Url.Action("CancelMuseSubServiceProvider", "MuseSubServiceProviders")';
                    $.ajax(
                        {
                            type: "POST",
                            url: url,
                            data: { id: id },
                            success: function (response) {
                                if (response == "Success") {
                                    swal("Sub service provider cancelled successfully", { icon: "success" })
                                        .then((value) => {
                                            location.reload();
                                        });
                                }
                            },
                            error: function (xhr) {
                                swal("An error occured while processing your request, contact system support", { icon: "error" });
                            },
                            complete: function () {
                                $("#divLoader").hide();
                            }
                        });
                }
            });
        };

    </script>
}
