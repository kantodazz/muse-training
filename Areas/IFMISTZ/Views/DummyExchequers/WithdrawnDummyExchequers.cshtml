                            <table class="table  table-bordered table-hover table-condensed" id="dt_salaries">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Legal No</th>
                                        <th>Reference No</th>
                                        <th>Institution</th>
                                        <th>Sub Budget Class</th>
                                        <th>Apply Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th style="text-align:center;width:7%"></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @{var i = 0;}
