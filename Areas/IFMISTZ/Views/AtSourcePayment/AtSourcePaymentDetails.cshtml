@model IFMIS.Areas.IFMISTZ.Models.DeductionByInstitutionVM
@{
    ViewBag.Title = "At Source Payment Details";
}
<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    td {
        padding: 5px;
    }

    .table-amount td:nth-child(6) {
        text-align: right;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 110px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .total-amount {
        float: right;
    }

    .loadingImg {
        display: none;
    }
</style>
<!-- MAIN CONTENT -->
<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">
    <div class="row"></div>

    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br/>
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> @ViewBag.Title </h2>

                    </header>

                    <div class="jarviswidget" id="wid-id-12" data-widget-colorbutton="false" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false">

                        <div class="container" style="margin-left:2px;margin-top:5px">
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#1" data-toggle="tab">Summary</a>
                                </li>
                                <li>
                                    <a href="#2" data-toggle="tab">Details</a>
                                </li>

                            </ul>
                            <div class="tab-content">

                                <div class="tab-pane active" id="1">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <br />
                                            <table class="table  table-hover table-condensed">

                                                <tbody>
                                                    <tr>

                                                    <tr>
                                                        <td style="width:20%">
                                                            Account From
                                                        </td>
                                                        <td>
                                                            @Model.PayerBankAccount
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Account From Name
                                                        </td>
                                                        <td>
                                                            @Model.PayerBankName
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Account To
                                                        </td>
                                                        <td>
                                                            @Model.PayeeBankAccountNo
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Account To Name
                                                        </td>
                                                        <td>
                                                            @Model.PayeeAccountName
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:20%">
                                                            At Source Type
                                                        </td>
                                                        <td>
                                                            @Model.DeductionType
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:20%">
                                                            Total Number of Transactions
                                                        </td>

                                                        <td>@Model.TotalNumEmployees</td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:20%">
                                                            Total  Amount
                                                        </td>
                                                        <td>
                                                            @string.Format("{0:#,0.00}", Model.TotalDeductionAmount)
                                                        </td>
                                                    </tr>


                                                    <tr>
                                                        <td style="width:20%">
                                                            Number of Votes
                                                        </td>
                                                        <td>
                                                            @Model.NumVotes
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:20%">
                                                            Check Date
                                                        </td>
                                                        <td>
                                                            @Convert.ToDateTime(Model.CheckDate).ToString("dd/MM/yyyy")
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:20%">
                                                            Funding Source
                                                        </td>
                                                        <td>
                                                            @Model.FundingSource
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:20%">
                                                            Payment Mode
                                                        </td>
                                                        <td>
                                                            @Model.PaymentMode

                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Status</td>
                                                        <td>@Model.OverallStatus</td>
                                                    </tr>
                                                    <tr>
                                                        <td>@Html.DisplayNameFor(model => model.ExchequerNo)</td>
                                                        <td>@Html.DisplayFor(model => model.ExchequerNo)</td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                        </div>

                                    </div>
                                </div>

                                <div class="tab-pane" id="2">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <br />

                                            <div class="row">
                                                <div class="col-md-6"></div>
                                                <div class="col-md-6">
                                                    <div class="search-container" style="float:right">
                                                        <i class="fa fa-search"></i>
                                                        <input type="search" name="search" placeholder="Search..." id="search-box2">
                                                    </div>
                                                </div>
                                            </div>
                                            <table id="dt_at_source_payment_vote_list" class="table table-bordered table-condensed table-amount">
                                                <thead>
                                                    <tr>
                                                        <td>#</td>
                                                        <th>Vote Code</th>
                                                        <th>Vote Name</th>
                                                        <th>Number of Transactions</th>
                                                        <th style="text-align:right">Total Amount</th>
                                                        @if (ViewBag.ShowMoreDetail == "Yes")
                                                        {
                                                            <th style="text-align:right">Action</th>

                                                        }
                                                        else
                                                        {
                                                            if (Model.OverallStatus == "Pending" || Model.OverallStatus == "Rejected")
                                                            {
                                                                <th style="text-align:right">Action</th>

                                                            }

                                                        }
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int n = 0;
                                                    }
                                                    @if (ViewBag.DeductionByVote != null)
                                                    {

                                                        foreach (var item in ViewBag.DeductionByVote)
                                                        {
                                                            n++;
                                                            <tr>
                                                                <td>@n</td>
                                                                <td>@item.VoteCode</td>
                                                                <td>@item.VoteName</td>
                                                                <td>@item.TotalNumEmployees</td>
                                                                <td style="text-align:right">@string.Format("{0:#,0.00}", item.TotalDeductionAmount)</td>

                                                                @if (ViewBag.ShowMoreDetail == "Yes")
                                                                {
                                                                    <td>
                                                                        <div class="btn-group">
                                                                            <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                                                <span class="caret"></span>
                                                                                <span class="sr-only">Toggle Dropdown</span>
                                                                            </button>
                                                                            <ul class="dropdown-menu">

                                                                                <li>
                                                                                    <a href="@Url.Action("Details", "AtSourcePayment", new { voteCode = item.VoteCode, checkDate = item.CheckDate, deductionByInstitutionId = item.DeductionByInstitutionId })" class="btn-xs edit">
                                                                                        <i class="fa fa-eye"></i>  Details
                                                                                    </a>
                                                                                </li>
                                                                                <li>
                                                                                    <a href="#" onclick="modifyVote('@item.VoteCode','@item.VoteName',@item.DeductionByInstitutionId)" class="btn-xs edit">
                                                                                        <i class="fa fa-edit"></i>  Modify Vote
                                                                                    </a>
                                                                                </li>
                                                                            </ul>
                                                                        </div>
                                                                    </td>

                                                                }
                                                                else
                                                                {
                                                                    if (Model.OverallStatus == "Pending" || Model.OverallStatus == "Rejected")
                                                                    {

                                                                        <td>
                                                                            <div class="btn-group">
                                                                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                                                    <span class="caret"></span>
                                                                                    <span class="sr-only">Toggle Dropdown</span>
                                                                                </button>
                                                                                <ul class="dropdown-menu">
                                                                                    <li>
                                                                                        <a href="#" onclick="modifyAmount('@item.VoteCode','@item.VoteName',@item.DeductionByInstitutionId,@item.TotalDeductionAmount)" class="btn-xs edit">
                                                                                            <i class="fa fa-edit"></i>  Modify Amount
                                                                                        </a>
                                                                                    </li>
                                                                                    <li>
                                                                                        <a href="#" onclick="modifyVote('@item.VoteCode','@item.VoteName',@item.DeductionByInstitutionId)" class="btn-xs edit">
                                                                                            <i class="fa fa-edit"></i>  Modify Vote
                                                                                        </a>
                                                                                    </li>
                                                                                </ul>
                                                                            </div>
                                                                        </td>

                                                                    }

                                                                }

                                                            </tr>
                                                        }

                                                    }

                                                </tbody>
                                                @if (ViewBag.ShowMoreDetail == "Yes" || Model.OverallStatus == "Pending" || Model.OverallStatus == "Rejected")
                                                {
                                                    if (Model.TotalDeductionAmount != null)
                                                    {
                                                        <tfoot>
                                                            <tr>
                                                                <td colspan="4"></td>

                                                                <td><b> <span colspan="3" style="float:right;color:black;">Total Amount:&nbsp;&nbsp; @string.Format("{0:#,0.00}", Model.TotalDeductionAmount)/=</span></b></td>
                                                                <td></td>
                                                            </tr>
                                                        </tfoot>

                                                    }
                                                }
                                                else
                                                {
                                                    <tfoot>
                                                        <tr>
                                                            <td colspan="4"></td>

                                                            <td><b> <span colspan="3" style="float:right;color:black;">Total Amount:&nbsp;&nbsp; @string.Format("{0:#,0.00}", Model.TotalDeductionAmount)/=</span></b></td>

                                                        </tr>
                                                    </tfoot>

                                                }
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="col-md-offset-2">
                        <a href="@Request.UrlReferrer" style="margin-right:5px" type="submit" class="btn btn-info pull-left"><i class="glyphicon glyphicon-arrow-left"></i> Back  </a>

                    </div>

                </div>
            </article>

        </div>


    </section>

</div>

<div class="modal fade" id="modifyamount" style="left:4%">

    <div class="modal-dialog" style="width:35%;">
        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title" style="text-align:center"> Modify Amount</h3>
                <h4 align="center"><span id="vote-desc"></span></h4>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "voteAmountForm" }))
            {
                <div class="modal-body form-horizontal">

                    <br />

                    <input type="hidden" name="Id" id="Id" value="">
                    <input type="hidden" name="Vote" id="Vote" value="">
                    <div class="form-group">
                        @Html.Label("Amount", htmlAttributes: new { @class = "control-label   col-md-2", @style = "text-align:left" })
                        <div class="col-md-10">
                            <div class="input-group">

                                <span class="input-group-addon">TZS</span>
                                @Html.Editor("Amount", new { htmlAttributes = new { @class = "form-control", @required = "required", @autocomplete = "off" } })
                            </div>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <input class="btn btn-info" type="submit" id="btnSubmit" value="Save" />
                </div>

            }
        </div>
    </div>
</div>
<div class="modal fade" id="modifyvote" style="left:4%">

    <div class="modal-dialog" style="width:35%;">
        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title" style="text-align:center"> Modify Vote</h3>
                <h4 align="center"><span id="vote-desc"></span></h4>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "voteForm" }))
            {
                <div class="modal-body form-horizontal">

                    <br />

                    <input type="hidden" name="Id" id="Id" value="">
                    <input type="hidden" name="Vote" id="Vote" value="">
                    <div class="form-group">
                        @Html.Label("Vote", htmlAttributes: new { @class = "control-label   col-md-2", @style = "text-align:left" })
                        <div class="col-md-10">

                            @Html.Editor("NewVote", new { htmlAttributes = new { @class = "form-control", @required = "required", @autocomplete = "off" } })

                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <input class="btn btn-info" type="submit" id="btnSubmit" value="Save" />
                </div>

            }
        </div>
    </div>
</div>
@section pagespecific{

    <script>
        var dt_at_source_payment_list = $("#dt_at_source_payment_list").dataTable({ "pageLength": 250 });
        $("#dt_at_source_payment_list_wrapper .dt-toolbar").remove();

        $("#search-box").on("keyup search input paste cut", function () {
            $("#dt_at_source_payment_list").DataTable().search(this.value).draw();
            $("#dt_at_source_payment_list_wrapper .dt-toolbar").remove();
        });

        var dt_at_source_payment_vote_list = $("#dt_at_source_payment_vote_list").dataTable({ "pageLength": 250 });
        $("#dt_at_source_payment_vote_list_wrapper .dt-toolbar").remove();

        $("#search-box2").on("keyup search input paste cut", function () {
            $("#dt_at_source_payment_vote_list").DataTable().search(this.value).draw();
            $("#dt_at_source_payment_vote_list_wrapper .dt-toolbar").remove();
        });
        var modifyAmount = function(vote,voteName, id,amount) {
            $("#voteAmountForm #vote-desc").text(vote+'-'+voteName);
            $("#voteAmountForm .modal-body #Id").val(id);
            $("#voteAmountForm .modal-body #Vote").val(vote);
            $("#voteAmountForm .modal-body #Amount").val(amount.toLocaleString('en'));
            $('#modifyamount').modal('show');
        }
        var modifyVote = function (vote, voteName, id) {
            $("#voteForm #vote-desc").text(vote + '-' + voteName);
            $("#voteForm .modal-body #Id").val(id);
            $("#voteForm .modal-body #Vote").val(vote);
            $("#voteForm .modal-body #NewVote").val(vote);
            $('#modifyvote').modal('show');
        }
              $("#voteAmountForm").on('submit', function (e) {
                    e.preventDefault();
                  var amount = $("#voteAmountForm #Amount").val();
                  if (!amount) {
                      swal("Please enter amount");
                      return;
                  }
                  amount = parseFloat(amount.split(",").join(""));
                    swal({
                        title: 'Confirmation',
                        text: "Do you modify vote amount ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            var url = '@Url.Action("ModifyVoteAmount", "AtSourcePayment")';
                            var id = $("#voteAmountForm #Id").val();
                            var vote = $("#voteAmountForm #Vote").val();

                            var formData = {
                                "id": id,
                                "vote": vote,
                                "amount":amount
                            }

                            $.ajax(
                        {
                            type: "POST",
                            url: url,
                            data: formData,
                            success: function (response) {
                                if (response == "Success") {
                                    $('#modifyamount').modal('hide');
                                    swal("Amount modified  successfully!", { icon: "success" })
                                              .then((value) => {
                                             location.reload();
                                              });


                                }
                                else {

                                    swal(response);
                                }
                            },
                            error: function (xhr) {
                                swal(error);

                            },

                        });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
              });


        $("#voteForm").on('submit', function (e) {
                    e.preventDefault();
                    swal({
                        title: 'Confirmation',
                        text: "Do you modify vote ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            var url = '@Url.Action("ModifyVote", "AtSourcePayment")';
                            var id = $("#voteForm #Id").val();
                            var vote = $("#voteForm #Vote").val();
                            var newvote = $("#voteForm #NewVote").val();

                            var formData = {
                                "id": id,
                                "vote": vote,
                                "newvote": newvote
                            }

                            $.ajax(
                        {
                            type: "POST",
                            url: url,
                            data: formData,
                            success: function (response) {
                                if (response == "Success") {
                                    $('#modifyamount').modal('hide');
                                    swal("Amount modified  successfully!", { icon: "success" })
                                              .then((value) => {
                                             location.reload();
                                              });


                                }
                                else {

                                    swal(response);
                                }
                            },
                            error: function (xhr) {
                                swal(error);

                            },

                        });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
                });


        $("#Amount").autoNumeric('init');
        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });
    </script>
}








