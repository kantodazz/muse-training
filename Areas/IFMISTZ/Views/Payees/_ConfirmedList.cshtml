@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.Payee>

<hr class="simple" />
<table id="dt_basic1" class="table table-striped table-bordered table-hover table-condensed" width="100%">
    <thead>
        <tr style="background-color: #f5f5f5; color:black">
            <th>#</th>
            <th> Payee Code </th>
            <th> Payee Name </th>
            <th>Address</th>
            <th>Approval Status</th>
            <th>Payee Status</th>
            @*<th>Edit Reason</th>*@
            @*<th>Attachment</th>*@
            <th>Action</th>
        </tr>
    </thead>
    @{
        int i = 0;

    }
    @foreach (var item in Model.Where(a => a.ApprovalStatus == "Confirmed" && (a.OverallStatus.ToUpper()=="ACTIVE" || a.OverallStatus.ToUpper()=="INACTIVE")))

    {

        i++;
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.PayeeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverallStatus)
            </td>
            @*<td>@if (item.UpdatedBy!=null) {
                    @Html.DisplayFor(modelItem => item.EditReason)
                     }
                </td>*@
            @*<td>
                    <a href="@Url.Action("PreviewAttachment", "Payees", new { id = item.PayeeId })">
                        <span class="glyphicon glyphicon-print"></span>
                    </a>
                
            </td>*@
            <td style="text-align: center">
                <!-- Split button -->
                <div class="btn-group">
                    @*<button type="button" class="btn btn-info btn-xs">Action</button>*@
                    <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">

                        @if (item.OverallStatus.ToUpper() == "ACTIVE" && this.User.IsInRole("Payee Entry"))
                        {
                            <li><a href="@Url.Action("EditPayee","Payees",new { id=item.PayeeId })">Edit</a></li>
                        }
                        <li><a href="@Url.Action("PayeeDetails","Payees",new { id = item.PayeeId })">Account Details</a></li>
                        @if (item.OverallStatus.ToUpper() == "ACTIVE" && this.User.IsInRole("Payee Entry"))
                        {
                            <li><a href="@Url.Action("AddPayeeAccount", "Payees", new { id = item.PayeeId })">Add Account</a></li>
                        }
                        @*@if (item.OverallStatus.ToUpper() == "ACTIVE" && this.User.IsInRole("Payee Entry"))
                        {
                            <li><a href="@Url.Action("UploadAttachment","Payees",new { id = item.PayeeId })">Upload</a></li>
                        }*@

                        @if (this.User.IsInRole("Payee Entry"))
                        {
                            <li><a href="#" onclick="cancelPayee(@item.PayeeId)">Cancel Payee</a></li>
                        }

                        @if (item.OverallStatus.ToUpper() == "ACTIVE")
                        {
                            <li><a href="#" onclick="deactivatePayee(@item.PayeeId)">Deactivate</a></li>
                        }
                        else
                        {
                            <li><a href="#" onclick="activatePayee(@item.PayeeId)">Activate</a></li>
                        }
                        @if (item.OverallStatus.ToUpper() == "ACTIVE" && this.User.IsInRole("Payee Verification") && item.ApprovalStatus == "Approved")
                        {
                            <li><a href="#" onclick="verifyPayee(@item.PayeeId)">Verify</a></li>
                        }
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>

<!-- END MAIN CONTENT -->
<!--Start of delete confirmation modal section-->

<div class="modal fade" id="deactivateModal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
