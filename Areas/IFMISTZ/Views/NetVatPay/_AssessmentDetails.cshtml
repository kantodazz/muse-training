@model IFMIS.Areas.IFMISTZ.Models.VatNetPayResult
@{
    ViewBag.Title = "VAT Net Payments";
    var amount = Model.OutputTax - Model.InputTax;
}
<table class="table  table-hover table-condensed">
    <tbody>
        <tr data-level='1'>
            <th style="width:20%">
               Description
            </th>
            <th style="text-align:right">
                Amount(TZS)
            </th>
        </tr>
        <tr data-level='1'>
            <td style="width:50%">
                Output tax for the period @Convert.ToDateTime(Model.Checkdate).ToString("dd/MM/yyyy")
            </td>
            <td style="text-align:right">
                @string.Format("{0:#,0.00}", Model.OutputTax)
            </td>
        </tr>
        <tr data-level='1'>
            <th style="width:50%">
                <b>Deduction:</b>
            </th>
            <td></td>
        </tr>
        <tr data-level='1'>
            <td style="width:50%">
                Input tax for the period @Convert.ToDateTime(Model.Checkdate).ToString("dd/MM/yyyy")
            </td>
            <td style="text-align:right">
                @string.Format("{0:#,0.00}", Model.InputTax)
            </td>
        </tr>
        <tr data-level='1'>
            <td style="width:50%">
                VAT Payable(Repayable) for the period
            </td>
            <td style="text-align:right">
                @string.Format("{0:#,0.00}", amount)
            </td>
        </tr>
        <tr data-level='1'>
            <td style="width:50%">
                VAT Brought Forward
            </td>
            <td style="text-align:right">
                @string.Format("{0:#,0.00}", Model.VatBroughtForward)
            </td>
        </tr>
        <tr data-level='1'>
            <td style="width:50%">
               Net VAT Payable/Repayable
            </td>
            <td style="text-align:right">
                @string.Format("{0:#,0.00}", Model.NetVatPayable)
            </td>
        </tr>
    </tbody>
</table>