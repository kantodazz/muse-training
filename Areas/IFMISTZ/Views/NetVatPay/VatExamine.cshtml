@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.VATNetPayment>

@{
    ViewBag.Title = "Examine VAT Net Payment";
}

<div id="divLoader"></div>
<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">


        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <!-- Button trigger modal -->
            <!--<a data-toggle="modal" href="#myModal" class="btn btn-success btn-lg pull-right header-btn hidden-mobile"><i class="fa fa-circle-arrow-up fa-lg"></i> Launch form modal</a>-->
        </div>
    </div>

    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Examine VAT Net Payment</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover table-condensed" width="100%">
                                <thead>
                                    <tr style="background-color: #f5f5f5; color:black">
                                        <th>#</th>
                                        <th>
                                            InstitutionCode
                                        </th>
                                        <th>
                                            InstitutionName
                                        </th>
                                        <th>
                                            LegalNumber
                                        </th>
                                        <th>
                                            PaymentDesc
                                        </th>
                                        <th>
                                            CheckDate
                                        </th>
                                        <th>
                                            VatOperationalAmount
                                        </th>
                                        <th>
                                            VatBaseAmount
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                @{int i = 0;
                                    //string[] PaymentImprest = new string[20];
                                }

                                @foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstitutionCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstitutionName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LegalNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(NetOperationalAmount => item.PaymentDesc) of  @Convert.ToDateTime(item.CheckDate).ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @Convert.ToDateTime(item.CheckDate).ToString("dd/MM/yyyy")
                                        </td>
                                        <td style="text-align:right">
                                            @string.Format("{0:#,0.00}", item.VatNetOperationalAmount)
                                        </td>
                                        <td style="text-align:right">
                                            @string.Format("{0:#,0.00}", item.VatNetBaseAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OverallStatus)
                                        </td>
                                        <td style="text-align: center">
                                            <!-- Split button -->
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    @*<li><a href="@Url.Action("Pendingdetails", "SpecialImprest",new {PVNo=item.PVNo })">Detail</a></li>*@
                                                    <li><a href="#" onclick="OpenDialog(`@item.VATNetPaymentId`)">Detail</a></li>
                                                    <li><a href="#" onclick="OpenDialogAssess(`@item.VATNetPaymentId`)">View Assessment</a></li>
                                                    <li><a href="#" onclick="Examinemprest(`@item.VATNetPaymentId`)">Examine</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
<!----------- VIEW DIALOG ----------------->
