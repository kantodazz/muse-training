        function OpenDialogAssess(VATNetPaymentId) {
            debugger
            var url = '@Url.Action("Assessment", "NetVatPay")';
            // Access item properties directly
            $("#divLoader").show();

            //var newdate = new Date(dates);
            //var formted = new Date(dates.getFullYear(), dates.getMonth(), dates.getDate());

            $("#ModalBody").load(url, { VATNetPaymentId: VATNetPaymentId }, function (response, status, xhr) {
                $("#divLoader").hide();
                $("#AssessmentDetails").modal("show");
                 if (status == "error") {
                     $("#ModalBody").html("Error on accessing this details, contact system support.");
                 }

            });

            // Use the retrieved data to populate the dialog content
            // ... (populate dialog elements with data)
        }

        function OpenDialog(VATNetPaymentId) {
            debugger
            var url = '@Url.Action("Details", "NetVatPay")';
            // Access item properties directly
            $("#divLoader").show();

            $("#divModalBody").load(url, { VATNetPaymentId: VATNetPaymentId }, function (response, status, xhr) {
                $("#divLoader").hide();
                $("#VATNetDetails").modal("show");
                 if (status == "error") {
                     $("#divModalBody").html("Error on accessing this details, contact system support.");
                 }

            });

            // Use the retrieved data to populate the dialog content
            // ... (populate dialog elements with data)
        }

        var Examinemprest = function (VATNetPaymentId) {
            debugger
            var url = '@Url.Action("NetVatStatus", "NetVatPay")';
            //var Code = Code.toString();
            //var PVNo = Code.slice(2);
            //var PVNo = Code;

            swal({
                title: 'Examine',
                text: "Are you sure you want to Examine this Entry?",
                buttons: [
                    'No',
                    'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    //pageLoading("true");
                    $("#divLoader").show();
                    $.ajax(
                    {
                    type: "POST",
                    url: url,
                    data: { VATNetPaymentId: VATNetPaymentId, status: "examine" },
                    success: function (response) {
                          debugger
                        //pageLoading("false");
                        $("#divLoader").hide();
                        if (response == "Success") {
                            swal("Examine successfully!", { icon: "success" })
                                        .then((value) => {
                                            location.reload();
                                        });
                        }
                        else {
                            swal(response, { icon: "warning" });
                        }
                    },
                    error: function (xhr) {
                        //pageLoading("false");
                        $("#divLoader").hide();
                        console.log('errorResp', xhr.responseText)
                        swal(xhr, { icon: "warning" });
                    },

                });
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

    </script>
