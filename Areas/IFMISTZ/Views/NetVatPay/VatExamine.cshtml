        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">VAT Net Payment</h3>

            </div>
            <div class="modal-body" id="divModalBody">

            </div>
            <div class="modal-footer">

                <button class="btn btn-info" data-dismiss="modal" style="width:100px;">
                    <i class="fa fa-times"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AssessmentDetails" style="left:4%">

    <div class="modal-dialog" style="width:60%;">
        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Details of Assessment</h3>

            </div>
            <div class="modal-body" id="ModalBody">

            </div>
            <div class="modal-footer">

                <button class="btn btn-info" data-dismiss="modal" style="width:100px;">
                    <i class="fa fa-times"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>

