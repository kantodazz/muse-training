@model IFMIS.Areas.IFMISTZ.Models.VATNetPayment
@{
    ViewBag.Title = "VAT Net Payments";
    
}
<table class="table  table-hover table-condensed">
    <tbody>
        <tr data-level='1'>
            <th style="width:20%">
                Institution Code
            </th>
            <td>
                @Html.DisplayFor(model => model.InstitutionCode)
            </td>
            <th style="width:20%">
                Exchange Rate
            </th>
            <td>
                @Html.DisplayFor(model => model.ExchangeRate)
            </td>
        </tr>
        <tr data-level='1'>
            <th style="width:20%">
                Institution Name
            </th>
            <td>
                @Html.DisplayFor(model => model.InstitutionName)
            </td>
            <th style="width:20%">
                Amount
            </th>
            <td>
                @string.Format("{0:#,0.00}", Model.VatNetOperationalAmount)
            </td>
        </tr>
        <tr data-level='1'>
            <th style="width:20%">
                LegalNumber
            </th>
            <td>
                @Html.DisplayFor(model => model.LegalNumber)
            </td>
            <th style="width:20%">Status</th>
            <td>@Html.DisplayFor(model => model.OverallStatus)</td>
        </tr>
        <tr data-level='1'>
            <th style="width:20%">
                Payment Description
            </th>
            <td>
                @Html.DisplayFor(model => model.PaymentDesc)
            </td>
            <th style="width:20%">
                Check Date
            </th>
            <td>
                @Convert.ToDateTime(Model.CheckDate).ToString("dd/MM/yyyy")
            </td>
        </tr>
        <tr data-level='1'>
            <th style="width:20%">
                Payee Code
            </th>
            <td>
                @Html.DisplayFor(model => model.PayeeCode)
            </td>
            <th style="width:20%">
                Payee Name
            </th>
            <td>
                @Html.DisplayFor(model => model.PayeeName)
            </td>
        </tr>
        <tr data-level='1'>
            <th style="width:20%">
                Payee Bank Account
            </th>
            <td>
                @Html.DisplayFor(model => model.PayeeBankAccount)
            </td>
            <th style="width:20%">
                Payee Bank Name
            </th>
            <td>
                @Html.DisplayFor(model => model.PayeeBankName)
            </td>
        </tr>
        <tr data-level='1'>
            <th style="width:20%">
                Payee Account Name
            </th>
            <td>
                @Html.DisplayFor(model => model.PayeeAccountName)
            </td>
            <th style="width:20%">
                Payee Address
            </th>
            <td>
                @Html.DisplayFor(model => model.PayeeAddress)
            </td>
        </tr>
        <tr data-level='1'>
            <th style="width:20%">
                Payee BIC
            </th>
            <td>
                @Html.DisplayFor(model => model.PayeeBIC)
            </td>
            <th style="width:20%">
                Payee Type
            </th>
            <td>
                @Html.DisplayFor(model => model.PayeeType)
            </td>
        </tr>
        <tr data-level='1'>
            <th style="width:20%">
                Operational Currency
            </th>
            <td>
                @Html.DisplayFor(model => model.OperationalCurrency)
            </td>
            <th style="width:20%">
                PayeeBIC
            </th>
            <td>
                @Html.DisplayFor(model => model.PayeeBIC)
            </td>
        </tr>
        <tr data-level='1'>
            <th style="width:20%">
                Base Currency
            </th>
            <td>
                @Html.DisplayFor(model => model.BaseCurrency)
            </td>
            <th style="width:20%"></th>
            <td></td>
        </tr>

    </tbody>
</table>