@model IFMIS.Areas.IFMISTZ.Models.Bank

<style>
    .input{
        border: 1px solid lightgray;
        width: 100%;
        height: 35px;
    }

    .textarea {
        border: 1px solid lightgray;
        width: 100%;
    }

    .input:focus {
        border: 1px solid lightblue;
    }

    th {
        text-align: center;
    }
</style>
<!-- widget grid -->
<div id="content" style="margin: 5px; padding-top: 50px">

    <section id="widget-grid" class="">
        <div class="row">

            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>

                        <h2 style="color:black;">Edit Bank.</h2>

                    </header>
                    <div>
                        <div class="widget-body" style="padding-top:10px; width:100%;">

                            <table style="width:100%;">
                                <tr>
                                    <td colspan="1">
                                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @id = "formPost" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.BankId)

                                            <div class="form-group">
                                                <label class="col-md-4 control-label" style="text-align:right">Bank Name:</label>
                                                <div class="col-md-8 inputGroupContainer">
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(model => model.BankName, new { @Class = "input", placeholder = "", style = "width:300px; ", required = "required" })
                                                        @Html.ValidationMessageFor(model => model.BankName, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label" style="text-align:right">BIC:</label>
                                                <div class="col-md-8 inputGroupContainer">
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(model => model.BIC, new { @Class = "input", placeholder = "", style = "width:300px; ", required = "required" })
                                                        @Html.ValidationMessageFor(model => model.BIC, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label" style="text-align:right">Details of Charges:</label>
                                                <div class="col-md-8 inputGroupContainer">
                                                    <div class="input-group">
                                                        <select class="input" style="width:300px" required="required" name="DetailsOfCharges">
                                                            <option>SHA</option>
                                                        </select>
                                                        @*@Html.TextBoxFor(model => model.DetailsOfCharges, new { @Class = "input", placeholder = "", style = "width:300px; ", required = "required" })*@
                                                        @Html.ValidationMessageFor(model => model.DetailsOfCharges, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label" style="text-align:right">City:</label>
                                                <div class="col-md-8 inputGroupContainer">
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(model => model.City, new { @Class = "input", placeholder = "", style = "width:300px; ", required = "required" })
                                                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label" style="text-align:right">Fax:</label>
                                                <div class="col-md-8 inputGroupContainer">
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(model => model.Fax, new { @Class = "input", placeholder = "", Type = "number", style = "width:300px; ", required = "required" })
                                                        @Html.ValidationMessageFor(model => model.Fax, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label" style="text-align:right">Telephone:</label>
                                                <div class="col-md-8 inputGroupContainer">
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(model => model.Telephone, new { @Class = "input", placeholder = "", Type = "number", style = "width:300px; ", required = "required" })
                                                        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label" style="text-align:right">Email Address:</label>
                                                <div class="col-md-8 inputGroupContainer">
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(model => model.Address1, new { @Class = "input", placeholder = "", style = "width:300px; ", required = "required" })
                                                        @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label" style="text-align:right">Address:</label>
                                                <div class="col-md-8 inputGroupContainer">
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(model => model.Address2, new { @Class = "input", placeholder = "", style = "width:300px; ", required = "required" })
                                                        @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-actions">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <a href='@Url.Action("Banklist", "Banks")' class="btn btn-info" style="   width:80px;border-radius:1px;color:black">
                                                            <i class="glyphicon glyphicon-arrow-left"></i>
                                                            Back
                                                        </a>
                                                        <button type="submit" class="btn action-btn btn btn-info" id="submit">
                                                            <i class="fa fa-save"></i>
                                                            <img src="~/Content/img/loading.gif" id="saveLoader" />
                                                            Save
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </td>
                                    <td colspan="1"></td>
                                </tr>
                            </table>

                        </div>

                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section pagespecific{
    <script>

                if ('@TempData["Success"]' == 'Success') {
                    swal("Edited Successfully!", { icon: 'success' })
                         .then(Ok=> {
                             window.location.href = '@Url.Action("Banklist", "Banks")';
                         });
                } 

        $("form").submit(function(){
            $("#saveLoader").toggle(true);
            $('#submit').attr("disabled", true);
        });

        $("#saveLoader").toggle(false);
        $("#submit").prop('disabled', false);


    </script>
}



