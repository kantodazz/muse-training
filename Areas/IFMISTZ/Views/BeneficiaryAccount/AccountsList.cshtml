@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.DeductionAccount>

@{
    ViewBag.Title = "Beneficiary Accounts";
}
<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    input[type=text] {
        padding: 5px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }
</style>
<!-- MAIN CONTENT -->
<div id="divLoader"></div>
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-white" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"
                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <!-- widget content -->
                    <div class="widget-body">

                        <div class="row">

                            <div class="col-xs-9 col-sm-3 col-md-3 col-lg-3">
                                <div class="input-group">
                                    <a href="@Url.Action("CreateAccount", "BeneficiaryAccount")" class="btn btn-info" style="width:120px;border-radius:1px;">
                                        <i class="fa fa-plus"></i>Add New
                                    </a>

                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="search-container" style="float:right">
                                    <i class="fa fa-search"></i>
                                    <input type="search" name="search" placeholder="Search..." id="search-box" autocomplete="off">
                                </div>
                            </div>
                        </div>

                        <table id="dt_accounts" class="table table-striped table-bordered table-hover table-condensed table-responsive" width="100%">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InstitutionName)
                                    </th>
                                    <th>
                                        AccountNo
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InstitutionBankName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InstitutionAccountName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InstitutionBIC)
                                    </th>
                                    <th>
                                        SBC
                                    </th>
                                    <th>
                                        RequireCtrNo
                                    </th>
                                    <th>
                                        RequestCtrNo
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OverallStatus)
                                    </th>
                                    <th style="text-align:center">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstitutionName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstitutionBankAccountNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstitutionBankName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstitutionAccountName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstitutionBIC)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubBudgetClass)
                                        </td>
                                        <td style="text-align:center">

                                            @if (item.RequireCtrNo == true)
                                            {
                                                <em>Yes</em>
                                            }
                                            else
                                            {
                                                <em>No</em>
                                            }
                                        </td>
                                        <td style="text-align:center">
                                            @if (item.RequestCtrNo == true)
                                            {
                                                <em>Yes</em>
                                            }
                                            else
                                            {
                                                <em>No</em>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OverallStatus)
                                        </td>
                                        <td style="text-align:center">

                                            <div class="btn-group">

                                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu">


                                                    <li>
                                                        <a href="@Url.Action("EditAccount", "BeneficiaryAccount",new {id=item.DeductionAccountId })" class="btn-xs edit">
                                                            <i class="fa fa-edit"></i>  Edit
                                                        </a>
                                                    </li>
                                                    <li>

                                                        <a href="#" onclick="cancelEntry(@item.DeductionAccountId)"> <i class="fa fa-edit"></i>Cancel</a>

                                                    <li>


                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                        <!-- end widget content -->

                    </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->

        </div>

        <!-- end row -->
        <!-- end row -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->



@section pagespecific {
    <script type="text/javascript">

        var dt_accounts = $('#dt_accounts').dataTable();
        $("#dt_accounts_wrapper .dt-toolbar").remove();
        $("#search-box").on("keyup search input paste cut", function () {
            $("#dt_accounts").DataTable().search(this.value).draw();
        });

                     var cancelEntry = function (id) {
             swal({
                        title: 'Confirmation',
                        text: "Do you  cancel this account ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            var url = '@Url.Action("CancelEntry", "BeneficiaryAccount")';
                            $.ajax(
                {
                    type: "POST",
                    url: url,
                    data: { id: id },
                    success: function (response) {
                        if (response == "Success") {
                            swal("Cancelled  successfully!", { icon: "success" })
                                         .then((value) => {
                                             location.reload();
                                         });
                        }
                        else {
                            swal(response);
                        }
                    },
                    error: function (xhr) {
                        //console.log(xhr.responseText);
                        swal("An error has occured, contact system support");

                    },

                });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });

        };

        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });
    </script>
}
