@model IFMIS.Areas.IFMISTZ.Models.InstitutionListVm

@{
    ViewBag.Title = "InventoryIssueNoteRPTv";
    ViewBag.Description = "form wizards";
    //Layout = "~/Views/Shared/_Default.cshtml";

}



<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">


        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">

        </div>
    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Inventory Issue Note by SWH</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Institution Code
                                    </div>
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(model => model.InstitutionCode, Model.InstitutionCodeList, "-- Select Institution --", new { @class = "select2 form-control padding-left-10" })
                                        @Html.ValidationMessageFor(model => model.InstitutionCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Sub Warrant Holder
                                    </div>
                                    <div class="col-md-5">
                                        <select id="SubWarrantCode" name="SubWarrantCode" class="select2 form-control padding-left-10">
                                            <option value="">-- Select SubWarrant Holder --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Start Issue Number
                                    </div>
                                    <div class="col-md-3">
                                        <input type="text" name="StartIssueNum" id="StartIssueNum" class="form-control padding-left-10" placeholder="Search Voucher Number" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        End Issue Number
                                    </div>
                                    <div class="col-md-3">
                                        <input type="text" name="EndIssueNum" id="EndIssueNum" class="form-control padding-left-10" placeholder="Search Voucher Number" />
                                    </div>
                                </div>
                                <hr class="simple" />
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn action-btn btn btn-info" onclick="InventoryIssueRPT()">
                                            View Report
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section scripts
{
    <script>

        GetInstitutionIssueNumbers();
      /*  GetVotes();*/

        function InventoryIssueRPT() {
            var entityCode = $("#InstitutionCode").val().trim(),
                subWarrant = $("#SubWarrantCode").val(),
                startIssueNum = $("#StartIssueNum").val().trim(),
                endIssueNum = $("#EndIssueNum").val().trim(),
                url = "@Model.UrlName" + "InventoryIssueNoteST.aspx";

            var isNotSupplied = validateReportParameters(["#InstitutionCode", "#SubWarrantCode", "#StartIssueNum", "#EndIssueNum"]),
                queryString = "inst-code=" + entityCode + "&swh-code=" + subWarrant + "&start-issuedNum=" + startIssueNum + "&end-issuedNum=" + endIssueNum;

            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else
            {
                $.ajax({
                        type: "GET",
                        url: '@Url.Action("ParameterEncryption", "Report")',
                        contentType: "application/json; charset=utf-8",
                        datatype: "json",
                        data: { "query": queryString },
                        success: function (response) {
                            window.open(url + response);
                        }
                });
            }
        }

        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);

            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val().trim()) {
                    return parameterList[i];
                }
            }
            return null;
        }
        $("#InstitutionCode").change(function () {
            var institutionCode = $(this).val(),
                url = "GetInstitutionSubwarrantHolders/?institutionCode=" + institutionCode;

            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#SubWarrantCode").empty();
                    $("#SubWarrantCode").append(response);
                }
            });
        });
        function GetVotes() {
            const url = "GetSTParentInstitutions/";
            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#InstitutionCode").empty();
                    $("#InstitutionCode").append(response);
                }
            });
        }
        function GetInstitutionIssueNumbers() {
            var url = "GetInstitutionIssueNumbers/";

            $("#StartIssueNum").select2({
                minimumInputLength: 3,  // minimumInputLength for sending ajax request to server
                width: 'resolve',   // to adjust proper width of select2 wrapped elements
                ajax: {
                    url: url, // Controller - Select2Demo and Action -AccessRemoteData
                    type: "GET",
                    dataType: 'json',
                    data: function (searchTerm) {
                        return {
                            searchTerm: searchTerm,
                            institutionCode : $("#InstitutionCode").val(),
                        };
                    },
                    results: function (data, page) {
                        return { results: data.issueNumbers }; // data.voucherNumbers returning json data from Controller
                    }
                }
            });


            $("#EndIssueNum").select2({
                minimumInputLength: 3,  // minimumInputLength for sending ajax request to server
                width: 'resolve',   // to adjust proper width of select2 wrapped elements
                ajax: {
                    url: url, // Controller - Select2Demo and Action -AccessRemoteData
                    type: "GET",
                    dataType: 'json',
                    data: function (searchTerm) {
                        return {
                            searchTerm: searchTerm,
                            institutionCode : $("#InstitutionCode").val(),
                        };
                    },
                    results: function (data, page) {
                        return { results: data.issueNumbers }; // data.voucherNumbers returning json data from Controller
                    }
                }
            });
        }

    </script>
}