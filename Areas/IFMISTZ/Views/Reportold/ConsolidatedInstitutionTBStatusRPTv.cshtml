@section scripts
{
    <script>
        //GetConsoReportTypes();
        GetConsoInstitutionServers();

        function ConsoIstitutionStatusRPT() {
            var reportType = "ALL",
                serverName = $("#serverName").val().trim(),
                institution = $("#institution").val().trim(),
                fy = $("#FinancialYear").val().trim(),
                status = $("#status").val().trim(),
                url = "@Model.UrlName" + "ConsolidatedInstitutionTBStatusRPT.aspx";

            var isNotSupplied = validateReportParameters(["#serverName", "#FinancialYear", "#institution","#status"]),
                queryString = "report-type=" + reportType + "&server-name=" + serverName + "&curr-fiscal-yr=" + fy + "&institution=" + institution + "&status=" + status + "&page-no=" + 1;


            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("ParameterEncryption", "Report")',
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    data: { "query": queryString },
                    success: function (response) {
                        window.open(url + response);
                    }
                });
            }
        }

        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);

            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val().trim()) {
                    return parameterList[i];
                }
            }
            return null;
        }

