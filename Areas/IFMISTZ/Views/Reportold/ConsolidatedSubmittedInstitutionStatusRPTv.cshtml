@section scripts
{
    <script>
        GetConsoInstitutionServers();

        function ConsoIstitutionStatusRPT() {
            var serverName = $("#serverName").val().trim(),
                institution = $("#institution").val().trim(),
                //submittedyear = $("#submittedyear").val().trim(),
                url = "@Model.UrlName" + "ConsolidatedSubmittedInstitutionStatusRPT.aspx";
                //isSubmitted = (submittedyear === "0") ? 0 : ((submittedyear === "4") ? 4 : 1);

            var isNotSupplied = validateReportParameters(["#serverName", "#institution"]), /*,"#submittedyear"*/
                queryString = "server-name=" + serverName + "&institution=" + institution + "&page-no=" + 1; /*"submission-year=" + submittedyear +  "&isSubmitted=" + isSubmitted */


            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("ParameterEncryption", "Report")',
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    data: { "query": queryString },
                    success: function (response) {
                        window.open(url + response);
                    }
                });
            }
        }

        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);

            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val().trim()) {
                    return parameterList[i];
                }
            }
            return null;
        }

        function GetConsoInstitutionServers() {
            const url = "GetConsoInstitutionServerList/";
            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#serverName").empty();
                    $("#serverName").append(response);
                }
            });
        }


        $("#serverName").change(function () {

            var serverName = $(this).val();

            var url = "GetConsoServerInstitutionList/?serverName=" + serverName;

            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#institution").empty();
                    $("#institution").append(response);
                }
            });
        });

    </script>
}