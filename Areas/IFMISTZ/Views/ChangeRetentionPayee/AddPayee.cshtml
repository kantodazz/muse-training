@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.ChangeRetentionPayeeVM>
@{
    ViewBag.Title = "New Ceiling";


}
<style>



    .search-container {
        display: inline-flex;
        flex: 1 1 300px;
        position: relative;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        padding-left: 10px;
    }


    .search-icon {
        padding: 0.5rem;
    }


    input[type=text] {
        padding: 5px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    textarea {
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    .action-btn {
        width: 100px;
        color: white;
    }

    .form-label {
        text-align: right;
    }

    td {
        padding: 5px;
    }

    .info-box {
        padding: 10px;
        background-color: #ECF3F8;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
</style>


<div id="content">

    <!-- widget grid -->
    <section id="widget-grid">


        <!-- START ROW -->

        <div>

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header class="margin-top-10">
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> Create Retention Payee </h2>

                    </header>


                    <div>
                        <div class="widget-body">
                            <div align="center">
                                <img src="~/Media/Images/ajax_loader.gif" class="loadingImg" style="display:none" />
                            </div>

                            <div class="row">


                                <div class="col-md-9">
                                    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitCeiling(this)" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-horizontal">

                                            <div class="form-group">
                                                <label class="col-md-2">Select Retention</label>
                                                <div class="input-group col-md-6">
                                                    <input type="text" class="form-control" id="OldPayeeName" placeholder="Search Retention" aria-describedby="basic-addon2" onclick="SearchRetention()">
                                                    <span class="input-group-addon" id="basic-addon2" onclick="SearchRetention()">Search</span>
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <label class="col-md-2">Select Payee</label>
                                                <div class="input-group col-md-6">
                                                    <input type="text" class="form-control" id="PayeeName" placeholder="Search New Payee" aria-describedby="basic-addon2" onclick="SearchPayee()">
                                                    <span class="input-group-addon" id="basic-addon2" onclick="SearchPayee()">Search</span>
                                                </div>
                                            </div>

                                        </div>

                                        <input type="hidden" id="PayeeDetailId" name="PayeeDetailId" value="">
                                        <input type="hidden" id="ReservedRetentionId" name="ReservedRetentionId" value="">

                                        <div class="form-group" style="margin-top:20px;">
                                            <div class="col-md-10 col-md-offset-2">
                                                <a href="@Url.Action("PendingRetentionPayee","ChangeRetentionPayee")" style="margin-right:5px" class="btn btn-info pull-left"><i class="glyphicon glyphicon-arrow-left"></i> Back  </a>

                                                <button type="submit" id="save_button" class="btn btn-info" style="margin-right:2px">
                                                    <i class="glyphicon glyphicon-floppy-disk"></i> Save
                                                </button>
                                            </div>

                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </article>

        </div>
    </section>

</div>



<div class="modal fade" id="search_retention">

    <div class="modal-dialog" style="width:80%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Search Retention</h3>
            </div>
            <div class="modal-body">

                <div class="row" style="padding-top:1%;padding-bottom:1%">
                    <div class="input-group col-md-3" style="float:right;">
                        <span class="input-group-addon" id="sizing-addon2">
                            <i class="fa fa-search search-icon"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Username" aria-describedby="sizing-addon2">
                    </div>
                </div>
                <div align="center">
                    <img src="/Media/Images/ajax_loader.gif" class="loadingImg" style="display:none" />
                </div>
                <table id="dt_search_retention" class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Reserved Retention Id</th>
                            <th>Payee Name</th>
                            <th>Payee Code</th>
                            <th>Retention Amount</th>
                            <th>Contract Number</th>
                            <th> Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{var i = 0; var j = 0;}
                        @foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <td>@i</td>
                                <td> @Html.DisplayFor(modelItem => item.ReservedRetentionId)</td>
                                <td> @Html.DisplayFor(modelItem => item.PayeeName)</td>
                                <td> @Html.DisplayFor(modelItem => item.PayeeCode)</td>
                                <td> @Html.DisplayFor(modelItem => item.Balance)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContractNumber)<br />
                                    @Html.DisplayFor(modelItem => item.ContractNo)
                                </td>
                                <td><a href="#" onclick="retentionClicked(@j)"><i class="glyphicon glyphicon-plus-sign"></i></a></td>
                            </tr>
                            j++;
                        }
                    </tbody>
                </table>
                <div class="modal-footer">
                    <button class="btn btn-info" data-dismiss="modal">
                        <i class="fa  fa-times"></i>Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>



<!----------- Search Payee ----------------->
<div class="modal fade" id="payeeModal" style="left:4%">

    <div class="modal-dialog" style="width:80%;">
        <div class="modal-content panel-info">


            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"> Search Payee</h3>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                        <div class="search-container submit-btn" style="float:right">
                            <i class="fa fa-search search-icon"></i>
                            <input type="search" name="search" placeholder="Search..." autocomplete="off" id="searchbox">
                        </div>
                    </div>
                </div>
                <div align="center">
                    <img src="/Media/Images/ajax_loader.gif" class="loadingImg" style="display:none" />
                </div>
                <table class="table" id="dt_search_payee">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>PaymentId</th>
                            <th>BIC</th>
                            <th>Payee Name</th>
                            <th>Payee Code</th>
                            <th>Bank Name</th>
                            <th>Bank Account No</th>
                            <th>Payee Type</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button class="btn btn-info" data-dismiss="modal">
                    <i class="fa  fa-times"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>
<!----------- End Search Payee----------------->


@section pagespecific {
    <script>

        $("#contract-payee").empty();
        function SearchRetention() {
            $('#search_retention').modal('show');
        }

        function SearchPayee() {
            $('#payeeModal').modal('show');
        }


        var dt_search_retention = $('#dt_search_retention').dataTable({
            "aoColumnDefs": [{ "bVisible": false, "aTargets": [1] }],
        });
        $("#dt_search_retention_wrapper .dt-toolbar").remove();

        function retentionClicked(rowId) {
            var data = dt_search_retention.DataTable().rows().data();
            var row = data[rowId];
            $("#ReservedRetentionId").val(row[1]);
            $("#OldPayeeName").val(row[2]);

            $('#search_retention').modal('hide');
            //swal("Lord Help us " + row[2]);
        }


         var dt_search_payee = $('#dt_search_payee').dataTable({
            "aoColumnDefs": [{ "bVisible": false, "aTargets": [1, 2] }],
        });
        $("#dt_search_payee_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            debugger;
            if (!this.value) {
                dt_search_payee.fnClearTable();
            } else {
                searchPayeeTableUpdate(this.value);
            }
        });

        function searchPayeeTableUpdate(search) {
            debugger;
        var url = '@Url.Action("GetPayee", "Procurement")';
        $.ajax({
            type: "get",
            url: url + "/?search=" + search + "",
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                data = response.data;
                dt_search_payee.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_search_payee.fnAddData([i + 1,
                       data[i]["PayeeDetailId"],
                       data[i]["BIC"],
                       data[i]["AccountName"],
                       data[i]["PayeeCode"],
                       data[i]["PayeeName"],
                       data[i]["Accountnumber"],
                       data[i]["PayeeType"],
                       data[i]["Address1"],
                       '<a href="#" onclick="payeeClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                    ]);
                }
            },
            failure: function (error) {
                swal(error);
            }
        });
    }



        function payeeClicked(rowId) {
            var data = dt_search_payee.DataTable().rows().data();
            var row = data[rowId];
            $("#PayeeDetailId").val(row[1]);
            $("#PayeeName").val(row[3]);
            $("#payeeModal").modal("hide");
        }



        function SubmitCeiling(formData) {
            $("#save_button").prop('disabled', true);

            var url = '@Url.Action("SaveRetentionPayee", "ChangeRetentionPayee")';
            var ajaxConfig = {
                type: "post",
                url: url,
                data: new FormData(formData),
                success: function (response) {
                    $("#save_button").prop('disabled', false);
                    if (response == "Success") {
                        swal("Data saved successfully", { icon: "success" })
                            .then((value) => {
                                 var url = '@Url.Action("PendingRetentionPayee", "ChangeRetentionPayee")';
                                window.location.replace(url);
                               });
                    }
                    else {
                        swal(response);
                    }
                }
            }

            if ($(formData).attr('enctype') == "multipart/form-data") {
                ajaxConfig["contentType"] = false;
                ajaxConfig["processData"] = false;
            }
            $.ajax(ajaxConfig);
            return false;
        }


    </script>
}


