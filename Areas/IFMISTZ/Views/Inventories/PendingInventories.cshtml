@{
    ViewBag.Title = "Pending Inventories List";
}


<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> Pending Inventories </h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">

                            <div align="center">
                                <img src="~/Media/Images/ajax_loader.gif" class="loadingImg" style="display:none" />
                            </div>

                            <div class="row">

                                <div class="col-xs-9 col-sm-3 col-md-3 col-lg-3">
                                    <div class="input-group">
                                        <a href="@Url.Action("CreateInventory", "Inventories")" class="btn btn-info" style="width:120px;border-radius:1px;">
                                            <i class="fa fa-plus"></i>Add New
                                        </a>

                                    </div>
                                </div>
                                <div class="col-xs-9 col-sm-3 col-md-2 col-lg-2">
                                    <a href="@Url.Action("UploadInventories", "Inventories")" class="btn btn-info" style="width:150px;border-radius:1px;">
                                        <i class="fa fa-upload"></i>Upload Inventories
                                    </a>
                                </div>
                            </div>
                            <table class="table  table-bordered table-hover table-condensed" id="dt_inventories">
                                <thead>
                                    <tr>
                                        <th style="text-align:right;width:4%"></th>
                                        <th style="text-align:left">Inventory Number</th>
                                        <th style="text-align:left">Item Card</th>
                                        <th style="text-align:left">Inventory</th>
                                        <th style="text-align:center">Quantity</th>
                                        <th style="text-align:left">UOM</th>
                                        <th style="text-align:right">Unit Price(Tsh)</th>
                                        <th style="text-align:right">Total Value(Tsh)</th>
                                        <th style="text-align:left">Source</th>
                                        <th style="text-align:left">Status</th>
                                        <th style="text-align:center">Action</th>

                                    </tr>
                                </thead>

                            </table>

                        </div>





                    </div>


                </div>
            </article>

        </div>
    </section>

</div>


<div class="modal fade" id="ComfirmInventory" style="left:4%">

    <div class="modal-dialog" style="width:35%;">
        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title" style="text-align:center"> Confirm Inventory</h3>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "ConfirmReason" }))
            {
                <div class="modal-body form-horizontal">

                    <br />

                    <input type="hidden" name="Id" id="Id" value="">
                    <div class="form-group">

                        <div class="col-md-12">
                            <textarea name="Reason" id="Reason" placeholder="Enter short explanation how you fixed problem of rejection" required rows="4" maxlength="250" class="form-control"></textarea>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <input class="btn btn-info" type="submit" id="btnSubmit" value="Save" />
                    @*<input type="submit" value="Submit" class="btn btn-success" id="btnSubmit" />*@

                </div>

            }
        </div>
    </div>
</div>

<div class="modal fade" id="CorrectCategory">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 align="center">Correct Item Classification</h4>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "CorrectCatForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="modal-body">
                    <input type="hidden" name="InventoryId" id="InventoryId" value="">
                    <div class="form-group">
                        @Html.Label("Change To", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-7">
                            <select name="ItemClass" id="ItemClass" class="form-control" required>
                                <option value="" selected>Select ...</option>
                                <option value="2">Asset</option>
                                <option value="1">Expense</option>
                                <option value="4">Service</option>
                            </select>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default action-btn" data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-info">
                        Save
                    </button>
                </div>

            }

        </div>
    </div>
</div>

<div class="modal fade" id="divModal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog modal-lg" style="width:80%;">
        <div width="90%" class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblmodal">
                    Preview
                </h4>
            </div>
            <div class="modal-body" id="divModalBody">

            </div>

            <div id="divPaymentStatusLoader" style="text-align:center; display:none">
                <img src="~/assets/img/avatars/ajax_loader.gif" />
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="uom_modal" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog modal-lg" style="width:80%;">
        <div width="90%" class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblmodal">
                   Correct Unit of Measure
                </h4>
            </div>
            <div class="modal-body" id="uom-body">

            </div>

            <div id="divPaymentStatusLoader" style="text-align:center; display:none">
                <img src="~/assets/img/avatars/ajax_loader.gif" />
            </div>
        </div>
    </div>

</div>

@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->

    <script type="text/javascript">
        var dt_inventories_data = $('#dt_inventories').dataTable();
        $(document).ready(function () {
            GetInventories();


                $(".CorrectCategory").on('click', function () {
                    var id = $(this).data('id');
                    var bcode = $(this).data('bcode');
                    $("#CorrectCategory #bcode").text(bcode);
                    $("#CorrectCatForm #InventoryId").val(id);
                });

                // Chage item Classification
                $("#CorrectCatForm").on('submit', function (e) {
                    e.preventDefault();

                    var item_class_id = $("#CorrectCatForm #ItemClass").val();
                    var description = "";
                    if (item_class_id == 1) {
                        description = "Do you chage Classfication of this Item(s) ? Once Changed to expense can not be restored";
                    } else if (item_class_id == 4) {
                        description = "Do you chage Classfication of this Item(s) ?Once Changed to service can not be restored";
                    }
                    else {
                        description = "Do you chage Classfication of this Item(s) ?";
                    }

                    swal({
                        title: 'Confirmation',
                        text: description,
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            var url = '@Url.Action("ChangeClassification", "Inventories")';
                            var id = $("#CorrectCatForm #InventoryId").val();
                            var formData = {
                                "id": id,
                                "class_id": item_class_id
                            }
                            $('#CorrectCategory').modal('hide');
                            $.ajax(
                        {
                            type: "POST",
                            url: url,
                            data: formData,
                            success: function (response) {
                                if (response == "Success") {

                                    swal("Changed  successfully!", { icon: "success" })
                                              .then((value) => {
                                                  location.reload();
                                              });


                                }
                                else {

                                    swal(response);
                                }
                            },
                            error: function (xhr) {
                                swal(error);

                            },

                        });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
                });
                   $("#ConfirmReason").on('submit', function (e) {
                    e.preventDefault();

                    swal({
                        title: 'Confirmation',
                        text: "Do you confirm this Inventory ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            var url = '@Url.Action("ConfirmRejected", "Inventories")';
                            var id = $("#Id").val();
                            var reason = $("#Reason").val();
                            var formData = {
                                "Id": id,
                                "Reason": reason
                            }
                            $('#ComfirmInventory').modal('hide');
                            $.ajax(
                        {
                            type: "POST",
                            url: url,
                            data: formData,
                            success: function (response) {
                                if (response == "Success") {

                                    swal("Confirmed  successfully!", { icon: "success" })
                                              .then((value) => {
                                                 location.reload();
                                              });


                                }
                                else {

                                    swal(response);
                                }
                            },
                            error: function (xhr) {
                                swal(error);

                            },

                        });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
                });
                        });



        var confirmInventory = function (id) {

                    swal({
                        title: 'Confirmation',
                        text: "Do you what to confirm Inventory ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                          var url = '@Url.Action("ConfirmInventory", "Inventories")';
                            $.ajax(
                {
                    type: "POST",
                    url: url,
                    data: { id: id },
                    success: function (response) {
                        if (response == "Success") {

                            swal("Confirmed successfully", { icon: "success" })
                                      .then((value) => {
                                          location.reload();
                                      });


                        }
                        else {

                            swal(response);
                        }
                    },
                    error: function (xhr) {
                        swal(error);
                        $("#divLoader").hide();
                    },

                });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
        };
        var cancelEntry = function (id) {

                    swal({
                        title: 'Confirmation',
                        text: "Do you what to cancel this Inventory  entry  ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                          var url = '@Url.Action("CancelInventory", "Inventories")';
                            $.ajax(
                {
                    type: "POST",
                    url: url,
                    data: { id: id },
                    success: function (response) {
                        if (response == "Success") {

                            swal("Cancelled successfully", { icon: "success" })
                                      .then((value) => {
                                          location.reload();
                                      });


                        }
                        else {

                            swal(response);
                        }
                    },
                    error: function (xhr) {
                        swal(error);
                        $("#divLoader").hide();
                    },

                });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
        };

        var correctClassification = function (id) {
                    $("#CorrectCatForm #InventoryId").val(id);
                    $('#CorrectCategory').modal('show');
        };
           var confirmRejected = function (id) {
                    $(".modal-body #Id").val(id);
                    $('#ComfirmInventory').modal('show');

        };


       var setUom = function (id) {
          var url = '@Url.Action("SetUom", "Inventories")';
           $("#uom-body").load(url, { id: id }, function (response, status, xhr) {
           if (status == "error") {
               $("#uom-body").html("Error on setting unit of meassure, contact system support.");
           }
               $("#uom_modal").modal("show");
          });
        };

            var previewInventory = function (id) {
            var url = '@Url.Action("PreviewInventory", "Inventories")';
            $("#divModalBody").load(url, { id: id }, function (response, status, xhr) {
                if (status == "error") {
                    $("#divModalBody").html("Error on accessing this details, contact system support.");
                }
                $("#divModal").modal("show");
            });
        };
        function GetInventories() {
                var status = "Pending";
                var url = '@Url.Action("GetInventoriesList", "Inventories")';
                var status_data = {
                    "status": status
                }
                $.ajax({
                    type: "get",
                    url: url,
                    data: status_data,
                    contenttype: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (result) {
                        if (result.response == "Success") {
                            data = result.Inventories;
                            dt_inventories_data.fnClearTable();
                            for (var i = 0; i < data.length; i++) {

                                dt_inventories_data.fnAddData([i + 1,
                                data[i]["InventoryCode"],
                                data[i]["ItemCard"],
                                data[i]["ItemName"],
                               '<div align="center">' + data[i]["Quantity"] + '</div>',
                               data[i]["UOM"],
                              '<div align="right">' + toLabel(data[i]["UnitPrice"] || 0) + '</div>',
                              '<div align="right">' + toLabel(data[i]["InventoryValue"] || 0) + '</div>',
                                    SourceModule(data[i]["SourceModule"], data[i]["SourceLegalNumber"]),
                               data[i]["OverallStatus"],
                               ActionLinks(data[i]["InventoryDetailId"], data[i]["SourceModule"], data[i]["OverallStatus"], data[i]["AddedBy"])
                                ]);

                            }
                        }
                        else {
                            swal(result);
                        }
                    },
                    failure: function (error) {
                        swal(error);
                    }
                });
        }
        function SourceModule(sourceModule,legalNumber) {
            var data = '';
            if (sourceModule == "External") {
                data = sourceModule;
            } else {
                data = '<a href="@Url.Action("PreviewSource", "Inventories")?source=' + sourceModule + '&number=' + legalNumber + '">' + legalNumber+'</a>\
                ';
            }
            return data;
        }
        function ActionLinks(id, sourceModule, OverallStatus, upploaded) {
            var link = '<div align = "center"> <div class="btn-group">\
                            <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                    <span class="sr-only"></span>\
                            </button>\
                          <ul class="dropdown-menu" style="text-align:left">\
              ';

            if (upploaded == "By Uploading") {

                link = link + '<li><a href="@Url.Action("EditExternalInventory", "Inventories")/' + id + '"><i class="fa fa-edit"></i>Add Information</a></li>\
              ';
            }
            else if (sourceModule == "External") {
                link = link + '<li><a href="@Url.Action("EditExternalInventory", "Inventories")/' + id + '"><i class="fa fa-edit"></i>Edit</a></li>\
               ';
            }
            else {
                link = link + '<li><a href="@Url.Action("EditInventory", "Inventories")/' + id + '"><i class="fa fa-edit"></i>Add Information</a></li>\
             ';
            }
            link = link + '<li><a href="#" onclick="previewInventory(' + id + ')"> <i class="fa fa-search-minus"></i>  Preview</a></li>\
            ';
            link = link + '<li><a href="#" onclick="setUom(' + id + ')"> <i class="fa fa-edit"></i>  Set UOM</a></li>\
            ';
            if (OverallStatus == "Pending") {
                link = link + '<li><a href="#" onclick="confirmInventory(' + id + ')"> <i class="fa fa-edit"></i> Confirm</a></li>\
            ';
            }
            else if (OverallStatus == "Rejected") {
                link = link + '<li><a href="#" onclick="confirmRejected(' + id + ')"> <i class="fa fa-edit"></i> Confirm</a></li>\
            ';
            }

            if (sourceModule != "External") {
                link = link + '<li><a href="#" onclick="correctClassification(' + id + ')"> <i class="fa fa-edit"></i>  Correct Classification</a></li>\
               ';
            }

            if (sourceModule == "External") {
                link = link + '<li><a href="#" onclick="cancelEntry(' + id + ')"> <i class="fa fa-edit"></i> Cancel</a></li>\
               ';
            }

            link = link + '</ul>\
            </div> </div>';
            return link;

        }



        function SubmitUOM(formData) {

            var url = '@Url.Action("SaveUOM", "Inventories")';
            var ajaxConfig = {
                type: "post",
                url: url,
                data: new FormData(formData),
                success: function (response) {
                    if (response == "Success") {
                        swal("Unit of measure saved successfully", { icon: "Success" })
                                    .then((value) => {
                                            location.reload();
                                });
                    }
                    else {
                        swal(response);
                    }
                }
            }


            if ($(formData).attr('enctype') == "multipart/form-data") {
                ajaxConfig["contentType"] = false;
                ajaxConfig["processData"] = false;
            }
            $.ajax(ajaxConfig);
            return false;
        }

        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });

    </script>
}