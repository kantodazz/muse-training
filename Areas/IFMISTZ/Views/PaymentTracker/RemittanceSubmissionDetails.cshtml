@model IFMIS.Areas.IFMISTZ.Models.MeridianVoucher

@{
    ViewBag.Title = "Details";
}
<div id="content" style="margin: 5px; padding-top: 50px">

    <div class="row">

        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <!-- Button trigger modal -->
            <!--<a data-toggle="modal" href="#myModal" class="btn btn-success btn-lg pull-right header-btn hidden-mobile"><i class="fa fa-circle-arrow-up fa-lg"></i> Launch form modal</a>-->
        </div>
    </div>
    <section id="widget-grid" class="">

        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Details </h2>

                    </header>
                    <div>
                        <div class="jarviswidget-editbox">

                        </div>
                        <div class="widget-body">
                            <div>
                                <dl class="dl-horizontal table-stripped">
                                    <dt>
                                        Creditor Acc Name
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.CreditorAccName)
                                    </dd>
                                    <dt>
                                        Creditor Acc Number
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.CreditorAccNumber)
                                    </dd>
                                    <dt>
                                        Swift Code
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.SwiftCode)
                                    </dd>

                                    <dt>
                                        CreditorBIC
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.CreditorBIC)
                                    </dd>
                                    <dt>
                                        DueDate
                                    </dt>
                                    <dd>
                                        @Html.DisplayNameFor(model => model.DueDate)
                                    </dd>
                                    <dt>
                                        ReferenceNo
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ReferenceNo)
                                    </dd>
                                </dl>
                            </div>
                            <div>
                                <div>
                                    <div colspan="5"><strong>Account Information:</strong></div>
                                </div>
                            </div>
                            <div class="widget-body">
                                <hr class="simple" />
                                <table id="dt_basic" class="table table-striped table-bordered table-hover table-condensed" width="100%">
                                    <thead>
                                        <tr style="background-color: #f5f5f5; color:black">
                                            <th>#</th>
                                            <th>Line Item</th>
                                            <th>Operational Amount</th>
                                            <th>Base Amount</th>
                                        </tr>
                                    </thead>
                                    @{
                                        int i = 0;
                                    }
                                    @foreach (var item in Model.MeridianDetails)
                                    {
                                        i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DrGlAccount)
                                        </td>
                                        <td>
                                            <b>@Model.OperationalCurrency</b> @string.Format("{0:N}", item.OperationalAmount)
                                        </td>
                                        <td>
                                            <b>@Model.BaseCurrency</b> @string.Format("{0:N}", item.BaseAmount)
                                        </td>
                                        <td>

                                    </tr>
                                    }
                                </table>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-10">
                                            <a href="@Request.UrlReferrer" style="margin-right:-10px" type="submit" class="btn btn-info pull-left"><i class="glyphicon glyphicon-arrow-left"></i> Back  </a>
                                            &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

