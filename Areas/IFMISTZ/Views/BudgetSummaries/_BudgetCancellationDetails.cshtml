<hr />

<table class="table table-bordered table-condensed table-hover table-responsive table-striped">
    <tr>
        <td>#</td>
        <td>Attachment Name</td>
    </tr>
    @{ int i = 0; }
    @foreach (var item in Model.BudgetCancellationAttachments
        .OrderByDescending(a => a.BudgetCancellationAttachmentId))
    {
        i++;
        <tr>
            <td>@i</td>
            <td>@item.AttachmentName</td>
            <td>@item.AttachmentData</td>
        </tr>
    }
</table>

