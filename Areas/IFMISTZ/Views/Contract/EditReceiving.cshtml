@model IFMIS.Areas.IFMISTZ.Models.ReceivingSummaryVM
@{
    ViewBag.Title = "Edit Receiving";
}

<!-- MAIN CONTENT -->

<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Edit  Contract Receiving </h2>

                    </header>

                    @{ decimal balance = (Decimal)Model.ContractAmount - (Decimal)Model.ReceivingItemsValue;}
                    <div class="jarviswidget" id="wid-id-12" data-widget-colorbutton="false" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false">
                        <p align="left">
                            Receiving Number &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Model.ReceivingNumber</strong><br />
                            Contract Number &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Model.ContractNo</strong><br />
                            Supplier&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Model.SupplierName</strong><br />
                            Contract Amount &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Model.Currency  @Convert.ToDecimal(Model.ContractAmount).ToString("#,##0/=")</strong><br />
                            Payment Schedule &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Model.PaymentSchedule</strong><br />
                            Received Amount &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Model.Currency @Convert.ToDecimal(Model.ReceivingItemsValue).ToString("#,##0/=")</strong><br />
                            @if (Model.AdvancePayment != null)
                            {
                                <span>Advance Payment&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<span><strong>@Model.Currency @Html.DisplayFor(modelItem => Model.AdvancePayment)</strong></span><br /></span>
                            }
                            @if (Model.RetentionPercentage != null)
                            {
                                string retention_ptg = Model.RetentionPercentage.ToString() + "%";
                                <span>Retention Percentage&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<span><strong>@retention_ptg</strong></span><br /></span>
                            }
                            @if (Model.LiquidatedDamageAmount != null)
                            {
                                <span id="liquided">Liquidaded Damage&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<span><strong>@Html.DisplayFor(modelItem => Model.LiquidatedDamageAmount)</strong></span><br /></span>
                            }
                            Balance &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Model.Currency @balance.ToString("#,##0/=")</strong><br />
                            Ordered Date&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Convert.ToDateTime(Model.ContractStartDate).ToString("dd/MM/yyyy")</strong><br />
                            Delivered Date&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Convert.ToDateTime(Model.ContractEndDate).ToString("dd/MM/yyyy")</strong><br />
                            Delivered Date&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Model.ReceiveType</strong><br />
                            Description&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:<strong>@Model.ContractDescription</strong>
                        </p>
                        <br>
                        @if (Model.ReceiveType == "ByQuantity")
                        {
                            using (Html.BeginForm("EditReceiving", "Contract", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitItems(this)" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.ContractId)
                                @Html.HiddenFor(model => model.ReceivingSummaryId)
                                @Html.HiddenFor(model => model.PaymentScheduleId)
                                <div class="form-horizontal">

                                    <table class="table  table-bordered table-hover table-condensed" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center;width:4%">#</th>
                                                <th style="text-align:left;width:18%">Item</th>
                                                <th style="text-align:left;width:13%">UOM</th>
                                                <th style="text-align:right;width:13%">Unit Price</th>
                                                <th style="text-align:right;width:13%">VAT</th>
                                                <th style="text-align:right;width:13%">Total Amount</th>
                                                <th style="text-align:center;width:13%">Received Quantity</th>
                                                <th style="text-align:center;width:13%">Maxmum Quantity</th>

                                            </tr>
                                        </thead>

                                        <tbody>
                                            @for (var i = 0; i < Model.ReceivedItemsList.Count(); i++)
                                            {
                                                var j = i + 1;
                                                <tr>
                                                    <td style="text-align:center">@j</td>
                                                    <td style="width:140px">
                                                        @Html.DisplayFor(modelItem => Model.ReceivedItemsList[i].ItemDesc)

                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => Model.ReceivedItemsList[i].UOM)
                                                        @Html.HiddenFor(modelItem => Model.ReceivedItemsList[i].ContractDetailId)

                                                        @Html.HiddenFor(modelItem => Model.ReceivedItemsList[i].Quantity)
                                                    </td>
                                                    <td style="text-align:right">
                                                        @Html.DisplayFor(modelItem => Model.ReceivedItemsList[i].UnitPrice)
                                                    </td>
                                                    <td style="text-align:right">
                                                        @Html.DisplayFor(modelItem => Model.ReceivedItemsList[i].VAT)
                                                    </td>
                                                    <td style="text-align:right">
                                                        @Html.DisplayFor(modelItem => Model.ReceivedItemsList[i].TotalAmount)
                                                    </td>
                                                    <td align="center">

                                                        @Html.EditorFor(modelItem => Model.ReceivedItemsList[i].ReceivedQuantity, new { htmlAttributes = new { @class = "form-control", @required = "required", style = "width:60px;text-align:right", @min = @Model.ReceivedItemsList[i].ReceivedQuantity, @max = @Model.ReceivedItemsList[i].Quantity, @onkeyup="quantityChanged(this)" } })
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => Model.ReceivedItemsList[i].Quantity)
                                                    </td>


                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                    <div class="col-md-offset-1">
                                        <a href="@Url.Action("PendingReceiving","Contract")" style="margin-right:5px" type="submit" class="btn btn-info pull-left"><i class="glyphicon glyphicon-arrow-left"></i> Back  </a>
                                        <button type="submit" class="btn btn-info" style="margin-right:2px">
                                            <i class="glyphicon glyphicon-floppy-disk"></i> Save
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else if (Model.ReceiveType == "ByAmount")
                        {
                            <form id="edit_receiving">
                                @Html.HiddenFor(model => model.PaymentScheduleId)
                                @Html.HiddenFor(model => model.ReceivingSummaryId)
                                <div class="form-horizontal">

                                    <div class="form-group">
                                        <div class="col-md-1">
                                            <strong>Edit Amount</strong>
                                        </div>
                                        <div class="col-md-2">
                                            <amount-input name="receive_amount" id="receive_amount" value='@Model.ReceivingItemsValue' style="width:100%;height:36px">
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-1">
                                            <a href="@Url.Action("PendingReceiving","Contract")" style="margin-right:5px" type="submit" class="btn btn-info pull-left"><i class="glyphicon glyphicon-arrow-left"></i> Back  </a>
                                            <button type="button" class="btn btn-info edit_amount" style="margin-right:2px">
                                                <i class="glyphicon glyphicon-floppy-disk"></i> Save
                                            </button>
                                        </div>
                                    </div>
                                    </div>
                            </form>
                        }
                        
                        <br />
                    </div>


                </div>
            </article>

        </div>
    </section>

</div>

@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->

    <script type="text/javascript">
          // =========== Start submit edit receiving by quantity ====================
                function SubmitItems(formData) {
            var url = '@Url.Action("EditReceiving", "Contract")';
            var ajaxConfig = {
                type: "post",
                url: url,
                data: new FormData(formData),
                success: function (result) {
                                 if (result.response == "Success") {
                                        if (result.gl == "Yes") {
                                            swal("Successfully updated,GLs released.Go to Edit Receiving Attachment to assign new Gls!", { icon: "success" })
                                                .then((value) => {
                                                    var url = '@Url.Action("PendingReceiving", "Contract")';
                                                    window.location.replace(url);
                                                });
                                        } else {
                                               swal("Successfully updated!", { icon: "success" })
                                                .then((value) => {
                                                    var url = '@Url.Action("PendingReceiving", "Contract")';
                                                    window.location.replace(url);
                                                });

                                        }

                                  }
                                  else if (result.response == "SetupProblem") {
                                      swal("Currency Rate Setup is Incomplete");
                                    }
                                   else if (result.response == "AdvancePaymentProblem") {
                                        swal("Can not be edited to this value due to advance payment value applied");
                                       
                                    }
                                    else if (result.response == "PayDebt") {
                                   swal("Failed to edit,Advance Payment shoulde be paid full before 80% of Contract Amount received");
                                    }
                                   else if (result.response == "ExceedDeduction") {
                                       swal("Total Payable can not be less than or equal to total deduction");                                      
                                    }
                                    else {

                                        swal("Failed to edit ,DbException");
                                    }
                }
            }

            if ($(formData).attr('enctype') == "multipart/form-data") {
                ajaxConfig["contentType"] = false;
                ajaxConfig["processData"] = false;
            }
            $.ajax(ajaxConfig);
            return false;
        }
        // =========== End submit edit receiving by quantity ====================
           function quantityChanged(e) {
            var max_value = parseFloat(e.max);
            var entered_value = parseFloat(e.value);
            var current_value = parseFloat(e.min);

            if (parseFloat(e.value) || e.value=="" || entered_value==0) {
                if (entered_value > max_value) {
                    swal("Maxmum value " + max_value);
                    e.value = current_value;
                }

            } else {
                swal("Invalid quantity");
                   e.value = current_value;
            }
          }
            $(document).ready(function () {
                $(".edit_amount").click(function () {
                    var schedule_id = $("#edit_receiving #PaymentScheduleId").val();
                    var receiving_id = $("#edit_receiving #ReceivingSummaryId").val();
                    var new_received_amount = parseFloat($("#edit_receiving #_receive_amount").val().split(",").join(""));
                    if (new_received_amount>0) {         
                        swal({
                            title: 'Confirmation',
                            text: "Do you edit this receiving to " + new_received_amount.toLocaleString('en') +" ?",
                            buttons: [
                              'No',
                              'Yes'
                            ],
                        }).then(function (isConfirm) {
                            if (isConfirm) {
                                var url = '@Url.Action("EditReceivingAmount", "Contract")';
                                var formData = {
                                    "id": schedule_id,
                                    "receivingid": receiving_id,
                                    "amount": new_received_amount
                                }
                     
                                $.ajax(
                            {
                                type: "POST",
                                url: url,
                                data: formData,
                                success: function (result) {
                                    if (result.response == "Success") {
                                        if (result.gl == "Yes") {
                                            swal("Successfully updated,GLs released.Go to Edit Receiving Attachment to assign new Gls!", { icon: "success" })
                                                .then((value) => {
                                                    var url = '@Url.Action("PendingReceiving", "Contract")';
                                                    window.location.replace(url);
                                                });
                                        }
                                        else {
                                               swal("Successfully updated!", { icon: "success" })
                                                .then((value) => {
                                                    var url = '@Url.Action("PendingReceiving", "Contract")';
                                                    window.location.replace(url);
                                                });

                                        }

                                    }
                                   else if (result.response == "SetupProblem") {
                                      swal("Currency Rate Setup is Incomplete");
                                    }
                                    else if (result.response == "Technical") {
                                        swal("There is problem contact technical supporter");
                                       
                                    }
                                    else if (result.response == "CertificateExceed") {
                                        swal("Can not be edited to this value because will exceed certificate amount");
                                       
                                    }
                                     else if (result.response == "AdvancePaymentProblem") {
                                        swal("Can not be edited to this value due to advance payment value applied");
                                       
                                    }
                                    else if (result.response == "Exceed") {
                                        swal("Received Amount can not exceed amount in payment schedule");
                                       
                                    }
                                   else if (result.response == "ExceedDeduction") {
                                       swal("Total Payable can not be less than or equal to total deduction");                                      
                                    }
                                    else {

                                        swal("Failed to edit ,DbException");
                                    }
                                },
                                error: function (xhr) {
                                    swal(error);

                                },

                            });
                            } else {
                                swal("Cancelled", "No change was made");
                            }
                        });




                    }else{
                        swal("Please insert amount" + new_received_amount);
            }
               
                });

                        });

    </script>
}






