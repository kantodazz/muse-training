<!----------- Search  Contract----------------->
<div class="modal fade" id="search_contracts" style="left:4%">

    <div class="modal-dialog" style="width:80%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Contract</h3>
            </div>
            <div class="modal-body">

                <div>


                    <div class="row" style="padding-top:1%;padding-bottom:1%">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                            <div class="search-container " style="float:right">
                                <i class="fa fa-search search-icon"></i>
                                <input type="search" name="search" placeholder="Search..." id="search_contract">
                            </div>
                        </div>
                    </div>
                    <div align="center">
                        <img src="/Media/Images/ajax_loader.gif" class="loadingImg" style="display:none" />
                    </div>
                    <table id="dt_search_contract" class="table table-striped table-bordered table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Contract Id</th>
                                <th>Contract Reg#</th>
                                <th>Contract Number</th>
                                <th> Payee Name</th>
                                <th> Action</th>
                            </tr>
                        </thead>
                    </table>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-info" data-dismiss="modal">
                        <i class="fa  fa-times"></i>Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->

    <script type="text/javascript">
          $(function () {

            var url = '@Url.Action("TracePayee", "Contract")';

              $("#PayeeDetailId").select2({
                minimumInputLength: 3,  // minimumInputLength for sending ajax request to server
                width: 'resolve',   // to adjust proper width of select2 wrapped elements
                ajax: {
                    url: url, // Controller - Select2Demo and Action -AccessRemoteData
                    type: "GET",
                    dataType: 'json',
                    data: function (term) {
                        return {
                            term: term
                        };
                    },
                    results: function (data, page) {
                        return { results: data.contractPayees }; // data.exchequers returning json data from Controller
                    }
                }
            });

        });


           var selectedContract = [];
            var dt_search_contract = $('#dt_search_contract').dataTable({
        "aoColumnDefs": [{ "bVisible": false, "aTargets": [1] }],
                }
                );
                $("#dt_search_contract_wrapper .dt-toolbar").remove();
               $("#search_contract").on("keyup search input paste cut", function () {
                dt_search_contract.DataTable().search(this.value).draw();
               });
        function SearchContract() {
            var payeeDetailId = $("#PayeeDetailId").val();
            if (!payeeDetailId) {
                swal("Please select Payee Name first");
                return false;
            }

            $('#search_contracts').modal('show');
                    var url = '@Url.Action("GetContractsList", "Contract")';
                    $.ajax({
                        type: "get",
                        url: url,
                        data: { id: payeeDetailId },
                        contenttype: "application/json; charset=utf-8",
                        datatype: "json",
                        success: function (response) {
                              if (response == "DbException") {
                                swal("Failed,please try again letter");
                            }
                            else {
                                data = response.data;
                                dt_search_contract.fnClearTable();
                                for (var i = 0; i < data.length; i++) {
                                    dt_search_contract.fnAddData([i + 1,
                                    data[i]["ContractId"],
                                    data[i]["ContractNo"],
                                    data[i]["ContractNumber"],
                                    data[i]["Payeename"],
                                    '<a href="#" onclick="contractClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                                    ]);
                                }
                            }
                        },
                        failure: function (error) {
                            swal(error);
                        }
                    });
                 }
        function contractClicked(rowId) {
            $('#search_contracts').modal('hide');
            var data = dt_search_contract.DataTable().rows().data();
            var row = data[rowId];
            var id = row[1];
            var contractNo = row[2];
            $("#ContractNo").val(contractNo);
            loadContractDetails(id);
        }

        function loadContractDetails(id) {
            $("#contract-data").show();
              var url = '@Url.Action("TraceDetails", "Contract")';
            $("#contract-data").load(url, { id: id }, function (response, status, xhr) {
                if (status == "error") {
                    $("#contract-data").html("Error on loading Contract details");
                }

            });

        }
        var repostDeduction = function (id, typeid,contractId) {

                    swal({
                        title: 'Confirmation',
                        text: "Do you what to repost deduction ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                         var url = '@Url.Action("RepostDeduction", "Contract")';
                            $.ajax(
                {
                    type: "POST",
                    url: url,
                    data: { id: id, typeid: typeid },
                    success: function (response) {
                        if (response == "Success") {

                            swal("Reposted successfully", { icon: "success" })
                                .then((value) => {
                                    loadContractDetails(contractId);
                                });


                        }
                        else {

                            swal(response);
                        }
                    },
                    error: function (xhr) {
                        swal(error);
                    },

                });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
        };


        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });

    </script>
}


