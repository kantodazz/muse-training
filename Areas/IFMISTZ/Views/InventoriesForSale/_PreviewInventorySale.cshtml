@model IFMIS.Areas.IFMISTZ.Models.SaleInventory
@{
decimal? items_amount = @Model.Amount - @Model.VatAmount;
decimal? sum=0;
decimal? total_quantity=0;
var i=0;
}
<fieldset class="scheduler-border" id="contract_details">
    <legend class="scheduler-border">Inventory For Sale Details</legend>
    <div class="row"> <div class="col-sm-6 col-md-6 col-lg-6"><strong>Legal Number&nbsp;:</strong>@Html.DisplayFor(model => model.LegalNumber)</div><div class="col-sm-6 col-md-6 col-lg-6"><strong>Items Amount&nbsp;:</strong>@Convert.ToDecimal(items_amount).ToString("#,##0.00/=")</div></div>
    <div class="row"> <div class="col-sm-6 col-md-6 col-lg-6"><strong> VAT Amount&nbsp;:</strong>@Html.DisplayFor(model => model.VatAmount)</div><div class="col-sm-6 col-md-6 col-lg-6"><strong>Total Amount&nbsp;:</strong>@Html.DisplayFor(model => model.Amount)</div></div>
    <div class="row">  <div class="col-sm-6 col-md-6 col-lg-6"><strong>Currency&nbsp;:</strong>@Html.DisplayFor(model => model.Currency)</div><div class="col-sm-6 col-md-6 col-lg-6"><strong>Status&nbsp;:</strong>@Html.DisplayFor(model => model.OverallStatus)</div></div>
</fieldset>
<fieldset class="scheduler-border" id="contract_details">
    <legend class="scheduler-border">Customer Details</legend>
    <div class="row"> <div class="col-sm-6 col-md-6 col-lg-6"><strong>Customer name&nbsp;:</strong>@Html.DisplayFor(model => model.Customer.CustomerName)</div><div class="col-sm-6 col-md-6 col-lg-6"><strong>Phone Number&nbsp;:</strong>@Html.DisplayFor(model => model.Customer.PhoneNo)</div></div>
    <div class="row"> <div class="col-sm-6 col-md-6 col-lg-6"><strong> Email Address&nbsp;:</strong>@Html.DisplayFor(model => model.Customer.EmailAddress)</div><div class="col-sm-6 col-md-6 col-lg-6"><strong>Id Type&nbsp;:</strong>@Html.DisplayFor(model => model.Customer.IdType.IdTypeDesc)</div></div>
    <div class="row">  <div class="col-sm-6 col-md-6 col-lg-6"><strong>Id Number&nbsp;:</strong>@Html.DisplayFor(model => model.Customer.IdNo)</div></div>
</fieldset>

<div style="padding-top:5px">

    <table class="table table-bordered table-hover table-condensed" width="100%">
        <tr style="background:#f5f5f5; color:#000000"><th style="text-align: center;width:5%">No</th><th>Item Name</th><th>Unit of Measure</th><th style="text-align:right">Quantity</th><th style="text-align:right">Unit Cost Price</th><th style="text-align:right">Total Cost</th></tr>
        @foreach (var item in Model.SaleInventoryDetails)
        {
        i++;
          if(item.TotalAmount >0){
            sum = sum + item.TotalAmount;
            }
        total_quantity=total_quantity + item.Quantity;
    <tr><td align="center">@i</td><td>@Html.DisplayFor(modelItem => item.InventoryDetail.ItemName)<td>@Html.DisplayFor(modelItem => item.InventoryDetail.UOM) </td><td align="right">@Html.DisplayFor(modelItem => item.Quantity) </td><td align="right"> @Html.DisplayFor(modelItem => item.InventoryDetail.UnitSalePrice)</td><td align="right"> @Html.DisplayFor(modelItem => item.TotalAmount)</td></tr>
        }
        <tr><td colspan="3" align="right"><strong>Total</strong></td><td align="right"><strong> @total_quantity </strong></td><td></td><td align="right"><strong> @Convert.ToDecimal(sum).ToString("#,##0/=") </strong></td></tr>
    </table>

</div>



<div class="modal-footer">
    <button class="btn btn-info btn-flat modal-close" data-dismiss="modal">Close</button>
</div>










