@section Scripts{
    <script>

        $(function () {
            BindDataTable();
        });

        var BindDataTable = function (response) {
            var url = '@Url.Action("GetCancelledBills", "GepgBillNotfInfoes")';
            $("#tblBills").DataTable({
                "bServerSide": true,
                "sAjaxSource": url,
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        type: "GET",
                        url: sSource,
                        data: aoData,
                        success: fnCallback
                    });
                },
                "aoColumns": [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "mData": "SpCode" },
                    { "mData": "SpName" },
                    { "mData": "BillId" },
                    {
                        data: 'BillAmt',
                        render: $.fn.dataTable.render.number(',', '.', 2),
                        className: "text-right"
                    },
                    { "mData": "Ccy" },
                    { "mData": "PyrName" },
                    {
                        "mData": "BillGenDt",
                        "render": function (data, type, row) {
                            var dt = data;
                            var dx = new Date(parseInt(dt.substr(6)));
                            var dd = ("0" + dx.getDate()).slice(-2);
                            var mm = ("0" + (dx.getMonth() + 1)).slice(-2);
                            var yy = dx.getFullYear();
                            var HH = ("0" + dx.getHours()).slice(-2);
                            var m = ("0" + dx.getMinutes()).slice(-2);
                            var ss = ("0" + dx.getSeconds()).slice(-2);
                            return dd + "-" + mm + "-" + yy;
                        }
                    },
                    {
                        "mData": "BillExprDt",
                        "render": function (data, type, row) {
                            var dt = data;
                            var dx = new Date(parseInt(dt.substr(6)));
                            var dd = ("0" + dx.getDate()).slice(-2);
                            var mm = ("0" + (dx.getMonth() + 1)).slice(-2);
                            var yy = dx.getFullYear();
                            var HH = ("0" + dx.getHours()).slice(-2);
                            var m = ("0" + dx.getMinutes()).slice(-2);
                            var ss = ("0" + dx.getSeconds()).slice(-2);
                            return dd + "-" + mm + "-" + yy;
                        }
                    },
                    { "mData": "BillCntrNum" },
                    {
                        "mData": "CancelledAt",
                        "render": function (data, type, row) {
                            var dt = data;
                            var dx = new Date(parseInt(dt.substr(6)));
                            var dd = ("0" + dx.getDate()).slice(-2);
                            var mm = ("0" + (dx.getMonth() + 1)).slice(-2);
                            var yy = dx.getFullYear();
                            var HH = ("0" + dx.getHours()).slice(-2);
                            var m = ("0" + dx.getMinutes()).slice(-2);
                            var ss = ("0" + dx.getSeconds()).slice(-2);
                            return dd + "-" + mm + "-" + yy;
                        }
                    }
                ]
            });
        };

        var postBill = function (id) {
            swal({
                text: "Are you sure you want to post this bill?",
                buttons: [
                    "Yes",
                    "No"
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (!isConfirm) {
                    var url = '@Url.Action("PostBill", "GepgBillNotfInfoes")/' + id;
                    $("#divLoader").show();
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: { id: id },
                        success: function (response) {
                            if (response.isValid) {
                                swal({
                                    text: response.responseText,
                                    icon: "success",
                                    button: "OK",
                                }).then(function () {
                                    location.reload();
                                });
                            } else {
                                swal({
                                    text: response.responseText,
                                    icon: "warning",
                                    button: "OK",
                                }).then(function () {
                                    location.reload();
                                });
                            }
                        },
                        error: function () {
                            swal({
                                text: "An error occured while processing your request, please contact system support",
                                icon: "error",
                                button: "OK",
                            })
                        },
                        complete: function () {
                            $("#divLoader").hide();
                        }
                    });
                }
            });
        }

        var postAllBills = function () {
            swal({
                text: "Are you sure you want to post all bills?",
                buttons: [
                    "Yes",
                    "No"
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (!isConfirm) {
                    var url = '@Url.Action("PostAllBills", "GepgBillNotfInfoes")';
                    $("#divLoader").show();
                    $.ajax({
                        type: "POST",
                        url: url,
                        success: function (response) {
                            if (response.isValid) {
                                swal({
                                    text: response.responseText,
                                    icon: "success",
                                    button: "OK",
                                }).then(function () {
                                    location.reload();
                                });
                            } else {
                                swal({
                                    text: response.responseText,
                                    icon: "warning",
                                    button: "OK",
                                }).then(function () {
                                    location.reload();
                                });
                            }
                        },
                        error: function () {
                            swal({
                                text: "An error occured while processing your request, please contact system support",
                                icon: "error",
                                button: "OK",
                            })
                        },
                        complete: function () {
                            $("#divLoader").hide();
                        }
                    });
                }
            });
        }

    </script>
