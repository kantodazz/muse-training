@model IFMIS.Areas.IFMISTZ.Models.PendingInstitutionAccountVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" style="margin: 5px; padding-top: 50px">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2 style="color:black;">Institution Account Details</h2>
                    </header>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="widget-body " style="padding-top:10px; width:100%;">
                                <div>
                                    <div class="col-md-12">
                                        <table class="table table-condensed table-bordered table-hover table-responsive">


                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.AccountNumber)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.AccountNumber)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.AccountName)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.AccountName)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.AccountType)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.AccountType)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.BIC)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.BIC)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.BankName)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.BankName)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.Currency)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.Currency)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.SubBudgetClass)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.SubBudgetClass)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.InstitutionCode)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.InstitutionCode)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.InstitutionName)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.InstitutionName)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.GlAccount)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.GlAccount)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.GlAccountDesc)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.GlAccountDesc)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.ReceivingGlAccount)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.ReceivingGlAccount)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.OverallStatus)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.OverallStatus)
                                                </td>
                                            </tr>
                                            @if (Model.AccountType == "TSA")
                                            {

                                                <tr>
                                                    <td style="text-align: right">
                                                        <b>@Html.DisplayNameFor(model => model.SubTSAAccountNumber)</b>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => model.SubTSAAccountNumber)
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td style="text-align: right">
                                                        <b>@Html.DisplayNameFor(model => model.SubTSAGlAccount)</b>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => model.SubTSAGlAccount)
                                                    </td>
                                                </tr>

                                            }



                                            @if (Model.AccountType != "Revenue" || Model.AccountType != "OwnSource" || Model.AccountType != "CF" || Model.AccountType != "Unapplied")
                                            {

                                                <tr>
                                                    <td style="text-align: right">
                                                        <b>@Html.DisplayNameFor(model => model.UnnappliedAccountNumber)</b>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => model.UnnappliedAccountNumber)
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td style="text-align: right">
                                                        <b>@Html.DisplayNameFor(model => model.UnnappliedAccountName)</b>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => model.UnnappliedAccountName)
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td style="text-align: right">
                                                        <b>@Html.DisplayNameFor(model => model.UnnappliedBankName)</b>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => model.UnnappliedBankName)
                                                    </td>
                                                </tr>

                                            }

                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.CreatedBy)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.CreatedBy)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.ModifiedBy)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.ModifiedBy)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td style="text-align: right">
                                                    <b>@Html.DisplayNameFor(model => model.CancelledBy)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.CancelledBy)
                                                </td>
                                            </tr>

                                        </table>
                                        </div>

                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="col-md-4 col-md-offset-2">
                                                    <a class="btn btn-info" style="margin-right:5px" onclick="window.history.back()">
                                                        <i class="glyphicon glyphicon-arrow-left"></i>Back
                                                    </a>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </article>
            </div>
        </section>
    </div>