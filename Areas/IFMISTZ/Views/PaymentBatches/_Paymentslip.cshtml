
@model IFMIS.Areas.IFMISTZ.Models.PaymentBatch
<link href='@Server.MapPath("~/Content/css/bootstrap.min.css")' rel="stylesheet" />
<style>
    table, td, th {
        border: 1px solid black;
        text-align: left;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
    }
</style>
<div style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size: 20px">
    <div style="text-align: center">
        <img src='@Server.MapPath("~/Media/Images/log20180504093652.png")' width="200" height="200" />
        <div style="padding-top: 20px">
            @*<b>@Model.InstitutionName.ToUpper()</b>*@
            <b>@ViewBag.PaymentOfficeName.ToUpper()</b>
        </div>
        <div style="padding-top: 10px;padding-bottom: 10px">
            <b>PAYMENT INSTRUCTION SLIP</b>
        </div>
    </div>

    <br />
    <div style="padding-top:20px; font-size: 20px">
        <b>TRANSFER DETAILS</b>
    </div>
    <div style="padding-top: 10px;padding-bottom:10px">
        <div>TRANSFER ACC NO: @Model.PayerBankAccount</div>
        <div>TRANSFER ACCOUNT NAME: @Model.PayerBankName</div>
        <div>DATE: @ViewBag.Date</div>
    </div>
    <div>
        <table>
            <thead>
              
                <tr>
                    
                    @if (Model.PayerBIC == "TANZTZTX")
                    {
                        <th>FUNDING REFERENCE</th>
                    }
                    else
                    {
                        <th>BLOCK ID</th>
                    }
                    @*//<th>FUNDING REFERENCE</th>*@
                    <th>BATCH DESCRIPTION</th>
                    <th>NO.OF TRANSACTIONS</th>
                    <th>TOTAL AMOUNT</th>
                    <th>PAYER ACCOUNT NO</th>
                    <th>PAYER ACCOUNT NAME</th>
                   
                </tr>
            </thead>
            <tbody>
                <tr>
                    @if (Model.PayerBIC == "TANZTZTX" || Model.PayerBIC == "CORUTZTZ")
                    {
                    <td>@Model.PrefundingRef</td>
                    }
                    else
                    {
                     <td>@Model.MsgID</td>
                    }
                    <td>@Model.BatchDesc</td>
                    <td>@Model.NoTrx</td>
                    <td>@string.Format("{0:#,#.00}",Model.OperationalAmount)</td>
                    <td>@Model.PayerBankAccount</td>
                    <td>@Model.PayerBankName</td>

                </tr>
            </tbody>
        </table>
    </div>

    <div style="padding-top:100px">
        <div class="row" style="padding:5px">
            <div class="col-xs-4">SIGNATURE:</div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left"/></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
        </div>
        <div class="row"style="padding:5px">
            <div class="col-xs-4">NAME:</div>
            <div class="col-xs-4">@Model.PaymentOfficeVerifiedBy</div>
            <div class="col-xs-4">@Model.PaymentOfficeApprovedBy</div>
        </div>
        <div class="row"style="padding:5px">
            <div class="col-xs-4"></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
        </div>
        <div class="row"style="padding:5px">
            <div class="col-xs-4"></div>
            <div class="col-xs-4">VERIFIER</div>
            <div class="col-xs-4">AUTHORIZER</div>
        </div>
    </div>
    <div style="padding-top:100px">
        <div class="row" style="padding:5px">
            <div class="col-xs-4">SIGNATURE:</div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
        </div>
        <div class="row" style="padding:5px">
            <div class="col-xs-4">NAME:</div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
        </div>
        <div class="row" style="padding:5px">
            <div class="col-xs-4"></div>
            <div class="col-xs-4">BANK VERIFIER</div>
            <div class="col-xs-4">BANK AUTHORIZER</div>
        </div>
    </div>
   
</div>