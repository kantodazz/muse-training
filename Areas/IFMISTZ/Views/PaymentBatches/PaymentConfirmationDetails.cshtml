@section pagespecific{
    <script>

        function viewPayeeDetail(id) {
            let leftData = '';
            let rightData = '';
            let columns = [
                "BeneficiaryName", "BeneficiaryAccountNo","BankName",
                "EndtoEndID", "PaymentDescription","Rate",
                "SortCode", "RoutingNo", "IBAN","FedWire", "IntermediaryBankBic",
                "IntermediaryBankName", "BranchCode"];
            const render = (key, value) => `<tr><th>${key}</th><td>${value}</td></tr>`;
            $('#payeeDetailsModal').modal('show');
            $.ajax({
                url: '@Url.Action("GetPayeeDetails","PaymentBatches")',
                data: { id },
                type: "GET",
                success: function (response) {
                    var data = response.data;
                    if (data) {
                        let switcher = true
                        columns.forEach((key) => {
                            let value = data[key];
                            if ((value && !["NA", "N/A"].includes(value)) || value == 0) {
                                if (switcher) {
                                    leftData += render(key, value);
                                } else {
                                    rightData += render(key, value);
                                }
                                switcher = !switcher
                            }
                        })
                        document.getElementById('leftData').innerHTML = leftData;
                        document.getElementById('rightData').innerHTML = rightData;
                    }
                }
