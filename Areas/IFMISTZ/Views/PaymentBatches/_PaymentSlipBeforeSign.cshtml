@model IFMIS.Areas.IFMISTZ.Models.PaymentSlipFormVm
<link href='@Server.MapPath("~/Content/css/bootstrap.min.css")' rel="stylesheet" />
<style>
    .custom {
        line-height: 1.6;
        padding-left: 30px;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
<div>
    <div style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size: 16px">
        <div style="text-align: center">
            <img src="@Model.LogoImageBase64" style="width: 110px" />
            <div style="padding-top: 20px">
                <b>@ViewBag.PaymentOfficeName.ToUpper()</b>
            </div>
            <div style="padding-top: 10px;padding-bottom: 10px">
                <b>PAYMENT INSTRUCTION SLIP</b>
            </div>
        </div>

        <br />
        <div style="padding-top:20px; font-size: 20px">
            <b>TRANSFER DETAILS</b>
        </div>
        <div style="padding-top: 10px;padding-bottom:10px">
            <div>TRANSFER ACC NO: @Model.PayerBankAccount</div>
            <div>TRANSFER ACCOUNT NAME: @Model.PayerBankName</div>
            <div>DATE: @ViewBag.Date</div>
        </div>

        <div class="row" style="padding-top: 12px">
            <div>
                <table class="table table-condensed table-stripped table-hover table-bordered" style="font-size: 13px">
                    <thead>
                        <tr>

                            @if (Model.PayerBIC == "TANZTZTX")
                        {
                            <th>FUNDING REFERENCE</th>
                        }
                        else
                        {
                            <th>BLOCK ID</th>
                        }
                            <th>BATCH DESCRIPTION</th>
                            <th>NO.OF TRANSACTIONS</th>
                            <th>TOTAL AMOUNT</th>
                            <th>PAYER ACCOUNT NO</th>
                            <th>PAYER ACCOUNT NAME</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @if (Model.PayerBIC == "TANZTZTX" || Model.PayerBIC == "CORUTZTZ")
                        {
                            <td>@Model.PrefundingRef</td>
                        }
                        else
                        {
                            <td>@Model.MsgID</td>
                        }
                            <td>@Model.BatchDesc</td>
                            <td>@Model.NoTrx</td>
                            <td>@string.Format("{0:#,#.00}",Model.OperationalAmount)</td>
                            <td>@Model.PayerBankAccount</td>
                            <td>@Model.PayerBankName</td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div style="padding-top: 10px">
            <table style="border: none; width: 100%; border-collapse: collapse;">
                <tr>
                    <td style="border: none; padding: 15px; vertical-align: middle;"></td>
                    <td style="border: none; padding: 15px; vertical-align: middle;"></td>
                </tr>
                <tr>
                    <td style="border: none; padding: 15px;"></td>
                    <td style="border: none; padding: 15px; vertical-align: middle;">
                        verifierOfficer
                    </td>
                    <td style="border: none; padding: 15px; vertical-align: middle;">
                        authorizerOfficer
                    </td>
                </tr>
                <tr>
