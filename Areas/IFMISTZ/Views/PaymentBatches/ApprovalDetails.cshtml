                var url = '@Url.Action("BanktoBankMatching", "Reconcilliation")';
                $.ajax({
                    type: "POST",
                    url: url,
                    data: { bankIds: bankIds },
                    success: function (response) {
                        if (response == "Success") {
                            //alert("successfully.");
                            //location.reload();
                            if ($('.modal-header').hasClass('alert-info')) {
                                $('.delete-confirm').css('display', 'none');
