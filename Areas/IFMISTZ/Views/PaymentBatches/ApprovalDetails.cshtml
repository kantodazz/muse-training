        });


        var matching = function () {
            var bankIds = [];

            $("input:checkbox.checkBox1").each(function () {
                if ($(this).prop("checked")) {
                    bankIds.push($(this).val());

                }
            });


            $("input:checkbox.checkBoxBank").each(function () {
                if ($(this).prop("checked")) {
                    bankIds.push($(this).val());
                }
            });

            if (bankIds.length <= 0) {
