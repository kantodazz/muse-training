@model IFMIS.Areas.IFMISTZ.Models.Receipt

<style>
    .searchContainer {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    .info-box {
        padding: 8px;
        background-color: #ECF3F8;
        /*padding-top:10px;*/
        /*text-align: center;*/
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 200px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        padding-bottom: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .title {
        text-align: center;
        width: 100%;
        padding-top: 10px;
        font-weight: bold;
        font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
    }

    .detail-section {
        padding: 10px;
    }

    .section-title {
        font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
        font-size: 18px;
        font-weight: bold;
    }

    .sect-label {
        width: 250px;
        font-size: 15px;
        font-weight: 600;
    }


    table {
        border-collapse: collapse;
        width: 100%;
    }

    td {
        padding: 5px;
        text-align: left;
        border-bottom: 1px dashed #ccc;
    }

    .row-align {
        display: flex;
        flex-wrap: nowrap;
        justify-content: space-evenly;
    }

    .row-align-1 {
        display: flex;
        flex-wrap: wrap;
        align-content: center;
    }

    .ico {
        margin-right: 5px;
    }

    .btn-size {
        width: 90px;
    }

    .speech-bubble {
        position: relative;
        background: #efebe9;
        border-radius: .4em;
        color: white;
        padding: 10px;
    }

        .speech-bubble:after {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 0;
            height: 0;
            border: 9px solid transparent;
            border-right-color: #efebe9;
            border-left: 0;
            margin-top: -9px;
            margin-left: -9px;
        }

    .speech-bubble-r {
        position: relative;
        background: #eeeeee;
        border-radius: .4em;
        color: white;
        padding: 10px;
    }

        .speech-bubble-r:after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            width: 0;
            height: 0;
            border: 9px solid transparent;
            border-left-color: #eeeeee;
            border-right: 0;
            margin-top: -9px;
            margin-right: -9px;
        }

    .chart-box {
        padding: 8px;
        border-radius: 5px;
        min-height: 150px;
    }

    th, td {
        font-size: 10px;
    }

    /*  //tunkete.mwamsojo@hazina.go.tz;*/

</style>
    <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget " id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <div style="padding: 0px;">
                        <div class="table-responsive">
                            @{
                                int i = 0;
                            }

                            <hr class="simple" />
                            <div class="col-md-12">
                                <section id="widget-grid">
                                    <div class="row">
                                        <article class="col-sm-12 col-md-12 col-lg-12">
                                            <div class="widget-body">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="payee-entry">
                                                            <div class="entry-label">Receipt Details</div>
                                                            <div style="padding-left:20px;padding-right:20px">
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <div class="col-md-5">
                                                                            <table>
                                                                                <tr>
                                                                                    <th> @Html.DisplayNameFor(model => model.ReferenceNo): </th>
                                                                                    <td> @Html.DisplayFor(model => model.ReferenceNo) </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.LegalNo):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.LegalNo)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th> @Html.DisplayNameFor(model => model.OperationalAmount): </th>
                                                                                    <td> @Html.DisplayFor(model => model.OperationalAmount)</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.OperationalCurrency): </th>
                                                                                    <td>@Html.DisplayFor(model => model.OperationalCurrency)</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.ReceivingBankName): </th>
                                                                                    <td>@Html.DisplayFor(model => model.ReceivingBankName)</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.ReceivingBankAccountNo):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.ReceivingBankAccountNo)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.ReceivingBankAccountName):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.ReceivingBankAccountName)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.ReceiptDate):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.ReceiptDate, "_ShortDateTime")
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.ReceiptCategory):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.ReceiptCategory)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.DonorCode):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.DonorCode) -  @Html.DisplayFor(model => model.DonorName)
                                                                                    </td>
                                                                                </tr>
                                                                            </table>
                                                                        </div>
                                                                        <div class="col-md-7">
                                                                            <table>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.DocumentNo):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.DocumentNo)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.CustomerName):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.CustomerName)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.ReceiptType):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.ReceiptType)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.SubBudgetClass):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.SubBudgetClass)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.SubBudgetClassDesc):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.SubBudgetClassDesc)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.DrGlAccount):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.DrGlAccount)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.DrGlAccountDesc):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.DrGlAccountDesc)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.Remarks):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.Remarks)
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>@Html.DisplayNameFor(model => model.OverallStatus):</th>
                                                                                    <td>
                                                                                        @Html.DisplayFor(model => model.OverallStatus)
                                                                                    </td>
                                                                                </tr>
                                                                                @if (Model.OverallStatus == "REJECTED")
                                                                                {
                                                                                    <tr>
                                                                                        <th>@Html.DisplayNameFor(model => model.RejectionReason):</th>
                                                                                        <td>
                                                                                            @Html.DisplayFor(model => model.RejectionReason)
                                                                                        </td>
                                                                                    </tr>
                                                                                }
                                                                                </table>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <br />
                                                        <div class="payee-entry">
                                                            <div class="entry-label">GL Items</div>
                                                            <div style="padding-left:20px;padding-right:20px">
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <div class="col-md-12">

                                                                            <div class="col-md-12">
                                                                                <div style="padding-top:5px">
                                                                                    <table class="table table-hover table-condensed table-stripped">
                                                                                        <thead>
                                                                                            <tr>
                                                                                                <th>#</th>
                                                                                                <th>Cr GL Account</th>
                                                                                                <th>Cr GL Account Desc</th>
                                                                                                <th style="text-align: right">Amount</th>
                                                                                            </tr>
                                                                                        </thead>

                                                                                        <tbody>
                                                                                            @foreach (var item in Model.ReceiptDetails)
                                                                                            {
                                                                                                i++;
                                                                                                <tr>
                                                                                                    <td>@i</td>
                                                                                                    <td>@item.CrGlAccount</td>
                                                                                                    <td>@item.CrGlAccountDesc</td>
                                                                                                    <td style="text-align: right">@string.Format("{0:N2}", @item.ExpensedAmount)</td>
                                                                                                </tr>
                                                                                            }
                                                                                        <tr>
                                                                                            <td colspan="3" style="text-align: right"><b>Total Amount</b></td>
                                                                                            <td style="text-align: right"><b>@string.Format("{0:N2}", Model.ReceiptDetails.Sum(a => a.ExpensedAmount))</b></td>
                                                                                        </tr>
                                                                                        </tbody>
                                                                                    </table>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>

