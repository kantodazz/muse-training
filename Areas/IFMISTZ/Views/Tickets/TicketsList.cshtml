@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.TicketVM>

@{
    ViewBag.Title = "Pending Tickets";
}

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    td {
        padding: 5px;
    }

    .table-amount td:nth-child(6) {
        text-align: right;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 110px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .total-amount {
        float: right;
    }

    .loadingImg {
        display: none;
    }
</style>
<div id="content" style="margin: 5px; padding-top: 30px">
    <div class="row"></div>

    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-6">
                                        @*<a class="btn btn-info" href='@Url.Action("CreateTickets", "Tickets")'>
                                            <i class="glyphicon glyphicon-plus"></i> Add New
                                        </a>*@
                                </div>
                                <div class="col-md-6">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search searchIcon"></i>
                                        <input type="search" name="search" placeholder="Search..." id="searchbox">
                                    </div>
                                </div>
                            </div>

                            <table id="dt_Loan_listing" class="table table-bordered table-condensed table-amount">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ticket Number</th>
                                        <th>Module</th>
                                        <th>Title</th>
                                        @if (ViewBag.InstitutionCode != IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                        {
                                            <th>Email</th>
                                        }

                                        @if (ViewBag.InstitutionCode == IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                        {
                                            <th>Level</th>
                                        }
                                        @if (ViewBag.InstitutionCode == IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                        {
                                            <th>Phone number</th>
                                        }
                                        <th>Progress</th>
                                        <th>Assigned</th>
                                        <th>Priority</th>
                                        <th>Date</th>
                                        @if (ViewBag.InstitutionCode == IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                        {
                                            <th>Institution Name</th>
                                        }
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@Html.DisplayFor(modelItem => item.TicketNumber)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ModuleName)</td>
                                            <td>
                                                <a href="#" data-toggle="modal" data-target="#TicketDescription"
                                                   title="Ticket Description" data-ticket='@item.TicketNumber'
                                                   data-title='@item.Title' data-description='@item.Description'
                                                   class="ticket_description">
                                                    <i class="fa fa-eye">
                                                    </i>@Html.DisplayFor(modelItem => item.Title)
                                                </a>
                                            </td>
                                            @if (ViewBag.InstitutionCode != IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                            {
                                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                            }

                                            @if (ViewBag.InstitutionCode == IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                            {
                                                <td>@item.LevelName.Replace("Level", "")</td>
                                            }
                                            @if (ViewBag.InstitutionCode == IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                            {
                                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                            }


                                            @*@if (item.AttachmentName == null)
                                                {
                                                    <td>NILL</td>
                                                }
                                                else
                                                {
                                                    <td><a href="~/Media/HelpDesk/Tickets/@item.AttachmentName" target="_blank">Preview</a></td>
                                                }*@
                                            @*<td>@Html.DisplayFor(modelItem => item.Status)</td>*@

                                            @if (ViewBag.InstitutionCode != IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                            {
                                                if ((item.OverAllStatus == IFMIS.Libraries.Constants.FOWARDED_TO_SUPERVISOR || item.OverAllStatus != IFMIS.Libraries.Constants.RESOLVED || item.OverAllStatus != IFMIS.Libraries.Constants.CLOSED.ToUpper()) && (item.MofpView == IFMIS.Libraries.Constants.YES))
                                                {
                                                    <td>@IFMIS.Libraries.Constants.SENT_TO_MOFP</td>
                                                }
                                                else
                                                {
                                                    <td>@Html.DisplayFor(modelItem => item.OverAllStatus)</td>
                                                }

                                            }
                                            else
                                            {
                                                <td>@Html.DisplayFor(modelItem => item.OverAllStatus)</td>
                                            }

                                            @if (ViewBag.InstitutionCode != IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                            {
                                                if (item.OverAllStatus == IFMIS.Libraries.Constants.CREATED)
                                                {
                                                    <td>NO</td>
                                                }
                                                else
                                                {
                                                    <td>YES</td>
                                                }
                                            }
                                            else
                                            {
                                                if (item.OverAllStatus == IFMIS.Libraries.Constants.CREATED || item.OverAllStatus == IFMIS.Libraries.Constants.FOWARDED_TO_SUPERVISOR)
                                                {
                                                    <td>NO</td>
                                                }
                                                else
                                                {
                                                    <td>YES</td>
                                                }
                                            }
                                            @if (item.Priority == "1")
                                            {
                                                <td>NORMAL</td>
                                            }
                                            @if (item.Priority == "2")
                                            {
                                                <td>MEDIUM</td>
                                            }
                                            @if (item.Priority == "3")
                                            {
                                                <td>HIGH</td>
                                            }
                                            @if (item.Priority == "4")
                                            {
                                                <td style="color:red;">URGENT</td>
                                            }
                                            <td>
                                                @Convert.ToDateTime(item.CreatedAt).ToString("dd/MM/yyyy")
                                            </td>
                                            @if (ViewBag.InstitutionCode == IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                            {
                                                <td>@Html.DisplayFor(modelItem => item.InstitutionName)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.InstitutionCode)</td>*@
                                            }
                                            <input type="hidden" name="TicketsId" value="@item.TicketsId" />
                                            <td style="text-align:center">
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        @if (item.OverAllStatus == IFMIS.Libraries.Constants.CREATED && item.UserId == ViewBag.UserId)
                                                        {
                                                            <li>
                                                                <a href="@Url.Action("Edit", "Tickets",new {id=item.TicketNumber })" class="btn-xs edit">
                                                                    <i class="fa fa-edit"></i>  Edit
                                                                </a>
                                                            </li>

                                                            <li><a href="#" data-toggle="modal" class="ticketCancellation   delete" data-id=@item.TicketsId data-lpo='@item.TicketNumber'><i class="fa fa-trash-o"></i> Cancel</a></li>
                                                        }
                                                        @if (User.IsInRole("Helpdesk Ticket Assignment"))
                                                        {

                                                            if (ViewBag.InstitutionCode != IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE)
                                                            {
                                                                if (item.MofpView != IFMIS.Libraries.Constants.YES)
                                                                {
                                                                    <li><a href="#" data-toggle="modal" data-target="#AssignTickets" data-id=@item.TicketsId data-ticket_number='@item.TicketNumber' data-atitle='@item.Title' class="assign_tickets  btn-xs edit"><i class="fa fa-edit"></i>Assign</a></li>

                                                                    <li id="decisionList"><a href="#" data-toggle="modal" data-id=@item.TicketsId data-ttitle='@item.Title' data-ticket='@item.TicketNumber' class="foward_ticket  btn-xs edit">Foward</a></li>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                if (ViewBag.UserLevelLabel == item.LevelLabel)
                                                                {
                                                                    <li><a href="#" data-toggle="modal" data-target="#AssignTickets" data-id=@item.TicketsId data-ticket_number='@item.TicketNumber' data-atitle='@item.Title' class="assign_tickets  btn-xs edit"><i class="fa fa-edit"></i>Assign</a></li>

                                                                    if (ViewBag.UserLevelLabel != IFMIS.Libraries.Constants.LEVEL_THREE && ViewBag.UserLevelLabel != IFMIS.Libraries.Constants.LEVEL_TWO)
                                                                    {
                                                                        <li id="decisionList"><a href="#" data-toggle="modal" data-id=@item.TicketsId data-ticket='@item.TicketNumber' class="foward_ticket  btn-xs edit">Foward </a></li>
                                                                    }
                                                                }

                                                                if (item.LevelName != ViewBag.CheckLevel)
                                                                {

                                                                    if (item.MofpView == IFMIS.Libraries.Constants.YES && (item.InstitutionCode != IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE))
                                                                    {

                                                                        if (item.OverAllStatus == IFMIS.Libraries.Constants.FOWARDED_TO_SUPERVISOR)
                                                                        {
                                                                            <li id="decisionList"><a href="#" data-toggle="modal" data-id=@item.TicketsId data-ttitle='@item.Title' data-ticket='@item.TicketNumber' class="foward_ticket  btn-xs edit">Foward</a></li>
                                                                        }
                                                                    }

                                                                    if ((item.MofpView != IFMIS.Libraries.Constants.YES) && (item.InstitutionCode == IFMIS.Libraries.Constants.MOFP_INSTITUTION_CODE) && (ViewBag.UserLevelLabel != item.LevelLabel))
                                                                    {
                                                                        if (item.OverAllStatus == IFMIS.Libraries.Constants.FOWARDED_TO_SUPERVISOR)
                                                                        {

                                                                            <li id="decisionList"><a href="#" data-toggle="modal" data-id=@item.TicketsId data-ttitle='@item.Title' data-ticket='@item.TicketNumber' class="foward_ticket  btn-xs edit">Foward</a></li>
                                                                        }
                                                                    }
                                                                }

                                                            }

                                                        }
                                                        @*<li><a href="#" data-toggle="modal" class="ticketCancellation   delete" data-id=@item.TicketsId data-lpo='@item.TicketNumber'><i class="fa fa-trash-o"></i> Cancel</a></li>*@
                                                        @*<li><a href="#" data-toggle="modal" class="ticketClosure   delete" data-id=@item.TicketsId data-dmtname='@item.TicketNumber'>Close</a></li>*@
                                                        <li id="decisionList"><a href="#" data-toggle="modal" data-id=@item.TicketsId data-ttitle2='@item.Title' data-ticket2='@item.TicketNumber' class="close_ticket  btn-xs edit">Close</a></li>
                                                        <li>
                                                            <a href="@Url.Action("PreviewTicket", "Tickets",new {ticketNumber=item.TicketNumber})" class="btn-xs edit">
                                                                <i class="fa fa-search-minus"></i>Preview
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<div class="modal fade" id="AssignTickets">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 align="center">Assign Ticket:<span id="ticket_number"></span></h4>
            </div>

            <div class="modal-body form-horizontal">
                <h5 align="center"><span id="atitle"></span></h5>
                <br />
                @Html.AntiForgeryToken()
                <input type="hidden" name="UserId" id="UserId" value="@ViewBag.UserId" />
                <div class="form-group">
                    <label class="control-label col-md-3" for="Remark">Support Team</label>
                    <div class="col-md-7">
                        <input type="text" name="SupportTeamId" class="form-control" required id="SupportTeamId" placeholder="Enter Employee's username or checknumber" style="width:300px" />
                    </div>
