                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3" for="Firstname"> Firstname</label>
                    <div class="col-md-7">
                        <input type="text" name="FirstName" id="FirstName" readonly style="width:300px" />
                    </div>
                </div>

                @*<div class="form-group">
                        <label class="control-label col-md-3" for="Middlename"> Middlename</label>
                        <div class="col-md-7">
                            <input type="text" name="MiddleName" id="MiddleName" readonly style="width:300px" />
                        </div>
                    </div>*@

                <div class="form-group">
                    <label class="control-label col-md-3" for="Surname"> Surname</label>
                    <div class="col-md-7">
                        <input type="text" name="LastName" id="LastName" readonly style="width:300px" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3" for="Email"> Email</label>
                    <div class="col-md-7">
                        <input type="text" name="Email" id="Email" readonly style="width:300px" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3" for="Phonenumber"> Phone Number</label>
                    <div class="col-md-7">
                        <input type="text" name="PhoneNumber" id="PhoneNumber" readonly style="width:300px" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-info" data-dismiss="modal">Cancel</a>
                <button type="submit" class="btn btn-info" id="form_submision">
                    <i class="fa fa-save"></i>Assign
                    <img src="~/Content/img/loading.gif" id="saveLoader" />
                </button>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="TicketDescription">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 align="center">Ticket Number <span id="tnumber"></span></h4>
            </div>

            <div class="modal-body">

                <center><b><span id="title"></span></b></center>
                <br />
                <span id="description"></span>


            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-info" data-dismiss="modal">Ok</a>

            </div>


        </div>
    </div>
</div>

<div class="modal fade" id="FowardTicket">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 align="center">Foward Ticket:<span id="tticket_number"></span></h4>
            </div>

            <div class="modal-body form-horizontal">
                <h5 align="center"><span id="ftitle"></span></h5>
                @Html.AntiForgeryToken()
                <input type="hidden" name="TicketNumber" id="TicketNumber" />
                <input type="hidden" name="TicketId" id="TicketId" />
                <input type="hidden" name="UserId" id="UserId" value="@ViewBag.UserId" />
                <div class="form-group">
                    <label class="control-label col-md-3" for="Firstname"> Description (<span style="font-weight:bold;" id="DescriptionCount">250</span>) </label>
                    <div class="col-md-7">
                        <textarea rows="5" id="Description" name="Description" style="width:300px;" maxlength="250"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-info" data-dismiss="modal">Cancel</a>
                <button type="submit" class="btn btn-info" id="foward_form_submision">
                    <i class="fa fa-save"></i>Foward
                    <img src="~/Content/img/loading.gif" class="saveLoader" />
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="CloseTicket">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 align="center">Close Ticket:<span id="tticket_number2"></span></h4>
            </div>

            <div class="modal-body form-horizontal">
                <h5 align="center"><span id="ftitle2"></span></h5>
                @Html.AntiForgeryToken()
                <input type="hidden" name="TicketId" id="TicketId" />
                <div class="form-group">
                    <label class="control-label col-md-3" for="Description"> Description (<span style="font-weight:bold;" id="DescriptionCount2">250</span>) </label>
                    <div class="col-md-7">
                        <textarea rows="5" id="Description2" name="Description2" style="width:300px;" maxlength="250"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-info" data-dismiss="modal">Cancel</a>
                <button type="submit" class="btn btn-info" id="close_form_submision">
                    <i class="fa fa-save"></i>Close
                    <img src="~/Content/img/loading.gif" class="saveLoader" />
                </button>
            </div>
        </div>
    </div>
</div>
@section pagespecific{
    <script src="~/Scripts/yadcf.js"></script>
    <script>
        $('#Description').on("keyup", function () {
            var count = $('#Description').val().split('');
            var numChars = 250 - parseInt(count.length);
            $('#DescriptionCount').text(parseInt(numChars));
        });

        $('#Description2').on("keyup", function () {
            var count = $('#Description2').val().split('');
            var numChars = 250 - parseInt(count.length);
            $('#DescriptionCount2').text(parseInt(numChars));
        });


        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $(".loadingImg").show();

        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $(".loadingImg").hide();
        });

        $(document).ready(function () {
            var dt_Loan_listing = $('#dt_Loan_listing').DataTable({});

            $("#dt_Loan_listing_wrapper .dt-toolbar").remove();

            $("#searchbox").on("keyup search input paste cut", function () {
                dt_Loan_listing.search(this.value).draw();
            });

            $(".saveLoader").toggle(false);
        });

        $(".ticket_description").on('click', function () {
            var reason = $(this).data('description');
            var tNo = $(this).data('ticket');
            var title = $(this).data('title');
            $("#tnumber").text(tNo);
            $("#title").text(title);
            $("#description").text(reason);
        });

        var message = '@TempData["Message"]';
        if (message == "Success") {
            swal("Ticket Saved Successfully!", { icon: "success" })
                              .then((value) => {
                                  location.reload();
                              });
        }

        if (message == "Updated") {
            swal("Ticket Updated Successfully!", { icon: "success" })
                              .then((value) => {
                                  location.reload();
                              });
        }

        if (message == "Error") {
            swal("Error saving Tickets Entry. Please contact System Administrator", { icon: "warning" })
                              .then((value) => {
                                  location.reload();
                              });
        }

        $(".foward_ticket").on('click', function () {
            var id = $(this).data('id');
            var ticket = $(this).data('ticket');
            var title = $(this).data('ttitle');
            swal({
                title: 'Foward Ticket',
                text: "Do you want to Foward Ticket: " + ticket +" to Ministry of Finance Support Team?",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    $('#FowardTicket').modal('show');
                    $('#tticket_number').text(ticket);
                    $('#ftitle').text(title);
                    $('#TicketNumber').val(ticket);
                    $('#TicketId').val(id);
                } else {
                    swal("Cancelled", "No change was made");
                }
            });

        });


        $("#foward_form_submision").click(function () {
            var ticketId = document.getElementById("TicketId").value;
            var Description = document.getElementById("Description").value;
            if (Description == "") {
                swal("Description is Required.", { icon: "warning" })
                .then((value) => { });
                $("#foward_form_submision").prop('disabled', false);
                return
            }
            var form_data = {
                "__RequestVerificationToken": $('[name=__RequestVerificationToken]').val(),
                "TicketsId": ticketId,
                "Description": Description
            }

            var url = '@Url.Action("FowardTicket", "Tickets")';
            document.getElementById("decisionList").style.display = "none";
            var urlList = '@Url.Action("TicketsList", "Tickets")';
            $("#foward_form_submision").prop('disabled', true);
            $(".saveLoader").toggle(true);
            $.ajax({
                type: "post",
                url: url,
                data: form_data,
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    $("#foward_form_submision").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    if (response == "Success") {
                        swal("Ticket Fowarded Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.href = urlList;
                            });
                    }
                    else {
                        swal(response);
                    }
                },
                failure: function (error) {
                    $("#foward_form_submision").prop('disabled', false);
                    $(".saveLoader").toggle(false);
                    swal(error);
                }
            });
        });

        $(".ticketCancellation").on('click', function () {
            var id = $(this).data('id');
            var lpo = $(this).data('lpo');
            swal({
                title: 'Cancellation',
                text: "Do you what to Cancel Ticket   " + lpo + " ?",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    var url = '@Url.Action("CancelTicket", "Tickets")';
                    $.ajax(
        {
            type: "POST",
            url: url,
            data: { id: id },
            success: function (response) {
                if (response == "Success") {

                    swal("Ticket Cancelled successfully!", { icon: "success" })
                              .then((value) => {
                                  location.reload();
                              });

                }
                else {

                    swal("Failed to Cancel Ticket" + response);
                }
            },
            error: function (xhr) {
                swal(error);
                $("#divLoader").hide();
            },

        });
                } else {
                    swal("Cancelled", "No change was made");
                }
            });

        });

        $(".ticketClosure").on('click', function () {
            var id = $(this).data('id');
            var dmtname = $(this).data('dmtname');
