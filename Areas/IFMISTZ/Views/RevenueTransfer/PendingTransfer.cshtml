@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.FacilityRevenueSummaryVM>
@{
    ViewBag.Title = "Pending Facilities Revenue Transfer List";
}


<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    input[type=text] {
        padding: 5px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }
</style>

<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br/>
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title</h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">


                            <div class="row">

                                <div class="col-sm-4 col-md-3 col-lg-3 col-md-offset-7">
                                    <a href="#" onclick="confirmEntries()" class="btn btn-info" style="border-radius:1px;">
                                        <i class="fa fa-thumbs-up"></i>Confirm Revenue(s)
                                    </a>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search"></i>
                                        <input type="search" name="search" placeholder="Search..." id="search-box">
                                    </div>
                                </div>
                            </div>
                            <table class="table  table-bordered table-hover table-condensed" id="dt_facilities">
                                <thead>
                                    <tr>
                                        <th style="text-align:right;width:4%"></th>
                                        <th style="text-align:left"> @Html.DisplayNameFor(model => model.Remarks)</th>
                                        <th style="text-align:left">@Html.DisplayNameFor(model => model.PayeeAccountNo)</th>
                                        <th style="text-align:right">@Html.DisplayNameFor(model => model.TotalAmount)</th>
                                        <th style="text-align:center">@Html.DisplayNameFor(model => model.NumTrx)</th>
                                        <th style="text-align:center">@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                        <th style="text-align:center">@Html.DisplayNameFor(model => model.OverallStatus)</th>
                                        <th> <input type="checkbox" class="cbCheckAllItems" /></th>
                                        <th style="text-align:center">Action</th>

                                    </tr>
                                </thead>

                                <tbody>
                                    @{var i = 0;}
                                    @foreach (var item in Model)
                                    {
                                        ++i;

                                    <tr>
                                        <td style="text-align:right">
                                            @i
                                        </td>
                                        <td style="text-align:left">
                                            @Html.DisplayFor(modelItem => item.Remarks)
                                        </td>
                                        <td style="text-align:left">
                                            @Html.DisplayFor(modelItem => item.PayeeAccountNo)
                                        </td>
                                        <td style="text-align:right">
                                            @Html.DisplayFor(modelItem => item.TotalAmount)
                                        </td>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.NumTrx)
                                        </td>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.CreatedAt)
                                        </td>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.OverallStatus)
                                        </td>
                                        <td style="text-align: center">
                                            <input type="checkbox" class="checkItem" id=@item.FacilityRevenueSummaryId>
                                        </td>

                                        <td style="text-align:center">

                                            <div class="btn-group">
                                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu" style="text-align:left">

                                                    <li>
                                                        <a href="@Url.Action("RevenueDetails", "RevenueTransfer",new {id=item.FacilityRevenueSummaryId})" class="btn-xs edit">
                                                            <i class="fa fa-eye"></i>  Details
                                                        </a>
                                                    </li>
         
      
                                                </ul>
                                            </div>
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>

                        </div>





                    </div>


                </div>
            </article>

        </div>
    </section>

</div>



@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->

    <script type="text/javascript">
        var dt_facilities = $('#dt_facilities').dataTable();
        $("#dt_facilities_wrapper .dt-toolbar").remove();
        $("#search-box").on("keyup search input paste cut", function () {
            $("#dt_facilities").DataTable().search(this.value).draw();
        });

        //CHECK ALL ITEMS
        $(document).on('click', '.cbCheckAllItems', function () {
            $(".checkItem").prop('checked',
                $(this).prop('checked'));
        });

        var confirmEntries = function () {
            var revenueIds = [];
            $("input:checkbox.checkItem").each(function () {
                if ($(this).prop("checked")) {
                    revenueIds.push($(this).attr('id'));
                }

            });

            if (revenueIds.length == 0) {

                swal("Please select at least one entry!");
                return;
            }
            else {
                     swal({
                        title: 'Confirmation',
                        text: "Do you confirm entries ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                          var url = '@Url.Action("ConfirmEntries", "RevenueTransfer")';
                            $.ajax(
                {
                    type: "POST",
                    url: url,
                    data: { ids: revenueIds },
                    success: function (response) {
                        if (response == "Success") {
                            swal("Confirmed successfully", { icon: "success" })
                                      .then((value) => {
                                          location.reload();
                                      });


                        }
                        else {

                            swal(response);
                        }
                    },
                    error: function (xhr) {
                        swal(error);
                    },

                });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
            }
        }

        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });

    </script>
}







