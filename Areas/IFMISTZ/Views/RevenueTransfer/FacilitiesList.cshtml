@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.MuseSubServiceProviderVM>
@{
    ViewBag.Title = "Facilities List";
}


<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    input[type=text] {
        padding: 5px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }
</style>

<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br/>
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title</h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">

                           
                            <div class="row">

                                <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
                                    <div class="input-group">
                                        <a href="@Url.Action("CreateFacility", "RevenueTransfer")" class="btn btn-info" style="width:120px;border-radius:1px;">
                                            <i class="fa fa-plus"></i>Add New
                                        </a>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search"></i>
                                        <input type="search" name="search" placeholder="Search..." id="search-box">
                                    </div>
                                </div>
                            </div>
                            <table class="table  table-bordered table-hover table-condensed" id="dt_facilities">
                                <thead>
                                    <tr>
                                        <th style="text-align:right;width:4%"></th>
                                        <th style="text-align:left">@Html.DisplayNameFor(model => model.SpName)</th>
                                        <th style="text-align:left">@Html.DisplayNameFor(model => model.SubSpName)</th>
                                        <th style="text-align:left">@Html.DisplayNameFor(model => model.AccountNumber)</th>
                                        <th style="text-align:left">@Html.DisplayNameFor(model => model.BankName)</th>
                                        <th style="text-align:center">@Html.DisplayNameFor(model => model.OverallStatus)</th>
                                        <th style="text-align:center">Action</th>

                                    </tr>
                                </thead>

                                <tbody>
                                    @{var i = 0;}
                                    @foreach (var item in Model)
                                    {
                                        ++i;

                                    <tr>
                                        <td style="text-align:right">
                                            @i
                                        </td>
                                        <td style="text-align:left">
                                            @Html.DisplayFor(modelItem => item.SpCode)-
                                            @Html.DisplayFor(modelItem => item.SpName)
                                        </td>
                                        <td style="text-align:left">
                                            @Html.DisplayFor(modelItem => item.SubSpCode)-
                                            @Html.DisplayFor(modelItem => item.SubSpName)
                                        </td>
                                        <td style="text-align:left">
                                            @Html.DisplayFor(modelItem => item.AccountNumber)
                                        </td>
                                        <td style="text-align:left">
                                            @Html.DisplayFor(modelItem => item.BankName)
                                        </td>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.OverallStatus)
                                        </td>
                                        <td style="text-align:center">

                                            <div class="btn-group">
                                                <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu" style="text-align:left">

                                                    <li>
                                                        <a href="@Url.Action("EditFacility", "RevenueTransfer",new {id=item.MuseSubServiceProviderId})" class="btn-xs edit">
                                                            <i class="fa fa-edit"></i>  Edit
                                                        </a>
                                                    </li>
                                                    <li><a href="#" onclick="cancelEntry(@item.MuseSubServiceProviderId)" class="btn-xs edit"><i class="fa fa-edit"></i> Cancell</a></li>

                                                </ul>
                                            </div>
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>

                        </div>





                    </div>


                </div>
            </article>

        </div>
    </section>

</div>



@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->

    <script type="text/javascript">
        var dt_facilities = $('#dt_facilities').dataTable();
        $("#dt_facilities_wrapper .dt-toolbar").remove();
        $("#search-box").on("keyup search input paste cut", function () {
            $("#dt_facilities").DataTable().search(this.value).draw();
        });


        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });

    </script>
}







