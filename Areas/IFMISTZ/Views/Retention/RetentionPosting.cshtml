                    "preDrawCallback": function () {
                        // Initialize the responsive datatables helper once.
                        if (!responsiveHelper_dt_retention) {
                            responsiveHelper_dt_retention = new ResponsiveDatatablesHelper($('#dt_retention'), breakpointDefinition);
