@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.ContractVM>
@{
    ViewBag.Title = "Pending Retention Payment";
}



<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br/>
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> Pending Retention Payment </h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">



                            <div class="row">

                                <div class="col-xs-9 col-sm-3 col-md-3 col-lg-3">
                                    <div class="input-group">
                                        <a href="@Url.Action("PaymentEntry", "Retention")" class="btn btn-info" style="width:120px;border-radius:1px;">
                                            <i class="fa fa-plus"></i>Add New
                                        </a>

                                    </div>
                                </div>


                            </div>
                            <br />
                            <div align="center">
                                <img src="~/Media/Images/ajax_loader.gif" class="loadingImg" style="display:none" />
                            </div>

                            <table class="table  table-bordered table-hover table-condensed" id="dt_retention">
                                <thead>
                                    <tr>
                                        <th style="text-align:right;width:3%"></th>
                                        <th style="text-align:left;">Legal Number</th>
                                        <th style="text-align:left">Payee Name</th>
                                        <th style="text-align:left"> Bank Account </th>
                                        <th style="text-align:right">Transaction Amount</th>
                                        <th style="text-align:right">Operation Amount</th>
                                        <th style="text-align:left">Status</th>
                                        <th style="text-align:center;width:6%">Action</th>

                                    </tr>
                                </thead>

                                <tbody>
                                    @{var i = 0;}
                                    @foreach (var item in Model)
                                    {
                                        i++;

                                        <tr>
                                            <td style="text-align:right">
                                                @i
                                            </td>
                                            <td style="text-align:left">
                                                @Html.DisplayFor(modelItem => item.LegalNumber)

                                            </td>
                                            <td style="text-align:left">
                                                @Html.DisplayFor(modelItem => item.Payeename)
                                            </td>
                                            <td style="text-align:left">
                                                @Html.DisplayFor(modelItem => item.PayeeBankAccount)
                                            </td>
                                            <td style="text-align:right">
                                                @Html.DisplayFor(modelItem => item.TransactionAmount) @Html.DisplayFor(modelItem => item.TransactionCurrency)
                                            </td>

                                            <td style="text-align:right">
                                                @Html.DisplayFor(modelItem => item.PaymentAmount) @Html.DisplayFor(modelItem => item.OperationalCurrency)
                                            </td>

                                            <td style="text-align:left">
                                                @if (item.GLAmount > 0)
                                                {
                                                    @Html.DisplayFor(modelItem => item.OverallStatus)<br />
                                                    if (item.Accrual == "Yes")
                                                    {
                                                        <em>Accrual</em>
                                                    }
                                                }
                                                else
                                                {
                                                    <em>Assign GL</em>
                                                }

                                            </td>

                                            <td style="text-align:left">

                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a href="@Url.Action("PreviewRetention", "Retention",new {id=item.UuId})" class="btn-xs edit">
                                                                <i class="fa fa-search-minus"></i>  Preview
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="@Url.Action("AttachmentEntry", "PaymentVoucherAttachments",new {groupId=item.RetentionPaymentId,sourceModule="Retention" })" class="btn-xs edit">
                                                                <i class="fa fa-edit"></i>  Attachments
                                                            </a>
                                                        </li>
                                                        @if (item.Accrual == "Yes")
                                                        {
                                                            <li><a href="#" onclick="assignGLAccount(@item.RetentionPaymentId,@item.PaymentAmount,'@item.SubBudgetClass','@item.LegalNumber','@item.ParentInstitutionCode','@item.SubWarrantCode')" class="btn-xs edit"><i class="fa fa-edit"></i> Assign GL</a></li>

                                                        }
                                                        @if (item.OverallStatus.ToUpper() == "REJECTED")
                                                        {

                                                            <li><a href="#" onclick="confirmRejected(@item.RetentionPaymentId,'@item.LegalNumber')" class="btn-xs edit"><i class="fa fa-edit"></i> Confirm</a></li>

                                                        }
                                                        else
                                                        {

                                                            <li><a href="#" onclick="confirmPayment(@item.RetentionPaymentId,'@item.LegalNumber')" class="btn-xs edit"><i class="fa fa-edit"></i> Confirm</a></li>

                                                        }
                                                        @if (item.Accrual == "Yes")
                                                        {
                                                            <li><a href="#" onclick="changeRetention(@item.RetentionPaymentId)" class="btn-xs edit"><i class="fa fa-edit"></i> Change Retention</a></li>
                                                        }
                                                        <li><a href="#" onclick="confirmPayment(@item.RetentionPaymentId,'@item.LegalNumber')" class="btn-xs edit"><i class="fa fa-edit"></i> Change Payee</a></li>
                                                        <li><a href="#" onclick="cancelPayment(@item.RetentionPaymentId,'@item.LegalNumber')" class="btn-xs edit"><i class="fa fa-edit"></i> Cancel</a></li>

                                                    </ul>
                                                </div>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>





                    </div>


                </div>
            </article>

        </div>
    </section>

</div>
<div class="modal fade" id="ComfirmEntry" style="left:4%">

