        var assignGLAccount = function (id, amount, subBudgetClass, legalNumber, institutionParentCode, subWarrantCode) {
           var parent_code = "UNKNOWN";
           var sub_warant_code = "UNKNOWN";
            retentionPaymentId = id;
            glItemsCharges = [];
            sum_total = 0;
            if (institutionParentCode="") {
                parent_code = institutionParentCode;
            }
            if (subWarrantCode="") {
                sub_warant_code = subWarrantCode;
            }

                        $("#glItemsModal #legal_number").text(legalNumber);
