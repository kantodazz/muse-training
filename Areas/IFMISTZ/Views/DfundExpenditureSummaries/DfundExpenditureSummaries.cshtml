@section Scripts{
    <script>

        $("#ImplementerCode").on("change", function () {

            $("#divLoader").show();
            var implementerCode = $("#ImplementerCode").val();
            var url = '@Url.Action("GetProjectsPerImplementer", "DfundExpenditureSummaries")';
            $.ajax({
                type: "GET",
                url: url,
                data: { implementerCode: implementerCode },
                success: function (data, status, jqXHR) {
                    $("#ProjectCode option").remove();
                    $("#ProjectCode").append('<option value="">Select Project</option>');
                    $("#DonorCode option").remove();
                    $("#DonorCode").append('<option value="">Select Donor</option>');
                    $.each(data.projects, function (i, project) {
                    $("#ProjectCode").append('<option value="'
                    + project.ProjectCode + '">'
                    + project.ProjectCodeName + '</option>');
                    });
                    $("#ProjectCode").select2("val", "");
                    $("#DonorCode").select2("val", "");
                },
                error: function () {
                    swal({
                            text: "An error occurred while processing your request, contact system support",
                            icon: "error",
                            button: "OK",
                        }).then(function () {
                            location.reload();
                        });
                },
                complete: function () {
                    $("#divLoader").hide();
                }
            });
        });

        $("#ProjectCode").on("change", function () {

            $("#divLoader").show();
            var projectCode = $("#ProjectCode").val();
            var url = '@Url.Action("GetDonorsPerProject", "DfundExpenditureSummaries")';
            $.ajax({
                type: "GET",
                url: url,
                data: { projectCode: projectCode },
                success: function (data, status, jqXHR) {
                    $("#DonorCode option").remove();
                    $("#DonorCode").append('<option value="">Select Donor</option>');
                    $.each(data.donors, function (i, donor) {
                    $("#DonorCode").append('<option value="'
                    + donor.DonorCode + '">'
                    + donor.DonorCodeName + '</option>');
                    });
                    $("#DonorCode").select2("val", "");
                },
                error: function () {
                    swal({
                            text: "An error occurred while processing your request, contact system support",
                            icon: "error",
                            button: "OK",
                        }).then(function () {
                            location.reload();
                        });
                },
                complete: function () {
                    $("#divLoader").hide();
                }
            });
        });

        $("#DonorCode").on("change", function () {
            LoadDataTable();
        });

        var LoadDataTable = function () {
            $("#divLoader").show();
            var url = '@Url.Action("GetExpenditureSummaries", "DfundExpenditureSummaries")';
            var model = $("#expenditureForm").serialize();

            $.ajax({
                type: "get",
                url: url,
                data: model,
                success: function (response) {
                    $("#searchResults").show();
                    $("#searchResults").html(response);
                },
                complete: function () {
                    $("#divLoader").hide();
                }
            });
        };
    </script>
}
