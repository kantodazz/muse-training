                                            <td style="text-align:right">0</td>
                                            <td></td>

                                        </tr>
                                        foreach (var sbvt in sbc.GroupBy(a => a.SubVote))
                                        {

                                        }
                                    }

                                </tbody>
                            </table>

                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
            </article>
        </div>
    </section>
</div>

<!----------- IMPORT DIALOG ----------------->
