                                            <td>@Html.DisplayFor(modelItem => item.InvoiceType)</td>
                                            <td>@Html.DisplayFor(modelItem => item.InvoiceNumber)</td>
                                            <td>@Html.DisplayFor(modelItem => item.InvoiceDate)</td>
                                            <td style="text-align: right">@Html.DisplayFor(modelItem => item.InvoiceAmount, "_DecimalThousands")</td>
                                            <td>@Html.DisplayFor(modelItem => item.OverallStatus)</td>
                                            <td style="white-space:nowrap">
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <ul class="dropdown-menu" style="white-space:nowrap">
                                                        <li><a href="#" onclick="invoiceDetail(@item.InvoiceSummaryId)">Details</a></li>
                                                        <li><a href="#" onclick="rejectionInvoice(@item.InvoiceSummaryId)">Reject</a></li>
                                                        <li><a href="#" onclick="approveInvoice(@item.InvoiceSummaryId)">Approve</a></li>
