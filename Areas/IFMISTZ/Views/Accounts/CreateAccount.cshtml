@section pagespecific{
    <script>


        $("#InstitutionId").on("change", function () {
            $("#divLoader").show();
            var institutionId = $("#InstitutionId").val();
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetInstitutionByInstitutionId", "Institutions")',
                data: { id: institutionId },
                success: function (data, status, jqXHR) {
                    if (data.success) {
                        $("#InstitutionCode").val(data.InstitutionCode);
                        $("#InstitutionName").val(data.InstitutionName);
                    } else {
                        swal({
                            text: "Exception on accessing institution details, try again",
                            icon: "warning",
                            button: "OK",
                        }).then(function () {
                            //location.reload();
                        });
                    }
                },
                error: function () {
                    swal({
                        text: "Error on accessing institution details, try again",
                        icon: "error",
                        button: "OK",
                    }).then(function () {
                        //location.reload();
                    });
                },
                complete: function () {
                    $("#divLoader").hide();
                }
            })
        });

        $('#BankId').on("change", function () {
            $("#divLoader").show();
            var bankId = $("#BankId").val();
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetBanksByBankId", "Banks")',
                data: { id: bankId },
                success: function (data, status, jqXHR) {
                    if (data.success) {
                        $("#BankName").val(data.BankName);
                        $("#BankBIC").val(data.BIC);
                    } else {
                        swal({
                            text: "Exception on accessing Bank details, try again",
                            icon: "warning",
                            button: "OK",
                        }).then(function () {
                            location.reload();
                        });
                    }
                },
                error: function () {
                    swal({
                        text: "Error on accessing bank details, try again",
                        icon: "error",
                        button: "OK",
                    }).then(function () {
                        location.reload();
                    });
                },
                complete: function () {
                    $("#divLoader").hide();
                }
            })
        });

        $('#CurrencyId').on("change", function () {
            $("#divLoader").show();
            var currencyId = $("#CurrencyId").val();
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetCurrencyByCurrencyId", "Currencies")',
                data: { id: currencyId },
                success: function (data, status, jqXHR) {
                    if (data.success) {
                        $("#CurrencyCode").val(data.CurrencyCode);
                        $("#CurrencyName").val(data.CurrencyName);

                    } else {
                        swal({
                            text: "Exception on accessing Currency details, try again",
                            icon: "warning",
                            button: "OK",
                        }).then(function () {
                            location.reload();
                        });
                    }
                },
                error: function () {
                    swal({
                        text: "Error on accessing currency details, try again",
                        icon: "error",
                        button: "OK",
                    }).then(function () {
                        location.reload();
                    });
                },
                complete: function () {
                    $("#divLoader").hide();
                }
            })
        });


        $("#btnSave").click(function () {

            $('#btnSave').prop("disabled", true);

            $("#divLoader").show();

               if (!$("#createAccountForm").valid()) {
                $('#btnSave').prop("disabled", false);
                $("#divLoader").hide();
                return false;
            }

            var token = $("[name='__RequestVerificationToken']").val();
            var data = {
                __RequestVerificationToken: token,
                AccountName: $('#AccountName').val(),
                AccountNo: $('#AccountNo').val(),
                AccountTypeCode: $('#AccountTypeCode').val(),
                BankId: $('#BankId').val(),
                BankName: $('#BankName').val(),
                BankBIC: $('#BankBIC').val(),
                CurrencyId: $('#CurrencyId').val(),
                CurrencyCode: $('#CurrencyCode').val(),
                CurrencyName: $('#CurrencyName').val(),
                InstitutionId: $('#InstitutionId').val(),
                InstitutionCode: $('#InstitutionCode').val(),
                InstitutionName: $('#InstitutionName').val(),
                IBAN: $('#IBAN').val(),
                IsDFUND: $("#IsDFUND").prop("checked"),
                IsNRD: $("#IsNRD").prop("checked"),
                IsShared: $("#IsShared").prop("checked"),

            }

            var url = '@Url.Action("CreateAccount", "Accounts")';
            $.ajax({
                url: url,
                type: "POST",
                //data: JSON.stringify(data),
                data: data,
                dataType: "JSON",
                //contentType: "application/json",
                contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                success: function (response) {
                    //check is successfully save to database
                    if (response == "Success") {
                        //will send status from server side
                        swal({
                            text: "Account successfully saved.",
                            icon: "success",
                            button: "OK",
                        }).then(function () {
                            window.location = '@Url.Action("PendingAccount", "Accounts")';
                        });
                    }
                    else {
                        swal({
                            text: response,
                            icon: "warning",
                            button: "OK",
                        })
                    }
                },
                error: function () {
                    swal({
                        text: "Error on saving Account, try again.",
                        icon: "error",
                        button: "OK",
                    })
                },
                complete: function () {
                    $('#btnSave').prop("disabled", false);
                    $("#divLoader").hide();
                }
            });
        });







    </script>
}




