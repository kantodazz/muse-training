            $.ajax({
                type: "get",
                url: url + "/?search=" + search + "",
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data2 = response.data;
                    dt_search_beneficiary.fnClearTable();
                    for (var i = 0; i < data2.length; i++) {
                        dt_search_beneficiary.fnAddData([i + 1,
                           data2[i]["PayeeDetailId"],
                           data2[i]["BIC"],
                           data2[i]["AccountName"],
                           data2[i]["PayeeCode"],
                           data2[i]["BankName"],
                           data2[i]["Accountnumber"],
