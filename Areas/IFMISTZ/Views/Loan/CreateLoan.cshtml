                                                       href="#" style="float:right">
                                                        <i class="fa fa-search search-icon"></i>
                                                    </a>
                                                </div>
                                                <div id="verificationIcons"></div>
                                                <div id="errorVerification" style="color:red">
                                                    Payee is having UnRecovered Loan!
                                                </div>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="form-label">
                                                Payee Type
                                                <i class="fa fa-times" style="color:white" id="PayeeName_1"></i>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <select id="PayeeType" required style="width:300px">
                                                        @if (ViewBag.PayeeTypeList != null)
                                                        {
                                                            <option>Select Payee Type</option>
                                                            foreach (var payeeType in ViewBag.PayeeTypeList)
                                                            {
                                                                <option value='@payeeType.PayeeTypeCode'>@payeeType.PayeeTypeCode</option>
                                                            }
                                                        }
                                                        }
                                                    </select>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="form-label">
                                                Loan Code
                                                <i class="fa fa-times" style="color:white" id="Loanype_1"></i>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <select id="LoanType" required style="width:300px">
                                                        @if (ViewBag.LoanTypeList != null)
                                                        {
                                                            <option value="">Select Loan Type</option>
                                                            foreach (var LoanType in ViewBag.LoanTypeList)
                                                            {
                                                                <option value='@LoanType.LoanTypeId' onclick="GetLoanTypeDetails">@LoanType.LoanTypeDesc - @LoanType.LoanCode</option>
                                                            }
                                                        }
                                                        }
                                                    </select>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="form-label">
                                                Description
                                                <i class="fa fa-times" style="color:white" id="Description_1"></i>
                                            </td>
                                            <td>
                                                <textarea rows="2" id="Description" style="width:300px;" readonly></textarea>
                                            </td>
                                        </tr>


                                        <tr>
                                            <td class="form-label">
                                                Interest /Service Charges(%)
                                            </td>
                                            <td>
                                                <input type="text" id="InterestRate" readonly style="width:300px;" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12 ">
                                    <table>
                                        <tr>
                                            <td class="form-label">
                                                Sub Budget Class
