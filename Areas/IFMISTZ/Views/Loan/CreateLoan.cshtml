                                            </td>
                                            <td>
                                                <input type="text" id="BankAccountBalance" readonly="readonly" style="width:300px" required />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="form-label">
                                                Loan Amount
                                                <i class="fa fa-times" style="color:white" id="total_voucher_amount_1"></i>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <strong id="currency">TZS</strong>
                                                    </span>
                                                    @Html.EditorFor(model => model.AmountDue, new { htmlAttributes = new { id = "AmountDue", min = "0", onkeyup = "ValidateEntry()", @style = "width:255px", @required = "required", @autocomplete = "off" } })
                                                    @Html.ValidationMessageFor(model => model.AmountDue, "", new { @class = "text-danger" })
                                                    <br /> <a href="#" id="exceedMsg" style="display:none;color:red">Amount Exceed Available Account Balance </a>
                                                </div>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="form-label">
                                                Recovery Period (Months)
                                            </td>
                                            <td>
                                                <input type="number" id="RecoveryPeriod" required style="width:300px;" min="0" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="form-label">
                                                Apply Date
                                                <i class="fa fa-times" style="color:white" id="ApplyDate_1"></i>
                                            </td>
                                            <td>
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <div class="flatpickr date-group">
                                                                <input type="text" placeholder="Select Date.."
                                                                       data-input
                                                                       style="width:110px;border:none;"
                                                                       autocomplete="off" name="ApplyDate" id="ApplyDate">

                                                                <a class="input-button" title="open" data-toggle href="#">
                                                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2"></div>
                                <div class="col-md-6">
                                    <a class="btn btn-info" href='@Url.Action("PendingLoan", "Loan")' style="margin-right:5px">
                                        <i class="glyphicon glyphicon-arrow-left"></i>Back
                                    </a>
                                    <button type="submit" class="btn btn-info" id="form_submision">
                                        <i class="fa fa-save"></i>Save
                                        <img src="~/Content/img/loading.gif" id="saveLoader" />
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </article>
        </div>
    </section>
</div>

