@model IFMIS.Areas.IFMISTZ.Models.PaymentFile
<link href='@Server.MapPath("~/Content/css/bootstrap.min.css")' rel="stylesheet" />
<style>
    table, td, th {
        border: 1px solid black;
        text-align: left;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
    }
</style>
<div style="font-family: 'Calibri'; font-size: 15px">
    <div style="text-align: center">
        <img src='@Server.MapPath("~/Media/Images/log20180504093652.png")' width="100" height="100" />

        <div style="padding-top: 20px; font-size: 20px">
            <b>@Model.InstitutionName.ToUpper()</b>
        </div>
        <div style="padding-top: 10px;padding-bottom: 10px; font-size: 20px">
            <b>TRANSFER INSTRUCTION SLIP</b>
        </div>
    </div>

    <div style="padding-top:20px; font-size: 20px">
        <b>TRANSFER DETAILS</b>
    </div>

    <div style="padding-top: 10px;padding-bottom:10px">
        <div>TRANSFER ACC NO: @Model.PayerBankAccount</div>
        <div>TRANSFER ACCOUNT NAME: @Model.PayerBankName</div>
        <div>DATE: @ViewBag.Date</div>
    </div>

    <div>
        <table>
            <thead>
                <tr>
                    @if (Model.PayerBankBic == "TANZTZTX")
                    {
                        <th>FUNDING REFERENCE</th>
                    }
                    else
                    {
                        <th>BLOCK ID</th>
                    }
                    <th>NO. OF TRANSACTIONS</th>
                    <th>TRANSACTION AMOUNT</th>
                    <th>TRANSACTION CURRENCY</th>
                    <th>PAYER ACCOUNT NO</th>
                    <th>PAYER ACCOUNT NAME</th>
                    <th>PAYEE ACCOUNT CATEGORY</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @if (Model.PayerBankBic == "TANZTZTX" || Model.PayerBankBic == "CORUTZTZ")
                    {
                        <td>@Model.FundingRef</td>
                    }
                    else
                    {
                        <td>@Model.MsgId</td>
                    }
                    @if (Model.SubTsaBankAccount == null)
                    {
                        <td>@Model.NumTrx</td>
                        <td>@string.Format("{0:#,#.00}", ViewBag.TransactionAmount)</td>
                        <td>@ViewBag.TransactionCurrency</td>
                        <td>@Model.PayerBankAccount</td>
                        <td>@Model.PayerBankName</td>
                        <td>@Model.PayerAccountType</td>
                    }
                    else
                    {
                        <td>@Model.NumTrx</td>
                        <td>@string.Format("{0:#,#.00}", ViewBag.TransactionAmount)</td>
                        <td>@ViewBag.TransactionCurrency</td>
                        <td>@Model.SubTsaBankAccount</td>
                        <td>Sub TSA</td>
                        <td>Expenditure</td>
                    }

                </tr>
            </tbody>
        </table>
    </div>

    <div style="padding-top:100px">
        <div class="row" style="padding:5px">
            <div class="col-xs-4">SIGNATURE:</div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
        </div>
        <div class="row" style="padding:5px">
            <div class="col-xs-4">NAME:</div>
            <div class="col-xs-4">
                @Model.ConfirmedBy
            </div>
            <div class="col-xs-4">
                @Model.ApprovedBy
            </div>
        </div>
        <div class="row" style="padding:5px">
            <div class="col-xs-4"></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
        </div>
        <div class="row" style="padding:5px">
            <div class="col-xs-4"></div>
            <div class="col-xs-4">VERIFIER</div>
            <div class="col-xs-4">AUTHORIZER</div>
        </div>
    </div>

    <div style="padding-top:100px">
        <div class="row" style="padding:5px">
            <div class="col-xs-4">SIGNATURE:</div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
        </div>
        <div class="row" style="padding:5px">
            <div class="col-xs-4">NAME:</div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
            <div class="col-xs-4"><hr style="border-color:black;width:200px;float:left" /></div>
        </div>
        <div class="row" style="padding:5px">
            <div class="col-xs-4"></div>
            <div class="col-xs-4">BANK VERIFIER</div>
            <div class="col-xs-4">BANK AUTHORIZER</div>
        </div>
    </div>
</div>