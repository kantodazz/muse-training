@model IFMIS.Areas.IFMISTZ.Models.PaymentFile
<link href='@Server.MapPath("~/Content/css/bootstrap.min.css")' rel="stylesheet" />
<style>
    table, td, th {
        border: 1px solid black;
        text-align: left;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
        width: 20%;
    }

   
</style>
<div style="font-family: 'Calibri'; font-size: 15px">
    @*<div style="text-align: center">
            <img src='@Server.MapPath("~/Media/Images/log20180504093652.png")' width="100" height="100" />

            <div style="padding-top: 20px; font-size: 20px">
                <b>@Model.InstitutionName.ToUpper()</b>
            </div>
            <div style="padding-top: 10px;padding-bottom: 10px; font-size: 20px">
                <b>TRANSFER INSTRUCTION SLIP</b>
            </div>
        </div>*@

    <div style="font-size: 12px">
        <div style="padding-top: 10px">

            <div style="text-align: center;"><img src="@ViewBag.logoImageBase64" alt="Logo" style="width:100px;height:100px"></div>
            <div style="text-align: center"><strong>THE UNITED REPUBLIC OF TANZANIA</strong></div>
            <div style="text-align: center; margin-top: 10px; text-transform: uppercase;"><strong>@Model.InstitutionCode - @Model.InstitutionName </strong></div>
            <div style="text-align: center; margin-top: 10px"><strong>TRANSFER INSTRUCTION SLIP</strong></div>
        </div>
    </div>

    <div style="padding-top:20px; font-size: 20px">
        <b>TRANSFER DETAILS</b>
    </div>

    <div style="padding-top: 10px;padding-bottom:10px">
        <div>TRANSFER ACC NO: @Model.PayerBankAccount</div>
        <div>TRANSFER ACCOUNT NAME: @Model.PayerBankName</div>
        <div>DATE: @ViewBag.Date</div>
    </div>

    <div>
        <table style="width: 100%; table-layout: fixed;">
            <thead>
                <tr style="font-size:12px;width:30%">
                    @if (Model.PayerBankBic == "TANZTZTX")
                    {
                        <th style="width:30%">FUNDING REFERENCE</th>
                    }
                    else
                    {
                        <th>BLOCK ID</th>
                    }
                    <th style="text-align:left;">NO. OF TRANSACTIONS</th>
                    <th>TRANSACTION AMOUNT</th>
                    <th>TRANSACTION CURRENCY</th>
                    <th>PAYER ACCOUNT NO</th>
                    <th>PAYER ACCOUNT NAME</th>
                    <th>PAYEE ACCOUNT CATEGORY</th>
                </tr>
            </thead>
            <tbody>
                <tr style="font-size:12px">
                    @if (Model.PayerBankBic == "TANZTZTX" || Model.PayerBankBic == "CORUTZTZ")
                    {
                        <td>@Model.FundingRef</td>
                    }
                    else
                    {
                        <td>@Model.MsgId</td>
                    }
                    @if (Model.SubTsaBankAccount == null)
                    {
                        <td style="text-align:center">@Model.NumTrx</td>
                        <td>@string.Format("{0:#,#.00}", ViewBag.TransactionAmount)</td>
                        <td>@ViewBag.TransactionCurrency</td>
                        <td>@Model.PayerBankAccount</td>
                        <td>@Model.PayerBankName</td>
                        <td>@Model.PayerAccountType</td>
                    }
                    else
                    {
                        <td>@Model.NumTrx</td>
                        <td>@string.Format("{0:#,#.00}", ViewBag.TransactionAmount)</td>
                        <td>@ViewBag.TransactionCurrency</td>
                        <td>@Model.SubTsaBankAccount</td>
                        <td>Sub TSA</td>
                        <td>Expenditure</td>
                    }

                </tr>
            </tbody>
        </table>
    </div>

    <table style="border:1px solid white">
        <tr style="border-spacing: 10px">
            <td style="border-style: none; padding-left: 100px"></td>
            <td style="border-style: none; text-align: center"></td>
            <td style="border-style: none; text-align: center"></td>
        </tr>
        <tr style="border-spacing: 10px">
            <td style="border-style: none; padding-left: 100px"></td>
            <td style="border-style: none; text-align: center"></td>
            <td style="border-style: none; text-align: center"></td>
        </tr>
        <tr style="border-spacing: 10px">
            <td style="border-style: none; padding-left: 100px"></td>
            <td style="border-style: none; text-align: center"></td>
            <td style="border-style: none; text-align: center"></td>
        </tr>

        <tr style="border-spacing: 0px">
            <td style="border-style: none; padding-left: 100px"></td>
            <td style="border-style: none; padding-left: 0px">
                VERIFIER
            </td>
            <td style="border-style: none; padding-left: 0px"></td>
            <td style="border-style: none; text-align: center">AUTHORIZER</td>
            <td style="border-style: none; text-align: center"></td>
        </tr>
    </table>



    <table style="margin-left: -90px;border:0px solid white;margin-top:100px">
        <tr style="border-spacing: 10px">
            <td style="border-style: none; padding-left: 100px">SIGNATURE   :</td>
            <td style="border-style: none; text-align: center">_______________</td>
            <td style="border-style: none; text-align: center">_______________</td>
        </tr>
        
        <tr style="border-spacing: 10px">
            <td style="border-style: none; padding-left: 100px">NAME   :</td>
            <td style="border-style: none; text-align: center">________________</td>
            <td style="border-style: none; text-align: center">________________</td>
        </tr>

        <tr style="border-spacing: 10px">
            <td style="border-style: none; padding-left: 100px"></td>
            <td style="border-style: none; text-align: center">BANK VERIFICATION</td>
            <td style="border-style: none; text-align: center">BANK AUTHORIZATION</td>
        </tr>
    </table>


</div>