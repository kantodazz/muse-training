
@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.Unapplied>

<table id="dt_basic" class="table table-striped table-bordered table-hover table-condensed" width="100%">
    <thead>
        <tr style="background-color: #f5f5f5; color:black">
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.UnappliedRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendorCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BenAcct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BenBic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndToEndId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankingStatusDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrxAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrossAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnappliedDateFormatted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverallStatus)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    @{int i = 0;}
    @foreach (var item in Model)
            {
                i++;
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.UnappliedRef)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.VendorCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BenAcct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BenBic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndToEndId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankingStatusDesc)
            </td>
            <td style="text-align: right">
                @Html.DisplayFor(modelItem => item.TrxAmount, "_DecimalThousands")
            </td>
            <td style="text-align: right">
                @Html.DisplayFor(modelItem => item.GrossAmount, "_DecimalThousands")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnappliedDateFormatted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverallStatus)
            </td>
        </tr>
    }

</table>
<!-- END MAIN CONTENT -->
<!--Start of details modal section-->
<div class="modal fade" id="modal-details" tabindex="-1" role="dialog" aria-labelledby="lbl-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

                <h4 class="modal-title" id="lbl-modal-details"> Details</h4>
            </div>
            <div class="modal-body" id="modal-details-body" style="padding: 0px">
            </div>
            <div class="modal-footer">
                <button class="btn btn-default delete-cancel" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!--End of details modal section-->

<script>
