            $("#saveLoader").toggle(false);
            function uploadFile() {
                swal({
                    text: "Confirm To Attach Slip ?",
                    buttons: ["Cancel", "Confirm"],
                }).then((confirmed) => {
                    if (confirmed) {
                        uploadFilesConfirmed();
                    } else {
                        swal("Cancelled");
                    }
                });
            };

            function uploadFilesConfirmed() {
                var formData = new FormData();
                var transferSummaryId = $('#transferSummaryid').val();
                formData.append('transferSummaryId', transferSummaryId);
                formData.append('file', $('input[type=file]')[0].files[0]);
                $("#form_submision").prop('disabled', true);
                $("#saveLoader").toggle(true);
                $.ajax({
                    url: '@Url.Action("AttachSlip", "FundTransfers")',
                    data: formData,
                    type: 'POST',
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        $("#form_submision").prop('disabled', false);
                        $("#saveLoader").toggle(false);
                        if (response == "Success") {
                            swal("Slip Attached successfull!", { icon: "success" })
                              .then((e) => {
                                  $('#attachFileModal').modal('hide');
                                  window.location.reload();
                              });
                        } else {
                            swal(response)
                             .then((e) => {
                                 $('#attachFileModal').modal('hide');
                                 window.location.reload();
                             });
                        }

                    },
                    failure: function (error) {
                        $("#form_submision").prop('disabled', false);
                        $("#saveLoader").toggle(false);
                        swal(error)
                         .then((e) => {
                             $('#attachFileModal').modal('hide');
                             window.location.reload();
                         });
                    }
                });
            };

            var transferDetails = function (id) {
                $("#divLoader").show();
