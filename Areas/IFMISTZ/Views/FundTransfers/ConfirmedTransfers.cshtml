                var rejectionReason = reason;

                $("#divLoader").show();

                $.ajax({
                    type: "POST",
                    url: "RejectTransfer",
                    data: { ids: id, reason: rejectionReason },
                    success: function (response) {
                        if (response == "Success") {
                            swal("Rejection Successfully Saved", { icon: "success" }).then((e) => {
                                window.location.reload();
                            });
                            //location.hide();
                            $("#divLoader").hide();

