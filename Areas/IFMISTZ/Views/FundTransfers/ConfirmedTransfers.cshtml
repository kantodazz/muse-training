                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {
                    //ApproveTransfer(i)
                    $("#divLoader").show();
                    $.ajax({
                        type: "POST",
                        url: "ApproveTransfer",
                        data: { id: id,stage:"Approver" },
                        success: function (response) {
                            if (response == "Success") {
                                swal("Approved Successfully!", { icon: "success" }).then((e) => {
                                    window.location.reload();
                                });
                            }
                            else {
                                swal({
                                    text: response,
                                    icon: "warning",
                                    button: "OK",
                                })
                            }
                        },
                        error: function (xhr) {
                            swal({
                                text: "An error has occured, contact system support",
                                icon: "error",
                                button: "OK",
                            })
                        },
                        complete: function () {
                            $("#divLoader").hide();
                        }
                    });
                }
            });
            $('#confirmModal').modal('hide');
        };

        var viewReason = function (reason) {
            $(".modal-body #RejectionReason").val(reason);
            $("#ViewReasonModal").modal("show");  // show modal
        };
    </script>
