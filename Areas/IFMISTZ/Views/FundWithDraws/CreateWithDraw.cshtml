        var withdraws = function (did) {
            debugger;
            var distributionId = did;

            var url = '@Url.Action("WithDrawAmount", "FundWithDraws")';

            $.ajax({
                type: "POST",
                url: url,
                data: { id: distributionId },
                success: function (response) {
                    if (response[0] == "Success") {

                        $(".modal-body #distributionId").val(distributionId);
                        $(".modal-body #FundReceivingId").val(response[3]);
                        $(".modal-body #FundingRefNo").val(response[1]);
                        $(".modal-body #receivefundBaseAmount").val(response[2]);
                        $("#detailsModal").modal("show");  // show modal
                    }
                    else if (response[0] == "DbException") {
                        alert("An error has occured, contact system support" + response[1]);
                        $("#divLoader").hide();
                    }
                    $("#receivefundBaseAmount").autoNumeric({ aNeg: "-" }).trigger("change");
                },
                error: function (xhr) {
                    console.log(xhr.responseText);
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },

            })
        }

        function ValidateEntry() {
            debugger;
            var amount = parseFloat($("#Amount").val().split(",").join(""));
            var issued = parseFloat($("#receivefundBaseAmount").val().split(",").join(""));
            if (amount > issued) {
                $("#Amount").css({ 'color': 'red' });
                $("#savebtn").attr("disabled", true);
                $("#exceedMsg").show();
            }
            else {
                $("#Amount").css({ 'color': 'black' });
                $("#savebtn").attr("disabled", false);
                $("#exceedMsg").hide();
            }
        };


