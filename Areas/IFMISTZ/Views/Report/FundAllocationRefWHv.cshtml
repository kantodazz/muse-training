@model IFMIS.Areas.IFMISTZ.Models.InstitutionListVm

@{
    ViewBag.Title = "FundAllocationRefWHv";
    ViewBag.Description = "form wizards";
    //Layout = "~/Views/Shared/_Default.cshtml";

}

<style>
    .input {
        border-width: 1px 0 1px 1px;
        border-color: #ccc;
        border-style: solid;
        width: 110px;
        height: 32px;
    }

    span {
        cursor: pointer;
    }
</style>


<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">


        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">

        </div>
    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Fund Allocation Report Parameters</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Institution Code
                                    </div>
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(model => model.InstitutionCode, Model.InstitutionCodeList, "-- Select Institution --", new { @class = "select2 form-control padding-left-10" })
                                        @Html.ValidationMessageFor(model => model.InstitutionCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Segment Type
                                    </div>
                                    <div class="col-md-5">
                                        <select transactiontype="myDropdown" name="SegmentType" id="SegmentType" class="select2 form-control padding-left-10">
                                            <option>-- Select Segment --</option>
                                            <option value="ALL">ALL</option>
                                            <option value="ACTIVITY">ACTIVITY</option>
                                            <option value="COFOG">COFOG</option>
                                            <option value="COST CENTRE">COST CENTRE</option>
                                            <option value="FACILITY">FACILITY</option>
                                            <option value="FUND TYPE">FUND TYPE</option>
                                            <option value="FUNDING SOURCE">FUNDING SOURCE</option>
                                            <option value="GEOGRAPHICAL LOCATION">GEOGRAPHICAL LOCATION</option>
                                            <option value="GFS CODE">GFS CODE</option>
                                            <option value="PROJECT">PROJECT</option>
                                            <option value="SERVICE OUTPUT">SERVICE OUTPUT</option>
                                            <option value="SUB BUDGET CLASS">SUB BUDGET CLASS</option>
                                            <option value="SUB VOTE">SUB VOTE</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Segment Type Detail
                                    </div>
                                    <div class="col-md-5">
                                        <select name="SegmentTypeDetail" id="SegmentTypeDetail" class="select2 form-control padding-left-10">
                                            <option value="">-- Segment Type Details --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Reference Number
                                    </div>
                                    <div class="col-md-5">
                                        <input id="RefNo" name="RefNo" class="form-control padding-left-10" type="text" placeholder="Search Reference Number" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Start Date
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input name="StartDate" id="StartDate" placeholder="Pick Date" class="input padding-left-10" autocomplete="off" data-input />
                                                <span class="input-group-addon" data-toggle><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        End Date
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input name="EndDate" id="EndDate" placeholder="Pick Date" class="input padding-left-10" autocomplete="off" data-input />
                                                <span class="input-group-addon" data-toggle><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="simple" />
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn action-btn btn btn-info" onclick="FundAllocationWH()">
                                            View Report
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section scripts
{
    <script>

        function FundAllocationWH() {
            var entityCode = $("#InstitutionCode").val().trim(),
                segmentType = $("#SegmentType").val().trim(),
                segmentTypeDetail = $("#SegmentTypeDetail").val().trim();
                refno = $("#RefNo").val().trim();
                startDate = $("#StartDate").val().trim(),
                endDate = $("#EndDate").val().trim(),
                    url = "@Model.UrlName" + "FundAllocationRefWH.aspx";

            var isNotSupplied = validateReportParameters(["#InstitutionCode", "#SegmentType", "#SegmentTypeDetail","#RefNo", "#StartDate", "#EndDate"]),
                queryString = "inst-code=" + entityCode + "&segmentType=" + segmentType + "&segmentTypeDetail=" + segmentTypeDetail + "&refNo=" + refno+ "&start-date=" + startDate + "&end-date=" + endDate;

            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else
            {
                $.ajax({
                        type: "GET",
                        url: '@Url.Action("ParameterEncryption", "Report")',
                        contentType: "application/json; charset=utf-8",
                        datatype: "json",
                        data: { "query": queryString },
                        success: function (response) {
                            window.open(url + response);
                        }
                });
            }
        }

        $("#SegmentType").change(function () {
            var segmentType = $(this).val(),
                entityCode = $("#InstitutionCode").val().trim();

            if (segmentType === "ALL") {
                $("#SegmentTypeDetail").empty();
                $("#SegmentTypeDetail").append(
                    '<option value="">-- Segment Type Details --</option>\
                    <option value="ALL">ALL</option>'
                );
            }
            else {
                var url = "GetAllocationSegmentTypeDetails/?institutionCode=" + entityCode + "&segmentType=" + segmentType;

                $.ajax({
                    type: "GET",
                    url: url,
                    contentType: "html",
                    success: function (response) {
                        $("#SegmentTypeDetail").empty();
                        $("#SegmentTypeDetail").append(response);
                    }
                });
            }   
        });


        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);
            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val()) {
                    console.log(parameterList[i]);
                    return parameterList[i];
                }
            }
            return null;
        }

    </script>
}