@model IFMIS.Areas.IFMISTZ.Models.InstitutionListVm

@{
    ViewBag.Title = "ConsoItemValidationRPTv";
    ViewBag.Description = "form wizards";
    //Layout = "~/Views/Shared/_Default.cshtml";

}

<style>
    .input {
        border-width: 1px 0 1px 1px;
        border-color: #ccc;
        border-style: solid;
        width: 110px;
        height: 32px;
    }

    .input_page {
        border: 1px solid #ccc;
        width: 145px;
        height: 32px;
    }

    span {
        cursor: pointer;
    }
</style>
<script type="text/javascript">

    function ItemsValidationRPT() {
        var entityCode = $("#GfsCode").val().trim(),
            subSector = $("#SubSector").val().trim(),
            fy = $("#FinancialYear").val().trim(),
            pageNumber = $("#PageNumber").val().trim(),
            url = "@Model.UrlName" + "ConsoItemValidationRPT.aspx";

        var isNotSupplied = validateReportParameters(["#GfsCode","#SubSector", "#FinancialYear","#PageNumber"]),
            queryString = "gfs-code=" + entityCode + "&sub-sector=" + subSector + "&curr-fiscal-yr=" + fy + "&page-no=" + pageNumber;

        if (isNotSupplied)
            $(isNotSupplied).attr("style", "border: 1px solid red");
        else
        {
            $.ajax({
                    type: "GET",
                    url: '@Url.Action("ParameterEncryption", "Report")',
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    data: { "query": queryString },
                    success: function (response) {
                        window.open(url + response);
                    }
            });
        }
    }

    function validateReportParameters(parameterList) {
        var resetStyle = function (parameterList) {
            for (var i = 0; i < parameterList.length; i++) {
                $(parameterList[i]).attr("style", "border: 1px solid #ccc");
            }
        }
        resetStyle(parameterList);

        for (var i = 0; i < parameterList.length; i++) {
            if (!$(parameterList[i]).val().trim()) {
                return parameterList[i];
            }
        }
        return null;
    }
</script>
<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">


        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">

        </div>
    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Item Validation Parameters </h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Gfs code
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input type="text" name="GfsCode" id="GfsCode" class="input_page padding-left-10 padding-right-10" placeholder="Enter Gfscode" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Sub Sector
                                    </div>
                                    <div class="col-md-3">
                                        <select id="SubSector" name="SubSector" class="select2 form-control padding-left-10">
                                            <option value="">-- Select Sub Sector --</option>
                                            <option value="ALL"> ALL </option>
                                            <option value="Budgetary Central Government"> Budgetary Central Government </option>
                                            <option value="Extrabudgetary units/entities"> Extrabudgetary units/entities </option>
                                            <option value="Local Government"> Local Government </option>
                                            <option value="Financial Corporations"> Financial Corporations </option>
                                            <option value="Nonfinancial Corporations"> Nonfinancial Corporations </option>
                                            <option value="Consolidated Fund"> Consolidated Fund </option>
                                            <option value='Social Security Funds'> Social Security Funds </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Financial year
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input type="text" name="FinancialYear" id="FinancialYear" class="input_page padding-left-10 padding-right-10" placeholder="Enter Financial year" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Start Page Number
                                    </div>
                                    <div class="col-md-5">
                                        <input type="number" name="PageNumber" id="PageNumber" min="1" placeholder="Pick Number" class="input_page padding-left-10 padding-right-10" />
                                    </div>
                                </div>
                                <hr class="simple" />
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn action-btn btn btn-info" onclick="ItemsValidationRPT()">
                                            View Report
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->