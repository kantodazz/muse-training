@section scripts
{
    <script>

        getInstitutionPaymentNumbers();

        function PaymentSummaryRPT() {
            var entityCode = $("#InstitutionCode").val().trim(),
                paymentNumber = $("#PaymentNumber").val().trim(),
                url = "@Model.UrlName" + "PaymentSummaryRPT.aspx";

            var isNotSupplied = validateReportParameters(["#InstitutionCode", "#PaymentNumber"]),
               queryString = "inst-code=" + entityCode + "&payment-number=" + paymentNumber;

            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else
            {
                $.ajax({
                        type: "GET",
                        url: '@Url.Action("ParameterEncryption", "Report")',
                        contentType: "application/json; charset=utf-8",
                        datatype: "json",
                        data: { "query": queryString },
                        success: function (response) {
                            window.open(url + response);
                        }
                });
            }
        }

        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);

            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val().trim()) {
                    return parameterList[i];
                }
            }
            return null;
        }

        function getInstitutionPaymentNumbers() {
            var url = "GetInstitutionPaymentSummaryNumbers/";

            $("#PaymentNumber").select2({
                minimumInputLength: 3,  // minimumInputLength for sending ajax request to server
                width: 'resolve',   // to adjust proper width of select2 wrapped elements
                ajax: {
                    url: url, // Controller - Select2Demo and Action -AccessRemoteData
                    type: "GET",
                    dataType: 'json',
                    data: function (searchTerm) {
                        return {
                            searchTerm: searchTerm,
                            institutionCode: $("#InstitutionCode").val(),
                        };
                    },
                    results: function (data, page) {
                        return { results: data.paymentNumbers }; // data.paymentNumbers returning json data from Controller
                    }
                }
            });
        }

    </script>
}