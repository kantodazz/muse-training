@model IFMIS.Areas.IFMISTZ.Models.InstitutionListVm

@{
    ViewBag.Title = "Inventory Issuing Status By SubWarrant Holder";

}

<style>
    .input {
        border-width: 1px 0 1px 1px;
        border-color: #ccc;
        border-style: solid;
        width: 110px;
        height: 32px;
    }

    span {
        cursor: pointer;
    }
</style>

<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">


        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">

        </div>
    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Institution Code
                                    </div>
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(model => model.InstitutionCode, Model.InstitutionCodeList, "-- Select Institution --", new { @class = "select2 form-control padding-left-10" })
                                        @Html.ValidationMessageFor(model => model.InstitutionCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="form-group">
                                    <div class="control-label col-md-2">
                                        Institution Code
                                    </div>
                                    <div class="col-md-5">
                                        <select name="STInstitutionCode" id="STInstitutionCode" class="select2 form-control padding-left-10">
                                            <option value="">-- Select ST Institution Code --</option>
                                        </select>
                                    </div>
                                </div>*@
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Sub Warrant Holder
                                    </div>
                                    <div class="col-md-5">
                                        <select id="SubWarrantCode" name="SubWarrantCode" class="select2 form-control padding-left-10">
                                            <option value="">-- Select SubWarrant Holder --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Item Class
                                    </div>
                                    <div class="col-md-5">
                                        <select id="ItemClass" name="ItemClass" class="select2 form-control padding-left-10">
                                            <option value="">-- Select Item Class --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Start Date
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input name="StartDate" id="StartDate" placeholder="Pick Date" class="input padding-left-10" autocomplete="off" data-input />
                                                <span class="input-group-addon" data-toggle><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        End Date
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input name="EndDate" id="EndDate" placeholder="Pick Date" class="input padding-left-10" autocomplete="off" data-input />
                                                <span class="input-group-addon" data-toggle><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="simple" />
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn action-btn btn btn-info" onclick="InventoryStatusSWHRpt()">
                                            View Report
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section scripts
{
    <script>
      /*  GetVotes();*/
        getItemClassfications();

        function InventoryStatusSWHRpt() {
            var stInstitutionCode = $("#InstitutionCode").val().trim(),
                subWarrant = $("#SubWarrantCode").val(),
                itemClass = $("#ItemClass").val().trim(),
                startDate = $("#StartDate").val().trim(),
                endDate = $("#EndDate").val().trim(),
                url = "@Model.UrlName" + "InventoryStatusByST.aspx";

            var isNotSupplied = validateReportParameters(["#InstitutionCode", "#SubWarrantCode", "#ItemClass","#StartDate", "#EndDate"]),
                queryString = "st-code=" + stInstitutionCode + "&swh-code=" + subWarrant + "&item-class=" + itemClass + "&start-date=" + startDate + "&end-date=" + endDate;

            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else
            {
                $.ajax({
                        type: "GET",
                        url: '@Url.Action("ParameterEncryption", "Report")',
                        contentType: "application/json; charset=utf-8",
                        datatype: "json",
                        data: { "query": queryString },
                        success: function (response) {
                            window.open(url + response);
                        }
                });
            }
        }

        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);
            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val()) {
                    return parameterList[i];
                }
            }
            return null;
        }

        $("#InstitutionCode").change(function () {
            var institutionCode = $(this).val(),
                url = "GetInstitutionSubwarrantHolders/?institutionCode=" + institutionCode;

            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#SubWarrantCode").empty();
                    $("#SubWarrantCode").append(response);
                }
            });
        });

        function getItemClassfications() {

            var url = "GetItemClassfications/";
            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#ItemClass").empty();
                    $("#ItemClass").append(response);
                }
            });

        }

        function GetVotes() {
            const url = "GetSTParentInstitutions/";
            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#InstitutionCode").empty();
                    $("#InstitutionCode").append(response);
                }
            });
        }

    </script>
}