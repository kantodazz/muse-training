        function SearchContract() {
            var FinancialYear = $("#FinancialYear").val();
            if (!FinancialYear) {
                swal("Please select Financial Year first");
                return false;
            }

            $('#search_contracts').modal('show');
            selectedContract = [];
            var url = '@Url.Action("GetContractsNonCeiling", "Contract")';
            $.ajax({
                type: "get",
                url: url,
                data: { id: FinancialYear },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "NoContract") {
                        swal("No any contract with NonCeiling");
                    }
                    else if (response == "NotAuthorizes") {
                        swal("You have role which restrict you to receive contract to this institution");
                    }
                    else if (response == "DbException") {
                        swal("Db Exception,Please contact technical supporter ");
                    }
                    else {
                        var data = response.data;
                        dt_search_contract.fnClearTable();
                        for (var i = 0; i < data.length; i++) {
                            var contractAmount = 0;
                            if (data[i]["ContractAmount"] >0) {
                                    contractAmount = data[i]["ContractAmount"];
                            }
                            dt_search_contract.fnAddData([i + 1,
                            data[i]["ContractId"],
                            data[i]["ContractName"],
                            data[i]["SubBudgetClass"],
                            data[i]["PayeeCode"],
                            data[i]["Currency"],
                            data[i]["ContractVersion"],
                            data[i]["AdvancePayment"],
                            data[i]["ReceivedAmount"],
                            data[i]["RemainingAmount"],
                            data[i]["ContractType"],
                            data[i]["HasSubContract"],
                            data[i]["ContractNo"],
                            data[i]["ContractNumber"],
                            data[i]["PayeeAccountName"],
                            data[i]["PayeeBankAccount"],
                            data[i]["PayeeBankName"],
                            contractAmount.toLocaleString('en'),
                            data[i]["Payeename"],
                            '<a href="#" onclick="contractClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                            ]);
                        }
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
        
