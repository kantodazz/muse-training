@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.VoteDetail>

@{
    // Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 0;
}

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    input[type=text] {
        padding: 5px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }
</style>

<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br />
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Salary Votes </h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">
                            <p align="right">
                                <a href="@Url.Action("PrintTinNumbers","SalaryDeductionPayment")" class="btn btn-info">
                                    <span class="glyphicon glyphicon-print"></span>&nbsp;Print
                                </a>
                            </p>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search"></i>
                                        <input type="search" name="search" placeholder="Search..." id="search-box" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                            <table class="table table-bordered table-hover table-condensed" id="dt_votes">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MainVoteCode)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MainVoteCodeName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.VoteCode)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.VoteName)
                                        </th>
                                        <th style="width:12%">
                                            @Html.DisplayNameFor(model => model.TinNumber)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OverallStatus)
                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        i++;

                                        <tr>
                                            <td>
                                                @i
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MainVoteCode)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.MainVoteCodeName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VoteCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VoteName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TinNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OverallStatus)
                                            </td>

                                            <td style="text-align:center">

                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>

                                                    <ul class="dropdown-menu" style="text-align:left">
                                                        @if (item.TinNumber == null)
                                                        {
                                                            <li><a href="#" onclick="addTinNumber(@item.VoteDetailId)" class="btn-xs edit"> <i class="fa fa-edit"></i>Add Tin Number</a></li>
                                                        }
                                                        else
                                                        {
                                                            <li><a href="#" onclick="editTinNumber(@item.VoteDetailId,'@item.TinNumber')" class="btn-xs edit"> <i class="fa fa-edit"></i>Edit Tin Number</a></li>
                                                        }
                                                    </ul>

                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>



                        </div>


                </div>
            </article>

        </div>
    </section>

</div>

<div class="modal fade" id="tin_number_form" style="left:4%">

    <div class="modal-dialog" style="width:35%;">
        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title" style="text-align:center"> Tin Number Form</h3>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "SubmitTinNum" }))
            {
            <div class="modal-body form-horizontal">

                <br />

                <input type="hidden" name="Id" id="Id" value="">
                <div class="form-group">

                    <div class="col-md-12">
                        <input type="text" name="TinNumber" id="TinNumber" placeholder="Enter Tin Number" class="form-control" maxlength="250" autocomplete="off">
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                <input class="btn btn-info" type="submit" id="btnSubmit" value="Save" />
                @*<input type="submit" value="Submit" class="btn btn-success" id="btnSubmit" />*@

            </div>

            }
        </div>
    </div>
</div>



@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->

    <script type="text/javascript">
        var dt_search_summary = $('#dt_votes').dataTable();
        $("#dt_votes_wrapper .dt-toolbar").remove();
        $("#search-box").on("keyup search input paste cut", function () {
            $("#dt_votes").DataTable().search(this.value).draw();
        });
                
               $("#SubmitTinNum").on('submit', function (e) {
                    e.preventDefault();

                    swal({
                        title: 'Confirmation',
                        text: "Do you submit this tin number ?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            var url = '@Url.Action("SubmitTinNumber", "SalaryDeductionPayment")';
                            var id = $("#SubmitTinNum #Id").val();
                            var tinNum = $("#SubmitTinNum #TinNumber").val();
                            var token = $("[name='__RequestVerificationToken']").val();
                            var formData = {
                                "__RequestVerificationToken": token,
                                "Id": id,
                                "TinNumber": tinNum
                            }
                           
                            $.ajax(
                        {
                            type: "POST",
                            url: url,
                            data: formData,
                            success: function (result) {
                                if (result == "Success") {
                                    $('#tin_number_form').modal('hide');
                                        swal("Tin number saved successfully!", { icon: "success" })
                                            .then((value) => {
                                                location.reload();
                                            }); 
                                }
                                else {
                                    swal(result, { icon: "warning" });
                                }
                            },
                            error: function (xhr) {
                                swal(error);

                            },

                        });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
                });

    
        var addTinNumber = function (id) {
            $("#SubmitTinNum #Id").val(id);
            $('#tin_number_form').modal('show');
        }
        var editTinNumber = function (id,tinNumber) {
            $("#SubmitTinNum #Id").val(id);
            $("#SubmitTinNum #TinNumber").val(tinNumber);
            $('#tin_number_form').modal('show');
        }
  
        //SHOW LOADER ICON
        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });


    </script>
}