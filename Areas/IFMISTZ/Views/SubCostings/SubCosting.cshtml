@model IEnumerable<IFMIS.Areas.IFMISTZ.Models.SubCosting>

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

</style>
<div id="content" style="margin: 5px; padding-top: 50px">

    <section id="widget-grid" class="">
        <div class="row">

            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2 style="color:black;">Sub Costing Lists.</h2>

                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body">
                            <div>

                                <div style="margin-bottom: 2%">
                                    <a href='@Url.Action("Create", "SubCostings")' class="btn btn-info" style="width:auto;color:black">
                                        <i class="fa fa-plus"></i>Add New
                                    </a>
                                </div>
                                <div class="row" style="width:100%">
                                    <div class="col-md-3">
                                        <div class="search-container">
                                            <i class="fa fa-search searchIcon"></i>
                                            <input type="search" name="search" placeholder="Search..." id="searchbox">
                                        </div>
                                    </div>
                                    <div style="margin-left: 90%" id="dt_coasegment_wrapper" class="dataTables_wrapper">

                                        <select name="pageLenth" id="pageLenth" aria-controls="dt_coasegment" class="form-control">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>

                                </div>

                            <br/>
                                    <div class="widget-body no-padding">
                                    <table id="dt_subcosting" class="table table-condensed table-bordered">
                                        <thead>
                                            <tr>
                                                <th>No:</th>
                                                <th>Costing</th>
                                                <th>SubCost Code</th>
                                                <th>SubCost Name</th>
                                                <th>SubCost Description</th>
                                                <th>SubCost Unit Cost</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        @{ int i = 0;}
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                i++;
                                                <tr>
                                                    <td>@i</td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Costing.CostCode)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SubCostCode)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SubCostName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SubCostDesc)
                                                    </td>
                                                    <td align="right">
                                                        @Html.DisplayFor(modelItem => item.UnitCost)
                                                    </td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                                <span class="caret"></span>
                                                                <span class="sr-only">Toggle Dropdown</span>
                                                            </button>
                                                            <ul class="dropdown-menu">

                                                                <li>
                                                                    <a href="@Url.Action("Edit", "SubCostings",new {id=item.SubCostingId })" class="btn-xs edit">
                                                                        <i class="fa fa-edit"></i>  Edit
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="@Url.Action("Details", "SubCostings",new {id=item.SubCostingId })" class="btn-xs edit">
                                                                        <i class="fa fa-edit"></i>  Details
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="#" onclick="Cancel(@item.SubCostingId)" class="fa fa-trash-o">
                                                                        Cancel
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
@section pagespecific {
    <script type="text/javascript">
        var dt_subcosting = $('#dt_subcosting').dataTable();

        $("#dt_subcosting_wrapper .dt-toolbar").remove();

        $("#searchbox").on("keyup search input paste cut", function () {
            dt_subcosting.DataTable().search(this.value).draw();
        });

        function Cancel(i) {
            status = "Cancelled";
            swal({
                title: "Are you sure?",
                text: "This SubCosting will be Cancelled!",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    ChangeItemStatus(i, status);

                } else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

        function ChangeItemStatus(i, status) {
            var url = '@Url.Action("ChangeStatus", "SubCostings")';
            $.ajax({
                type: "post",
                url: url,
                data: {
                    Status: status,
                    SubCostingId: i
                },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {

                    if (response == "Success") {
                        swal("Changed Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }

                },
                failure: function (error) {
                    swal(error);
                }
            });
        }




    </script>
}
