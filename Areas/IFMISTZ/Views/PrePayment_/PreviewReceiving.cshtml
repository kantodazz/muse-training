                                {
                                    foreach (var attach in ViewBag.IssueAttachment)
                                    {
                                        <tr>
                                            <td>@attach.Title</td>
                                            <td>@attach.Description</td>
                                            <td> <a href="@Url.Action("LoanAttachmentView", "PrePayment", new { Filename = attach.FileName, PathName = "uploads" })" target="_blank"><i class="fa fa-file-pdf-o"></i></a></td>
                                        </tr>
                                    }
                                }

                               @if (ViewBag.Attachment != null)
                               {
                                foreach (var attach in ViewBag.Attachment)
                                {
                                    <tr>
                                        <td>@attach.Title</td>
                                        <td>@attach.Description</td>
                                        <td> <a href="@Url.Action("LoanAttachmentView", "PrePayment", new { Filename = attach.FileName, PathName = "uploads" })" target="_blank"><i class="fa fa-file-pdf-o"></i></a></td>
                                    </tr>
                                }
                                }

                            </table>

                            @if (Model.prePaymentReceiveDocuments != null)
                            {
                                <table class="table  table-hover table-condensed" border="0">
                                    <tr>
                                        <th>#</th>
                                        <th>Document Name</th>
                                        <th>Reference Number</th>
                                        <th>Received Date</th>
                                        <th>Attachment</th>
                                    </tr>
                                    <tbody>
                                        @{
                                            var n = 1;
                                        }
