</div>

@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->

    <script type="text/javascript">
        //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $(".loadingImg").show();

        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $(".loadingImg").hide();
        });
            $(document).ready(function () {

                $("#item_search").hide();
                $("#gl_search").hide();
                var id = $("#PrePaymentId").val();
                var rid = $("#ReceivingSummaryId").val();
                if (rid) {
                    var url = '@Url.Action("ReceivedItemsList", "PrePayment")';
                    $.ajax(
        {
            type: "POST",
            data: { id: rid },
            url: url,
            success: function (data) {
                $('#items').empty();
                var number = data.length;
                if (number > 0) {
                    $("#item_search").show();

                    $('<tr><th style="text-align: center">#</th><th style="text-align: left">Item </th><th style="text-align: center">Quantity</th><th style="text-align: right">Unit Price</th><th style="text-align: right">Total Amount</th></tr>').appendTo('#items');
                }
                var j = 0;
                var sum = 0;

                $.each(data, function (i, d) {
                    sum = sum + parseFloat(d.TotalAmount);

                    j++;
                    $('<tr><td align="center">' + j + '</th><td>' + d.ItemDescription + '</td><td align="center">' + d.Quantity + '</td><td align="right">' + d.UnitPrice.toLocaleString('en') + '</td><td align="right">' + d.TotalAmount.toLocaleString('en') + '</td></tr>').appendTo('#items');

                });
                if (number > 0) {

                    $('<tr><td align="right" colspan="4">Grand Total</td><td align="right">' + sum.toLocaleString('en') + '</td></tr>').appendTo('#items');
                }
            },
            error: function (xhr) {
                //console.log(xhr.responseText);
                alert("An error has occured, contact system support");
                $("#divLoader").hide();
            },

        });
                }

                var url = '@Url.Action("GetPrePaymentCoa", "PrePayment")';
                $.ajax({
                    type: "post",
                    url: url,
                    data: { id: id },
                    contenttype: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (data) {
                        $('#gl_Accounts').empty();

                        var number = data.length;
                        if (number > 0) {

                            $("#gl_search").show();
                            $('<tr><th style="text-align: center">#</th><th>Expenditure Line Item</th><th style="text-align: left">Funding Reference</th><th style="text-align: right">Amount</th></tr>').appendTo('#gl_Accounts');

                        }

                        var p = 0;
                        var sum = 0;

                        $.each(data, function (i, d) {
                            sum = sum + parseFloat(d.OperationalAmount);
                            p++;

                            $('<tr><td align="center">' + p + '</th><td>' + d.GlAccount.split("|").join("-") + '</td><td>' + d.FundingReference + '</td><td align="right">' + d.OperationalAmount.toLocaleString('en') + '</td></tr>').appendTo('#gl_Accounts');

                        });
                        if (number > 0) {
                            $('<tr><td align="right" colspan="3">Total</td><td align="right">' + sum.toLocaleString('en') + '</td></tr>').appendTo('#gl_Accounts');
                        }
                    },
                    failure: function (errmsg) {
                        alert(errmsg);
                    }
                });
                var $rows = $('#lpo tr');
                $('#search').keyup(function () {
                    var val = $.trim($(this).val()).replace(/ +/g, ' ').toLowerCase();

                    $rows.show().filter(function () {
                        var text = $(this).text().replace(/\s+/g, ' ').toLowerCase();
                        return !~text.indexOf(val);
                    }).hide();
                });


                        });

    </script>
}


