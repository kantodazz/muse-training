@model PagedList.IPagedList<IFMIS.Areas.RecurrentPayment.Models.DeductionsLoanDetail>

@{
    ViewBag.Title = "Loan Balance Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    tr:nth-of-type(odd) {
        background-color: #f5f5f5;
    }

    table {
        border-collapse: separate;
        border-spacing: 0;
        color: #4a4a4d;
        font: 12px/1.4 "Helvetica Neue", Helvetica, Arial, sans-serif;
        width: 100%;
    }

    th,
    td {
        padding: 5px 11px;
        vertical-align: middle;
    }

    td {
        border-bottom: 1px solid #cecfd5;
        border-right: 1px solid #cecfd5;
        width: auto;
    }

        td:first-child {
            border-left: 1px solid #cecfd5;
        }

    thead {
        background: #395870;
        color: #fff;
    }

    tfoot {
        background-color: #b4fabc;
        color: #000000;
    }
</style>


<div id="content">
    <div class="row"></div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Loan Balance Report</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            @using (Html.BeginForm(null, null, FormMethod.Get))
                            {
                                <div class="col-xs-12">
                                    <div class="input-group">
                                        <input type="text" id="searchQuery" name="searchQuery" class="form-control" placeholder="Search..." />
                                        <span class="input-group-btn">
                                            <button class="btn btn-info" type="submit">
                                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                            </button>
                                        </span>

                                        

                                        <div class="col-md-3">
                                            <button type="button" class="btn btn-info"
                                                    onclick="PayrollReport('ALL',`@ViewBag.InstitutionCode`)" title="Click button to Preview All Deduction!">
                                                <span class="glyphicon glyphicon-print"></span>
                                                Preview All
                                            </button>
                                        </div>

                                    </div>

                                </div><!-- /input-group -->
                            }
                            <br />
                            <br />
                            <div class="panel-body">
                                <table class="table">
                                    @{
                                        int i = 0;
                                        decimal? totalAmount1 = 0, totalAmount2 = 0, totalAmount3 = 0;
                                        decimal? grandTotalAmount1 = 0, grandTotalAmount2 = 0, grandTotalAmount3 = 0;
                                    }

                                    @foreach (var group in Model.GroupBy(a => a.BeneficiaryCode))
                                    {
                                        totalAmount1 = 0;
                                        totalAmount2 = 0;
                                        totalAmount3 = 0;
                                        i = 0;

                                        <tr>
                                            <td colspan="8">
                                                @group.Key <b>@group.Select(a => a.BeneficiaryName).FirstOrDefault()</b>
                                                &nbsp;
                                                <a href="#" onclick="PayrollReport(@group.Select(a=>a.BeneficiaryCode).FirstOrDefault(),`@group.Select(a=>a.InstitutionCode).FirstOrDefault()`)">
                                                    Preview Report
                                                    <span class="glyphicon glyphicon-print"></span>
                                                    @*<span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>*@
                                                </a>
                                            </td>
                                        </tr>

                                        <tr style="background-color: #395870; color: whitesmoke">
                                            <td>#</td>
                                            <td>Ded Code</td>
                                            <td>Ded Code Des</td>
                                            <td>Loan Category</td>
                                            <td style="text-align:right">Loan Amount</td>
                                            <td style="text-align:right">Monthly Ded Amount</td>
                                            <td style="text-align:right">Balance Amount</td>
                                            <td>Start Date</td>
                                        </tr>

                                        foreach (var item in group)
                                        {
                                            i++;
                                            totalAmount1 += item.LoanAmount;
                                            totalAmount2 += item.MonthlyDeductionAmount;
                                            totalAmount3 += item.BalanceAmount;
                                            grandTotalAmount1 += item.LoanAmount;
                                            grandTotalAmount2 += item.MonthlyDeductionAmount;
                                            grandTotalAmount3 += item.BalanceAmount;

                                            <tr>
                                                <td>@i</td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DedCode)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DedDescription)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DeductionCategory)
                                                </td>

                                                <td style="text-align: right">
                                                    @Html.DisplayFor(modelItem => item.LoanAmount)
                                                </td>

                                                <td style="text-align: right">
                                                    @Html.DisplayFor(modelItem => item.MonthlyDeductionAmount)
                                                </td>

                                                <td style="text-align: right">
                                                    @Html.DisplayFor(modelItem => item.BalanceAmount)
                                                </td>

                                                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>

                                            </tr>
                                        }

                                        <tr style="background-color:#F5F5F5">
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            @*<td></td>*@
                                            <td style="text-align: left">Sub Total Amount</td>
                                            <td style="text-align: right"><b>@string.Format("{0:#,0.00}", totalAmount1)</b></td>
                                            <td style="text-align: right"><b>@string.Format("{0:#,0.00}", totalAmount2)</b></td>
                                            <td style="text-align: right"><b>@string.Format("{0:#,0.00}", totalAmount3)</b></td>
                                            <td></td>
                                        </tr>
                                    }


                                    <tr style="background-color:#ddd6d6">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        @*<td></td>*@
                                        <td style="text-align: left">Grand Total Amount</td>
                                        <td style="text-align: right"><b>@string.Format("{0:#,0.00}", grandTotalAmount1)</b></td>
                                        <td style="text-align: right"><b>@string.Format("{0:#,0.00}", grandTotalAmount2)</b></td>
                                        <td style="text-align: right"><b>@string.Format("{0:#,0.00}", grandTotalAmount3)</b></td>
                                        <td></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts{
    <script>
        function PayrollReport(BeneficiaryCode, InstitutionCode) {
            debugger;
            window.open("../../Areas/RecurrentPayment/Reports/DeductionLoanDetail.aspx?BeneficiaryCode=" + BeneficiaryCode + "&&InstitutionCode=" + InstitutionCode);
        }
    </script>
}
