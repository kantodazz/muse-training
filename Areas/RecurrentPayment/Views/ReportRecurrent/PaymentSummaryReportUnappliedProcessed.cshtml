@model IEnumerable<IFMIS.Areas.RecurrentPayment.Models.PaymentSummaryReportUnappliedProcessed>

@{
    ViewBag.Title = "Payment Summary For Unapplied Status";
}

<div id="content">

    <div class="panel panel-default" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; font-style:normal; font-size:15px">
        <!-- Default panell contents -->
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.Unapplied - Payment Report</h3>
        </div>
        <div class="panel-body">
            <table>
                <tr>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        <p>
                            <label for="StartDate">Start Date:</label>
                            @Html.TextBox("StartDate")

                            <label for="StartDate">To Date:</label>
                            @Html.TextBox("EndDate")

                            &nbsp; &nbsp;
                            <button class="btn btn-default" type="submit">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </button>
                            &nbsp; &nbsp;
                            <button type="button" class="btn btn-default btn-flat btn-sm"
                                    onclick="location.href='@Url.Action("PaymentSummaryUnapplied", "Report")'">
                                <span class="glyphicon glyphicon-print"></span>
                            </button>
                            &nbsp; &nbsp;
                            <button type="button" class="btn btn-default btn-flat btn-sm"
                                    onclick="location.href='@Url.Action("PaymentSummaryUnappliedExport", "Report")'">
                                <span class="glyphicon glyphicon-export"></span>
                            </button>
                        </p>

                    </td>
                </tr>
            </table>
            <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <th><b>#</b></th>
                        <th><b>Batch No</b></th>
                        <th><b>Batch Description</b></th>
                        <th><b>Payment Category</b></th>
                        <th><b>No. Of Beneficiary</b></th>
                        <th><b>Total Amount</b></th>
                        <th><b>Unapplied At</b></th>
                    </tr>
                </thead>


                @{
                int i = 0;
                }
                @{
                foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.BatchNo</td>
                        <td>@item.BatchDesc</td>
                        <td>@item.PaymentCategory</td>
                        <td>@item.NoOfBen</td>
                        <td style="text-align:right">@String.Format("{0:#,0.00}", item.TotalAmount)</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", item.UnappliedAt)</td>
                    </tr>
                }
                }
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#StartDate').datepicker();
            $('#EndDate').datepicker();
        });

        function goBack() {

            window.history.back();
        }
    </script>

}