
@model IFMIS.Areas.RecurrentPayment.Models.SearchVM
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <div class="row"></div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Beneficiary Allowance</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            @using (Html.BeginForm(null, null, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.Label("Beneficiary", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(m => m.SearchBox, new { @class = "form-control", @placeholder = "Search Beneficiary" })
                                        <input type="hidden" id="InstitutionCode" value="@ViewBag.InstitutionCode">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Start Date
                                    </div>
                                    <div class="col-md-3">
                                        <input id="StartDate" name="StartDate" class="form-control padding-left-10" type="datetime" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        End Date
                                    </div>
                                    <div class="col-md-3">
                                        <input id="EndDate" name="EndDate" class="form-control padding-left-10" type="datetime" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="btn btn-info" onclick="PayrollReport()" title="Click button to Preview Report!">
                                            <span class="glyphicon glyphicon-print"></span>
                                            Preview Report
                                        </button>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-offset-2 col-md-10">
                                            @if (ViewBag.Msg != "")
                                            {
                                                <label style="color:red"> @ViewBag.Msg</label>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {

            var url = '@Url.Action("GetBenefiaryAllowance", "ReportRecurrent")';

            $("#SearchBox").select2({
                minimumInputLength: 2,  // minimumInputLength for sending ajax request to server
                width: 'resolve',   // to adjust proper width of select2 wrapped elements
                ajax: {
                    url: url, // Controller - Select2Demo and Action -AccessRemoteData
                    type: "POST",
                    dataType: 'json',
                    data: function (term) {
                        return {
                            term: term
                        };
                    },
                    results: function (data, page) {
                        return { results: data.beneficiaries }; // data.CountryList returning json data from Controlle
                    }
                }
            });
        });
        function PayrollReport() {
            debugger;
            var BeneficiaryCode = $("#SearchBox").val();
            var InstitutionCode = $("#InstitutionCode").val();
            var startDate = $("#StartDate").val();
            var endtDate = $("#EndDate").val();
            window.open("../../Areas/RecurrentPayment/Reports/BeneficiaryAllowance.aspx?BeneficiaryCode=" + BeneficiaryCode + "&&startDate=" + startDate + "&&endtDate=" + endtDate + "&&InstitutionCode=" + InstitutionCode);
        }
    </script>
}




