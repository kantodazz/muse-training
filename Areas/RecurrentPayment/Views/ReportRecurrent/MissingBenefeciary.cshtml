@model IEnumerable<IFMIS.Areas.RecurrentPayment.Models.EmployeeInGSPPNotInBeneficiary_vw>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    tr:nth-of-type(odd) {
        background-color: #f5f5f5;
    }

    table {
        border-collapse: separate;
        border-spacing: 0;
        color: #4a4a4d;
        font: 12px/1.4 "Helvetica Neue", Helvetica, Arial, sans-serif;
        width: 100%;
    }

    th,
    td {
        padding: 5px 11px;
        vertical-align: middle;
    }

    td {
        border-bottom: 1px solid #cecfd5;
        border-right: 1px solid #cecfd5;
        width: auto;
    }

        td:first-child {
            border-left: 1px solid #cecfd5;
        }

    thead {
        background: #395870;
        color: #fff;
    }

    tfoot {
        background-color: #b4fabc;
        color: #000000;
    }
</style>

<div id="content">
    <div class="row"></div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Missing Beneficiary</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            @using (Html.BeginForm(null, null, FormMethod.Get))
                            {
                                <div class="col-xs-12">
                                    <div class="input-group">
                                        <input type="text" id="searchQuery" name="searchQuery" class="form-control" placeholder="Search Beneficiary" />
                                        <span class="input-group-btn">
                                            <button class="btn btn-info" type="submit">
                                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                            </button>
                                        </span>

                                        <div class="col-md-3">
                                            <button type="button" class="btn btn-info"
                                                    onclick="PayrollReport('ALL')" title="Click button to Preview All Missing Beneficiary!">
                                                <span class="glyphicon glyphicon-print"></span>
                                                Preview All
                                            </button>
                                        </div>

                                    </div>
                                </div><!-- /input-group -->
                            }
                            <br />
                            <br />
                            @if (Model.Count() > 0)
                            {
                                <div class="panel-body">
                                    <table class="table">
                                        <tr style="background-color: #395870; color: whitesmoke">
                                            <th><b>#</b></th>
                                            <th><b>Dept Code</b></th>
                                            <th><b>Dept Name</b></th>
                                            <th><b>Check No</b></th>
                                            <th><b>Full Name</b></th>
                                            <th><b>Payroll Date</b></th>
                                            <th><b>Action</b></th>
                                        </tr>

                                        @{
                                            int i = 0;
                                        }

                                        @foreach (var item in Model)
                                        {
                                            i++;
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.DeptCode</td>
                                                <td>@item.DeptName</td>
                                                <td>@item.EMPLOYEE</td>
                                                <td>@item.FullName</td>
                                                <td>@item.CurrentMonth</td>
                                                <td>
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" style="width:40px;border-radius:1px;" aria-haspopup="true" aria-expanded="false">
                                                            <span class="caret"></span>
                                                            <span class="sr-only">Toggle Dropdown</span>
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <a href="#" onclick="PayrollReport(@item.EMPLOYEE)" class="btn-xs edit">
                                                                    <span class="glyphicon glyphicon-print"></span>
                                                                    <i class="fa fa-edit"></i>  Preview Report
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </table>
                                </div>

                            }
                            else
                            {

                                <br /><br /><br />
                                <div class="alert alert-success" role="alert">
                                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                    <span class="sr-only">Success:</span>
                                    There Is No Missing Beneficiarie(s)! For @ViewBag.CheckDate Payroll.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts{
    <script>
        function PayrollReport(BeneficiaryCode) {
            debugger;
            window.open("../../Areas/RecurrentPayment/Reports/MissingBenefeciary.aspx?BeneficiaryCode=" + BeneficiaryCode);
        }
    </script>
}