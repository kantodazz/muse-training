@model IFMIS.Areas.RecurrentPayment.Models.PaymentByDateRangeVM
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .input {
        border: 1px solid lightgray;
        width: 100%;
        height: 35px;
    }

    .textarea {
        border: 1px solid lightgray;
        width: 100%;
    }

    .input[type="text"]:focus {
        border: 1px solid lightblue;
    }
</style>
<div id="content">
    <div class="row"></div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Deductions Details By Deduction Code</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitData(this)", id = "DeductionCode" }))
                            {
                                @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.Label("Beneficiary", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(m => m.SearchBox, new { @class = "form-control", @placeholder = "Search Beneficiary" })
                                    </div>
                                </div>


                                <div class="form-group">
                                    @Html.LabelFor(model => model.DeductionCode, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        @*@Html.DropDownListFor(model => model.DeductionCode, Model.DeductionsList, "Select Deduction Code", new { @class = "form-control select2" })*@
                                        @Html.DropDownList("DeductionsList", null, "Select Deduction Code", new { @class = "form-control select2" })
                                        @Html.ValidationMessageFor(model => model.DeductionCode, "", new { @class = "text-danger" })
                                        <input type="hidden" id="InstitutionID" value="@ViewBag.InstitutionId" />
                                    </div>
                                </div>
                                <div class="form-group">
                                        @Html.LabelFor(model => model.start_date, "Start Date", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-5">
                                            @Html.EditorFor(model => model.start_date, new { htmlAttributes = new { @class = "form-control" } })
                                            @*@Html.ValidationMessageFor(model => model.start_date, "", new { @class = "text-danger" })*@
                                        </div>
                                    </div>
                              <div class="form-group">
                                    @Html.LabelFor(model => model.end_date, "End Date", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.end_date, new { htmlAttributes = new { @class = "form-control" } })
                                        @*@Html.ValidationMessageFor(model => model.end_date, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="btn btn-info" onclick="PayrollReport()" title="Click button to Preview Report!">
                                            <span class="glyphicon glyphicon-print"></span>
                                            Preview Report
                                        </button>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-offset-2 col-md-10">
                                            @if (ViewBag.Msg != "")
                                            {
                                                <label style="color:red"> @ViewBag.Msg</label>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {

            var url = '@Url.Action("GetBeneficiariesDeduction", "ReportsAdded")';

            $("#SearchBox").select2({
                minimumInputLength: 2,  // minimumInputLength for sending ajax request to server
                width: 'resolve',   // to adjust proper width of select2 wrapped elements
                ajax: {
                    url: url, // Controller - Select2Demo and Action -AccessRemoteData
                    type: "POST",
                    dataType: 'json',
                    data: function (term) {
                        return {
                            term: term
                        };
                    },
                    results: function (data, page) {
                        return { results: data.beneficiaries }; // data.CountryList returning json data from Controlle
                    }
                }
            });
        });

        function PayrollReport() {
            debugger;
            var BeneficiaryCode = $("#SearchBox").val();
            var DeductionCode = $("#DeductionsList").val();
            var InstitutionID = $("#InstitutionID").val();
            var startDate = $("#start_date").val();
            var endtDate = $("#end_date").val();
            window.open("../../Areas/RecurrentPayment/Reports/DeductionByDedCode.aspx?BeneficiaryCode=" + BeneficiaryCode + "&&DeductionCode=" + DeductionCode + "&&startDate=" + startDate + "&&endtDate=" + endtDate + "&&InstitutionID=" + InstitutionID);
        }

    </script>
}








