        //    }).then(function () {
        //        excPaylist();
        //    });
        //}

        var importPaylist = function () {           
            excPaylist();
        }

        excPaylist = function () {
            var url = '@Url.Action("ImportPaylistCurrentBunge", "PaylistCurrentBunges")';

            $("#divLoader").show();

            $.ajax({
                url: url,
                type: "POST",
                success: function (response) {
                    $("#divLoader").hide();
                    if (response == "Success") {
                                swal({
                                    text: "Paylist successfully imported!",
                                    icon: "success",
                                    button: "OK",
                                }).then(function() {
                                     location.reload();
                                });
                            }
                    else if (response == "No payroll data yet for this month!") {
                        $("#divLoader").hide();
                        swal({
                            text: "No payroll data yet for this month!",
                            icon: "warning",
                            button: "OK",
                        }).then(function () {
                        });
                    }
                    else {
                        $("#divLoader").hide();
                        swal({
                            text: "Unknown error, contact system admin!",
                            icon: "error",
                            button: "OK",
                        }).then(function () {
                        });
                    };
                },
                error: function (response) {
                    swal(response);
                    $("#divLoader").hide();
                    location.reload();
                }
            });
        };
    </script>
}


