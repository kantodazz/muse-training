@section Scripts{
    <script>
        $(document).ready(function () {
            $("#tblDataList").DataTable({
            });
        });

        $(".cbCheckAll").click(function () {
            $(".checkBoxConfirm").prop('checked',
                $(this).prop('checked'));
        });

        var confirmPayrollback = function () {

            var csvIds = [];

            $("input:checkbox.checkBoxConfirm").each(function () {
                if ($(this).prop("checked")) {
                    csvIds.push($(this).val());
                }
            });

            if (csvIds.length == 0) {

                   swal({
                       text: "No record selected!",
                                    icon: "info",
                                    button: "OK",
                                }).then(function () {
                                     
                                });
        
                return;
            }

            $("#divLoader").show();

            var url = '@Url.Action("ConfirmPayroll", "Payrolls")';

            $.ajax({
                type: "POST",
                url: url,
                data: { ids: csvIds },
                success: function (response) {
                    $("#divLoader").hide();
                    if (response == "Success") {
                        swal({
                            text: "Successfully Confirmed!",
                            icon: "success",
                            button: "OK",
                        }).then(function () {
                            location.reload();
                        });                      
                    }
                },
                error: function (err) {
                    $("#divLoader").hide();
                    swal(err.statusText);
                },
            });
        };

        var confirmPayroll = function () {
                       swal({
                                    title: 'Confirmation',
                                    text: "Are you sure you want Confirm Payroll.?",
                                    buttons: [
                                      'No',
                                      'Yes'
                                    ],
                                }).then(function (isConfirm) {
                                    if (isConfirm) {
                                         confirmPayrollback()
                                    } else {
                                        swal("Cancelled", "No change was made");
                                    }
                                });
        }
    </script>
}
