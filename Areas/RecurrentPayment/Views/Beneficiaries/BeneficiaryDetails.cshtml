@model IFMIS.Areas.RecurrentPayment.Models.BeneficiaryDetailVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" style="margin: 5px; padding-top: 5%">

    <section id="widget-grid" class="">
        <div class="row">

            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>

                        <h2 style="color:black;">Beneficiary Details</h2>

                    </header>
                    <div>
                        <div class="widget-body" style="padding-top:10px; width:100%;">

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.BeneficiaryCode)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BeneficiaryCode)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.BeneficiaryName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BeneficiaryName)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.BankID)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Bank.BankName)
                                </dd>


                                <dt>
                                    @Html.DisplayNameFor(model => model.AccountNo)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.AccountNo)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.PayStationID)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.PayStation.PayStationName)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.DepartmentID)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Department.DeptName)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.SectionID)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Section.SectionName)
                                </dd>

                            </dl>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-2 col-md-8">
                                        <a href="@Url.Action("EditBeneficiary","Beneficiaries", new { id = Model.BeneficiaryID })" class="btn btn-info"  style="float: left;">
                                            <i class="fa fa-edit"></i>  Edit
                                        </a>
                                        <a href="@Url.Action("BeneficiaryList")" class="btn btn-info" style="float: left; margin-left: 5px">
                                            <i class="fa fa-arrow-left"></i>
                                            Back
                                        </a>
                                    </div>
                                </div>
                            </div>
                            @*<p>
                                
                                @Html.ActionLink("Edit", "EditBeneficiary", new { id = Model.BeneficiaryID }) |
                                @Html.ActionLink("Back to List", "BeneficiaryList")
                            </p>*@

                        </div>

                    </div>
                </div>
            </article>
        </div>
    </section>
</div>