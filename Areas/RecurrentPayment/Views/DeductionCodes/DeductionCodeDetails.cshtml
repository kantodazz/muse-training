@model IFMIS.Areas.RecurrentPayment.Models.DeductionCode

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Deduction Code Details</h3>
        </div>
        <div class="panel-body">
            <table>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.DedCode)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DedCode)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.DedDescription)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DedDescription)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.DeductionCategory)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DeductionCategory).ToString().Replace("_", " ")
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.BankId)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Bank.BankName)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.PaymentMode)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.PaymentMode)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.DeductionPercent)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DeductionPercent)
                    </td>
                </tr>
            </table>

            <div>
                <p>
                    <a href="@Url.Action("Index","deductionCodes")" class="btn btn-default btn-flat">
                        <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
                        Back
                    </a>
                    <a href="@Url.Action("Edit","deductionCodes", new { id = Model.DeductionCodeId })" class="btn btn-default btn-flat">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        Edit
                    </a>
                </p>
            </div>
        </div>
    </div>

</div>