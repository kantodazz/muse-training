@model IFMIS.Areas.RecurrentPayment.Models.DeductionCodeListVM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div class="panel panel-default" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; font-style:normal; font-size:15px">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <h3 class="panel-title"> Delete Deduction Code</h3>
        </div>
       
        <div class="panel panel-body">
            <h4>Are you sure you want to delete this?</h4>
            <table class="dl-horizontal">
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.DedCode)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DedCode)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.DedDescription)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DedDescription)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.DeductionCategory)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DeductionCategory).ToString().Replace("_"," ")
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.BankId)
                        </strong>
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.Bank.BankName)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.PaymentMode)
                        </strong>
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.PaymentMode)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(model => model.DeductionPercent)
                        </strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DeductionPercent)
                    </td>
                </tr>
            </table>

            @using (Html.BeginForm())
                {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    <a href="@Url.Action("DeductionCodeList","DeductionCodes")" class="btn btn-default btn-flat">
                        <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
                        Back
                    </a>
                </div>
                }
        </div>
    </div>
</div>
