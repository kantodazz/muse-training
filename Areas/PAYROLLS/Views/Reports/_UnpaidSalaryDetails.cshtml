@model IEnumerable<IFMIS.Areas.PAYROLLS.Models.StopPaySummaryByDetails_vw3>
 
<style type="text/css">
    * {
        box-sizing: border-box;
    }

    body {
        font-family: 'Gill Sans','lucida grande', helvetica, arial, sans-serif;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin: 0px;
    }

    td, th {
        border: 1px solid;
        padding: 8px;
    }

    .alinearDerecha {
        text-align: right;
    }

    .negrita {
        font-weight: bold;
    }

    thead {
        display: table-row-group;
    }

    tr {
        page-break-inside: avoid;
    }
</style>



<div class="panel panel-defaul font-family:'Gill Sans','lucida grande', helvetica, arial, sans-serif;" style="text-align: center; padding-top:1px; padding-bottom:1px;margin-top:auto">

    <div class="panel-heading font-family:'Gill Sans','lucida grande', helvetica, arial, sans-serif;" style="text-align: center; padding-top:1px; padding-bottom:1px;margin-top:auto">
        <div class="" style="text-align: center ">
            <img src="@Server.MapPath("~/Media/Images/log.png")" />
        </div>

        <div class="panel-title">MINISTRY OF FINANCE AND PLANNING</div>
        <div class="panel-title">STOP PAY DETAILS REPORT</div>
        <div class="panel-title">@ViewBag.Currentmonth</div>
    </div>

    <br />
    <table id="example" class="display" cellspacing="0" width="100%">

        @{
            int j = 0;
            Decimal NET = 0, ADJ = 0, DED = 0, TOTAL1 = 0;
            Decimal GNET = 0, GADJ = 0, GDED = 0, GTOTAL1 = 0;
        }

        @foreach (var group in Model.GroupBy(a => a.VOTE))
        {

            <tr style="background-color:#F5F5F5">
                <td colspan="8">
                    @group.Key - <b>@group.Select(a => a.VOTE_DESC).FirstOrDefault()</b>
                </td>
            </tr>

            <tr style="background-color:#F5F5F5">
                <td>#</td>
                <td>Check #</td>
                <td>Full Name</td>
                <td style="text-align: center">NET PAY</td>
                <td style="text-align: center">DEDUCTION</td>
                <td style="text-align: center">ADJUSTMENT</td>
                <td style="text-align: center">TOTAL</td>
                <td>REASON</td>
            </tr>

            foreach (var item in group)
            {
                NET = 0;
                ADJ = 0;
                DED = 0;
                TOTAL1 = 0;
                j = 1;
                NET += Decimal.Parse(item.NET.ToString());
                ADJ += Decimal.Parse(item.ADJ.ToString());
                DED += Decimal.Parse(item.DED.ToString());
                TOTAL1 += Decimal.Parse(item.TOTAL.ToString());

                GNET += Decimal.Parse(item.NET.ToString());
                GADJ += Decimal.Parse(item.ADJ.ToString());
                GDED += Decimal.Parse(item.DED.ToString());
                GTOTAL1 += Decimal.Parse(item.TOTAL.ToString());

                <tr>
                    <td>@j</td>
                    <td>
                        @item.EMPLOYEE
                    </td>
                    <td style="width:auto">
                        @item.NAMES
                    </td>

                    <td style="text-align: right">
                        @String.Format("{0:#,0.00}", item.NET)

                    </td>
                    <td style="text-align: right">
                        @String.Format("{0:#,0.00}", item.DED)

                    </td>
                    <td style="text-align: right">
                        @String.Format("{0:#,0.00}", item.ADJ)

                    </td>
                    <td style="text-align: right">
                        @String.Format("{0:#,0.00}", item.TOTAL)
                    </td>

                    <td>
                        @item.REASON
                    </td>

                </tr>
            }

            <tr style="background-color:#F5F5F5">
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>Sub Total</td>
                <td style="text-align: right">@String.Format("{0:#,0.00}", NET)</td>
                <td style="text-align: right">@String.Format("{0:#,0.00}", DED) </td>
                <td style="text-align: right">@String.Format("{0:#,0.00}", ADJ) </td>
                <td style="text-align: right">@String.Format("{0:#,0.00}", TOTAL1) </td>
                <td>&nbsp;</td>
            </tr>
        }

        <tr style="background-color:#ddd6d6">
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>Grand Total</td>
            <td style="text-align: right">@String.Format("{0:#,0.00}", GNET)</td>
            <td style="text-align: right">@String.Format("{0:#,0.00}", GDED) </td>
            <td style="text-align: right">@String.Format("{0:#,0.00}", GADJ) </td>
            <td style="text-align: right">@String.Format("{0:#,0.00}", GTOTAL1) </td>
            <td>&nbsp;</td>
        </tr>
    </table>

</div>
