@model IFMIS.Areas.CashManagement.Models.StandingImprestDetailVM

<div class="tab-content">
    <div class="tab-pane fade in active" id="tab_default-1">
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#1" data-toggle="tab">Basic Details</a>
                    </li>
                    <li>
                        <a href="#2" data-toggle="tab">Comments<span class="badge bg-color-grey inbox-badge"> @ViewBag.countattachment </span> </a>
                    </li>
                    <li>
                        <a href="#3" data-toggle="tab">Expenses <span class="badge bg-color-grey pull-right inbox-badge"> @ViewBag.countremark </span></a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="1">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.FinancialYear)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.FinancialYear)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.OperationalAmount)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.OperationalAmount, "_DecimalThousands")
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.OperationalCurrency)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.OperationalCurrency)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Remarks)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Remarks)
                            </dd>
                        </dl>

                        <hr />

                        <table class="table table-bordered table-condensed table-bordered table-hover table-responsive table-striped">
                            <thead>
                                <tr>
                                    <th colspan="3">
                                        Attachments
                                    </th>
                                </tr>
                                <tr>
                                    <th>#</th>
                                    <th>Attachment Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model.StandingImprestAttachments)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.AttachmentName</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.FileName))
                                            {
                                                <a href="@Url.Action("ViewStandingImprestAttachment", "StandingImprests", new { id = item.StandingImprestAttachmentId })" target="_blank">
                                                    <img src="@Url.Content("/Content/img/attachment.png")" alt="img" width="20">
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="2">
                        <div class="row" style="padding-left: 10px; padding-right: 10px">
                            <!-- Timeline Content -->
                            <div class="smart-timeline">
                                <ul class="smart-timeline-list">
                                    @foreach (var item in Model.Comments)
                                    {
                                        <li>
                                            <div class="smart-timeline-icon">
                                                <i class="fa fa-user"></i>
                                            </div>
                                            <div class="smart-timeline-time">
                                                <small>@item.CreatedAt</small>
                                            </div>
                                            <div class="smart-timeline-content">
                                                <p>
                                                    <a href="javascript:void(0);">
                                                        <strong>@item.OverallStatus </strong>(@item.CreatedBy) to <strong>@item.Destination</strong>
                                                    </a>
                                                </p>
                                                <p>
                                                    @item.Remarks
                                                </p>

                                                <ul class="list-inline">
                                                    @if (!string.IsNullOrEmpty(item.FileName))
                                                    {
                                                        <li>
                                                            <a href="@Url.Action("ViewCommentDoc", "StandingImprests", new { id = item.CommentId })" target="_blank">
                                                                <img src="@Url.Content("/Content/img/attachment.png")" alt="img" width="50">
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <!-- END Timeline Content -->
                        </div>
                    </div>
                    <div class="tab-pane" id="3">
                        <div class="row" style="padding-left: 10px; padding-top:10px; padding-right: 10px">
                            <table class="table table-bordered table-condensed table-bordered table-hover table-responsive table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Apply Date</th>
                                        <th>Remarks</th>
                                        <th>Amount (@Model.OperationalCurrency)</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int j = 0;
                                    }
                                    @foreach (var item in Model.StandingImprestRetirements.OrderByDescending(a => a.StandingImprestRetirementId))
                                    {
                                        j++;
                                        <tr>
                                            <td>@j</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ApplyDate, "_ShortDateTime")
                                            </td>
                                            <td>
                                                @item.Remarks
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OperationalAmount, "_DecimalThousands")
                                            </td>
                                            <td>
                                                <span class="glyphicon glyphicon-paperclip" aria-hidden="true">
                                                </span>|
                                                <span class="glyphicon glyphicon-trash" aria-hidden="true">
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>