<style>
    .input {
        border-width: 1px 0 1px 1px;
        border-color: #ccc;
        border-style: solid;
        width: 110px;
        height: 32px;
    }

    span {
        cursor: pointer;
    }
</style>


<!-- MAIN CONTENT -->
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">

        </div>
    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Bank Name
                                    </div>
                                    <div class="col-md-5">
                                        <select id="BankName" name="BankName" class="select2 form-control padding-left-10">
                                            <option value="">-- Select Bank Name --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Account Number
                                    </div>
                                    <div class="col-md-5">
                                        <div class="input-group">
                                            <div class="col-md-5">
                                                <input type="text" name="AccountNo" id="AccountNo" class="input_page padding-left-10 padding-right-10" placeholder="Enter AccountNo or ALL" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Currency
                                    </div>
                                    <div class="col-md-5">
                                        <select id="CurrencyCode" name="CurrencyCode" class="select2 form-control padding-left-10">
                                            <option value="">-- Select Currency --</option>
                                            <option value="ALL">ALL</option>
                                            <option value="TZS">Tanzanian Shilling</option>
                                            <option value="USD">US Dollar</option>
                                            <option value="EUR">Euro</option>
                                            <option value="GPB">Pound Sterling</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Required Date
                                    </div>
                                    <div class="col-md-5">
                                        <div class="input-group">
                                            <div class="col-md-5 input-group flatpickr">
                                                <input name="RequiredDate" id="RequiredDate" placeholder="Pick Date" class="input padding-left-10" autocomplete="off" data-input />
                                                <span class="input-group-addon" data-toggle><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="simple" />
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn action-btn btn btn-info" onclick="CM_CommercialBankRPT()">
                                            View Report
                                        </button>
                                    </div>
                                </div>
                            </div>
                            </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section scripts
{
    <script>

        getBankName();

        /*GetCashVotes();*/

        function CM_CommercialBankRPT() {
            var bankName = $("#BankName").val().trim(),
                accountNo = $("#AccountNo").val().trim(),
               currencyCode = $("#CurrencyCode").val().trim(),
                requiredDate = $("#RequiredDate").val().trim(),
                url = "@Model.UrlName" + "CommercialBankStatement.aspx";

            var isNotSupplied = validateReportParameters(["#BankName", "#AccountNo","#CurrencyCode","#RequiredDate"]),
                queryString = "bank-name=" + bankName + "&account-no=" + accountNo + "&currency=" + currencyCode + "&req-date=" + requiredDate; //+ "&end-date=" + endDate;

            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("ParameterEncryption", "Reports", new { area = "CashManagement" })',
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    data: { "query": queryString },
                    success: function (response) {
                        window.open(url + response);
                    }
                });
            }
        }

        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);

            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val().trim()) {
                    return parameterList[i];
                }
            }
            return null;
        }

