                                        <th>Balance Nature</th>
                                        <th>Balance Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                @{int i = 0;}
                                @foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td><input type="checkbox" value="@item.AccountBalanceDetailId" id="row-@item.AccountBalanceDetailId" onchange="rowChecked(@item.AccountBalanceDetailId)" class="checkBox1"></td>
