@model IFMIS.Areas.CashManagement.Models.UploadAccountInfoVM
@{
    ViewBag.Title = "Upload Account Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding:1em;padding-top:4em">
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget " id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Import Account Information </h2>
                    </header>
                    <div class="widget-body " style="padding-top:10px">
                        <div>
                          @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "Upload" }))
                          {
                             <br />
                          @Html.AntiForgeryToken()
                              <div class="form-horizontal">
                                <div class="row" style="padding:12px">
                                    @*@Html.LabelFor(model => model.InstitutionCode, "Institution Code", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        <select id="InstitutionCode" class="form-control select2">
                                            <option value="Select Account" selected="selected">--Select Institution Code--</option>
                                            @foreach (var Accountlist in ViewBag.institutionList)
                                            {
                                                <option value='@Accountlist.InstitutionCode'>
                                                    @Accountlist.InstitutionCodeInstitutionName
                                                </option>
                                            }
                                        </select>
                                    </div>*@
                                </div>

                                    <div class="row" style="padding:12px">
                                        @Html.LabelFor(model => model.FileName, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.FileName, new { type = "file", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.FileName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br />
                                    <table>
                                        <tr>
                                            <td class="form-label">
                                                Template with Sample Data
                                                <i class="fa fa-times" style="color:white"></i>
                                            </td>
                                            <td>
                                                <a href="~/Uploads/Template/AccountInformationTemplate.xlsx"><i class="glyphicon glyphicon-download-alt"></i>Download</a>
                                            </td>
                                        </tr>
                                    </table>
                                    <br />
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <a href="@Url.Action("BacklogAccountList","GovernmentAccounts")" class="btn btn-info">
                                                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                                                    Back
                                                </a>
                                                <button id="uploadbtn" type="button" class="btn btn-info" style="text-align:left" onclick="upload()">
                                                    <span class="glyphicon glyphicon-upload" aria-hidden="true"></span>
                                                    Upload
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                           }

                        </div>
                    </div>
                </div>

            </article>
        </div>
    
    </section>
</div>

@section pagespecific{
    <script>

        var uploadAccount = function () {
          
            if (window.FormData !== undefined) {

                if (!$("#Upload").valid()) {
                    return false;
                }

                var data = new FormData();
                var file = $("#FileName").get(0).files;
              
                var institutionCode = $("#InstitutionCode").val();

                if (file.length > 0) {
                    data.append("FileName", file[0]);
                    data.append("InstitutionCode", institutionCode)
                }

                var url = '@Url.Action("UploadAccountInformation", "GovernmentAccounts")';
                $("#divLoader").show();
                $("#uploadbtn").prop('disabled', true);
                $.ajax({
                    url: url,
                    type: "POST",
                    processData: false,
                    contentType: false,
                    data: data,
                    success: function (data, status, jqXHR) {
                        debugger
                        console.log(data);
                     
                        if (data == "Success") {
                            $("#divLoader").hide();
                            $("#uploadbtn").prop('disabled', false);
                            swal("Uploaded Successfully!", { icon: "success" }).then((e) => {
                                window.location.href = '@Url.Action("backlogAccountList", "GovernmentAccounts")';
                            });

                        } else {
                            swal(data, { icon: "warning" }).then((e) => {
                                window.location.href = '@Url.Action("backlogAccountList", "GovernmentAccounts")';
                            });
                            $("#divLoader").hide();
                            $("#uploadbtn").prop('disabled', false);
                        };
                    },
                    error: function (err) {
                        swal(err.statusText)
                        $("#divLoader").hide();
                        $("#uploadbtn").prop('disabled', false);
                    }
                });
            };
        };


        function upload() {

            swal({
                title: "Upload",
                text: "Are you sure you want to Upload the ? ",
                buttons: [
                  'Yes',
                  'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {

                    uploadAccount();
                }
            });
            $('#confirmModal').modal('hide');
        }
    </script>
}



