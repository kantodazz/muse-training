                    data.append("FileName", file[0]);
                }

                data.append("__RequestVerificationToken", token);
                var url = '@Url.Action("UploadForecast", "Forecasts")';

                $.ajax({
                    url: url,
                    type: "POST",
                    processData: false,
                    contentType: false,
