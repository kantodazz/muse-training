                            <input type="search" name="search" placeholder="Search" id="searchbox" autocomplete="off">
                        </div>
                    </div>
                </div>
                <table class="table" id="dt_search_payee">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>LoanApplId</th>
                            <th>Loan CtrlNum</th>
                            <th>Check No</th>
                            <th>Customer Name</th>
                            <th>Loan Code</th>
                            <th>Loan Description</th>
