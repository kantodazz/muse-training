</div>


@section pagespecific {
    <script>

        $("#assetContainer").toggle(false)
        $("#saveLoader").toggle(false)
        $("#loanChargesContainer").toggle(false)

        function SearchPayee() {
            $('#customersModal').modal('show');
        }

        function ZoomLoanType() {
            $('#loanModal').modal('show');
        }

        function ZoomAsset() {
            $('#assetModal').modal('show');
        }
        var dt_search_asset = $('#dt_search_asset').dataTable();
        $("#dt_search_asset_wrapper .dt-toolbar").remove();
        $("#searchbox_asset").on("keyup search input paste cut", function () {
            if (!this.value) {
                dt_search_asset.fnClearTable();
            } else {
                searchAssetTableUpdate(this.value);
            }
        });

        var dt_search_payee = $('#dt_search_payee').dataTable({
            "aoColumnDefs": [{ "bVisible": false, "aTargets": [1] }],
        }
        );
        $("#dt_search_payee_wrapper .dt-toolbar").remove();
       $("#searchbox").on("keyup search input paste cut", function () {
            if (!this.value) {
                dt_search_payee.fnClearTable();
            } else {
                searchCustomerTableUpdate(this.value);
            }
       });

       var dt_search_loan = $('#dt_search_loan').dataTable();
       $("#dt_search_loan_wrapper .dt-toolbar").remove();
       $("#searchbox_loan").on("keyup search input paste cut", function () {
           if (!this.value) {
               dt_search_loan.fnClearTable();
           } else {
               searchLoanTypeTableUpdate(this.value);
           }
       });
       var loanAssets = []
       function searchAssetTableUpdate(search) {
           var url = '@Url.Action("GetLoanAsset", "ALSLoanApp")';
           $.ajax({
               type: "GET",
               url: url,
               data: { search },
               contenttype: "application/json; charset=utf-8",
               datatype: "json",
               success: function (response) {
                   loanAssets = response.data;
                   dt_search_asset.fnClearTable();
                   for (var i = 0; i < loanAssets.length; i++) {
                       dt_search_asset.fnAddData([i + 1,
                          loanAssets[i]["ModeOfSale"],
                          loanAssets[i]["AssetType"] || "-",
                          loanAssets[i]["AssetLotNo"],
                          loanAssets[i]["AssetRegNo"],
                          loanAssets[i]["AssetDesc"],
                          loanAssets[i]["AssetQuantity"],
                          toLabel(loanAssets[i]["AssetUnitPrice"]),
                          toLabel(loanAssets[i]["AssetTotalPrice"]),
                          '<a href="#" onclick="assetClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                       ]);
                   }
               },
               failure: function (error) {
                   swal(error);
               }
           });
       }
       var loanTypes = []
       function searchLoanTypeTableUpdate(search) {
           var url = '@Url.Action("GetLoanType", "ALSLoanApp")';
           $.ajax({
               type: "GET",
               url: url,
               data: { search },
               contenttype: "application/json; charset=utf-8",
               datatype: "json",
               success: function (response) {
                   loanTypes = response.data;
                   dt_search_loan.fnClearTable();
                   for (var i = 0; i < loanTypes.length; i++) {
                       dt_search_loan.fnAddData([i + 1,
                          loanTypes[i]["LoanDescription"],
                          loanTypes[i]["LoanType"],
                          loanTypes[i]["RecoveryPeriod"],
                          toLabel(loanTypes[i]["MaxLoanAmount"]),
                          loanTypes[i]["LoanNature"],
                          '<a href="#" onclick="loanClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                       ]);
                   }
               },
               failure: function (error) {
                   swal(error);
               }
           });
       }
       var payees = []
        function searchCustomerTableUpdate(search) {
            var url = '@Url.Action("GetCustomers", "VoidLoan")';
            $.ajax({
                type: "GET",
                url: url,
                data: { search },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    payees = response.data;
                    dt_search_payee.fnClearTable();
                    for (var i = 0; i < payees.length; i++) {
                        dt_search_payee.fnAddData([i + 1,
                           payees[i]["LoanApplId"],
                           payees[i]["LoanCtrlNum"],
                           payees[i]["CheckNo"],
                           payees[i]["VendorName"],
                           payees[i]["LoanCode"],
                           payees[i]["LoanDescr"],
                           '<div align="right">'+toLabel(payees[i]["LoanApprovedAmount"])+'</div>',
                           '<a href="#" onclick="customerClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                        ]);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
        var loanApplId = 0
        function customerClicked(i) {
            loanApplId = payees[i].LoanApplId;
            $("#LoanCtrlNo").val(payees[i].LoanCtrlNum);
            $("#VendorName").val(payees[i].VendorName);
            $("#CheckNo").val(payees[i].CheckNo);           
            $("#LoanDesc").val(payees[i].LoanDescr);
            $("#LoanCode").val(payees[i].LoanCode);
            $("#OriginalAmount").val(toLabel(payees[i].LoanApprovedAmount));
            $('#customersModal').modal('hide');
        }

        $("#_LoanAmount").prop('disabled', true)
        $("#RecoveryPeriod1").prop('disabled', true)
        var selectedLoanTypeId = 0
        var PaidTo = ""
        function loanClicked(i) {
            $("#_LoanAmount").prop('disabled', false)
            $("#RecoveryPeriod1").prop('disabled', false)
            selectedLoanTypeId = loanTypes[i].LoanTypeId
            PaidTo = loanTypes[i].PaidTo
            $("#LoanDescription").val(loanTypes[i].LoanDescription)
            $("#RecoveryPeriod").val(loanTypes[i].RecoveryPeriod)
            $("#MaxLoanAmount").val(toLabel(loanTypes[i].MaxLoanAmount))
            $("#LoanNature").val(loanTypes[i].LoanNature)
            $("#LoanType").val(toLabel(loanTypes[i].LoanType))
            if (loanTypes[i]["LoanNature"] == "NONCASH") {
                $("#assetContainer").toggle(true)
            } else {
                $("#assetContainer").toggle(false)
            }
            getLoanCharges(loanTypes[i].AgencyCodeId)
            $('#loanModal').modal('hide');
        }

        var selectedLoanAssetId = 0
        function assetClicked(i) {
            selectedLoanAssetId = loanAssets[i].AssetId
            $("#AssetRegNo").val(loanAssets[i].AssetRegNo)
            $('#assetModal').modal('hide');
        }

        let ExemptedPercent = 0
        function getLoanCharges(AgencyCodeId) {
            var url = '@Url.Action("GetLoanCharges", "ALSLoanApp")';
            $.ajax({
                type: "GET",
                url: url,
                data: { AgencyCodeId },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    $("#loanChargesContainer").toggle(true)
                    let data = response.data;
                    $("#LoanCharges").html('')
                    for (var i = 0; i < data.length; i++) {
                        if (data[i].LoanChargeType != "Agency Fee") {
                        $("#LoanCharges").append(
                            Tr(data[i].LoanChargeType, data[i].LoanPercentageFee)
                         )
                        }
                        if (data[i].LoanChargeType == "Exemption") {
                            ExemptedPercent = data[i].LoanPercentageFee
                        }
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function Tr(name,percent) {
            return '<tr style="border-bottom:1px solid #ccc">\
                      <td>'+name+'</td>\
                      <td>'+percent+'%</td>\
                   </tr>\
                  '
        }

        function saveData() {
            if (loanApplId==0) {
                swal("Please select customer");
                return false;
            }
            if (!$("#Status").val()) {
                swal("Please select status");
                return false;
            }
  
                $("#form_submision").prop('disabled', true);
                $("#saveLoader").toggle(true);
                $.ajax({
                    type: "POST",
                    url:'@Url.Action("SaveVoid", "VoidLoan")',
                    data: {
                         LoanApplId: loanApplId,
                    },
                    contenttype: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (response) {
                        if (response == "Success") {
                            swal("Saved Successfully!", { icon: "success" })
                                .then((value) => {
                                    window.location.href = '@Url.Action("PendingVoid", "VoidLoan")';
                                });
                        } else {
                            $("#form_submision").prop('disabled', false);
                                $("#saveLoader").toggle(false);
                                swal(response);
                        }
                    },
                    failure: function (error) {
                        $("#form_submision").prop('disabled', false);
                        $("#saveLoader").toggle(false);
                        swal(error);
                    }
                });

        }


        function _isLoanAmountValid() {
            let ExemptedAmount = ExemptedPercent * toNumber($("#LoanAmount").val())
            let x = toNumber($("#NetSalary").val()) - toNumber($("#GrossSalary").val()) / 3
            let y = (toNumber($("#LoanAmount").val()) - ExemptedAmount) / toNumber($("#RecoveryPeriod").val())
            return x >= y
        }

        function isTheFormValid() {
            var isNotValid = validateInputsParameters([
                "#VendorName",
                "#LoanDescription",
                "#RecoveryPeriod1",
                "#LoanAmount",
            ]);

            if (isNotValid) {
                $(isNotValid + "_1").attr("style", "color: red;");
                return false
            }

            if ($("#LoanNature").val() == "NONCASH") {
                var isNotValid = validateInputsParameters(["#AssetRegNo"]);
                if (isNotValid) {
                    $(isNotValid + "_1").attr("style", "color: red;");
                    return false
                }
            }

            if (!isLoanAmountValid) {
                $("#LoanAmount_1").attr("style", "color: red;");
                return false
            }

            if (!isRecoveryPeriodValid) {
                $("#RecoveryPeriod1_1").attr("style", "color: red;");
                return false
            }

            //if (PaidTo != "MEMBER OF PERLIAMENT") {
            //    if (!_isLoanAmountValid()) {
            //        swal("The Given Employee Salary Does not Qualify for the Loan Amount Provided..!")
            //        return false
            //    }
            //}
            return true
        }

        function validateInputsParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i] + "_1").attr("style", "color: white;");
                }
            }

            resetStyle(parameterList);
            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val()) {
                    return parameterList[i];
                }
            }
            return null;
        }
        var isRecoveryPeriodValid = false
        var isLoanAmountValid = false
        function validateRecoveryPeriod(target) {
            if (parseInt(target.value) > parseInt($("#RecoveryPeriod").val())) {
                target.style.color = "red"
                target.style.fontWeight = 'bold'
                target.style.backgroundColor = '#f7c9c8'

                let $div2blink = $("#RecoveryPeriod");
                setIntervalX(function () {
                    $div2blink.toggleClass("backgroundChange");
                }, 200, 10, $div2blink)
                isRecoveryPeriodValid = false
            } else {
                target.style.color = "black"
                target.style.fontWeight = 'bold'
                target.style.backgroundColor = 'white'
                isRecoveryPeriodValid = true
            }
        }

        $("#_LoanAmount").on('keyup', () => validateMaxLoanAmount());

        function validateMaxLoanAmount() {
            var target = document.getElementById("_LoanAmount")
            let $div2blink = $("#MaxLoanAmount");
            if (toNumber($("#_LoanAmount").val()) > toNumber($("#MaxLoanAmount").val())) {
                target.style.color = "red"
                target.style.fontWeight = 'bold'
                target.style.backgroundColor = '#f7c9c8'

                setIntervalX(function () {
                    $div2blink.toggleClass("backgroundChange");
                }, 200, 10, $div2blink)
               // $div2blink.addClass("backgroundChange");
                isLoanAmountValid = false
            } else {
                target.style.color = "black"
                target.style.fontWeight = 'bold'
                target.style.backgroundColor = 'white'
                $div2blink.removeClass("backgroundChange");
                isLoanAmountValid = true
            }
        }
        function setIntervalX(callback, delay, repetitions,node) {
            var x = 0;
            var intervalID = window.setInterval(function () {
                callback();
                if (++x === repetitions) {
                    window.clearInterval(intervalID);
                    node.removeClass("backgroundChange");
                }
            }, delay);
        }
            $("#Amount").autoNumeric('init');
    </script>
}