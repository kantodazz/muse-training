@model IFMIS.Areas.IFMISTZ.Models.InstitutionListVm
@{
    ViewBag.Title = "AT-Source Collection By Financial Institution";
    ViewBag.Description = "form wizards";
    //Layout = "~/Views/Shared/_Default.cshtml";

}

<style>
    .input {
        border-width: 1px 0 1px 1px;
        border-color: #ccc;
        border-style: solid;
        width: 110px;
        height: 32px;
    }

    span {
        cursor: pointer;
    }
</style>


<!-- MAIN CONTENT -->
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">

        </div>
    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Deduction Source
                                    </div>
                                    <div class="col-md-5">
                                        <select name="DedSource" id="DedSource" class="select2 form-control padding-left-10">
                                            <option>-- Select Deduction source --</option>
                                            <option value="ALL">ALL</option>
                                            <option value="UnPaid">UnPaid</option>
                                            <option value="PY15">PY15</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Category
                                    </div>
                                    <div class="col-md-5">
                                        <select id="Category" name="Category" class="select2 form-control padding-left-10">
                                            <option value=""> -- Select Category -- </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Agency
                                    </div>
                                    <div class="col-md-5">
                                        <input id="AgencyCode" name="AgencyCode" class="form-control padding-left-10" type="text" placeholder="Search Agency by Agency Code or Name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Required Date
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input name="RequiredDate" id="RequiredDate" placeholder="Pick Date" class="input padding-left-10" autocomplete="off" data-input />
                                                <span class="input-group-addon" data-toggle><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="simple" />
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn action-btn btn btn-info" onclick="ALS_py15agencyFeedtlRPT()">
                                            View Report
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section scripts
{
    <script>
        getPy15Categories();
        getPy15Agencies();

        function ALS_py15agencyFeedtlRPT() {
            var dedSource = $("#DedSource").val().trim(),
                 category = $("#Category").val().trim(),
                   agency = $("#AgencyCode").val().trim(),
                requiredDate = $("#RequiredDate").val().trim(),
                url = "@Model.UrlName" + "ALS_py15FinancialInstFeeRPT.aspx";

            var isNotSupplied = validateReportParameters(["#DedSource","#Category", "#AgencyCode", "#RequiredDate"]),
                queryString = "ded-source=" + dedSource + "&category=" + category + "&agency=" + agency + "&req-date=" + requiredDate;

            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("ParameterEncryption", "Reports", new { area = "ALS" })',
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    data: { "query": queryString },
                    success: function (response) {
                        window.open(url + response);
                    }
                });
            }
        }

        function getPy15Categories() {
            var url = "GetPy15Categories/";

            $.ajax({
                type: "GET",
                url: url,
                contentType: "html",
                success: function (response) {
                    $("#Category").empty();
                    $("#Category").append(response);
                }
            });
        }

        function getPy15Agencies() {

            var url = "GetPy15Agencies/";

            $("#AgencyCode").select2({
                        minimumInputLength: 3,  // minimumInputLength for sending ajax request to server
                        width: 'resolve',   // to adjust proper width of select2 wrapped elements
                        ajax: {
                            url: url, // Controller - Select2Demo and Action -AccessRemoteData
                            type: "GET",
                            dataType: 'json',
                            data: function (searchTerm) {
                                return {
                                    searchTerm: searchTerm,
                                };
                            },
                            results: function (data, page) {
                                return { results: data.agencies }; // data.vendors returning json data from Controller
                            }
                        }
                    });
        }


        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);

            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val().trim()) {
                    return parameterList[i];
                }
            }
            return null;
        }
    </script>

}