                                            <div class="input-group flatpickr">
                                                <input id="EndDate" name="EndDate" placeholder="Pick Date" class="input padding-left-10" autocomplete="off" data-input type="date" />
                                                <span class="input-group-addon" data-toggle><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Vote
                                    </div>
                                    <div class="col-md-5">
                                        <input id="VoteCode" name="VoteCode" class="form-control padding-left-10" type="text" placeholder="Search Vote by Vote Code or Name" />
                                    </div>
                                </div>
                                <hr class="simple" />
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn action-btn btn btn-info" onclick="PortalUserDetail()">
