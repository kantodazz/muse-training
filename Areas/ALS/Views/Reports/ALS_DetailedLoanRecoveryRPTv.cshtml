@model IFMIS.Areas.IFMISTZ.Models.InstitutionListVm
@{
    ViewBag.Title = "Detailed Loan Recovery";
    ViewBag.Description = "form wizards";
    //Layout = "~/Views/Shared/_Default.cshtml";

}

<style>
    .input {
        border-width: 1px 0 1px 1px;
        border-color: #ccc;
        border-style: solid;
        width: 110px;
        height: 32px;
    }

    span {
        cursor: pointer;
    }
</style>


<!-- MAIN CONTENT -->
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">

        </div>
    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Vote
                                    </div>
                                    <div class="col-md-5">
                                        <input id="VoteCode" name="VoteCode" class="form-control padding-left-10" type="text" placeholder="Search Vote by Vote Code or Name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Check Number
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input type="text" name="CheckNo" id="CheckNo" class="form-control padding-left-10" placeholder="Format: 111755047 or All" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Loan Code
                                    </div>
                                    <div class="col-md-5">
                                        <select name="LoanCode" id="LoanCode" class="select2 form-control padding-left-10">
                                            <option>-- Select Loan Code --</option>
                                            <option value="ALL">ALL</option>
                                            <option value="863">863</option>
                                            <option value="863E">863E</option>
                                            <option value="864">864</option>
                                            <option value="864A">864A</option>
                                            <option value="363">363</option>
                                            <option value="363A">363A</option>
                                            <option value="364">364</option>
                                            <option value="364A">364A</option>
                                            <option value="365">365</option>
                                            <option value="365A">365A</option>
                                            <option value="450">450</option>
                                            <option value="834">834</option>
                                            <option value="709">709</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Sector
                                    </div>
                                    <div class="col-md-5">
                                        <select name="Sector" id="Sector" class="select2 form-control padding-left-10">
                                            <option>-- Select Sector types --</option>
                                            <option value="ALL">All Sectors</option>
                                            <option value="MDAs">MDAs</option>
                                            <option value="Agency">Agency</option>
                                            <option value="Independent">Independent</option>
                                            <option value="LGA">LGA</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Gender
                                    </div>
                                    <div class="col-md-5">
                                        <select name="Gender" id="Gender" class="select2 form-control padding-left-10">
                                            <option>-- Select Gender --</option>
                                            <option value="ALL">All</option>
                                            <option value="F">Female</option>
                                            <option value="M">Male</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        Start Date
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input name="StartDate" id="StartDate" placeholder="Pick Date" class="input padding-left-10" autocomplete="off" data-input />
                                                <span class="input-group-addon" data-toggle><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                        End Date
                                    </div>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <div class="input-group flatpickr">
                                                <input name="EndDate" id="EndDate" placeholder="Pick Date" class="input padding-left-10" autocomplete="off" data-input />
                                                <span class="input-group-addon" data-toggle><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="simple" />
                                <div class="form-group">
                                    <div class="control-label col-md-2">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn action-btn btn btn-info" onclick="ALSLoanRecoveryRPT()">
                                            View Report
                                        </button>
                                    </div>
                                </div>
                            </div>
                                </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section scripts
{
    <script>

        GetPy15Votes();

        function ALSLoanRecoveryRPT() {
            var voteCode = $("#VoteCode").val().trim(),
                checkNo = $("#CheckNo").val().trim(),
                loanCode = $("#LoanCode").val().trim(),
                  sector = $("#Sector").val().trim(),
                  gender = $("#Gender").val().trim(),
               startDate = $("#StartDate").val().trim(),
                 endDate = $("#EndDate").val().trim(),
                url = "@Model.UrlName" + "ALS_DetailedLoanRecoveryRPT.aspx";

            var isNotSupplied = validateReportParameters(["#VoteCode", "#CheckNo", "#LoanCode", "#Sector", "#Gender","#StartDate","#EndDate"]),
                queryString = "inst-code=" + voteCode + "&check-no=" + checkNo + "&lt-code=" + loanCode+ "&sector=" + sector + "&gender=" + gender + "&start-date=" + startDate + "&end-date=" + endDate;

            if (isNotSupplied)
                $(isNotSupplied).attr("style", "border: 1px solid red");
            else {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("ParameterEncryption", "Reports", new { area = "ALS" })',
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    data: { "query": queryString },
                    success: function (response) {
                        window.open(url + response);
                    }
                });
            }
        }
        function GetPy15Votes() {

            var url = "GetPy15Votes/";

            $("#VoteCode").select2({
                minimumInputLength: 2,  // minimumInputLength for sending ajax request to server
                width: 'resolve',   // to adjust proper width of select2 wrapped elements
                ajax: {
                    url: url, // Controller - Select2Demo and Action -AccessRemoteData
                    type: "GET",
                    dataType: 'json',
                    data: function (searchTerm) {
                        return {
                            searchTerm: searchTerm,
                        };
                    },
                    results: function (data, page) {
                        return { results: data.votes }; // data.vendors returning json data from Controller
                    }
                }
            });
        }

        function validateReportParameters(parameterList) {
            var resetStyle = function (parameterList) {
                for (var i = 0; i < parameterList.length; i++) {
                    $(parameterList[i]).attr("style", "border: 1px solid #ccc");
                }
            }
            resetStyle(parameterList);

            for (var i = 0; i < parameterList.length; i++) {
                if (!$(parameterList[i]).val().trim()) {
                    return parameterList[i];
                }
            }
            return null;
        }
    </script>

}