@model IEnumerable<IFMIS.Areas.ALS.Models.ALSFundAllocatioDetailVM>
    <table id="dt_basic" class="table table-striped table-bordered table-hover table-condensed" width="100%">
        <thead>
            <tr style="background-color: #f5f5f5; color:black">
                <th>#</th>
                <th>Institution Code</th>
                <th>Name</th>
                <th>Allocated Amount(TZs)</th>
                <th>Allocation Date</th>
                <th>Transaction Number</th>
                <th>Funding Reference</th>
                <th>Description</th>
                <th>Status</th>
                <th style="width:30px">Actions</th>
            </tr>
        </thead>
        @{int i = 0;}
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>@Html.DisplayFor(modelItem => item.AllocInstitutionCode)</td>
                <td>@Html.DisplayFor(modelItem => item.AllocInstitutionName)</td>

                <td style="text-align: right">
                    @Html.DisplayFor(modelItem => item.AllocationAmount, "_DecimalThousands")
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt, "_ShortDateTime")
                </td>
                <td>@Html.DisplayFor(modelItem => item.TransactionCtrlNo)</td>
                <td>@Html.DisplayFor(modelItem => item.FundingRefNo)</td>
                <td>@Html.DisplayFor(modelItem => item.AllocationDesc)</td>

                <td>@Html.DisplayFor(modelItem => item.OverallStatus)</td>

                <td></td>
            </tr>
        }
        </table>


<script>
    $(function () {
        $("#dt_basic").DataTable({

        })
    })
</script>
