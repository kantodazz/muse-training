@model IFMIS.Areas.ALS.Models.ALS_CreateFundAllocationVM
@{
    ViewBag.Title = "Fund Withdraw List";
}

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }
</style>

<!--Main Content Start here-->
<div id="content" style="margin: 5px;">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-white" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <header>
                        <span class="widget-icon"><i class="fa fa-table"></i></span>
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div class="widget-body">
                        <div class="row">
                            <div class="col-md-6">
                                <a href="@Url.Action("CreateFundWithdraw", "FundWithdraw")" style="margin-left:15px;" class="btn btn-info">
                                    <i class="fa fa-lg fa-fw fa-plus"></i>Add New
                                </a>
                            </div>
                            <div class="col-md-12">
                                <div class="search-container" style="float:right">
                                    <i class="fa fa-search"></i>
                                    <input type="search" name="search" placeholder="Search Allocatin .." id="search-box">
                                </div>
                            </div>
                        </div>

                        <table id="datatable" class="table table-bordered table-hover table-condensed">
                            <thead style="border-bottom: 1px solid white;">
                                <tr>
                                    <th>#</th>
                                    <th>Funding Ref No.</th>
                                    <th>Transcation No.</th>
                                    <th>Funding Source</th>
                                    <th>Vote Details</th>
                                    <th>Balance Amount (TZs)</th>
                                    <th>Total Withdraw Amount (TZs)</th>
                                    <th>Status</th>
                                    <th style="width:30px">Actions</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <td colspan="5"><p align="right"><strong>Total</strong></p></td>
                                    <td colspan="1"><p align="right"><b><input type="text" id="AllocAmount" style="border: 0px none;text-indent:1px;" /></b></p></td>
                                    <td colspan="2"><p align="right"><b><input type="text" id="sumAmount" style="border: 0px none;text-indent:1px;" /></b></p></td>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<!--My partial view for withdraw Amount start here-->
<div id="withdrawVoteModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" style="width:80%;background-color:#b3e5fc;">
        <div class="modal-content">
            <div class="modal-header alert alert-info">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title">Withdraw Summary Amount</h3>
            </div>
            <div class="modal-body" id="withdrawFundBody"></div>
            <div class="modal-footer">
                <button class="btn btn-info" id="saveWithdrawData">
                    <i class="fa fa-save">Save</i>
                </button>
                <button class="btn btn-info" data-dismiss="modal">
                    <i class="fa fa-times">Close</i>
                </button>
            </div>
        </div>
    </div>
</div>
<!-- end here-->
<!--Remark-->
<div class="modal fade" id="remarkDialog" style="left:4%;">
    <div class="modal-dialog" style="width:35%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Remark and Comments</h3>
            </div>
            <div class="modal-body">
                <div class="widget-body ">
                    <div style="display:flex;justify-content:center;align-content:center">
                        <div>
                            @*@Html.HiddenFor(model => model.FundWithdrawSummaryId)*@
                            <input type="hidden" id="FundWithdrawSummaryId" name="FundWithdrawSummaryId"  readonly="readonly"/>
                            <table>
                                <tr style="border:none">
                                    <td class="form-label" style="border:none">
                                        Remarks
                                        <i class="fa fa-times" style="color:white" id="Remarks_1"></i>
                                    </td>
                                    <td style="border:none">
                                        <div class="name-input-container">
                                            <textarea type="text" id="Remarks" style="width:300px" rows="2" maxlength="350" /></textarea>
                                        </div>
                                    </td>
                                </tr>
                                <tr style="border:none">
                                    <td class="form-label" style="border:none">Attachment</td>
                                    <td style="border:none">
                                        <div class="name-input-container">
                                            <input type="file" class="col-sm-8" id="RemarkAttachment" />
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-info btn-size" style="width:100px;" onclick="SaveRemark()">
                        <i class="fa fa-save ico"></i>Save
                    </button>

                    <button class="btn btn-info btn-size" data-dismiss="modal" style="width:100px;">
                        <i class="fa fa-times ico"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        var datatable = $("#datatable").dataTable();
        $("#datatable_wrapper .dt-toolbar").remove();

        $("#search-box").on("keyup search input paste cut", function () {
            $("#datatable").DataTable().search(this.value).draw();
            $("#datatable_wrapper .dt-toolbar").remove();
        });

         var totalAllocAmount =0;
         var totalAmount =0;
        var data = [];
        $.ajax({
            type: "get",
            url: '@Url.Action("GetFundPendingWithdrawList", "FundWithdraw")',
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                data = response.data;
                datatable.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    totalAllocAmount += parseFloat(data[i]["BalanceAmount"]);
                    totalAmount += parseFloat(data[i]["WithdrawAmount"]);

                    datatable.fnAddData(
                        [i + 1,
                        data[i]["FundingRefNo"],
                        data[i]["TransactionCtrlNo"],
                        data[i]["FundDetails"],
                        data[i]["VoteDetails"],
                        "<p align='right'>" + toLabel(data[i]["BalanceAmount"])+ "</p>",
                        //"<p align='right'>" + toLabel(data[i]["TotalAllocationAmount"])+ "</p>",
                        //toLabel(data[i]["BalanceAmount"]),
                        "<p align='right'>" +toLabel(data[i]["WithdrawAmount"]) + "</p>",
                        data[i]["OverallStatus"],
                        '<div class="btn-group id="drop-' + i + '">\
                            <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                        </button>\
                        <ul class="dropdown-menu">\
                            <li><a href="@Url.Action("FundVoteWithdrawDetails", "FundWithdraw")/?id=' + data[i]["FundWithdrawSummaryId"] + '">Details</a></li>\
                            <li><a href="#" onclick ="ConfirmFundWithdraw('+ data[i]["FundWithdrawSummaryId"] +')">Confirm</a></li>\
                            <li><a href="#" onclick="Delete(' + data[i]["FundWithdrawSummaryId"] + ')">Cancel</a></li>\
                            <li><a href="@Url.Action("EditFundWithdraw", "FundWithdraw")/?id=' + data[i]["FundWithdrawSummaryId"] + '">Edit</a></li>\
                        </ul>\
                        </div>'
                    ]);
                }
                document.getElementById("AllocAmount").value = toLabel(totalAllocAmount);
                document.getElementById("sumAmount").value = toLabel(totalAmount);
            },
            failure: function (error) {
                swal(error);
            }
        });

        function Withdraw(i, id) {
            if (i == 'x') i = id;
            swal({
                title: "Are you sure,",
                text: "You want to Withdraw selected Fund?",
                buttons: [
                    'No',
                    'Yes',
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    var url = '@Url.Action("GetAllocationVoteDetail", "FundWithdraw")/' + i;
                    $("#withdrawFundBody").load(url, function () {
                        $("#withdrawVoteModal").modal({
                            backdrop: "static",
                            keyboard: false
                        })
                    });
                }
                else {
                    swal("Cancelled", "No change was made");
                }
            });
        }

        ///Function for Confirm the Withdraw---start here
        function ConfirmFundWithdraw(id) {
            swal({
                title: "Confirm",
                text: "Are you sure?",
                buttons: [
                    'No',
                    'Yes'
                ]
            }).then(function (isConfirm) {
                if (isConfirm) {
                    $('#remarkDialog').modal('show');
                     $('#remarkDialog #FundWithdrawSummaryId').val(id);
                    //ConfirmWithdrawData(id)
                } else {
                    swal("Cancel", "No changes was made");
                }
            });
        }

        function SaveRemark() {
            if ($("#Remarks").val() == "") {
                $("#Remarks").attr("style", "border-color: red;");
            }
            else {
                var id = $("#FundWithdrawSummaryId").val();
                ConfirmWithdrawData(id);
            }
        }

        function ConfirmWithdrawData(id) {
            var url = '@Url.Action("ConfirmFundWithdrawDetails", "FundWithdraw")';
            $.ajax({
                type: "post",
                url: url,
                 data: CreateForm({
                    id: id,
                    remarks: $("#Remarks").val(),
                    file: $("#RemarkAttachment")[0].files[0]
                 }),
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response == "Success") {
                        swal("Successfully Confirmed!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }

                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
        ///End here
        function Delete(i, id) {
            if (i == 'x') i = id;
            swal({
                title: "Are you sure?",
                text: "You want to Cancel !",
                buttons: [
                  'No',
                  'Yes'
                ],
            }).then(function (isConfirm) {
                if (isConfirm) {
                    deleteSelectedItem(i)
                } else {
                    swal("Cancelled", "No change was made");
                }
            });
            $('#confirmModal').modal('hide');
        }

         function deleteSelectedItem(id) {
            var url = '@Url.Action("DeleteFundWithdrawDetails", "FundWithdraw")';
            $.ajax({
                type: "post",
                url: url,
                data: { "id": id },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    if (response == "Success") {
                        swal("Deleted Successfully!", { icon: "success" })
                            .then((value) => {
                                window.location.reload();
                            });
                    }
                    else {
                        swal(response);
                    }

                },
                failure: function (error) {
                    swal(error);
                }
            });
        }

        function CreateForm(form) {
            let _form = new FormData();
            for (let key in form) {
                _form.append(key, form[key])
            }
            return _form
        }
    </script>
}
