@{
    ViewBag.Title = "Loan  Tracker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        resize: vertical;
        width: 230px;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
    }

    input[type=text] {
        padding: 8px;
        border: 1px solid #ccc;
    }

    td {
        padding: 5px;
    }

    .table-amount td:nth-child(7) {
        text-align: right;
    }

    .table-view-details td:nth-child(4) {
        text-align: right;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 110px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }

    .total-amount {
        float: right;
    }

    .loadingImg {
        display: none;
    }
</style>
<div id="content" style="margin: 5px; padding-top: 30px">
    <div class="row"></div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@ViewBag.Title</h2>
                    </header>

                    <div>
                        <div class="widget-body">
                            @*<center><img src="~/Media/Images/ajax_loader.gif" class="loadingImg" /></center>*@
                            <div class="row">

                                <div class="col-md-3">
                                    <select id="InstitutionCode" style="width:300px">
                                        <option value="ALL" selected="selected" select2>All</option>
                                        @foreach (var institutionList in ViewBag.institutionList)
                                        {
                                            <option value='@institutionList.VOTE'>@institutionList.InstitutionCodeInstitutionName</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-2">
                                    <select style="width:150px" id="overallstatus">
                                        <option value="Pending">Pending</option>
                                        <option value="Asigned">Asigned</option>
                                        <option value="Confirmed">Confirmed</option>
                                        <option value="Verified">Verified</option>
                                        <option value="Pre-Approved">Pre-Approved</option>
                                        <option value="Approved">Approved</option>
                                        <option value="Rejected">Rejected</option>
                                        <option value="Accepted"> Accepted</option>
                                        <option value="Pre-Authorized"> Pre-Authorized</option>
                                        <option value="Authorized"> Authorized</option>
                                        <option value="Cancelled"> Cancelled</option>
                                        <option value="Closed">Closed</option>
                                        <option value="Sent to MUSE"> Sent to MUSE</option>
                                        <option value="Contract Verified"> Contract Verified </option>
                                        <option value="Contract Confirmed"> Contract Confirmed </option>
                                        <option value="Contract Authorized"> Contract Authorized </option>
                                        <option value="Repayment Approved"> Repayment Approved </option>
                                        <option value="Repayment Authorized"> Repayment Authorized </option>
                                        <option value="CPO-SETTLED">Settled</option>
                                        <option value="ALL">All</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <table>
                                        <tr>
                                            <td>From</td>
                                            <td>
                                                <div class="flatpickr date-group">
                                                    <input type="text" placeholder="Select Date.."
                                                           data-input
                                                           style="width:120px;border:none;height:20px"
                                                           autocomplete="off" id="FromDate">
                                                    <a class="input-button" title="open" data-toggle href="#">
                                                        <span class="input-group-addon" style="height:30px"><i class="fa fa-calendar"></i></span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-2">
                                    <table>
                                        <tr>
                                            <td>To</td>
                                            <td>
                                                <div class="flatpickr date-group">
                                                    <input type="text" placeholder="Select Date.."
                                                           data-input
                                                           style="width:120px;border:none;height:20px"
                                                           autocomplete="off" id="ToDate">
                                                    <a class="input-button" title="open" data-toggle href="#">
                                                        <span class="input-group-addon" style="height:30px"><i class="fa fa-calendar"></i></span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-3">
                                    <div class="search-container" style="float:right">
                                        <i class="fa fa-search searchIcon"></i>
                                        <input type="search" name="search" placeholder="Keywords..." id="searchbox">
                                        <button style="background-color:#2196F3;color:white" onclick="searchLoanApplication()">Search</button>
                                    </div>
                                </div>
                            </div>

                            <table id="dt_application_listing" class="table table-bordered table-condensed table-amount">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Loan Number</th>
                                        <th>Check Number</th>
                                        <th>Vender Name</th>
                                        <th>ApplicationType</th>
                                        <th>ApplicantCategory</th>
                                        <th>Status</th>
                                        <th>Voucher Status </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section pagespecific{

    <script>
        // ============ INIT DATA TABLES START =====================
    //SHOW LOADER ICON
    $(document).ajaxStart(function () {
        $(".loadingImg").show();

    });
    //HIDE LOADER ICON
    $(document).ajaxStop(function () {
        $(".loadingImg").hide();
    });

        var dt_application_listing = $('#dt_application_listing').dataTable({
            "language": {
                "emptyTable": '<strong id="loader">Loading...</strong>',
                "zeroRecords": "No matching records found"
            }
        });


        $("#dt_application_listing_wrapper .dt-toolbar").remove();

        $("#searchbox").on("keyup search input paste cut", function () {
            //dt_voucher_listing.DataTable().search(this.value).draw();
        });

        // ====================== LOAD TABLE DATA START =====================
        var data = [];
        var globalPayeeId = null;
        $.ajax({
            type: "get",
            url: '@Url.Action("GetLoanApplicationTracker", "ALSLoanApp")' + "/?OverrallStatus=Pending&&FromDate=" + $('#FromDate').val() + "&&ToDate=" + $('#ToDate').val() + "&&keywords=0",
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                //console.log(response)
                data = response.loanApplicationList;
                dt_application_listing.fnClearTable();
                for (var i = 0; i < data.length; i++) {
                    dt_application_listing.fnAddData([i + 1,
                        data[i]["LoanCtrlNum"],
                        data[i]["CheckNo"],
                        data[i]["VendorName"],
                        data[i]["ApplicationType"],
                        data[i]["ApplicantCategory"],
                        data[i]["OverallStatus"],
                        data[i]["PaidStatus"],
                        '<div class="btn-group">\
                             <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick= "details(' + data[i].LoanApplId + ')">Details</a></li>\
                            </ul>\
                        </div>'
                    ]);
                }

                if(data.length == 0){
                    $("#loader").text("No matching records found")
                }
            },
            failure: function (error) {
                swal(error);
            }
        });

        function searchLoanApplication() {
            $("#loader").text("Loading...")
            $.ajax({
                type: "get",
                url: '@Url.Action("GetLoanApplicationTracker", "ALSLoanApp")' + "/?OverrallStatus=" + $('#overallstatus').val()+ "&&InstitutionCode=" + $('#InstitutionCode').val() + "&&FromDate=" + $('#FromDate').val() + "&&ToDate=" + $('#ToDate').val() + "&&keywords=" + $('#searchbox').val() + "",
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    data = response.loanApplicationList;
                    console.log(data)
                  dt_application_listing.fnClearTable();
                   for (var i = 0; i < data.length; i++) {
                    dt_application_listing.fnAddData([i + 1,
                        data[i]["LoanCtrlNum"],
                        data[i]["CheckNo"],
                        data[i]["VendorName"],
                        data[i]["ApplicationType"],
                        data[i]["ApplicantCategory"],
                        data[i]["OverallStatus"],
                        data[i]["PaidStatus"],
                        '<div class="btn-group">\
                             <button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\
                                 <span class="caret"></span\
                                     <span class="sr-only"></span>\
                             </button>\
                            <ul class="dropdown-menu">\
                                <li><a href="#" onclick= "details(' + data[i].LoanApplId + ')">Details</a></li>\
                            </ul>\
                        </div>'
                    ]);
                }
                    if (data.length == 0) {
                        $("#loader").text("No matching records found")
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
        // *************** LOAD TABLE DATA END *********************
           var view = function (id) {
            $("#divLoader").show();
            window.location = '@Url.Action("ALSLoanDetails", "ALSLoanApp")/' + id;
        };
        function CreateForm(form) {
            let _form = new FormData();
            for (let key in form) {
                _form.append(key, form[key])
            }
            return _form
        }

         const context = {
            detailsUrl: '@Url.Action("ALSLoanDetails", "ALSLoanApp")',
            actionStatus: 'Trackered',
            level: 'Tracker',
            actionLabel: 'Tracker',
            redirectUrl: '@Url.Action("ALSLoanTracker", "ALSLoanApp")',
            rejectionStatus: 'N/A'
        }


        function details(Id) {
            window.location.href = `${context.detailsUrl}/?Id=${Id}
                &actionStatus=${context.actionStatus}
                &level=${context.level}
                &actionLabel=${context.actionLabel}
                &redirectUrl=${context.redirectUrl}
                &rejectionStatus=${context.rejectionStatus}`
        }

    </script>
}
