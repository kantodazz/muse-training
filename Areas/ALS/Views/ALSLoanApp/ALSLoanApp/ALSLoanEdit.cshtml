@section pagespecific {
    <script>
        $(function () {
            $("#RecoveryPeriod1").val("@ViewBag.Loan.RecoveryPeriod")
            $("#_LoanAmount").val("@string.Format("{0:#,0.00}", ViewBag.Loan.LoanApplAmount)")
            $("#LoanAmount").val("@string.Format("{0:#,0.00}", ViewBag.Loan.LoanApplAmount)")
            GetVoteName('@ViewBag.Loan.AllocInstitutionCode')
            GetVoteBalance('@ViewBag.Loan.AllocInstitutionCode')
            GetRetirementDetails('@ViewBag.Vendor.VendorID')
        })

        $("#vendorType").change(function () {
            if (this.value == 'lawson') {
                $(".lawson").toggle(true)
            } else {
                $(".lawson").toggle(false)
            }
        })

        function SearchPayee() {
            if ($("#vendorType").val() == 'lawson') {
                $('#payeeModal').modal('show');
            } else {
                $('#miscPayeeModal').modal('show');
            }
        }

        if ("@ViewBag.loanType.LoanNature" == "NONCASH") {
            $("#AssetRegNo").val('@ViewBag.Loan.AssetRegNo')
            $("#assetContainer").toggle(true)
        } else {
            $("#assetContainer").toggle(false)
        }
        $("#saveLoader").toggle(false)
        $("#loanChargesContainer").toggle(false)


        function ZoomLoanType() {
            $('#loanModal').modal('show');
        }

        function ZoomAsset() {
            $('#assetModal').modal('show');
        }
        var dt_search_asset = $('#dt_search_asset').dataTable();
        $("#dt_search_asset_wrapper .dt-toolbar").remove();
        $("#searchbox_asset").on("keyup search input paste cut", function () {
            if (!this.value) {
                dt_search_asset.fnClearTable();
            } else {
                searchAssetTableUpdate(this.value);
            }
        });

        var dt_search_payee = $('#dt_search_payee').dataTable();
        $("#dt_search_payee_wrapper .dt-toolbar").remove();
        $("#searchbox").on("keyup search input paste cut", function () {
            if (!this.value) {
                dt_search_payee.fnClearTable();
            } else {
                searchPayeeTableUpdate(this.value);
            }
        });

        var dt_search_misc_payee = $('#dt_search_misc_payee').dataTable();
        $("#dt_search_misc_payee_wrapper .dt-toolbar").remove();
        $("#misc_searchbox").on("keyup search input paste cut", function () {
            if (!this.value) {
                dt_search_misc_payee.fnClearTable();
            } else {
                searchMiscPayeeTableUpdate(this.value);
            }
        });

        var dt_search_loan = $('#dt_search_loan').dataTable();
        $("#dt_search_loan_wrapper .dt-toolbar").remove();
        $("#searchbox_loan").on("keyup search input paste cut", function () {
            if (!this.value) {
                dt_search_loan.fnClearTable();
            } else {
                searchLoanTypeTableUpdate(this.value);
            }
        });

        var loanAssets = []
        function searchAssetTableUpdate(search) {
            var url = '@Url.Action("GetLoanAsset", "ALSLoanApp")';
            $.ajax({
                type: "GET",
                url: url,
                data: { search },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    loanAssets = response.data;
                    dt_search_asset.fnClearTable();
                    for (var i = 0; i < loanAssets.length; i++) {
                        dt_search_asset.fnAddData([i + 1,
                           loanAssets[i]["ModeOfSale"],
                           loanAssets[i]["AssetType"] || "-",
                           loanAssets[i]["AssetLotNo"],
                           loanAssets[i]["AssetRegNo"],
                           loanAssets[i]["AssetDesc"],
                           loanAssets[i]["AssetQuantity"],
                           toLabel(loanAssets[i]["AssetUnitPrice"]),
                           toLabel(loanAssets[i]["AssetTotalPrice"]),
                           '<a href="#" onclick="assetClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                        ]);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
        function searchMiscPayeeTableUpdate(search) {
            var url = '@Url.Action("GetPayee", "PaymentVoucher", new { area="IFMISTZ"})';
            $.ajax({
                type: "GET",
                url: url + "/?search=" + search + "",
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    payees = response.data;
                    dt_search_misc_payee.fnClearTable();
                    for (var i = 0; i < payees.length; i++) {
                        dt_search_misc_payee.fnAddData([i + 1,
                           payees[i]["PayeeName"],
                           payees[i]["AccountName"],
                           payees[i]["PayeeCode"],
                           payees[i]["BankName"],
                           payees[i]["Accountnumber"],
                           payees[i]["PayeeType"],
                           payees[i]["Address1"],
                           '<a href="#" onclick="payeeClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                        ]);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }
       var loanTypes = []
       function searchLoanTypeTableUpdate(search) {
           var url = '@Url.Action("GetLoanType", "ALSLoanApp")';
           $.ajax({
               type: "GET",
               url: url,
               data: { search },
               contenttype: "application/json; charset=utf-8",
               datatype: "json",
               success: function (response) {
                   loanTypes = response.data;
                   dt_search_loan.fnClearTable();
                   for (var i = 0; i < loanTypes.length; i++) {
                       dt_search_loan.fnAddData([i + 1,
                          loanTypes[i]["LoanDescription"],
                          loanTypes[i]["LoanCode"],
                          loanTypes[i]["RecoveryPeriod"],
                          toLabel(loanTypes[i]["MaxLoanAmount"]),
                          loanTypes[i]["LoanNature"],
                          '<a href="#" onclick="loanClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                       ]);
                   }
               },
               failure: function (error) {
                   swal(error);
               }
           });
       }

       var payees = []
        function searchPayeeTableUpdate(search) {
            var url = '@Url.Action("GetPayee", "ALSLoanApp")';
            $.ajax({
                type: "GET",
                url: url,
                data: { search },
                contenttype: "application/json; charset=utf-8",
                datatype: "json",
                success: function (response) {
                    payees = response.data;
                    dt_search_payee.fnClearTable();
                    for (var i = 0; i < payees.length; i++) {
                        dt_search_payee.fnAddData([i + 1,
                           payees[i]["VendorName"],
                           payees[i]["Vote"],
                           payees[i]["SalaryScale"],
                           payees[i]["CheckNo"],
                           payees[i]["BenBankName"],
                           payees[i]["BenAccountNum"],
                           '<a href="#" onclick="payeeClicked(' + i + ')"><i class="glyphicon glyphicon-plus-sign"></i></a>'
                        ]);
                    }
                },
                failure: function (error) {
                    swal(error);
                }
            });
        }


        var selectedPayeeId = parseInt('@ViewBag.Vendor.VendorID')
        function payeeClicked(i) {
            if ($("#vendorType").val() == 'lawson') {
                selectedPayeeId = payees[i].VendorID
                $("#VendorName").val(payees[i].VendorName)
                $("#CheckNo").val(payees[i].CheckNo)
                $("#NetSalary").val(toLabel(payees[i].NetSalary))
                $("#SalaryScale").val(payees[i].SalaryScale)
                $("#GrossSalary").val(toLabel(payees[i].GrossSalary))
                $("#Vote").val(payees[i].Vote)
                $("#DateOfBirth").val(payees[i].FBirthDate)
