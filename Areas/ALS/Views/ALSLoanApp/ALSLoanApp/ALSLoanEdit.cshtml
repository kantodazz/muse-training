                                        </tr>
                                        <tr>
                                            <td class="form-label">
                                                Recovery Period
                                                <i class="fa fa-times" style="color:white" id="RecoveryPeriod1_1"></i>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <strong>Month(s)</strong>
                                                    </span>
                                                   <input type="number" style="width:225px" id="RecoveryPeriod1" onkeyup="validateRecoveryPeriod(this)"/>
                                                 </div>
                                            </td>
