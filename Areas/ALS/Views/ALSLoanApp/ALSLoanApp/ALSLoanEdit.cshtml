                            </div>

                        </div>
                    </div>
                   
                    <div class="row" style="padding:20px">
                        <div class="col-md-2"></div>
                        <div class="col-md-6">
                            <a class="btn btn-info" href='@Url.Action("ALSLoanEntry", "ALSLoanApp")' style="margin-right:5px">
                                <i class="glyphicon glyphicon-arrow-left"></i>Back
