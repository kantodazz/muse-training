@model IFMIS.Areas.ALS.Models.ALS_OutRightSale
<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }


    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    input[type=text] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }

    input[type=number] {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }

    td {
        padding: 5px;
    }

    .table-view-details td:nth-child(4) {
        text-align: right;
    }

    .total-amount {
        float: right;
    }

    .payee-entry {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    .entry-label {
        position: relative;
        top: -12px;
        background-color: white;
        width: 250px;
        left: 15px;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
        font-weight: bold;
        color: #2196F3;
    }
</style>
<br />

<div id="exTab2" class="container" style="margin-left:0px;margin-top:5px;width:auto">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#1" data-toggle="tab"> Certificate Details </a>
        </li>
        <li>
            <a href="#2" data-toggle="tab"> Bill Details </a>
        </li>
        <li>
            <a href="#3" data-toggle="tab"> Remarks </a>
        </li>
    </ul>
    <div class="tab-content ">
        <div class="tab-pane active" id="1">
            <!--Default panell contents-->
            <div class="col-md-11" style="margin-top:20px;">
                <div class="form-horizontal">
                    <br />
                    <div class="payee-entry">
                        <div class="entry-label"> Details for Certificate of Allocation </div>
                        <div style="padding-left:20px">
                            <div class="row">
                                <div class="col-md-6">
                                    <table>
                                        <tr>
                                            <th> Certificate Number : </th>
                                            <td id="transferCategory"> @Model.CertificateNumber </td>
                                        </tr>
                                        <tr>
                                            <th> Check Number : </th>
                                            <td id="transferType"> @Model.CheckNumber </td>
                                        </tr>
                                    </table>
                                </div>

                                <div class="col-md-6">
                                    <table>
                                        <tr>
                                            <th> Full Name : </th>
                                            <td id="transferCategory">
                                                @Model.FirstName   @Model.MiddleName    @Model.LastName
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>  Status: </th>
                                            <td id="transferType"> @Model.OverallStatus </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table>
                                        <tr>
                                            <th>  Asset Code: </th>
                                            <td id="description"> @Model.AssetCode </td>
                                        </tr>
                                        <tr>
                                            <th>  Asset Description : </th>
                                            <td id="institutionFrom"> @Model.AssetDescription </td>
                                        </tr>
                                    </table>
                                </div>

                                <div class="col-md-6">
                                    <table>
                                        <tr>
                                            <th> Vote :  </th>
                                            <td id="institutionTo"> @Model.VoteCode - @Model.VoteName </td>

                                        </tr>
                                        <tr>
                                            <th> Asset Value: </th>
                                            <td id="">@string.Format("{0:#,0.00}", Model.AssetValue) </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table>
                                        <tr>
                                            <th> Phone Number :  </th>
                                            <td id="institutionTo"> @Model.PhoneNumber </td>

                                        </tr>
                                        <tr>
                                            <th> Email Address: </th>
                                            <td id="">@Model.EmailAddress </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table>
                                        <tr>
                                            <th> Payment Option:  </th>
                                            <td id="institutionTo"> @Model.PaymentOption </td>

                                        </tr>
                                        <tr>
                                            <th>  </th>
                                            <td id=""></td>
                                        </tr>
                                    </table>
                                </div>
                                @if (Model.AssignedToUserId != null)
                                {
                                    <div class="col-md-6">
                                        <table>
                                            <tr>
                                                <th> Assigned To   </th>
                                                <td id="institutionTo"> @Model.AssignedToUsername </td>

                                            </tr>
                                            <tr>
                                                <th> Remark: </th>
                                                <td id="">@Model.Remark </td>
                                            </tr>
                                        </table>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="payee-entry">
                        <div class="entry-label"> Attachments  </div>
                        <div style="padding-left:15px">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="col-md-8">
                                        <table width="100%">
                                            <tr>
                                                <th> Certificate of Allocation </th>
                                                <td id="institutionTo" colspan="3">
                                                    <a href="#" onclick="PreviewAttachment('@Model.CertificateFileName')"><i class="fa fa-file-pdf-o"></i> Preview Attachment </a>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th> Valuation Report : </th>
                                                <td id="">
                                                    <a href="#" onclick="PreviewAttachment('@Model.OtherAttachment')"><i class="fa fa-file-pdf-o"></i> Preview Attachment </a>
                                                </td>
                                            </tr>

                                            @if (Model.OverallStatus == "Paid" && Model.TaxClearenceFile == null)
                                            {
                                                <tr>
                                                    <th> Applicant Document : </th>
                                                    <td id="institutionTo" style="color:red;font-weight:bold">
                                                        Tax Clearence Form is Not Provided
                                                    </td>
                                                </tr>
                                            }
                                            @if ((Model.OverallStatus == "Paid"
                                                || Model.OverallStatus == "Verified"
                                                || Model.OverallStatus == "Approved"
                                                || Model.OverallStatus == "Authorized") && Model.TaxClearenceFile != null)
                                            {
                                                <tr>
                                                    <th>Tax Clearence Form : </th>
                                                    <td id="institutionTo">
                                                        <a href="#" onclick="PreviewAttachment('@Model.TaxClearenceFile')"><i class="fa fa-file-pdf-o"></i> Preview Attachment </a>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <th>Contract : </th>
                                                    <td id="contract">
                                                        <a href="#" onclick="PreviewAttachment('@Model.FormFilePath')"><i class="fa fa-file-pdf-o"></i> Preview Attachment </a>
                                                    </td>

                                                </tr>
                                            }



                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="2">
            <div class="col-md-12" style="margin-top:20px;">
                <div class="form-horizontal">
                    <br />
                    <table id="dt_basic" class="table table-striped table-bordered table-hover table-condensed table-condensed" width="100%">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th>  Bill Type  </th>
                                <th style="text-align:right">  Bill Amount  </th>
                                <th>  Remark  </th>
                                <th>  Bill Valid Days </th>
                                <th>  Rereference No </th>
                                <th> Status </th>
                                <th> Control Number </th>
                            </tr>
                        </thead>
                        @{
                            int i = 0;
                        }
                        <tbody>
                            @foreach (var item in ViewBag.BillDetails)
                            {
                                i++;
                            <tr>
                                <td>
                                    @i
                                </td>

                                <td>
                                    @item.BillType
                                </td>

                                <td style="text-align:right">
                                    @Convert.ToDecimal(item.BillAmount).ToString("#,##0")
                                </td>
                                <td>
                                    @item.Remarks
                                </td>
                                <td>
                                    @item.BillValidDays
                                </td>
                                <td>
                                    @item.ReferenceNo
                                </td>
                                <td>
                                    @if (item.OverallStatus == "Bill Requested")
                                    {
                                        string status = "Waiting Control Number";
                                        @status
                                    }
                                    else if (item.OverallStatus == null)
                                    {
                                        string status = "N/A";
                                        @status
                                    }
                                    else
                                    {
                                        @item.OverallStatus
                                    }
                                </td>
                                <td>
                                    @if (item.ControlNumber == null)
                                    {
                                        string ctrlNm = "N/A";
                                        @ctrlNm
                                    }
                                    else
                                    {
                                        @item.ControlNumber
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <div class="tab-pane" id="3">
            <br />
            <div class=" col-md-6">
                <div class="smart-timeline" style="height:auto">
                    <ul class="smart-timeline-list">

                        @{
                            int z = 0;

                            foreach (var itemzz in ViewBag.remarks)
                            {
                                z++;
                                <li>
                                    <div class="smart-timeline-icon">
                                        <i class="fa fa-user"></i>
                                    </div>
                                    <div class="smart-timeline-content">
                                        <p>
                                            <a href="javascript:void(0);"><strong>@itemzz.UserName  <br /> @itemzz.ModuleLevel </strong></a>&nbsp;&nbsp;<small>@itemzz.CreatedAt</small>
                                        </p>
                                        <p>
                                            @itemzz.Remarks
                                        </p>
                                        @if (itemzz.FilePath == null || itemzz.FilePath == "")
                                        {

                                        }
                                        else
                                        {
                                            <a href="#" onclick="PreviewFile('@itemzz.FilePath')"> <i class="fa fa-file-pdf-o search-icon"></i> Preview </a>
                                        }
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-6" style="border:0px solid #efeaea;width:550px;height:auto;float:right;margin:25px -70px 0px 0px">
                <iframe height="400" id="attachmentImage" width="93%" src="" style="border:0px"></iframe>
            </div>
        </div>
    </div>
</div>



@section pagespecific {
    <script type="text/javascript">
    </script>
}
