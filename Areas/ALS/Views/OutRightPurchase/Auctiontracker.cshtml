@model IEnumerable<IFMIS.Areas.ALS.Models.AuctionSalesDetail>
@{
    /**/

    ViewBag.Title = "Fund ";
}
<!-- MAIN CONTENT -->
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <div id="divLoader"></div>
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-white" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"
                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2> Auction - Tracker </h2>
                    </header>
                    <!-- widget content -->
                    <div class="widget-body">
                        <div class="row">
                            <div class="col-md-2">
                                <select style="width:150px" id="overallstatus" class="form-control">
                                    <option value="All">All</option>
                                    <option value="Bill Created">Bill Created</option>
                                    <option value="Paid">Paid</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <table>
                                    <tr>
                                        <td>From</td>
                                        <td>
                                            <div class="flatpickr date-group">
                                                <input type="text" placeholder="Select Date.."
                                                       data-input
                                                       style="width:120px;border:none;height:20px"
                                                       autocomplete="off" id="FromDate">
                                                <a class="input-button" title="open" data-toggle href="#">
                                                    <span class="input-group-addon" style="height:30px"><i class="fa fa-calendar"></i></span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-3">
                                <table>
                                    <tr>
                                        <td>To</td>
                                        <td>
                                            <div class="flatpickr date-group">
                                                <input type="text" placeholder="Select Date.."
                                                       data-input
                                                       style="width:120px;border:none;height:20px"
                                                       autocomplete="off" id="ToDate">
                                                <a class="input-button" title="open" data-toggle href="#">
                                                    <span class="input-group-addon" style="height:30px"><i class="fa fa-calendar"></i></span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-4">
                                <div class="search-container" style="float:right">
                                    <i class="fa fa-search searchIcon"></i>
                                    <input type="search" name="search" placeholder="Keywords..." id="searchbox">
                                    <button style="background-color:#2196F3;color:white" onclick="trackCertificate()">Search</button>
                                </div>
                            </div>
                        </div>

                        <br />

                        <table id="dtbills" class="table table-striped table-bordered table-hover table-condensed table-condensed" width="100%">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th>Asset Code</th>
                                    <th>Asset Name</th>
                                    <th>Full Name</th>
                                    <th style="text-align:center">Vote</th>
                                    <th>OverallStatus</th>
                                    <th>Control Number</th>
                                    <th>Paid Amount</th>
                                    <th>Asset Value</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
        </div>
    </section>
    <!-- end widget grid -->
</div>


<!-- END MAIN CONTENT -->
@section pagespecific {
    <script type="text/javascript">



        // DO NOT REMOVE : GLOBAL FUNCTIONS!
        $(document).ready(function () {
            /* // DOM Position key index //
            l - Length changing (dropdown)
            f - Filtering input (search)
            t - The Table! (datatable)
            i - Information (records)
            p - Pagination (paging)
            r - pRocessing
            < and > - div elements
            <"#id" and > - div with an id
            <"class" and > - div with a class
            <"#id.class" and > - div with an id and class
            Also see: http://legacy.datatables.net/usage/features
            */
            /* BASIC ;*/
            var responsiveHelper_dt_basic = undefined;
            var responsiveHelper_datatable_fixed_column = undefined;
            var responsiveHelper_datatable_col_reorder = undefined;
            var responsiveHelper_datatable_tabletools = undefined;

            var breakpointDefinition = {
                tablet: 1024,
                phone: 480
            };

            $('#dt_basic').dataTable({
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                    "t" +
                    "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
                "autoWidth": true,
                "preDrawCallback": function () {
