        var csvIds = [];
        function assign() {
            debugger;
            $("input:checkbox.checkItem").each(function () {
                if ($(this).prop("checked")) {
                    csvIds.push($(this).val().replace('/', ''));
                }
            });

            if (csvIds.length == 0) {
                swal("No Item Selected", { icon: "info" })
                return;
            }
            else {
                $('#commentModal').modal('show');
            }

        };


        function AssignForm() {
            debugger;
            $("#divLoader").show();
            var ids = csvIds;
            var userId = $("#userId").val();
            var username = $("#userId option:selected").text();
            var remarks = $("#remarks").val();
            $.ajax({
                type: "POST",
                url: "CertificateAssignment",
                data: { OutRightSalesIds: ids, UserId: userId, remark: remarks },
                success: function (response) {
                    $("#divLoader").hide();
                    if (response == "Success") {
                        swal("Certificate Successfully Assigned to " + username, { icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                        $("#divLoader").hide();

                    } else {
                        swal(response, { icon: "warning" }).then((e) => {
                            window.location.reload();
                        });
                        $("#divLoader").hide();
                    }
                },
                error: function (xhr) {
                    //console.log(xhr.responseText);
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },
            });
        }


         //----Display Details---//
        var certfDetails = function (id) {
            debugger
            var url = '@Url.Action("CertificateDetails", "OutRightPurchase")';
            $("#certDetail_body").load(url, { id: id }, function (response, status, xhr) {
                if (status == "error") {
                    $("#certDetail_body").html(status + " Error on accessing this details, contact system support.");
                }
                $("#detailsModal").modal("show");
            });
        };



        function Verify(i, id) {
            debugger;
            if (i == 'x') i = id;
            swal({
                title: "Are you sure?",
                text: "To Re-Submit Selected Certifcate Details",
                buttons: [
                    'Yes',
                    'No'
                ],
                closeOnClickOutside: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    swal("Cancelled", "No change was made");
                } else {

                    VerifyCertificate(i)
                }
            });

        };


        var VerifyCertificate = function (id) {

            $("#divLoader").show();

            $.ajax({
                type: "POST",
                url: "VerifyCertificate",
                data: { ids: id },
                success: function (response) {
                    $("#divLoader").hide();
                    if (response == "Success") {
                        swal("Verified  Successfully!", { icon: "success" }).then((e) => {
                            window.location.reload();
                        });
                    } else {
                        swal(response, { icon: "info" }).then((e) => {
                            window.location.reload();
                        });
                    }
                },
                error: function (xhr) {
                    //console.log(xhr.responseText);
                    alert("An error has occured, contact system support");
                    $("#divLoader").hide();
                },
            });

        };


