@model IEnumerable<IFMIS.Areas.ALS.Models.ALS_OutRightSale>
@{
    /**/

    ViewBag.Title = "Fund ";
}
<!-- MAIN CONTENT -->
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <div id="divLoader"></div>
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-white" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"
                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2> Received Certificate of Allocation </h2>
                    </header>
                    <!-- widget content -->
                    <div class="widget-body">
                        <a href="#" onclick="assign()" class="btn btn-info" id="confirmbtn" style="float:right;margin-right:5px">
                            Assign Officer
                        </a>

                        <table id="dt_basic" class="table table-striped table-bordered table-hover table-condensed table-condensed" width="100%">
                            <thead>
                                <tr>
                                    <th> # </th>

                                    <th>  Certificate Number </th>
                                    <th>  Check Number  </th>
                                    <th>  Full Name </th>
                                    <th style="text-align:center">  Vote  </th>
                                    <th> Payment Mode</th>
                                    <th>  Asset Code </th>
                                    <th style="text-align:right">  Asset Value </th>
                                    @*<th>  Certicate Type  </th>*@
                                    <th>  Action  </th>
                                    <th>  <input type="checkbox" class="cbCheckAllReq" />  </th>
                                </tr>
                            </thead>
                            @{
                                int i = 0;
                            }
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>
                                            @i
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.CertificateNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CheckNumber)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.MiddleName)    @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VoteCode) -  @Html.DisplayFor(modelItem => item.VoteName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PaymentOption)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AssetCode)
                                        </td>
                                        <td style="text-align:right">
                                            @Convert.ToDecimal(item.AssetValue).ToString("#,##0")
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-right" style="width:30px">
                                                    <li><a href="#" onclick="certfDetails(@item.OutrightSalesID)">  Details </a></li>

                                                </ul>
                                            </div>
                                        </td>
                                        <td>
                                            <input type="checkbox" class="checkItem" value="@item.OutrightSalesID" style="margin-left:10px" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
        </div>
    </section>
    <!-- end widget grid -->
</div>


<div class="modal fade" id="commentModal" style="left:4%">
    <div class="modal-dialog" style="width:40%;">
        <div class="modal-content panel-info">
            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
