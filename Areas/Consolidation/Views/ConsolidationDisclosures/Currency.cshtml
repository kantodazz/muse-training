                                                    @Html.EditorFor(modelItem => item.OTHERS, new { htmlAttributes = new { @class = "form-control amount", @onkeyup = "amountEntry(this," + @item.Id + ",6)", @onfocusout = "saveEntry(this," + @item.Id + ",6)", @autocomplete = "off", @style = "width:115px;text-align: right" } })
                                                </td>
