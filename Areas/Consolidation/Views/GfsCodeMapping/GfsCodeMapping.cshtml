@model IFMIS.Areas.Consolidation.Models.GfsCodeMappingVM
@{
    ViewBag.Title = "Account Codes Mapping";
}
<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br />
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> @ViewBag.Title </h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">

                            <div class="row">

                                <div class="col-md-4 col-md-offset-1">
                                    @Html.DropDownListFor(model => model.NoteId, Model.NotesList, "---Select Note---", new { @class = "form-control select2" })
                                </div>
                                <div class="col-md-4" id="asset_class" style="display:none">
                                    @Html.DropDownListFor(model => model.AssetClassId, Model.ClassesList, "---Select Class---", new { @class = "form-control select2" })
                                </div>

                            </div>
                            <div id="mappingList"></div>

                        </div>





                    </div>


                </div>
            </article>

        </div>
    </section>

</div>
<div class="modal fade" id="assign_gfscode_modal" style="left:4%">

    <div class="modal-dialog" style="width:35%;">
        <div class="modal-content panel-info">

            <div class="modal-header panel-heading">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 align="center"><span id="desc"></span></h4>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitForm(this)" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body form-horizontal">

                    <br />
                    <input type="hidden" id="ComponentId" name="ComponentId" value="" />
                    <input type="hidden" id="ConsoMovementId" name="ConsoMovementId" value="" />
                    <div class="form-group">
                        @Html.Label("GFS Code", htmlAttributes: new { @class = "control-label   col-md-3", @style = "text-align:left" })
                        <div class="col-md-9">
                            <select id="GfsCodeId" name="GfsCodeId" class="form-control select2">
                                <option value="">---Select Account--</option>
                            </select>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <input class="btn btn-info" type="submit" id="save_button" value="Save" />
                </div>

            }
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
           $(document).ready(function () {

               $("#NoteId").change(function () {
                   var id = $(this).val();
                   if (id > 1) {
                       $("#asset_class").hide();
                       loadMapping(id, 0);
                   }
                   else {
                       $("#asset_class").show();
                   }

               });

               $("#AssetClassId").change(function () {
                   var classId = $(this).val();
                   var id = $("#NoteId").val();
                   loadMapping(id, classId);
               });

           });

        function loadMapping(id, classId) {
           var url = '@Url.Action("LoadMapping", "GfsCodeMapping")';
            $("#mappingList").load(url, { id: id, classId: classId}, function (response, status, xhr) {
                if (status == "error") {
                    $("#mappingList").html("Error on loading Assets, contact technical support");
                }
            });
          }

        var assignGFSCode = function (componentId, movementId, item, id) {
            $("#desc").text(item)
            $(".modal-body #ComponentId").val(componentId);
            $(".modal-body #ConsoMovementId").val(movementId);
            if (id > 0) {
                CancelMapping(id);
            }
            else {
            $("#assign_gfscode_modal").modal('show');

            var noteId = $("#NoteId").val();
            var url = '@Url.Action("GetGfsCodeList", "GfsCodeMapping")';
            $.ajax({
                type: "POST",
                url: url,
                data: { noteId: noteId, id: id },
                success: function (response) {
                    $("#assign_gfscode_modal #GfsCodeId").empty();
                    $("#assign_gfscode_modal #GfsCodeId").append(response);
                }
            });
        }
        };

        function CancelMapping(id) {
             swal({
                        title: 'Confirmation',
                        text: "Do you remove this GFS Code?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            var url = '@Url.Action("RemoveMapping", "GfsCodeMapping")';
                            $.ajax(
                  {
                    type: "POST",
                    url: url,
                    data: { id: id},
                    success: function (response) {
                        if (response == "Success") {
                            swal("Removed  successfully!", { icon: "success" })
                                         .then((value) => {
                                             var noteid = $("#NoteId").val();
                                             var classId = $("#AssetClassId").val();
                                             if (classId) {
                                                 loadMapping(noteid, classId);
                                             }
                                             else {
                                                 loadMapping(noteid, 0);
                                             }
                                         });
                        }
                        else {
                            swal(response);
                        }
                    },
                    error: function (xhr) {
                        //console.log(xhr.responseText);
                        swal("An error has occured, contact system support");

                    },

                });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });
        }

           function SubmitForm(formData) {
             $("#save_button").prop('disabled', true);
            var url = '@Url.Action("SaveMapping", "GfsCodeMapping")';
            var ajaxConfig = {
                type: "post",
                url: url,
                data: new FormData(formData),
                success: function (response) {
                      $("#save_button").prop('disabled', false);
                    if (response == "Success") {
                        swal("Mapping saved successfully", { icon: "Success" })
                            .then((value) => {
                                        $("#assign_gfscode_modal").modal('hide');
                                      var id = $("#NoteId").val();
                                     var classId = $("#AssetClassId").val();
                                      if (classId) {                                     
                                          loadMapping(id, classId);
                                        }
                                        else {
                                          $("#asset_class").hide();
                                          loadMapping(id, 0);
                                        }
                                });
                    }
                    else {
                        swal(response);
                    }
                }
            }

            if ($(formData).attr('enctype') == "multipart/form-data") {
                ajaxConfig["contentType"] = false;
                ajaxConfig["processData"] = false;
            }
            $.ajax(ajaxConfig);
            return false;
        }

          //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });

    </script>
}