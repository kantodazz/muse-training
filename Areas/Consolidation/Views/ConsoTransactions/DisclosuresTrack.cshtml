@{
    ViewBag.Title = "Disclosures Tracker";
}
<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br />
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> @ViewBag.Title </h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">

                            <div class="row">

                                <div class="col-md-3 col-md-offset-1">
                                    @Html.DropDownList("FinancialYear", ViewBag.FinancialYearList as SelectList, "---Select Financial Year---", new { @class = "form-control select2" })
                                </div>

                            </div>
                            <div id="disclosuresList"></div>

                        </div>





                    </div>


                </div>
            </article>

        </div>
    </section>

</div>

@section Scripts {
    <script type="text/javascript">
           $(document).ready(function () {

            $("#FinancialYear").change(function () {
                var fy = $(this).val();
                 loadDisclosures(fy);                    

           });

  });

        function loadDisclosures(fy) {
           var url = '@Url.Action("LoadDisclosures", "ConsoTransactions")';
            $("#disclosuresList").load(url, { fy: fy }, function (response, status, xhr) {
                if (status == "error") {
                    $("#disclosuresList").html("Error on loading data, contact technical support");
                }
            });
          }

          //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });

    </script>
}