@model IFMIS.Areas.Consolidation.Models.ConsoDataEntryVM

<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br />
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> Data Entry </h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">
                            <p>
                                @Html.DisplayNameFor(model => model.FinancialYear) :<strong>@Html.DisplayFor(model => model.FinancialYear)</strong><br>
                                @Html.HiddenFor(model => model.FinancialYear)
                                @Html.HiddenFor(model => model.ConsoTransactionSummaryId)
                            </p>
                            <div class="row">

                                <div class="col-md-4 col-md-offset-1">
                                    @Html.DropDownListFor(model => model.NoteId, Model.NotesCategoryList, "---Select Note---", new { @class = "form-control select2" })
                                </div>
                                <div class="col-md-4" id="movementField">
                                    <select id="ConsoMovementId" name="ConsoMovementId" class="form-control select2">
                                        <option value="">---Select Movement--</option>
                                    </select>
                                </div>
                            </div>
                            <div id="entry-form"></div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-8 col-md-offset-1">
                                        <a href="@Url.Action("PendingNotes","ConsoTransactions",new {id=Model.ConsoTransactionSummaryId})" style="margin-right:5px" class="btn btn-info pull-left"><i class="glyphicon glyphicon-arrow-left"></i> Back  </a>
                                        <a href="@Url.Action("PendingNotes","ConsoTransactions",new {id=Model.ConsoTransactionSummaryId})" class="btn btn-info" id="finish" style="float:left;margin-left:5px;display:none">
                                            <i class="fa fa-save"></i>Finish
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>





                    </div>


                </div>
            </article>

        </div>
    </section>

</div>

@section Scripts {
    <script type="text/javascript">
           $(document).ready(function () {

            $("#FinancialYear").change(function () {
                var fy = $(this).val();
                $("#entry-form").empty();
                $("#divLoader").show();
            var url = '@Url.Action("GetNotes", "ConsoTransactions")';
            $.ajax({
                type: "GET",
                url: url,
                data: { fy: fy },
                success: function (response) {
                    $("#NoteId").empty();
                    $("#NoteId").append(response);
                    $("#divLoader").hide();
                }
            })
        });

           $("#NoteId").change(function () {
               var id = $(this).val();
              var url = '@Url.Action("GetNoteMovements", "ConsoTransactions")';
               $.ajax({
                   type: "GET",
                   url: url,
                   data: { id: id },
                   success: function (result) {
                       if (result.hasMovement == true) {
                           $("#movementField").show();
                           $("#ConsoMovementId").empty();
                           var movementSelect = $("#ConsoMovementId");
                           var movementsList = result.movementsList;
                           //$each(movementsList, function (val, text) {
                           //    movementSelect.append(
                           //     $('<option></option>').val(val).html(text)
                           //    );
                           //});
                           movementSelect.append(
                               $('<option></option>').val("").html("----Select Movement----"));
                           for (var j = 0; j < movementsList.length; j++) {
                               movementSelect.append(
                                   $('<option></option>').val(movementsList[j].ConsoMovementId).html(movementsList[j].MovementNameDesc)
                               );
                           }

                           //$("#ConsoMovementId").append(response);
                          
                       }
                       else {
                           $("#movementField").hide();
                           var fy = $("#FinancialYear").val();
                           loadNoteItems(fy, id, 0);
                       }
                       $("#divLoader").hide();
                   }
               });
            });

               $("#ConsoMovementId").change(function () {
                   var movementid = $(this).val();
                   var id = $("#NoteId").val();
                   var fy = $("#FinancialYear").val();
                   loadNoteItems(fy, id, movementid);
               });

           });

        function loadNoteItems(fy, id, movementid) {
            $("#divLoader").show();
           var url = '@Url.Action("GetTransItems", "ConsoTransactions")';
            $("#entry-form").load(url, { fy: fy, id: id, movementid: movementid }, function (response, status, xhr) {
                if (status == "error") {
                    $("#finish").hide();
                    $("#entry-form").html("Error on loading items, contact technical support");
                }
                else {
                    $("#finish").show();
                }
                $("#divLoader").hide();
            });

        }

    </script>
}