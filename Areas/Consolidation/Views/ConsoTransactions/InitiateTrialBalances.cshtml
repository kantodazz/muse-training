@{
    ViewBag.Title = "Non Muse Trial Balance Initiation Process";
}
<div id="divLoader"></div>
<div id="content" style="margin: 5px; padding-top: 30px">

    <div class="row">


    </div>


    <!-- widget grid -->
    <section id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                    <br />
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2> @ViewBag.Title </h2>

                    </header>


                    <div>
                        <div class="widget-body " style="padding-top:10px;width:100%">

                            <div class="row">

                                <div class="col-md-3 col-md-offset-1">
                                    @Html.DropDownList("FinancialYear", ViewBag.FinancialYearList as SelectList, "---Select Financial Year---", new { @class = "form-control select2" })
                                </div>

                            </div>
                            <div id="tbList"></div>

                        </div>





                    </div>


                </div>
            </article>

        </div>
    </section>

</div>

@section Scripts {
    <script type="text/javascript">
           $(document).ready(function () {

            $("#FinancialYear").change(function () {
                var fy = $(this).val();
                loadTriabalanceSummaries(fy);
              });

           });

        function loadTriabalanceSummaries(fy) {
           var url = '@Url.Action("TriabalanceSummaries", "ConsoTransactions")';
            $("#tbList").load(url, {fy:fy}, function (response, status, xhr) {
                if (status == "error") {
                    $("#tbList").html("Error on loading data, contact technical support");
                }
            });
          }

        var initiateProcess = function () {
            var fy = $("#FinancialYear").val();
            if (!fy) {
                swal("Please select financial year");
                return;
            }
             swal({
                        title: 'Confirmation',
                        text: "Do you initiate all non MUSE/or missing institution?",
                        buttons: [
                          'No',
                          'Yes'
                        ],
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            var url = '@Url.Action("InitiateTBProcess", "ConsoTransactions")';
                            $.ajax(
                {
                    type: "POST",
                    url: url,
                    data: { fy: fy},
                    success: function (response) {
                        if (response == "Success") {
                            swal("Initiated  successfully!", { icon: "success" })
                                         .then((value) => {
                                             loadTriabalanceSummaries(fy);
                                         });
                        }
                        else {
                            swal(response);
                        }
                    },
                    error: function (xhr) {
                        //console.log(xhr.responseText);
                        swal("An error has occured, contact system support");

                    },

                });
                        } else {
                            swal("Cancelled", "No change was made");
                        }
                    });

        };
          //SHOW LOADER ICON
        $(document).ajaxStart(function () {
            $("#divLoader").show();
        });
        //HIDE LOADER ICON
        $(document).ajaxStop(function () {
            $("#divLoader").hide();
        });

    </script>
}