@model IEnumerable<IFMIS.Areas.Consolidation.Models.ConsoTransactionSummary>
@{
 var i=0;
}
<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    input[type=text] {
        padding: 5px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }
</style>

<hr />
<div class="row">
   
    <div class="col-sm-4 col-md-3 col-lg-3 col-md-offset-5">
        <a href="#" onclick="initiateProcess()" class="btn btn-info" style="border-radius:1px;">
            <i class="fa fa-edit"></i>Initiate TB Process
        </a>
    </div>
    <div class="col-md-4">
        <div class="search-container" style="float:right">
            <i class="fa fa-search"></i>
            <input type="search" name="search" placeholder="Search..." id="search-box">
        </div>
    </div>
</div>
<table class="table table-bordered table-hover table-condensed" id="dt_items">

    <thead>
        <tr>
            <th style="text-align:center;width:4%">#</th>
            <th style="text-align:left">@Html.DisplayNameFor(model => model.InstitutionCode)</th>
            <th style="text-align:left">@Html.DisplayNameFor(model => model.InstitutionName)</th>
            <th style="text-align:center">@Html.DisplayNameFor(model => model.FinancialYear)</th>
            <th style="text-align:center">@Html.DisplayNameFor(model => model.OverallStatus)</th>

        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model){
        i++;
        <tr>
            <td style="text-align:center">@i</td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => item.InstitutionCode)
            </td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => item.InstitutionName)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.FinancialYear)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.OverallStatus)
            </td>
        </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    var dt_items_data = $('#dt_items').dataTable();
    $("#dt_items_wrapper .dt-toolbar").remove();
    $("#search-box").on("keyup search input paste cut", function () {
        $("#dt_items").DataTable().search(this.value).draw();
    });

</script>
