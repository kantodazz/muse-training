@{
    string imgSrc = "";
    string groupName = "";

    if (ViewBag.VoteGroup != null)
    {
        imgSrc = "~/Media/Images/" + ViewBag.VoteGroup.FileName;
        groupName = ViewBag.VoteGroup.GroupName;
    }
}

<div class="row">
    <div class="col-md-8" style="text-align: center">
        <img style="width: 130px; height: 126px" class="img-responsive" src=@Server.MapPath("~/Media/Images/nembo_taifa.jpg") />
        <center><h3>MINISTRY OF FINANCE</h3></center>
        <h3>
            @groupName
        </h3>
        <h4>@ViewBag.ReportTitle</h4>
    </div>
</div>

