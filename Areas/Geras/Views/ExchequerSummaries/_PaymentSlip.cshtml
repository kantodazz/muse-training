@model IFMIS.Areas.Geras.Models.ExchequerInstruction

<style type="text/css">
    * {
        box-sizing: border-box;
    }

    body {
        font-family: 'Gill Sans','lucida grande', helvetica, arial, sans-serif;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin: 0px;
    }

    td, th {
        border: 1px solid;
        padding: 8px;
    }

    .alinearDerecha {
        text-align: right;
    }

    .negrita {
        font-weight: bold;
    }

    thead {
        display: table-row-group;
    }

    tr {
        page-break-inside: avoid;
    }
</style>

@Html.Partial("_ReportHeader")

<h4>TRANSFER DETAILS</h4>

<div class="row">
    <div class="col-md-12" style="text-align:left">
        <div>
            TRANSFER ACC NO: @Model.ExchequerSummaries.Select(a => a.DrAccountNo).FirstOrDefault()
        </div>
        <div style="padding-top: 10px">
            TRANSFER ACCOUNT NAME: @Model.ExchequerSummaries.Select(a => a.DrAccountName).FirstOrDefault()
        </div>
        <div style="padding-top: 10px; padding-bottom: 10px">
            DATE: @DateTime.Now.ToString("dd/ MM /yyyy")
        </div>
    </div>
</div>
<div id="content">
    <div class="panel panel-default">
        <!-- Default panell contents -->
        <div class="panel-body">
            <table>
                <tr>
                    <th>#</th>
                    <th>
                        FUNDING REFERENCE
                    </th>
                    <th>
                        NO. OF RECORDS
                    </th>
                    <th>
                        AMOUNT
                    </th>
                    <th>
                        PAYEE ACCOUNT NO
                    </th>
                    <th>
                        PAYEE ACCOUNT NAME
                    </th>
                    <th>
                        PAYMENT CATEGORY
                    </th>
                </tr>

                @{
                int i = 0;
                }
                @foreach (var item in Model.ExchequerSummaries)
                {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @item.ExchequerRef
                    </td>
                    <td>
                        1
                    </td>
                    <td style="text-align: right">
                        @string.Format("{0:#,0.00}", item.Amount)
                    </td>
                    <td style="text-align: right">
                        @item.CrAccountNo
                    </td>
                    <td>
                        @item.CrAccountName
                    </td>
                    <td>
                        @item.ExchequerCategory.Replace("Expenditure", "")
                    </td>
                </tr>
                }

            </table>
            <table style="margin-top: 100px">
                <tr style="border-spacing: 10px">
                    <td style="border-style: none; padding-left: 100px">SIGNATURE:</td>
                    <td style="border-style: none; text-align: center">_______________</td>
                    <td style="border-style: none; text-align: center">_______________</td>
                </tr>
                <tr style="border-spacing: 10px">
                    <td style="border-style: none; padding-left: 100px">NAME:</td>
                    <td style="border-style: none; text-align: center">@Model.VerifiedBy</td>
                    <td style="border-style: none; text-align: center">@Model.AuthorizedBy</td>
                </tr>
                <tr style="border-spacing: 5px">
                    <td style="border-style: none; padding-left: 100px"></td>
                    <td style="border-style: none; text-align: center">_______________</td>
                    <td style="border-style: none; text-align: center">_______________</td>
                </tr>
                <tr style="border-spacing: 0px">
                    <td style="border-style: none; padding-left: 100px"></td>
                    <td style="border-style: none; text-align: center">MOF VERIFIER</td>
                    <td style="border-style: none; text-align: center">MOF AUTHORIZER</td>
                </tr>
            </table>


            <table style="margin-top: 100px">

                <tr style="border-spacing: 10px">
                    <td style="border-style: none; padding-left: 100px">SIGNATURE   :</td>
                    <td style="border-style: none; text-align: center">_______________</td>
                    <td style="border-style: none; text-align: center">_______________</td>
                </tr>
                <tr style="border-spacing: 10px">
                    <td style="border-style: none; padding-left: 100px">NAME   :</td>
                    <td style="border-style: none; text-align: center">________________</td>
                    <td style="border-style: none; text-align: center">________________</td>
                </tr>
                <tr style="border-spacing: 10px">
                    <td style="border-style: none; padding-left: 100px"></td>
                    <td style="border-style: none; text-align: center">APPROVAL 1</td>
                    <td style="border-style: none; text-align: center">APPROVAL 2</td>
                </tr>

            </table>



            <table style="margin-top: 100px">
                <tr style="border-spacing: 10px">
                    <td style="border-style: none; padding-left: 100px">SIGNATURE   :</td>
                    <td style="border-style: none; text-align: center">_______________</td>
                    <td style="border-style: none; text-align: center">_______________</td>
                </tr>
                <tr style="border-spacing: 10px">
                    <td style="border-style: none; padding-left: 100px">NAME   :</td>
                    <td style="border-style: none; text-align: center">________________</td>
                    <td style="border-style: none; text-align: center">________________</td>
                </tr>
                <tr style="border-spacing: 10px">
                    <td style="border-style: none; padding-left: 100px"></td>
                    <td style="border-style: none; text-align: center">BOT VERIFIER</td>
                    <td style="border-style: none; text-align: center">BOT AUTHORIZER</td>
                </tr>

            </table>

        </div>
    </div>
</div>

