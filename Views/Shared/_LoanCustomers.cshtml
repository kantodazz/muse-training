@if (Enumerable.Count(ViewBag.report) > 1)
{
<option value="">-- Select Customer --</option>
<option value="ALL">ALL</option>
    foreach (var item in ViewBag.report)
    {
<option value="@item.Value"> @item.Text </option>
    }
}

else
{
<option value="">-- Select Customer --</option>
    if (ViewBag.report != null)
    {
        foreach (var item in ViewBag.report)
        {
<option value="@item.Value"> @item.Text </option>
        }

    }
}