@model IFMIS.Areas.IFMISTZ.Models.ReceivingVM
@{
    var i = 0;
}
<style>
    .search-container {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 3px;
        padding-right: 10px;
        padding-left: 10px;
    }

    input[type=number] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }

    input[type=text] {
        padding: 5px;
        border: 1px solid #ccc;
    }

    input[type=search] {
        padding: 4px;
        border: hidden;
        border-radius: 4px;
    }
</style>

<hr />
@if (Model.ExchangeRateExist)
{
    <div class="row">
        <div class="col-md-6">
            @Html.DisplayNameFor(model => model.OperationCurrency) :@Html.DisplayFor(model => model.OperationCurrency)
        </div>
        <div class="col-md-6">
            <div class="search-container" style="float:right">
                <i class="fa fa-search"></i>
                <input type="search" name="search" placeholder="Search..." id="search-account">
            </div>
        </div>
    </div>
    <table class="table table-bordered table-hover table-condensed" id="dt_items">

        <thead>
            <tr style="background:#f5f5f5; color:#000000">
                <th style="text-align:right;width:4%"></th>
                <th style="text-align:center" colspan="6">Payment Schedule Items</th>
                <th style="text-align:center" colspan="3">Receiving Items</th>
            </tr>
            <tr style="background:#f5f5f5; color:#000000">
                <th style="text-align:right;width:4%">#</th>
                <th style="text-align:left;width:18%">Item</th>
                <th style="text-align:left;width:12%">Unit</th>
                <th style="text-align:right;width:8%">Quantity</th>
                <th style="text-align:right;width:9%">Unit Price</th>
                <th style="text-align:right;width:9%">VAT</th>
                <th style="text-align:right;width:13%">Total Amount</th>
                <th style="text-align:center;width:8%">Quantity</th>
                <th style="text-align:center;width:9%">VAT</th>
                <th style="text-align:center;width:10%">Total Amount</th>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model.Items)
            {
                i++;
                <tr id=@item.ContractDetailId>
                    @Html.HiddenFor(modelItem => item.UnitPrice)
                    <td style="text-align:center">@i</td>
                    <td style="text-align:left">
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td style="text-align:left">
                        @Html.DisplayFor(modelItem => item.UnitOfMeasure)
                    </td>
                    <td style="text-align:right">
                        @Html.DisplayFor(modelItem => item.AvailableQuantity)
                    </td>
                    <td style="text-align:right">
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td style="text-align:right">
                        @Html.DisplayFor(modelItem => item.AvailableVAT)
                    </td>
                    <td style="text-align:right">
                        @Html.DisplayFor(modelItem => item.AvailableAmount)
                    </td>
                    <td style="text-align: center; width: 8%">
                        @Html.EditorFor(modelItem => item.Quantity, new { htmlAttributes = new { @class = "form-control", @style = "width:60px", @onkeyup = "quantityEntry(this," + @item.ContractDetailId + ")", @onfocusout = "addEntry(this," + @item.ContractDetailId + ")", @max = @item.AvailableQuantity } })
                    </td>
                    <td style="text-align:center">
                        @Html.EditorFor(modelItem => item.VAT, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "width:120px" } })
                    </td>
                    <td style="text-align:center">
                        @Html.EditorFor(modelItem => item.Amount, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "width:120px" } })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal-footer">
        <button type="button" class="btn btn-info" id="btn_payee_accounts" onclick="saveItems(@Model.ReceivingExhangeRate)">
            <i class="fa fa-save"></i>Save
        </button>
        <button class="btn btn-info" data-dismiss="modal" id="cancel_button">
            <i class="fa  fa-times"></i>Cancel
        </button>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">

            <div class="alert alert-block alert-info">
                <a class="close" data-dismiss="alert" href="#">×</a>
                <h4 class="alert-heading">Exchange Rate Missing</h4>
                <p>
                    Cross Exchange rate of currencies from @Html.DisplayFor(model => model.OperationCurrency)  to @Html.DisplayFor(model => model.TransactionCurrency)  is missing
                </p>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-info" data-dismiss="modal" id="cancel_button">
            <i class="fa  fa-times"></i>Cancel
        </button>
    </div>
}

<script type="text/javascript">
    var dt_items = $('#dt_items').dataTable();
    $("#dt_items_wrapper .dt-toolbar").remove();
    $("#search-account").on("keyup search input paste cut", function () {
        $("#dt_items").DataTable().search(this.value).draw();
    });


</script>