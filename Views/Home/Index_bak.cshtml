<script src="~/Scripts/chartist.min.js"></script>
<script>
    // ===================== Monthly Payments =====================
    dataDailySalesChart = {
        labels: ['Jul', 'Aug', 'Sep', 'Oct'],
        series: [
          [2, 4, 2, 5]
        ]
    };

    optionsDailySalesChart = {
        lineSmooth: Chartist.Interpolation.cardinal({
            tension: 0
        }),
        low: 0,
        high: 7,
        chartPadding: {
            top: 0,
            right: 40,
            bottom: 0,
            left: 2
        },
        axisY: {
            labelInterpolationFnc: function (value) {
                return (value / 1) + 'B';
            }
        }
    }
    var animationHeaderChart = new Chartist.Bar('#paymentsThisWeek', dataDailySalesChart, optionsDailySalesChart);

    dataDailySalesChart = {
        labels: ['0', 'Mon', 'Tue', 'Wed', ],
        series: [
          [0, 23, 18, 38]
        ]
    };

    optionsDailySalesChart = {
        lineSmooth: Chartist.Interpolation.cardinal({
            tension: 0
        }),
        low: 0,
        high: 50,
        chartPadding: {
            top: 2,
            right: 0,
            bottom: 20,
            left: 2
        },
        axisY: {
            labelInterpolationFnc: function (value) {
                return (value / 1) + 'B';
            }
        }
    }

    var dailySalesChart = new Chartist.Line('#paymentsToday', dataDailySalesChart, optionsDailySalesChart);
</script>