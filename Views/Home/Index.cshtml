        $("#DashboardCategories").change(function () {
            $("#divLoader").show();
            var code = $("#DashboardCategories").val();
            var dDashboard = @ViewBag.DDashboard;
            if (code == dDashboard) {
                $("#curre").show();
            } else {
                $("#curre").hide();
            }
            getifremUrl(code);
        });

        $("#Currencies").change(function () {
            $("#divLoader").show();
            var code = $("#DashboardCategories").val();

            getifremUrl(code);
        });



        function getifremUrl(code) {
            
            var instcode = `@ViewBag.InstitutionCode`;
            var dDashboard = @ViewBag.DDashboard;
            var codeText = $("#DashboardCategories option:selected").text();

            var url = '@Url.Action("GetIframeUrl", "Home")?institutionCode=' + instcode + '&&dashboardCode=' + code;

            if (code == dDashboard) {
                var Currency = $("#Currencies").val();
                url = '@Url.Action("GetIframeUrl", "Home")?institutionCode=' + Currency + '&&dashboardCode=' + code;
            }

             $.ajax({
                 type: "get",
                 url: url,
                 success: function (response) {

                     // Create an iframe dynamically
                     var iframe = $('<iframe>', {
                         src: response,  // URL to load inside the iframe
                         id: 'myIframe',
                         frameborder: 0,  // Optional attributes
                         width: '100%',
                         height: '1100',
                         scrolling:'no',
                     });
                     if (codeText == "Community Health Worker" || codeText == "Cash Management" || codeText == "Revenue" || codeText =="Budget vs Actual") {
                         iframe = $('<iframe>', {
                             src: response,  // URL to load inside the iframe
                             id: 'myIframe',
                             frameborder: 0,  // Optional attributes
                             width: '100%',
                             height: '1900',
                             scrolling: 'no',
                         });
                     }

                     // Append the iframe to a specific element on the page, for example a div with id "iframe-container"
                     $('#iframe-container').empty();
                     $('#iframe-container').append(iframe);
                     $("#divLoader").hide();

                 },
                 failure: function (error) {
                     swal(error);
                 }
             });
        }
    </script>
