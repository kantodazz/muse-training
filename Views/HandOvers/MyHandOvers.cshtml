<div class="modal fade model" tabindex="-1" role="dialog" aria-labelledby="lblmodal">
    <div class="modal-dialog" style="width: 60%">
        <div class="modal-content">
            <div class="modal-header alert alert-info" style="font:bold 16px Trebuchet MS, Lucida Sans Unicode, Lucida Grande, Lucida Sans, Arial, sans-serif">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title modal-title" id="lblmodal"></h4>
            </div>
            <div class="modal-body modal-body">
            </div>
            <div class="modal-footer">
                <button class="btn btn-info delete-confirm" id="btnAddHandOver">Save</button>
                <button class="btn btn-info delete-confirm" id="btnRemoveHandOver">Save</button>
                <button class="btn btn-default delete-cancel" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <link href="~/Content/DataTable/css/jquery.dataTables.css" rel="stylesheet" />
    <script src="~/assets/DataTable/jquery.dataTables.min.js"></script>

    <script>
        $(function () {
            $("#tblHandOverTo").DataTable({});
            $("#tblHandOverBy").DataTable({});
        });

        var addHandOver = function () {
        $("#divLoader").show();

        $(".modal-title").text("Hand Over My Roles");
        $("#btnAddHandOver").show();
        $("#btnRemoveHandOver").hide();
        var url = '@Url.Action("AddHandOver", "HandOvers")';

        $(".modal-body").load(url, function (response, status, xhr) {
            $(".model").modal({
                backdrop: "static",
                keyboard: false
            });
            $("#divLoader").hide();
        });
        };

        var removeHandOver = function (id) {
        $("#divLoader").show();

        $(".modal-title").text("Remove Hand Over");
        $("#btnAddHandOver").hide();
        $("#btnRemoveHandOver").show();
        var url = '@Url.Action("RemoveHandOver", "HandOvers")/' + id;

        $(".modal-body").load(url, function (response, status, xhr) {
            $(".model").modal({
                backdrop: "static",
                keyboard: false
            });
            $("#divLoader").hide();
        });
        };
    </script>
}