                        </div>
                        <!-- Slide 2 -->
                        <div class="item">
                            <img src="~/Media/Images/slide_show/4.png" alt="" class="slide-img-fit">
                            @*<div class="carousel-caption caption-left">
                                    <h4>Title 2</h4>
                                    <p>
