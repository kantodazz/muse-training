                        <div class="widget-body">
                            <table class="table table-striped table-condensed table-hover table-responsive" id="tblPayStations">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Institution Code</th>
                                        <th>Institution Name</th>
                                        <th>Pay Station Code</th>
                                        <th>Pay Station Desc</th>
