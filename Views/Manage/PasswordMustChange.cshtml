@model MustChangePasswdViewModel
@{
    //ViewBag.PageId = "extr-page";
    ViewBag.PageClass = "animated fadeInDown";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row" style="padding-top: 150px">
    <div class="col-md-offset-3 col-md-5" style="color: darkred">
        You must change your password before using the system
    </div>
</div>

<div class="row" style="padding-top: 50px">
    @using (Html.BeginForm("PasswordMustChange", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.UserId)

        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @readonly = true })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PasswordHash, new { @class = "col-md-3 control-label" })
            <div class="col-md-5">
                @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
            <div class="col-md-5">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-2">
                <input type="submit" value="Set password" class="btn btn-default" />
            </div>
        </div>
    }
</div>

