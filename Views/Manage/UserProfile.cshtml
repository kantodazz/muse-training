@section Scripts{
    <script>
        var updateUserProfile = function () {
            var data = $("#formUserProfile").serialize();
            var url = '@Url.Action("UserProfile", "Manage")';

            if (!$("#formUserProfile").valid()) {
                return false;
            }

            $.ajax({
                type: "POST",
                url: url,
                data: data,
                success: function (response) {
                    if (response == "Success") {
                        alert("Profile updated successfully!");
                        location.reload(true);
                    } else {
                        alert(response);
                    }
                }
            });
        }
    </script>
